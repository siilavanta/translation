msgstr ""

msgctxt "pli-tv-kd1:9.4.6"
msgid "Atha kho bhagavā te bhikkhū dhammiyā kathāya ovadi anusāsi."
msgstr ""

msgctxt "pli-tv-kd1:9.4.7"
msgid "Tesaṃ bhagavatā dhammiyā kathāya ovadiyamānānaṃ anusāsiyamānānaṃ anupādāya āsavehi cittāni vimucciṃsu."
msgstr ""

msgctxt "pli-tv-kd1:9.4.8"
msgid "Tena kho pana samayena ekādasa loke arahanto honti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc126
msgctxt "pli-tv-kd1:9.4.9"
msgid "Catugihisahāyakapabbajjā niṭṭhitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc127, pts-vp-pli1.20
