#. HTML: <section class="sutta" id="pli-tv-kd1"><article><div class="hgroup"><p class="collection">
msgctxt "pli-tv-kd1:0.1"
msgid "Theravāda Vinayapiṭaka"
msgstr ""

#. HTML: </p><p class="division">
msgctxt "pli-tv-kd1:0.2"
msgid "Mahāvagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-kd1:0.3"
msgid "Mahākhandhaka"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-kd1:0.4"
msgid "1. Bodhikathā"
msgstr ""

#. HTML: </h2><p class="namo">
#. REF: sc1
msgctxt "pli-tv-kd1:0.5"
msgid "Namo tassa Bhagavato Arahato Sammāsambuddhassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli1.1
msgctxt "pli-tv-kd1:1.1.1"
msgid "Tena samayena buddho bhagavā uruvelāyaṃ viharati najjā nerañjarāya tīre bodhirukkhamūle paṭhamābhisambuddho."
msgstr ""

#. VAR: vimuttisukhapaṭisaṃvedī → vimuttisukhaṃ paṭisaṃvedī (mr)
msgctxt "pli-tv-kd1:1.1.2"
msgid "Atha kho bhagavā bodhirukkhamūle sattāhaṃ ekapallaṅkena nisīdi vimuttisukhapaṭisaṃvedī."
msgstr ""

msgctxt "pli-tv-kd1:1.2.1"
msgid "Atha kho bhagavā rattiyā paṭhamaṃ yāmaṃ paṭiccasamuppādaṃ anulomapaṭilomaṃ manasākāsi—"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-kd1:1.2.2"
msgid "“Avijjāpaccayā saṅkhārā, saṅkhārapaccayā viññāṇaṃ, viññāṇapaccayā nāmarūpaṃ, nāmarūpapaccayā saḷāyatanaṃ, saḷāyatanapaccayā phasso, phassapaccayā vedanā, vedanāpaccayā taṇhā, taṇhāpaccayā upādānaṃ, upādānapaccayā bhavo, bhavapaccayā jāti, jātipaccayā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā sambhavanti."
msgstr ""

msgctxt "pli-tv-kd1:1.2.3"
msgid "Evametassa kevalassa dukkhakkhandhassa samudayo hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4, pts-vp-pli1.2
msgctxt "pli-tv-kd1:1.2.4"
msgid "Avijjāya tveva asesavirāganirodhā saṅkhāranirodho, saṅkhāranirodhā viññāṇanirodho, viññāṇanirodhā nāmarūpanirodho, nāmarūpanirodhā saḷāyatananirodho, saḷāyatananirodhā phassanirodho, phassanirodhā vedanānirodho, vedanānirodhā taṇhānirodho, taṇhānirodhā upādānanirodho, upādānanirodhā bhavanirodho, bhavanirodhā jātinirodho, jātinirodhā jarāmaraṇaṃ sokaparidevadukkhadomanassupāyāsā nirujjhanti."
msgstr ""

msgctxt "pli-tv-kd1:1.2.5"
msgid "Evametassa kevalassa dukkhakkhandhassa nirodho hotī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-kd1:1.3.1"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc6
msgctxt "pli-tv-kd1:1.3.2"
msgid "“Yadā have pātubhavanti dhammā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.3.3"
msgid "Ātāpino jhāyato brāhmaṇassa;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.3.4"
msgid "Athassa kaṅkhā vapayanti sabbā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.3.5"
msgid "Yato pajānāti sahetudhamman”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc7
msgctxt "pli-tv-kd1:1.4.1"
msgid "Atha kho bhagavā rattiyā majjhimaṃ yāmaṃ paṭiccasamuppādaṃ anulomapaṭilomaṃ manasākāsi—"
msgstr ""

msgctxt "pli-tv-kd1:1.4.2"
msgid "“avijjāpaccayā saṅkhārā, saṅkhārapaccayā viññāṇaṃ, viññāṇapaccayā nāmarūpaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd1:1.4.3"
msgid "evametassa kevalassa dukkhakkhandhassa samudayo hoti … pe …"
msgstr ""

msgctxt "pli-tv-kd1:1.4.4"
msgid "nirodho hotī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-kd1:1.5.1"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc9
msgctxt "pli-tv-kd1:1.5.2"
msgid "“Yadā have pātubhavanti dhammā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.5.3"
msgid "Ātāpino jhāyato brāhmaṇassa;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.5.4"
msgid "Athassa kaṅkhā vapayanti sabbā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.5.5"
msgid "Yato khayaṃ paccayānaṃ avedī”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc10
msgctxt "pli-tv-kd1:1.6.1"
msgid "Atha kho bhagavā rattiyā pacchimaṃ yāmaṃ paṭiccasamuppādaṃ anulomapaṭilomaṃ manasākāsi—"
msgstr ""

msgctxt "pli-tv-kd1:1.6.2"
msgid "“avijjāpaccayā saṅkhārā, saṅkhārapaccayā viññāṇaṃ, viññāṇapaccayā nāmarūpaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd1:1.6.3"
msgid "evametassa kevalassa dukkhakkhandhassa samudayo hoti … pe …"
msgstr ""

msgctxt "pli-tv-kd1:1.6.4"
msgid "nirodho hotī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-kd1:1.7.1"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc12
msgctxt "pli-tv-kd1:1.7.2"
msgid "“Yadā have pātubhavanti dhammā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.7.3"
msgid "Ātāpino jhāyato brāhmaṇassa;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:1.7.4"
msgid "Vidhūpayaṃ tiṭṭhati mārasenaṃ,"
msgstr ""

#. HTML: <br>
#. VAR: Sūriyova → suriyova (bj, s1-3, km, pts1)
msgctxt "pli-tv-kd1:1.7.5"
msgid "Sūriyova obhāsayamantalikkhan”ti."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc13
msgctxt "pli-tv-kd1:1.7.6"
msgid "Bodhikathā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd1:2.1.0"
msgid "2. Ajapālakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc14, pts-vp-pli1.3
msgctxt "pli-tv-kd1:2.1.1"
msgid "Atha kho bhagavā sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā bodhirukkhamūlā yena ajapālanigrodho tenupasaṅkami, upasaṅkamitvā ajapālanigrodhamūle sattāhaṃ ekapallaṅkena nisīdi vimuttisukhapaṭisaṃvedī."
msgstr ""

msgctxt "pli-tv-kd1:2.2.1"
msgid "Atha kho aññataro huṃhuṅkajātiko brāhmaṇo yena bhagavā tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd1:2.2.2"
msgid "Upasaṅkamitvā bhagavatā saddhiṃ sammodi."
msgstr ""

msgctxt "pli-tv-kd1:2.2.3"
msgid "Sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd1:2.2.4"
msgid "Ekamantaṃ ṭhito kho so brāhmaṇo bhagavantaṃ etadavoca—“"
msgstr ""

#. VAR: brāhmaṇakaraṇā → brāhmaṇakārakā (mr) | brāhmaṇakarāṇā (?)
msgctxt "pli-tv-kd1:2.2.5"
msgid "kittāvatā nu kho, bho gotama, brāhmaṇo hoti, katame ca pana brāhmaṇakaraṇā dhammā”ti?"
msgstr ""

msgctxt "pli-tv-kd1:2.3.1"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc15
msgctxt "pli-tv-kd1:2.3.2"
msgid "“Yo brāhmaṇo bāhitapāpadhammo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:2.3.3"
msgid "Nihuṃhuṅko nikkasāvo yatatto;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:2.3.4"
msgid "Vedantagū vusitabrahmacariyo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:2.3.5"
msgid "Dhammena so brahmavādaṃ vadeyya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:2.3.6"
msgid "Yassussadā natthi kuhiñci loke”ti."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-kd1:2.3.7"
msgid "Ajapālakathā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd1:3.1.0"
msgid "3. Mucalindakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc17
#. VAR: ti → ... siriṃsapa ... (bj, s1-3, km, pts1)
msgctxt "pli-tv-kd1:3.1.1"
msgid "Atha kho bhagavā sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā ajapālanigrodhamūlā yena mucalindo tenupasaṅkami, upasaṅkamitvā mucalindamūle sattāhaṃ ekapallaṅkena nisīdi vimuttisukhapaṭisaṃvedī."
msgstr ""

msgctxt "pli-tv-kd1:3.2.1"
msgid "Tena kho pana samayena mahā akālamegho udapādi, sattāhavaddalikā sītavātaduddinī."
msgstr ""

msgctxt "pli-tv-kd1:3.2.2"
msgid "Atha kho mucalindo nāgarājā sakabhavanā nikkhamitvā bhagavato kāyaṃ sattakkhattuṃ bhogehi parikkhipitvā uparimuddhani mahantaṃ phaṇaṃ karitvā aṭṭhāsi—"
msgstr ""

msgctxt "pli-tv-kd1:3.2.3"
msgid "“mā bhagavantaṃ sītaṃ, mā bhagavantaṃ uṇhaṃ, mā bhagavantaṃ ḍaṃsamakasavātātapasarīsapasamphasso”ti."
msgstr ""

msgctxt "pli-tv-kd1:3.3.1"
msgid "Atha kho mucalindo nāgarājā sattāhassa accayena viddhaṃ vigatavalāhakaṃ devaṃ viditvā bhagavato kāyā bhoge viniveṭhetvā sakavaṇṇaṃ paṭisaṃharitvā māṇavakavaṇṇaṃ abhinimminitvā bhagavato purato aṭṭhāsi pañjaliko bhagavantaṃ namassamāno."
msgstr ""

msgctxt "pli-tv-kd1:3.4.1"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc18
msgctxt "pli-tv-kd1:3.4.2"
msgid "“Sukho viveko tuṭṭhassa,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.3"
msgid "sutadhammassa passato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.4"
msgid "Abyāpajjaṃ sukhaṃ loke,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.5"
msgid "pāṇabhūtesu saṃyamo."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-kd1:3.4.6"
msgid "Sukhā virāgatā loke,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.7"
msgid "kāmānaṃ samatikkamo;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.8"
msgid "Asmimānassa yo vinayo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:3.4.9"
msgid "etaṃ ve paramaṃ sukhan”ti."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc20
msgctxt "pli-tv-kd1:3.4.10"
msgid "Mucalindakathā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd1:4.1.0"
msgid "4. Rājāyatanakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc21, pts-vp-pli1.4
msgctxt "pli-tv-kd1:4.1.1"
msgid "Atha kho bhagavā sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā mucalindamūlā yena rājāyatanaṃ tenupasaṅkami, upasaṅkamitvā rājāyatanamūle sattāhaṃ ekapallaṅkena nisīdi vimuttisukhapaṭisaṃvedī."
msgstr ""

#. VAR: tapussa → tapassu (bj) | tapassū (si)
msgctxt "pli-tv-kd1:4.2.1"
msgid "Tena kho pana samayena tapussa bhallikā vāṇijā ukkalā taṃ desaṃ addhānamaggappaṭipannā honti."
msgstr ""

msgctxt "pli-tv-kd1:4.2.2"
msgid "Atha kho tapussabhallikānaṃ vāṇijānaṃ ñātisālohitā devatā tapussabhallike vāṇije etadavoca—"
msgstr ""

msgctxt "pli-tv-kd1:4.2.3"
msgid "“ayaṃ, mārisā, bhagavā rājāyatanamūle viharati paṭhamābhisambuddho;"
msgstr ""

msgctxt "pli-tv-kd1:4.2.4"
msgid "gacchatha taṃ bhagavantaṃ manthena ca madhupiṇḍikāya ca patimānetha;"
msgstr ""

msgctxt "pli-tv-kd1:4.2.5"
msgid "taṃ vo bhavissati dīgharattaṃ hitāya sukhāyā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-kd1:4.3.1"
msgid "Atha kho tapussabhallikā vāṇijā manthañca madhupiṇḍikañca ādāya yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhaṃsu."
msgstr ""

msgctxt "pli-tv-kd1:4.3.2"
msgid "Ekamantaṃ ṭhitā kho tapussabhallikā vāṇijā bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd1:4.3.3"
msgid "“paṭiggaṇhātu no, bhante, bhagavā manthañca madhupiṇḍikañca, yaṃ amhākaṃ assa dīgharattaṃ hitāya sukhāyā”ti."
msgstr ""

msgctxt "pli-tv-kd1:4.4.1"
msgid "Atha kho bhagavato etadahosi—"
msgstr ""

msgctxt "pli-tv-kd1:4.4.2"
msgid "“na kho tathāgatā hatthesu paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd1:4.4.3"
msgid "Kimhi nu kho ahaṃ paṭiggaṇheyyaṃ manthañca madhupiṇḍikañcā”ti?"
msgstr ""

msgctxt "pli-tv-kd1:4.4.4"
msgid "Atha kho cattāro mahārājāno bhagavato cetasā cetoparivitakkamaññāya catuddisā cattāro selamaye patte bhagavato upanāmesuṃ—"
msgstr ""

msgctxt "pli-tv-kd1:4.4.5"
msgid "“idha, bhante, bhagavā paṭiggaṇhātu manthañca madhupiṇḍikañcā”ti."
msgstr ""

msgctxt "pli-tv-kd1:4.4.6"
msgid "Paṭiggahesi bhagavā paccagghe selamaye patte manthañca madhupiṇḍikañca, paṭiggahetvā paribhuñji."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
#. VAR:  onītapattapāṇiṃ viditvā bhagavato pādesu sirasā nipatitvā bhagavantaṃ →  () sī , syā1-3 potthakesu
msgctxt "pli-tv-kd1:4.5.1"
msgid "Atha kho tapussabhallikā vāṇijā bhagavantaṃ onītapattapāṇiṃ viditvā bhagavato pādesu sirasā nipatitvā bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd1:4.5.2"
msgid "“ete mayaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāma dhammañca, upāsake no bhagavā dhāretu ajjatagge pāṇupete saraṇaṃ gate”ti."
msgstr ""

msgctxt "pli-tv-kd1:4.5.3"
msgid "Te ca loke paṭhamaṃ upāsakā ahesuṃ dvevācikā."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc24
msgctxt "pli-tv-kd1:4.5.4"
msgid "Rājāyatanakathā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd1:5.1.0"
msgid "5. Brahmayācanakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc25, pts-vp-pli1.5
msgctxt "pli-tv-kd1:5.1.1"
msgid "Atha kho bhagavā sattāhassa accayena tamhā samādhimhā vuṭṭhahitvā rājāyatanamūlā yena ajapālanigrodho tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd1:5.1.2"
msgid "Tatra sudaṃ bhagavā ajapālanigrodhamūle viharati."
msgstr ""

msgctxt "pli-tv-kd1:5.2.1"
msgid "Atha kho bhagavato rahogatassa paṭisallīnassa evaṃ cetaso parivitakko udapādi—"
msgstr ""

msgctxt "pli-tv-kd1:5.2.2"
msgid "“adhigato kho myāyaṃ dhammo gambhīro duddaso duranubodho santo paṇīto atakkāvacaro nipuṇo paṇḍitavedanīyo."
msgstr ""

msgctxt "pli-tv-kd1:5.2.3"
msgid "Ālayarāmā kho panāyaṃ pajā ālayaratā ālayasammuditā."
msgstr ""

msgctxt "pli-tv-kd1:5.2.4"
msgid "Ālayarāmāya kho pana pajāya ālayaratāya ālayasammuditāya duddasaṃ idaṃ ṭhānaṃ yadidaṃ idappaccayatāpaṭiccasamuppādo;"
msgstr ""

msgctxt "pli-tv-kd1:5.2.5"
msgid "idampi kho ṭhānaṃ sududdasaṃ yadidaṃ sabbasaṅkhārasamatho sabbūpadhipaṭinissaggo taṇhākkhayo virāgo nirodho nibbānaṃ."
msgstr ""

msgctxt "pli-tv-kd1:5.2.6"
msgid "Ahañceva kho pana dhammaṃ deseyyaṃ, pare ca me na ājāneyyuṃ, so mamassa kilamatho, sā mamassa vihesā”ti."
msgstr ""

msgctxt "pli-tv-kd1:5.3.1"
msgid "Apissu bhagavantaṃ imā anacchariyā gāthāyo paṭibhaṃsu pubbe assutapubbā—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc26
msgctxt "pli-tv-kd1:5.3.2"
msgid "“Kicchena me adhigataṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:5.3.3"
msgid "halaṃ dāni pakāsituṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:5.3.4"
msgid "Rāgadosaparetehi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:5.3.5"
msgid "nāyaṃ dhammo susambudho."
msgstr ""

#. HTML: </p><p>
#. REF: sc27
msgctxt "pli-tv-kd1:5.3.6"
msgid "Paṭisotagāmiṃ nipuṇaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:5.3.7"
msgid "gambhīraṃ duddasaṃ aṇuṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd1:5.3.8"
msgid "Rāgarattā na dakkhanti,"
msgstr ""

#. HTML: <br>
#. VAR: āvuṭā → āvaṭā (bj)
msgctxt "pli-tv-kd1:5.3.9"
msgid "tamokhandhena āvuṭā”ti."
msgstr ""

#. HTML: </p></blockquote><p>
