#. HTML: </p><p>
#. REF: sc186
msgctxt "pli-tv-kd6:40.3.53"
msgid "Gaṅgā koṭisaccakathā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.54"
msgid "ambapālī ca licchavī;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.55"
msgid "Uddissa kataṃ subhikkhaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.56"
msgid "punadeva paṭikkhipi."
msgstr ""

#. HTML: </p><p>
#. REF: sc187
msgctxt "pli-tv-kd6:40.3.57"
msgid "Megho yaso meṇḍako ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.58"
msgid "Gorasaṃ pātheyyakena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.59"
msgid "Keṇi ambo jambu coca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.60"
msgid "Mocamadhumuddikasālukaṃ."
msgstr ""

#. HTML: </p><p>
