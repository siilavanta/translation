#. HTML: <section class="sutta" id="pli-tv-kd6"><article><div class="hgroup"><p class="collection">
msgctxt "pli-tv-kd6:0.1"
msgid "Theravāda Vinayapiṭaka"
msgstr ""

#. HTML: </p><p class="division">
msgctxt "pli-tv-kd6:0.2"
msgid "Mahāvagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-kd6:0.3"
msgid "Bhesajjakkhandhaka"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-kd6:1.1.0"
msgid "1. Pañcabhesajjakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1, pts-vp-pli1.199
msgctxt "pli-tv-kd6:1.1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-kd6:1.1.2"
msgid "Tena kho pana samayena bhikkhūnaṃ sāradikena ābādhena phuṭṭhānaṃ yāgupi pītā uggacchati, bhattampi bhuttaṃ uggacchati."
msgstr ""

msgctxt "pli-tv-kd6:1.1.3"
msgid "Te tena kisā honti, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā."
msgstr ""

msgctxt "pli-tv-kd6:1.1.4"
msgid "Addasā kho bhagavā te bhikkhū kise lūkhe dubbaṇṇe uppaṇḍuppaṇḍukajāte dhamanisanthatagatte, disvāna āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:1.1.5"
msgid "“kiṃ nu kho, ānanda, etarahi bhikkhū kisā, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:1.1.6"
msgid "“Etarahi, bhante, bhikkhūnaṃ sāradikena ābādhena phuṭṭhānaṃ yāgupi pītā uggacchati, bhattampi bhuttaṃ uggacchati."
msgstr ""

msgctxt "pli-tv-kd6:1.1.7"
msgid "Te tena kisā honti, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-kd6:1.2.1"
msgid "Atha kho bhagavato rahogatassa paṭisallīnassa evaṃ cetaso parivitakko udapādi—"
msgstr ""

msgctxt "pli-tv-kd6:1.2.2"
msgid "“etarahi kho bhikkhūnaṃ sāradikena ābādhena phuṭṭhānaṃ yāgupi pītā uggacchati, bhattampi bhuttaṃ uggacchati."
msgstr ""

msgctxt "pli-tv-kd6:1.2.3"
msgid "Te tena kisā honti, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā."
msgstr ""

msgctxt "pli-tv-kd6:1.2.4"
msgid "Kiṃ nu kho ahaṃ bhikkhūnaṃ bhesajjaṃ anujāneyyaṃ, yaṃ bhesajjañceva assa bhesajjasammatañca lokassa, āhāratthañca phareyya, na ca oḷāriko āhāro paññāyeyyā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:1.2.5"
msgid "Atha kho bhagavato etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:1.2.6"
msgid "“imāni kho pañca bhesajjāni, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:1.2.7"
msgid "sappi, navanītaṃ, telaṃ, madhu, phāṇitaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:1.2.8"
msgid "bhesajjāni ceva bhesajjasammatāni ca lokassa, āhāratthañca pharanti, na ca oḷāriko āhāro paññāyati."
msgstr ""

msgctxt "pli-tv-kd6:1.2.9"
msgid "Yannūnāhaṃ bhikkhūnaṃ imāni pañca bhesajjāni anujāneyyaṃ, kāle paṭiggahetvā kāle paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3, pts-vp-pli1.200
#. VAR: yaṃ → yaṃ kho (bj)
msgctxt "pli-tv-kd6:1.3.1"
msgid "Atha kho bhagavā sāyanhasamayaṃ paṭisallānā vuṭṭhito etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:1.3.2"
msgid "“idha mayhaṃ, bhikkhave, rahogatassa paṭisallīnassa evaṃ cetaso parivitakko udapādi—‘"
msgstr ""

msgctxt "pli-tv-kd6:1.3.3"
msgid "etarahi kho bhikkhūnaṃ sāradikena ābādhena phuṭṭhānaṃ yāgupi pītā uggacchati, bhattampi bhuttaṃ uggacchati."
msgstr ""

msgctxt "pli-tv-kd6:1.3.4"
msgid "Te tena kisā honti, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā."
msgstr ""

msgctxt "pli-tv-kd6:1.3.5"
msgid "Kiṃ nu kho ahaṃ bhikkhūnaṃ bhesajjaṃ anujāneyyaṃ, yaṃ bhesajjañceva assa bhesajjasammatañca lokassa, āhāratthañca phareyya, na ca oḷāriko āhāro paññāyeyyā’ti."
msgstr ""

msgctxt "pli-tv-kd6:1.3.6"
msgid "Tassa mayhaṃ, bhikkhave, etadahosi—‘"
msgstr ""

msgctxt "pli-tv-kd6:1.3.7"
msgid "imāni kho pañca bhesajjāni, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:1.3.8"
msgid "sappi, navanītaṃ, telaṃ, madhu, phāṇitaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:1.3.9"
msgid "bhesajjāni ceva bhesajjasammatāni ca lokassa, āhāratthañca pharanti, na ca oḷāriko āhāro paññāyati."
msgstr ""

msgctxt "pli-tv-kd6:1.3.10"
msgid "Yannūnāhaṃ bhikkhūnaṃ imāni pañca bhesajjāni anujāneyyaṃ, kāle paṭiggahetvā kāle paribhuñjitun’ti."
msgstr ""

msgctxt "pli-tv-kd6:1.3.11"
msgid "Anujānāmi, bhikkhave, tāni pañca bhesajjāni kāle paṭiggahetvā kāle paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-kd6:1.4.1"
msgid "Tena kho pana samayena bhikkhū tāni pañca bhesajjāni kāle paṭiggahetvā kāle paribhuñjanti."
msgstr ""

#. VAR: senesitāni → senesikāni (bj, s1-3, pts1) | senehikāni (yojanā)
msgctxt "pli-tv-kd6:1.4.2"
msgid "Tesaṃ yānipi tāni pākatikāni lūkhāni bhojanāni tānipi nacchādenti, pageva senesitāni."
msgstr ""

#. VAR: bhattācchādakena → bhattacchādakena (bj) | bhattācchandakena (pts1) | bhattācchannakena (mr)
msgctxt "pli-tv-kd6:1.4.3"
msgid "Te tena ceva sāradikena ābādhena phuṭṭhā, iminā ca bhattācchādakena, tadubhayena bhiyyoso mattāya kisā honti, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā."
msgstr ""

msgctxt "pli-tv-kd6:1.4.4"
msgid "Addasā kho bhagavā te bhikkhū bhiyyoso mattāya kise lūkhe dubbaṇṇe uppaṇḍuppaṇḍukajāte dhamanisanthatagatte, disvāna āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:1.4.5"
msgid "“kiṃ nu kho, ānanda, etarahi bhikkhū bhiyyoso mattāya kisā, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:1.5.1"
msgid "“Etarahi, bhante, bhikkhū tāni ca pañca bhesajjāni kāle paṭiggahetvā kāle paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:1.5.2"
msgid "Tesaṃ yānipi tāni pākatikāni lūkhāni bhojanāni tānipi nacchādenti, pageva senesitāni."
msgstr ""

msgctxt "pli-tv-kd6:1.5.3"
msgid "Te tena ceva sāradikena ābādhena phuṭṭhā, iminā ca bhattācchādakena, tadubhayena bhiyyoso mattāya kisā, lūkhā, dubbaṇṇā, uppaṇḍuppaṇḍukajātā, dhamanisanthatagattā”ti."
msgstr ""

msgctxt "pli-tv-kd6:1.5.4"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:1.5.5"
msgid "“anujānāmi, bhikkhave, tāni pañca bhesajjāni paṭiggahetvā kālepi vikālepi paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-kd6:2.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ vasehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:2.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:2.1.3"
msgid "“Anujānāmi, bhikkhave, vasāni bhesajjāni—"
msgstr ""

msgctxt "pli-tv-kd6:2.1.4"
msgid "acchavasaṃ, macchavasaṃ, susukāvasaṃ, sūkaravasaṃ, gadrabhavasaṃ—"
msgstr ""

#. VAR: nippakkaṃ → nipakkaṃ (bj, s1-3, pts1, mr)
msgctxt "pli-tv-kd6:2.1.5"
msgid "kāle paṭiggahitaṃ kāle nippakkaṃ kāle saṃsaṭṭhaṃ telaparibhogena paribhuñjituṃ."
msgstr ""

msgctxt "pli-tv-kd6:2.2.1"
msgid "Vikāle ce, bhikkhave, paṭiggahitaṃ vikāle nippakkaṃ vikāle saṃsaṭṭhaṃ, tañce paribhuñjeyya, āpatti tiṇṇaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:2.2.2"
msgid "Kāle ce, bhikkhave, paṭiggahitaṃ vikāle nippakkaṃ vikāle saṃsaṭṭhaṃ, tañce paribhuñjeyya, āpatti dvinnaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:2.2.3"
msgid "Kāle ce, bhikkhave, paṭiggahitaṃ kāle nippakkaṃ vikāle saṃsaṭṭhaṃ, tañce paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:2.2.4"
msgid "Kāle ce, bhikkhave, paṭiggahitaṃ kāle nippakkaṃ kāle saṃsaṭṭhaṃ, tañce paribhuñjeyya, anāpattī”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:3.1.0"
msgid "2. Mūlādibhesajjakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc6, pts-vp-pli1.201
msgctxt "pli-tv-kd6:3.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ mūlehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:3.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:3.1.3"
msgid "“Anujānāmi, bhikkhave, mūlāni bhesajjāni—"
msgstr ""

#. VAR: vacattaṃ → vacatthaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:3.1.4"
msgid "haliddiṃ, siṅgiveraṃ, vacaṃ, vacattaṃ, ativisaṃ, kaṭukarohiṇiṃ, usīraṃ, bhaddamuttakaṃ, yāni vā panaññānipi atthi mūlāni bhesajjāni, neva khādanīye khādanīyatthaṃ pharanti, na bhojanīye bhojanīyatthaṃ pharanti, tāni—"
msgstr ""

msgctxt "pli-tv-kd6:3.1.5"
msgid "paṭiggahetvā yāvajīvaṃ pariharituṃ;"
msgstr ""

msgctxt "pli-tv-kd6:3.1.6"
msgid "sati paccaye paribhuñjituṃ."
msgstr ""

msgctxt "pli-tv-kd6:3.1.7"
msgid "Asati paccaye paribhuñjantassa āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-kd6:3.2.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ mūlehi bhesajjehi piṭṭhehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:3.2.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: nisadapotakan”ti → nisadapotanti (si, s1-3, pts1)
msgctxt "pli-tv-kd6:3.2.3"
msgid "“Anujānāmi, bhikkhave, nisadaṃ nisadapotakan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-kd6:4.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ kasāvehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:4.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: kasāvāni bhesajjāni → kasāvabhesajjāni (mr)
msgctxt "pli-tv-kd6:4.1.3"
msgid "“Anujānāmi, bhikkhave, kasāvāni bhesajjāni—"
msgstr ""

msgctxt "pli-tv-kd6:4.1.4"
msgid "nimbakasāvaṃ, kuṭajakasāvaṃ, paṭolakasāvaṃ, phaggavakasāvaṃ, nattamālakasāvaṃ, yāni vā panaññānipi atthi kasāvāni bhesajjāni neva khādanīye khādanīyatthaṃ pharanti, na bhojanīye bhojanīyatthaṃ pharanti, tāni—"
msgstr ""

msgctxt "pli-tv-kd6:4.1.5"
msgid "paṭiggahetvā yāvajīvaṃ pariharituṃ;"
msgstr ""

msgctxt "pli-tv-kd6:4.1.6"
msgid "sati paccaye paribhuñjituṃ."
msgstr ""

msgctxt "pli-tv-kd6:4.1.7"
msgid "Asati paccaye paribhuñjantassa āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-kd6:5.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ paṇṇehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:5.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:5.1.3"
msgid "“Anujānāmi, bhikkhave, paṇṇāni bhesajjāni—"
msgstr ""

#. VAR: kappāsapaṇṇaṃ → kappāsipaṇṇaṃ (bj, s1-3) | kappāsikapaṇṇaṃ (pts1)
msgctxt "pli-tv-kd6:5.1.4"
msgid "nimbapaṇṇaṃ, kuṭajapaṇṇaṃ, paṭolapaṇṇaṃ, sulasipaṇṇaṃ, kappāsapaṇṇaṃ, yāni vā panaññānipi atthi paṇṇāni bhesajjāni, neva khādanīye khādanīyatthaṃ pharanti, na bhojanīye bhojanīyatthaṃ pharanti …"
msgstr ""

msgctxt "pli-tv-kd6:5.1.5"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-kd6:6.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ phalehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:6.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:6.1.3"
msgid "“Anujānāmi, bhikkhave, phalāni bhesajjāni—"
msgstr ""

#. VAR: goṭṭhaphalaṃ → goṭhaphalaṃ (s1-3, pts1) | koṭṭhaphalaṃ (mr)
msgctxt "pli-tv-kd6:6.1.4"
msgid "bilaṅgaṃ, pippaliṃ, maricaṃ, harītakaṃ, vibhītakaṃ, āmalakaṃ, goṭṭhaphalaṃ, yāni vā panaññānipi atthi phalāni bhesajjāni, neva khādanīye khādanīyatthaṃ pharanti, na bhojanīye bhojanīyatthaṃ pharanti …"
msgstr ""

msgctxt "pli-tv-kd6:6.1.5"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc11, pts-vp-pli1.202
msgctxt "pli-tv-kd6:7.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ jatūhi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:7.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:7.1.3"
msgid "“Anujānāmi, bhikkhave, jatūni bhesajjāni—"
msgstr ""

#. VAR: hiṅguṃ, hiṅgujatuṃ → hiṅgu hiṅgujatu (bj, pts1)
msgctxt "pli-tv-kd6:7.1.4"
msgid "hiṅguṃ, hiṅgujatuṃ, hiṅgusipāṭikaṃ, takaṃ, takapattiṃ, takapaṇṇiṃ, sajjulasaṃ, yāni vā panaññānipi atthi jatūni bhesajjāni, neva khādanīye khādanīyatthaṃ pharanti …"
msgstr ""

msgctxt "pli-tv-kd6:7.1.5"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-kd6:8.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ loṇehi bhesajjehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:8.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:8.1.3"
msgid "“Anujānāmi, bhikkhave, loṇāni bhesajjāni—"
msgstr ""

#. VAR: ubbhidaṃ → ubbhiraṃ (mr)
#. VAR: bilaṃ → biḷālaṃ (bj)
msgctxt "pli-tv-kd6:8.1.4"
msgid "sāmuddaṃ, kāḷaloṇaṃ, sindhavaṃ, ubbhidaṃ, bilaṃ, yāni vā panaññānipi atthi loṇāni bhesajjāni, neva khādanīye khādanīyatthaṃ pharanti, na bhojanīye bhojanīyatthaṃ pharanti, tāni—"
msgstr ""

msgctxt "pli-tv-kd6:8.1.5"
msgid "paṭiggahetvā yāvajīvaṃ pariharituṃ;"
msgstr ""

msgctxt "pli-tv-kd6:8.1.6"
msgid "sati paccaye paribhuñjituṃ."
msgstr ""

msgctxt "pli-tv-kd6:8.1.7"
msgid "Asati paccaye paribhuñjantassa āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
#. VAR: belaṭṭhasīsassa → belaṭṭhisisassa (bj) | velaṭṭhasīsassa (s1-3)
msgctxt "pli-tv-kd6:9.1.1"
msgid "Tena kho pana samayena āyasmato ānandassa upajjhāyassa āyasmato belaṭṭhasīsassa thullakacchābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:9.1.2"
msgid "Tassa lasikāya cīvarāni kāye lagganti, tāni bhikkhū udakena temetvā temetvā apakaḍḍhanti."
msgstr ""

msgctxt "pli-tv-kd6:9.1.3"
msgid "Addasā kho bhagavā senāsanacārikaṃ āhiṇḍanto te bhikkhū tāni cīvarāni udakena temetvā temetvā apakaḍḍhante, disvāna yena te bhikkhū tenupasaṅkami, upasaṅkamitvā te bhikkhū etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:9.1.4"
msgid "“kiṃ imassa, bhikkhave, bhikkhuno ābādho”ti?"
msgstr ""

msgctxt "pli-tv-kd6:9.1.5"
msgid "“Imassa, bhante, āyasmato thullakacchābādho, lasikāya cīvarāni kāye lagganti, tāni mayaṃ udakena temetvā temetvā apakaḍḍhāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:9.2.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:9.2.2"
msgid "“anujānāmi, bhikkhave, yassa kaṇḍu vā, piḷakā vā, assāvo vā, thullakacchu vā ābādho, kāyo vā duggandho, cuṇṇāni bhesajjāni;"
msgstr ""

msgctxt "pli-tv-kd6:9.2.3"
msgid "agilānassa chakaṇaṃ mattikaṃ rajananippakkaṃ."
msgstr ""

msgctxt "pli-tv-kd6:9.2.4"
msgid "Anujānāmi, bhikkhave, udukkhalaṃ musalan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-kd6:10.1.1"
msgid "Tena kho pana samayena gilānānaṃ bhikkhūnaṃ cuṇṇehi bhesajjehi cālitehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:10.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:10.1.3"
msgid "“Anujānāmi, bhikkhave, cuṇṇacālinin”ti."
msgstr ""

msgctxt "pli-tv-kd6:10.1.4"
msgid "Saṇhehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:10.1.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:10.1.6"
msgid "“Anujānāmi, bhikkhave, dussacālinin”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15, pts-vp-pli1.203
msgctxt "pli-tv-kd6:10.2.1"
msgid "Tena kho pana samayena aññatarassa bhikkhuno amanussikābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:10.2.2"
msgid "Taṃ ācariyupajjhāyā upaṭṭhahantā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

#. VAR: āmakamaṃsaṃ → āmakamaṃsañca (bj)
msgctxt "pli-tv-kd6:10.2.3"
msgid "So sūkarasūnaṃ gantvā āmakamaṃsaṃ khādi, āmakalohitaṃ pivi."
msgstr ""

msgctxt "pli-tv-kd6:10.2.4"
msgid "Tassa so amanussikābādho paṭippassambhi."
msgstr ""

msgctxt "pli-tv-kd6:10.2.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:10.2.6"
msgid "“Anujānāmi, bhikkhave, amanussikābādhe āmakamaṃsaṃ āmakalohitan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-kd6:11.1.1"
msgid "Tena kho pana samayena aññatarassa bhikkhuno cakkhurogābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:11.1.2"
msgid "Taṃ bhikkhū pariggahetvā uccārampi passāvampi nikkhāmenti."
msgstr ""

msgctxt "pli-tv-kd6:11.1.3"
msgid "Addasā kho bhagavā senāsanacārikaṃ āhiṇḍanto te bhikkhū taṃ bhikkhuṃ pariggahetvā uccārampi passāvampi nikkhāmente, disvāna yena te bhikkhū tenupasaṅkami, upasaṅkamitvā te bhikkhū etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:11.1.4"
msgid "“kiṃ imassa, bhikkhave, bhikkhuno ābādho”ti?"
msgstr ""

msgctxt "pli-tv-kd6:11.2.1"
msgid "“Imassa, bhante, āyasmato cakkhurogābādho."
msgstr ""

msgctxt "pli-tv-kd6:11.2.2"
msgid "Imaṃ mayaṃ pariggahetvā uccārampi passāvampi nikkhāmemā”ti."
msgstr ""

msgctxt "pli-tv-kd6:11.2.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:11.2.4"
msgid "“anujānāmi, bhikkhave, añjanaṃ—"
msgstr ""

#. VAR: kapallan”ti → kapallakanti (bj)
msgctxt "pli-tv-kd6:11.2.5"
msgid "kāḷañjanaṃ, rasañjanaṃ, sotañjanaṃ, gerukaṃ, kapallan”ti."
msgstr ""

msgctxt "pli-tv-kd6:11.2.6"
msgid "Añjanūpapisanehi attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:11.2.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:11.2.8"
msgid "“Anujānāmi, bhikkhave, candanaṃ, tagaraṃ, kāḷānusāriyaṃ, tālīsaṃ, bhaddamuttakan”ti."
msgstr ""

#. VAR: carukesupi → thālakesupi (bj, s1-3) | thālikesu pi (pts1)
msgctxt "pli-tv-kd6:12.1.1"
msgid "Tena kho pana samayena bhikkhū piṭṭhāni añjanāni carukesupi sarāvakesupi nikkhipanti;"
msgstr ""

msgctxt "pli-tv-kd6:12.1.2"
msgid "tiṇacuṇṇehipi paṃsukehipi okiriyanti."
msgstr ""

msgctxt "pli-tv-kd6:12.1.3"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.1.4"
msgid "“Anujānāmi, bhikkhave, añjanin”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-kd6:12.1.5"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū uccāvacā añjaniyo dhārenti—"
msgstr ""

msgctxt "pli-tv-kd6:12.1.6"
msgid "sovaṇṇamayaṃ, rūpiyamayaṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.1.7"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:12.1.8"
msgid "“seyyathāpi gihī kāmabhogino”ti."
msgstr ""

msgctxt "pli-tv-kd6:12.1.9"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: añjanī → añjaniyo (bj)
msgctxt "pli-tv-kd6:12.1.10"
msgid "“Na, bhikkhave, uccāvacā añjanī dhāretabbā."
msgstr ""

msgctxt "pli-tv-kd6:12.1.11"
msgid "Yo dhāreyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:12.1.12"
msgid "Anujānāmi, bhikkhave, aṭṭhimayaṃ, dantamayaṃ, visāṇamayaṃ, naḷamayaṃ, veḷumayaṃ, kaṭṭhamayaṃ, jatumayaṃ, phalamayaṃ, lohamayaṃ, saṅkhanābhimayan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-kd6:12.2.1"
msgid "Tena kho pana samayena añjaniyo apārutā honti, tiṇacuṇṇehipi paṃsukehipi okiriyanti."
msgstr ""

msgctxt "pli-tv-kd6:12.2.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.2.3"
msgid "“Anujānāmi, bhikkhave, apidhānanti."
msgstr ""

#. VAR: nipatati → patati (bj)
msgctxt "pli-tv-kd6:12.2.4"
msgid "Apidhānaṃ nipatati."
msgstr ""

msgctxt "pli-tv-kd6:12.2.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.2.6"
msgid "“Anujānāmi, bhikkhave, suttakena bandhitvā añjaniyā bandhitun”ti."
msgstr ""

#. VAR: phalati → nipatati (pts1, mr)
msgctxt "pli-tv-kd6:12.2.7"
msgid "Añjanī phalati."
msgstr ""

msgctxt "pli-tv-kd6:12.2.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.2.9"
msgid "“Anujānāmi, bhikkhave, suttakena sibbetun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-kd6:12.3.1"
msgid "Tena kho pana samayena bhikkhū aṅguliyā añjanti, akkhīni dukkhāni honti."
msgstr ""

msgctxt "pli-tv-kd6:12.3.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.3.3"
msgid "“Anujānāmi, bhikkhave, añjanisalākan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc20, pts-vp-pli1.204
msgctxt "pli-tv-kd6:12.3.4"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū uccāvacā añjanisalākāyo dhārenti—"
msgstr ""

#. VAR: rūpiyamayaṃ → rūpimayaṃ (bj)
msgctxt "pli-tv-kd6:12.3.5"
msgid "sovaṇṇamayaṃ rūpiyamayaṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.3.6"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:12.3.7"
msgid "“seyyathāpi gihī kāmabhogino”ti."
msgstr ""

msgctxt "pli-tv-kd6:12.3.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.3.9"
msgid "“Na, bhikkhave, uccāvacā añjanisalākā dhāretabbā."
msgstr ""

msgctxt "pli-tv-kd6:12.3.10"
msgid "Yo dhāreyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:12.3.11"
msgid "Anujānāmi, bhikkhave, aṭṭhimayaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:12.3.12"
msgid "saṅkhanābhimayan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-kd6:12.4.1"
msgid "Tena kho pana samayena añjanisalākā bhūmiyaṃ patitā pharusā hoti."
msgstr ""

msgctxt "pli-tv-kd6:12.4.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: salākaṭhāniyan”ti → salākodhāniyanti (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:12.4.3"
msgid "“Anujānāmi, bhikkhave, salākaṭhāniyan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-kd6:12.4.4"
msgid "Tena kho pana samayena bhikkhū añjanimpi añjanisalākampi hatthena pariharanti."
msgstr ""

msgctxt "pli-tv-kd6:12.4.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.4.6"
msgid "“Anujānāmi, bhikkhave, añjanitthavikan”ti."
msgstr ""

msgctxt "pli-tv-kd6:12.4.7"
msgid "Aṃsabaddhako na hoti."
msgstr ""

msgctxt "pli-tv-kd6:12.4.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:12.4.9"
msgid "“Anujānāmi, bhikkhave, aṃsabaddhakaṃ bandhanasuttakan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-kd6:13.1.1"
msgid "Tena kho pana samayena āyasmato pilindavacchassa sīsābhitāpo hoti."
msgstr ""

msgctxt "pli-tv-kd6:13.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.1.3"
msgid "“Anujānāmi, bhikkhave, muddhani telakan”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.1.4"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:13.1.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.1.6"
msgid "“Anujānāmi, bhikkhave, natthukamman”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.1.7"
msgid "Natthu galati."
msgstr ""

msgctxt "pli-tv-kd6:13.1.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.1.9"
msgid "“Anujānāmi, bhikkhave, natthukaraṇin”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-kd6:13.1.10"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū uccāvacā natthukaraṇiyo dhārenti—"
msgstr ""

msgctxt "pli-tv-kd6:13.1.11"
msgid "sovaṇṇamayaṃ rūpiyamayaṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.1.12"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:13.1.13"
msgid "“seyyathāpi gihī kāmabhogino”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.1.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.1.15"
msgid "“Na, bhikkhave, uccāvacā natthukaraṇī dhāretabbā."
msgstr ""

msgctxt "pli-tv-kd6:13.1.16"
msgid "Yo dhāreyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:13.1.17"
msgid "Anujānāmi, bhikkhave, aṭṭhimayaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:13.1.18"
msgid "saṅkhanābhimayan”ti."
msgstr ""

#. VAR: Natthuṃ visamaṃ āsiñcanti → natthuṃ visamaṃ āsiñcīyanti (bj) | natthu Visamaṃ āsiñciyati (s1-3)
msgctxt "pli-tv-kd6:13.2.1"
msgid "Natthuṃ visamaṃ āsiñcanti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: yamakanatthukaraṇin”ti → yamakaṃ natthukaraṇinti (bj, s1-3)
msgctxt "pli-tv-kd6:13.2.3"
msgid "“Anujānāmi, bhikkhave, yamakanatthukaraṇin”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.4"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.6"
msgid "“Anujānāmi, bhikkhave, dhūmaṃ pātun”ti."
msgstr ""

#. VAR: kaṇṭho → kaṇṭhaṃ (pts1)
msgctxt "pli-tv-kd6:13.2.7"
msgid "Taññeva vaṭṭiṃ ālimpetvā pivanti, kaṇṭho dahati."
msgstr ""

msgctxt "pli-tv-kd6:13.2.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.9"
msgid "“Anujānāmi, bhikkhave, dhūmanettan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-kd6:13.2.10"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū uccāvacāni dhūmanettāni dhārenti—"
msgstr ""

msgctxt "pli-tv-kd6:13.2.11"
msgid "sovaṇṇamayaṃ rūpiyamayaṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.12"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:13.2.13"
msgid "“seyyathāpi gihī kāmabhogino”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.15"
msgid "“Na, bhikkhave, uccāvacāni dhūmanettāni dhāretabbāni."
msgstr ""

msgctxt "pli-tv-kd6:13.2.16"
msgid "Yo dhāreyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:13.2.17"
msgid "Anujānāmi, bhikkhave, aṭṭhimayaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:13.2.18"
msgid "saṅkhanābhimayan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc26
msgctxt "pli-tv-kd6:13.2.19"
msgid "Tena kho pana samayena dhūmanettāni apārutāni honti, pāṇakā pavisanti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.20"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.21"
msgid "“Anujānāmi, bhikkhave, apidhānan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc27
msgctxt "pli-tv-kd6:13.2.22"
msgid "Tena kho pana samayena bhikkhū dhūmanettāni hatthena pariharanti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.23"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.24"
msgid "“Anujānāmi, bhikkhave, dhūmanettathavikan”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.25"
msgid "Ekato ghaṃsiyanti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.26"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.27"
msgid "“Anujānāmi, bhikkhave, yamakathavikan”ti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.28"
msgid "Aṃsabaddhako na hoti."
msgstr ""

msgctxt "pli-tv-kd6:13.2.29"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:13.2.30"
msgid "“Anujānāmi, bhikkhave, aṃsabaddhakaṃ bandhanasuttakan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc28, pts-vp-pli1.205
msgctxt "pli-tv-kd6:14.1.1"
msgid "Tena kho pana samayena āyasmato pilindavacchassa vātābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.1.2"
msgid "Vejjā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd6:14.1.3"
msgid "“telaṃ pacitabban”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.1.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.1.5"
msgid "“Anujānāmi, bhikkhave, telapākan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.1.6"
msgid "Tasmiṃ kho pana telapāke majjaṃ pakkhipitabbaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.1.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.1.8"
msgid "“Anujānāmi, bhikkhave, telapāke majjaṃ pakkhipitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc29
#. VAR: atipakkhittamajjāni → atikhittamajjāni (mr)
msgctxt "pli-tv-kd6:14.1.9"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū atipakkhittamajjāni telāni pacanti, tāni pivitvā majjanti."
msgstr ""

msgctxt "pli-tv-kd6:14.1.10"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.1.11"
msgid "“Na, bhikkhave, atipakkhittamajjaṃ telaṃ pātabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.1.12"
msgid "Yo piveyya, yathādhammo kāretabbo."
msgstr ""

#. VAR: majjassa na vaṇṇo na gandho na raso → na ca vaṇno na ca gandho na ca raso (bj)
msgctxt "pli-tv-kd6:14.1.13"
msgid "Anujānāmi, bhikkhave, yasmiṃ telapāke majjassa na vaṇṇo na gandho na raso paññāyati, evarūpaṃ majjapakkhittaṃ telaṃ pātun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc30
msgctxt "pli-tv-kd6:14.2.1"
msgid "Tena kho pana samayena bhikkhūnaṃ bahuṃ atipakkhittamajjaṃ telaṃ pakkaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.2.2"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:14.2.3"
msgid "“kathaṃ nu kho atipakkhittamajje tele paṭipajjitabban”ti?"
msgstr ""

msgctxt "pli-tv-kd6:14.2.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.2.5"
msgid "“Anujānāmi, bhikkhave, abbhañjanaṃ adhiṭṭhātun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc31
msgctxt "pli-tv-kd6:14.2.6"
msgid "Tena kho pana samayena āyasmato pilindavacchassa bahutaraṃ telaṃ pakkaṃ hoti, telabhājanaṃ na vijjati."
msgstr ""

msgctxt "pli-tv-kd6:14.2.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.2.8"
msgid "“Anujānāmi, bhikkhave, tīṇi tumbāni—"
msgstr ""

msgctxt "pli-tv-kd6:14.2.9"
msgid "lohatumbaṃ, kaṭṭhatumbaṃ, phalatumban”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc32
msgctxt "pli-tv-kd6:14.3.1"
msgid "Tena kho pana samayena āyasmato pilindavacchassa aṅgavāto hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.3.3"
msgid "“Anujānāmi, bhikkhave, sedakamman”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.4"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.3.6"
msgid "“Anujānāmi, bhikkhave, sambhārasedan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.7"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.3.9"
msgid "“Anujānāmi, bhikkhave, mahāsedan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.10"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.11"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.3.12"
msgid "“Anujānāmi, bhikkhave, bhaṅgodakan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.13"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.3.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.3.15"
msgid "“Anujānāmi, bhikkhave, udakakoṭṭhakan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc33
msgctxt "pli-tv-kd6:14.4.1"
msgid "Tena kho pana samayena āyasmato pilindavacchassa pabbavāto hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.3"
msgid "“Anujānāmi, bhikkhave, lohitaṃ mocetun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.4"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: gāhetun”ti → gahetunti (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:14.4.6"
msgid "“Anujānāmi, bhikkhave, lohitaṃ mocetvā visāṇena gāhetun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc34
#. VAR: phalitā → phālitā (si, s1-3, pts1, mr)
msgctxt "pli-tv-kd6:14.4.7"
msgid "Tena kho pana samayena āyasmato pilindavacchassa pādā phalitā honti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.9"
msgid "“Anujānāmi, bhikkhave, pādabbhañjanan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.10"
msgid "Nakkhamaniyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.11"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.12"
msgid "“Anujānāmi, bhikkhave, pajjaṃ abhisaṅkharitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc35, pts-vp-pli1.206
msgctxt "pli-tv-kd6:14.4.13"
msgid "Tena kho pana samayena aññatarassa bhikkhuno gaṇḍābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.15"
msgid "“Anujānāmi, bhikkhave, satthakamman”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.16"
msgid "Kasāvodakena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.17"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.18"
msgid "“Anujānāmi, bhikkhave, kasāvodakan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.19"
msgid "Tilakakkena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.4.20"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.4.21"
msgid "“Anujānāmi, bhikkhave, tilakakkan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.1"
msgid "Kabaḷikāya attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.3"
msgid "“Anujānāmi, bhikkhave, kabaḷikan”ti."
msgstr ""

#. VAR: Vaṇabandhanacoḷena → vaṇabandhanacolakena (bj) | vaṇabandhanacolena (s1-3, pts1)
msgctxt "pli-tv-kd6:14.5.4"
msgid "Vaṇabandhanacoḷena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.6"
msgid "“Anujānāmi, bhikkhave, vaṇabandhanacoḷan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.7"
msgid "Vaṇo kaṇḍuvati."
msgstr ""

msgctxt "pli-tv-kd6:14.5.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: sāsapakuṭṭena → sāsapakuṇḍhena (bj) | sāsapakuḍḍena (si, s1-3) | sāsapakuṭṭhena (si, pts1)
msgctxt "pli-tv-kd6:14.5.9"
msgid "“Anujānāmi, bhikkhave, sāsapakuṭṭena phositun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.10"
msgid "Vaṇo kilijjittha."
msgstr ""

msgctxt "pli-tv-kd6:14.5.11"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.12"
msgid "“Anujānāmi, bhikkhave, dhūmaṃ kātun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.13"
msgid "Vaḍḍhamaṃsaṃ vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.15"
msgid "“Anujānāmi, bhikkhave, loṇasakkharikāya chinditun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.16"
msgid "Vaṇo na ruhati."
msgstr ""

msgctxt "pli-tv-kd6:14.5.17"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.18"
msgid "“Anujānāmi, bhikkhave, vaṇatelan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.5.19"
msgid "Telaṃ galati."
msgstr ""

msgctxt "pli-tv-kd6:14.5.20"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.5.21"
msgid "“Anujānāmi, bhikkhave, vikāsikaṃ sabbaṃ vaṇapaṭikamman”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc36
msgctxt "pli-tv-kd6:14.6.1"
msgid "Tena kho pana samayena aññataro bhikkhu ahinā daṭṭho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.6.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.6.3"
msgid "“Anujānāmi, bhikkhave, cattāri mahāvikaṭāni dātuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:14.6.4"
msgid "gūthaṃ, muttaṃ, chārikaṃ, mattikan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.6.5"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:14.6.6"
msgid "“appaṭiggahitāni nu kho udāhu paṭiggahetabbānī”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.6.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.6.8"
msgid "“Anujānāmi, bhikkhave, sati kappiyakārake paṭiggahāpetuṃ, asati kappiyakārake sāmaṃ gahetvā paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc37
msgctxt "pli-tv-kd6:14.6.9"
msgid "Tena kho pana samayena aññatarena bhikkhunā visaṃ pītaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.6.10"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.6.11"
msgid "“Anujānāmi, bhikkhave, gūthaṃ pāyetun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.6.12"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:14.6.13"
msgid "“appaṭiggahitaṃ nu kho udāhu paṭiggahetabbo”ti?"
msgstr ""

msgctxt "pli-tv-kd6:14.6.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: kato, na puna → kato pana (?)
msgctxt "pli-tv-kd6:14.6.15"
msgid "“Anujānāmi, bhikkhave, yaṃ karonto paṭiggaṇhāti, sveva paṭiggaho kato, na puna paṭiggahetabbo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc38
msgctxt "pli-tv-kd6:14.7.1"
msgid "Tena kho pana samayena aññatarassa bhikkhuno gharadinnakābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.3"
msgid "“Anujānāmi, bhikkhave, sītāloḷiṃ pāyetun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc39
msgctxt "pli-tv-kd6:14.7.4"
msgid "Tena kho pana samayena aññataro bhikkhu duṭṭhagahaṇiko hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.6"
msgid "“Anujānāmi, bhikkhave, āmisakhāraṃ pāyetun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc40
msgctxt "pli-tv-kd6:14.7.7"
msgid "Tena kho pana samayena aññatarassa bhikkhuno paṇḍurogābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.9"
msgid "“Anujānāmi, bhikkhave, muttaharītakaṃ pāyetun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc41
msgctxt "pli-tv-kd6:14.7.10"
msgid "Tena kho pana samayena aññatarassa bhikkhuno chavidosābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.11"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.12"
msgid "“Anujānāmi, bhikkhave, gandhālepaṃ kātun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc42
msgctxt "pli-tv-kd6:14.7.13"
msgid "Tena kho pana samayena aññataro bhikkhu abhisannakāyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.14"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.15"
msgid "“Anujānāmi, bhikkhave, virecanaṃ pātun”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.16"
msgid "Acchakañjiyā attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.17"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.18"
msgid "“Anujānāmi, bhikkhave, acchakañjin”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.19"
msgid "Akaṭayūsena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.20"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.21"
msgid "“Anujānāmi, bhikkhave, akaṭayūsan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.22"
msgid "Kaṭākaṭena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.23"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.24"
msgid "“Anujānāmi, bhikkhave, kaṭākaṭan”ti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.25"
msgid "Paṭicchādanīyena attho hoti."
msgstr ""

msgctxt "pli-tv-kd6:14.7.26"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:14.7.27"
msgid "“Anujānāmi, bhikkhave, paṭicchādanīyan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:15.1.0"
msgid "3. Pilindavacchavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc43, pts-vp-pli1.207
msgctxt "pli-tv-kd6:15.1.1"
msgid "Tena kho pana samayena āyasmā pilindavaccho rājagahe pabbhāraṃ sodhāpeti leṇaṃ kattukāmo."
msgstr ""

msgctxt "pli-tv-kd6:15.1.2"
msgid "Atha kho rājā māgadho seniyo bimbisāro yenāyasmā pilindavaccho tenupasaṅkami, upasaṅkamitvā āyasmantaṃ pilindavacchaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:15.1.3"
msgid "Ekamantaṃ nisinno kho rājā māgadho seniyo bimbisāro āyasmantaṃ pilindavacchaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.1.4"
msgid "“kiṃ, bhante, thero kārāpetī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.1.5"
msgid "“Pabbhāraṃ, mahārāja, sodhāpemi, leṇaṃ kattukāmo”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.1.6"
msgid "“Attho, bhante, ayyassa ārāmikenā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.1.7"
msgid "“Na kho, mahārāja, bhagavatā ārāmiko anuññāto”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.1.8"
msgid "“Tena hi, bhante, bhagavantaṃ paṭipucchitvā mama āroceyyāthā”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.1.9"
msgid "“Evaṃ, mahārājā”ti kho āyasmā pilindavaccho rañño māgadhassa seniyassa bimbisārassa paccassosi."
msgstr ""

msgctxt "pli-tv-kd6:15.2.1"
msgid "Atha kho āyasmā pilindavaccho rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ dhammiyā kathāya sandassesi, samādapesi, samuttejesi, sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd6:15.2.2"
msgid "Atha kho rājā māgadho seniyo bimbisāro āyasmatā pilindavacchena dhammiyā kathāya sandassito samādapito samuttejito sampahaṃsito uṭṭhāyāsanā āyasmantaṃ pilindavacchaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc44
msgctxt "pli-tv-kd6:15.2.3"
msgid "Atha kho āyasmā pilindavaccho bhagavato santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pli-tv-kd6:15.2.4"
msgid "“rājā, bhante, māgadho seniyo bimbisāro ārāmikaṃ dātukāmo."
msgstr ""

#. VAR: bhante, mayā → bhante (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:15.2.5"
msgid "Kathaṃ nu kho, bhante, mayā paṭipajjitabban”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.2.6"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:15.2.7"
msgid "“anujānāmi, bhikkhave, ārāmikan”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.3.1"
msgid "Dutiyampi kho rājā māgadho seniyo bimbisāro yenāyasmā pilindavaccho tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:15.3.2"
msgid "upasaṅkamitvā āyasmantaṃ pilindavacchaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:15.3.3"
msgid "Ekamantaṃ nisinno kho rājā māgadho seniyo bimbisāro āyasmantaṃ pilindavacchaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.3.4"
msgid "“anuññāto, bhante, bhagavatā ārāmiko”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.3.5"
msgid "“Evaṃ, mahārājā”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.3.6"
msgid "“Tena hi, bhante, ayyassa ārāmikaṃ dammī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc45, pts-vp-pli1.208
msgctxt "pli-tv-kd6:15.3.7"
msgid "Atha kho rājā māgadho seniyo bimbisāro āyasmato pilindavacchassa ārāmikaṃ paṭissutvā, vissaritvā, cirena satiṃ paṭilabhitvā, aññataraṃ sabbatthakaṃ mahāmattaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:15.3.8"
msgid "“yo mayā, bhaṇe, ayyassa ārāmiko paṭissuto, dinno so ārāmiko”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.3.9"
msgid "“Na kho, deva, ayyassa ārāmiko dinno”ti."
msgstr ""

#. VAR: ito → ito ratti (si, s1-3)
msgctxt "pli-tv-kd6:15.3.10"
msgid "“Kīva ciraṃ nu kho, bhaṇe, ito hi taṃ hotī”ti?"
msgstr ""

#. VAR: gaṇetvā → vigaṇetvā (bj, pts1)
msgctxt "pli-tv-kd6:15.4.1"
msgid "Atha kho so mahāmatto rattiyo gaṇetvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.4.2"
msgid "“pañca, deva, rattisatānī”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.4.3"
msgid "“Tena hi, bhaṇe, ayyassa pañca ārāmikasatāni dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.4.4"
msgid "“Evaṃ, devā”ti kho so mahāmatto rañño māgadhassa seniyassa bimbisārassa paṭissutvā āyasmato pilindavacchassa pañca ārāmikasatāni pādāsi, pāṭiyekko gāmo nivisi."
msgstr ""

#. VAR: Ārāmikagāmako”tipi → ārāmikagāmotipi (bj, pts1)
#. VAR: pilindagāmako”tipi → pilindigāmotipi (bj) | pilindavacchagāmakotipi (s1-3) | pilindagāmotipi (pts1)
msgctxt "pli-tv-kd6:15.4.5"
msgid "“Ārāmikagāmako”tipi naṃ āhaṃsu, “pilindagāmako”tipi naṃ āhaṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc46
msgctxt "pli-tv-kd6:15.4.6"
msgid "Tena kho pana samayena āyasmā pilindavaccho tasmiṃ gāmake kulūpako hoti."
msgstr ""

msgctxt "pli-tv-kd6:15.4.7"
msgid "Atha kho āyasmā pilindavaccho pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya pilindagāmaṃ piṇḍāya pāvisi."
msgstr ""

msgctxt "pli-tv-kd6:15.5.1"
msgid "Tena kho pana samayena tasmiṃ gāmake ussavo hoti."
msgstr ""

#. VAR: alaṅkatā → ālaṅkitā (bj)
msgctxt "pli-tv-kd6:15.5.2"
msgid "Dārakā alaṅkatā mālākitā kīḷanti."
msgstr ""

msgctxt "pli-tv-kd6:15.5.3"
msgid "Atha kho āyasmā pilindavaccho pilindagāmake sapadānaṃ piṇḍāya caramāno yena aññatarassa ārāmikassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:15.5.4"
msgid "Tena kho pana samayena tassā ārāmikiniyā dhītā aññe dārake alaṅkate mālākite passitvā rodati—"
msgstr ""

msgctxt "pli-tv-kd6:15.5.5"
msgid "“mālaṃ me detha, alaṅkāraṃ me dethā”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.5.6"
msgid "Atha kho āyasmā pilindavaccho taṃ ārāmikiniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.5.7"
msgid "“kissāyaṃ dārikā rodatī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.5.8"
msgid "“Ayaṃ, bhante, dārikā aññe dārake alaṅkate mālākite passitvā rodati—‘"
msgstr ""

msgctxt "pli-tv-kd6:15.5.9"
msgid "mālaṃ me detha, alaṅkāraṃ me dethā’ti."
msgstr ""

msgctxt "pli-tv-kd6:15.5.10"
msgid "Kuto amhākaṃ duggatānaṃ mālā, kuto alaṅkāro”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.6.1"
msgid "Atha kho āyasmā pilindavaccho aññataraṃ tiṇaṇḍupakaṃ gahetvā taṃ ārāmikiniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.6.2"
msgid "“handimaṃ tiṇaṇḍupakaṃ tassā dārikāya sīse paṭimuñcā”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.6.3"
msgid "Atha kho sā ārāmikinī taṃ tiṇaṇḍupakaṃ gahetvā tassā dārikāya sīse paṭimuñci."
msgstr ""

msgctxt "pli-tv-kd6:15.6.4"
msgid "Sā ahosi suvaṇṇamālā abhirūpā, dassanīyā, pāsādikā;"
msgstr ""

msgctxt "pli-tv-kd6:15.6.5"
msgid "natthi tādisā raññopi antepure suvaṇṇamālā."
msgstr ""

msgctxt "pli-tv-kd6:15.6.6"
msgid "Manussā rañño māgadhassa seniyassa bimbisārassa ārocesuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:15.6.7"
msgid "“amukassa, deva, ārāmikassa ghare suvaṇṇamālā abhirūpā, dassanīyā, pāsādikā;"
msgstr ""

msgctxt "pli-tv-kd6:15.6.8"
msgid "natthi tādisā devassapi antepure suvaṇṇamālā;"
msgstr ""

msgctxt "pli-tv-kd6:15.6.9"
msgid "kuto tassa duggatassa?"
msgstr ""

msgctxt "pli-tv-kd6:15.6.10"
msgid "Nissaṃsayaṃ corikāya ābhatā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc47, pts-vp-pli1.209
msgctxt "pli-tv-kd6:15.6.11"
msgid "Atha kho rājā māgadho seniyo bimbisāro taṃ ārāmikakulaṃ bandhāpesi."
msgstr ""

msgctxt "pli-tv-kd6:15.7.1"
msgid "Dutiyampi kho āyasmā pilindavaccho pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya pilindagāmaṃ piṇḍāya pāvisi."
msgstr ""

msgctxt "pli-tv-kd6:15.7.2"
msgid "Pilindagāmake sapadānaṃ piṇḍāya caramāno yena tassa ārāmikassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paṭivissake pucchi—"
msgstr ""

msgctxt "pli-tv-kd6:15.7.3"
msgid "“kahaṃ imaṃ ārāmikakulaṃ gatan”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.7.4"
msgid "“Etissā, bhante, suvaṇṇamālāya kāraṇā raññā bandhāpitan”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.7.5"
msgid "Atha kho āyasmā pilindavaccho yena rañño māgadhassa seniyassa bimbisārassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:15.7.6"
msgid "Atha kho rājā māgadho seniyo bimbisāro yenāyasmā pilindavaccho tenupasaṅkami, upasaṅkamitvā āyasmantaṃ pilindavacchaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:15.7.7"
msgid "Ekamantaṃ nisinnaṃ kho rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ āyasmā pilindavaccho etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:15.8.1"
msgid "“kissa, mahārāja, ārāmikakulaṃ bandhāpitan”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.8.2"
msgid "“Tassa, bhante, ārāmikassa ghare suvaṇṇamālā abhirūpā, dassanīyā, pāsādikā;"
msgstr ""

msgctxt "pli-tv-kd6:15.8.3"
msgid "natthi tādisā amhākampi antepure suvaṇṇamālā;"
msgstr ""

msgctxt "pli-tv-kd6:15.8.4"
msgid "kuto tassa duggatassa?"
msgstr ""

msgctxt "pli-tv-kd6:15.8.5"
msgid "Nissaṃsayaṃ corikāya ābhatā”ti."
msgstr ""

msgctxt "pli-tv-kd6:15.8.6"
msgid "Atha kho āyasmā pilindavaccho rañño māgadhassa seniyassa bimbisārassa pāsādaṃ suvaṇṇanti adhimucci;"
msgstr ""

msgctxt "pli-tv-kd6:15.8.7"
msgid "so ahosi sabbasovaṇṇamayo."
msgstr ""

msgctxt "pli-tv-kd6:15.8.8"
msgid "“Idaṃ pana te, mahārāja, tāva bahuṃ suvaṇṇaṃ kuto”ti?"
msgstr ""

#. VAR: ayyasseveso → ayyassa eso (bj, pts1) | ayyassa seveso (s3)
msgctxt "pli-tv-kd6:15.8.9"
msgid "“Aññātaṃ, bhante, ayyasseveso iddhānubhāvo”ti taṃ ārāmikakulaṃ muñcāpesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc48
msgctxt "pli-tv-kd6:15.9.1"
msgid "Manussā—“"
msgstr ""

#. VAR: uttari manussadhammaṃ → uttarimanussadhammā (bj)
msgctxt "pli-tv-kd6:15.9.2"
msgid "ayyena kira pilindavacchena sarājikāya parisāya uttari manussadhammaṃ iddhipāṭihāriyaṃ dassitan”ti—"
msgstr ""

msgctxt "pli-tv-kd6:15.9.3"
msgid "attamanā abhippasannā āyasmato pilindavacchassa pañca bhesajjāni abhihariṃsu, seyyathidaṃ—"
msgstr ""

#. VAR: sappiṃ, navanītaṃ, telaṃ, madhuṃ → sappi navanītaṃ telaṃ madhu (mr)
msgctxt "pli-tv-kd6:15.9.4"
msgid "sappiṃ, navanītaṃ, telaṃ, madhuṃ, phāṇitaṃ."
msgstr ""

msgctxt "pli-tv-kd6:15.9.5"
msgid "Pakatiyāpi ca āyasmā pilindavaccho lābhī hoti pañcannaṃ bhesajjānaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:15.9.6"
msgid "laddhaṃ laddhaṃ parisāya vissajjeti."
msgstr ""

#. VAR: bāhullikā → bāhulikā (bj)
msgctxt "pli-tv-kd6:15.9.7"
msgid "Parisā cassa hoti bāhullikā;"
msgstr ""

#. VAR: kolambepi → madhu (bj) | koḷumbepi (mr)
msgctxt "pli-tv-kd6:15.9.8"
msgid "laddhaṃ laddhaṃ kolambepi, ghaṭepi, pūretvā paṭisāmeti;"
msgstr ""

msgctxt "pli-tv-kd6:15.9.9"
msgid "parissāvanānipi, thavikāyopi, pūretvā vātapānesu laggeti."
msgstr ""

msgctxt "pli-tv-kd6:15.9.10"
msgid "Tāni olīnavilīnāni tiṭṭhanti."
msgstr ""

msgctxt "pli-tv-kd6:15.9.11"
msgid "Undūrehipi vihārā okiṇṇavikiṇṇā honti."
msgstr ""

msgctxt "pli-tv-kd6:15.9.12"
msgid "Manussā vihāracārikaṃ āhiṇḍantā passitvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:15.9.13"
msgid "“antokoṭṭhāgārikā ime samaṇā sakyaputtiyā, seyyathāpi rājā māgadho seniyo bimbisāro”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc49
msgctxt "pli-tv-kd6:15.10.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:15.10.2"
msgid "Ye te bhikkhū appicchā, te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:15.10.3"
msgid "“kathañhi nāma bhikkhū evarūpāya bāhullāya cetessantī”ti."
msgstr ""

#. VAR: vigarahitvā bhagavato → te bhikkhū bhagavato (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:15.10.4"
msgid "Atha kho te bhikkhū te anekapariyāyena vigarahitvā bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:15.10.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhū evarūpāya bāhullāya cetentī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:15.10.6"
msgid "“Saccaṃ, bhagavā”ti … pe …"
msgstr ""

msgctxt "pli-tv-kd6:15.10.7"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:15.10.8"
msgid "“yāni kho pana tāni gilānānaṃ bhikkhūnaṃ paṭisāyanīyāni bhesajjāni, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:15.10.9"
msgid "sappi, navanītaṃ, telaṃ, madhu, phāṇitaṃ, tāni paṭiggahetvā sattāhaparamaṃ sannidhikārakaṃ paribhuñjitabbāni."
msgstr ""

msgctxt "pli-tv-kd6:15.10.10"
msgid "Taṃ atikkāmayato yathādhammo kāretabbo”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc50
msgctxt "pli-tv-kd6:15.10.11"
msgid "Bhesajjānuññātabhāṇavāro niṭṭhito paṭhamo."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:16.1.0"
msgid "4. Guḷādianujānana"
msgstr ""

#. HTML: </h2><p>
#. REF: sc51, pts-vp-pli1.210
msgctxt "pli-tv-kd6:16.1.1"
msgid "Atha kho bhagavā sāvatthiyaṃ yathābhirantaṃ viharitvā yena rājagahaṃ tena cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:16.1.2"
msgid "Addasā kho āyasmā kaṅkhārevato antarāmagge guḷakaraṇaṃ, okkamitvā guḷe piṭṭhampi chārikampi pakkhipante, disvāna—"
msgstr ""

msgctxt "pli-tv-kd6:16.1.3"
msgid "“akappiyo guḷo sāmiso, na kappati guḷo vikāle paribhuñjitun”ti—"
msgstr ""

msgctxt "pli-tv-kd6:16.1.4"
msgid "kukkuccāyanto sapariso guḷaṃ na paribhuñjati."
msgstr ""

msgctxt "pli-tv-kd6:16.1.5"
msgid "Yepissa sotabbaṃ maññanti, tepi guḷaṃ na paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:16.1.6"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: Kimatthāya → kimatthiyā (pts1, mr)
msgctxt "pli-tv-kd6:16.1.7"
msgid "“Kimatthāya, bhikkhave, guḷe piṭṭhampi chārikampi pakkhipantī”ti?"
msgstr ""

#. VAR: Thaddhatthāya → bandhanatthāya (bj, s1-3) | thaddhanatthāya (pts1)
msgctxt "pli-tv-kd6:16.1.8"
msgid "“Thaddhatthāya, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:16.1.9"
msgid "“Sace, bhikkhave, thaddhatthāya guḷe piṭṭhampi chārikampi pakkhipanti, so ca guḷotveva saṅkhaṃ gacchati."
msgstr ""

msgctxt "pli-tv-kd6:16.1.10"
msgid "Anujānāmi, bhikkhave, yathāsukhaṃ guḷaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc52
msgctxt "pli-tv-kd6:16.2.1"
msgid "Addasā kho āyasmā kaṅkhārevato antarāmagge vacce muggaṃ jātaṃ, passitvā—"
msgstr ""

msgctxt "pli-tv-kd6:16.2.2"
msgid "“akappiyā muggā;"
msgstr ""

msgctxt "pli-tv-kd6:16.2.3"
msgid "pakkāpi muggā jāyantī”ti—"
msgstr ""

msgctxt "pli-tv-kd6:16.2.4"
msgid "kukkuccāyanto sapariso muggaṃ na paribhuñjati."
msgstr ""

msgctxt "pli-tv-kd6:16.2.5"
msgid "Yepissa sotabbaṃ maññanti, tepi muggaṃ na paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:16.2.6"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: Sace → sacepi (?)
msgctxt "pli-tv-kd6:16.2.7"
msgid "“Sace, bhikkhave, pakkāpi muggā jāyanti, anujānāmi, bhikkhave, yathāsukhaṃ muggaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc53
msgctxt "pli-tv-kd6:16.3.1"
msgid "Tena kho pana samayena aññatarassa bhikkhuno udaravātābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:16.3.2"
msgid "So loṇasovīrakaṃ apāyi."
msgstr ""

msgctxt "pli-tv-kd6:16.3.3"
msgid "Tassa so udaravātābādho paṭippassambhi."
msgstr ""

msgctxt "pli-tv-kd6:16.3.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:16.3.5"
msgid "“Anujānāmi, bhikkhave, gilānassa loṇasovīrakaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:16.3.6"
msgid "agilānassa udakasambhinnaṃ pānaparibhogena paribhuñjitun”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:17.1.0"
msgid "5. Antovuṭṭhādipaṭikkhepakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc54
msgctxt "pli-tv-kd6:17.1.1"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena rājagahaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:17.1.2"
msgid "Tatra sudaṃ bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-kd6:17.1.3"
msgid "Tena kho pana samayena bhagavato udaravātābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:17.1.4"
msgid "Atha kho āyasmā ānando—“"
msgstr ""

#. VAR: tekaṭulayāguyā → tekaṭulāya yāguyā (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:17.1.5"
msgid "pubbepi bhagavato udaravātābādho tekaṭulayāguyā phāsu hotī”ti—"
msgstr ""

msgctxt "pli-tv-kd6:17.1.6"
msgid "sāmaṃ tilampi, taṇḍulampi, muggampi viññāpetvā, anto vāsetvā, anto sāmaṃ pacitvā bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd6:17.1.7"
msgid "“pivatu bhagavā tekaṭulayāgun”ti."
msgstr ""

msgctxt "pli-tv-kd6:17.2.1"
msgid "Jānantāpi tathāgatā pucchanti, jānantāpi na pucchanti;"
msgstr ""

msgctxt "pli-tv-kd6:17.2.2"
msgid "kālaṃ viditvā pucchanti, kālaṃ viditvā na pucchanti;"
msgstr ""

msgctxt "pli-tv-kd6:17.2.3"
msgid "atthasaṃhitaṃ tathāgatā pucchanti, no anatthasaṃhitaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.2.4"
msgid "Anatthasaṃhite setughāto tathāgatānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.2.5"
msgid "Dvīhi ākārehi buddhā bhagavanto bhikkhū paṭipucchanti—"
msgstr ""

msgctxt "pli-tv-kd6:17.2.6"
msgid "“dhammaṃ vā desessāma, sāvakānaṃ vā sikkhāpadaṃ paññapessāmā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc55, pts-vp-pli1.211
msgctxt "pli-tv-kd6:17.2.7"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi—“"
msgstr ""

#. VAR: kutāyaṃ → kuto yaṃ (bj)
msgctxt "pli-tv-kd6:17.2.8"
msgid "kutāyaṃ, ānanda, yāgū”ti?"
msgstr ""

msgctxt "pli-tv-kd6:17.2.9"
msgid "Atha kho āyasmā ānando bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:17.3.1"
msgid "Vigarahi buddho bhagavā—"
msgstr ""

msgctxt "pli-tv-kd6:17.3.2"
msgid "“ananucchavikaṃ, ānanda, ananulomikaṃ, appatirūpaṃ, assāmaṇakaṃ, akappiyaṃ, akaraṇīyaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.3.3"
msgid "Kathañhi nāma tvaṃ, ānanda, evarūpāya bāhullāya cetessasi."
msgstr ""

#. VAR: vuṭṭhaṃ → vutthaṃ (bj, s1-3, pts1, mr)
msgctxt "pli-tv-kd6:17.3.4"
msgid "Yadapi, ānanda, anto vuṭṭhaṃ tadapi akappiyaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:17.3.5"
msgid "yadapi anto pakkaṃ, tadapi akappiyaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:17.3.6"
msgid "yadapi sāmaṃ pakkaṃ, tadapi akappiyaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.3.7"
msgid "Netaṃ, ānanda, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:17.3.8"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:17.3.9"
msgid "“na, bhikkhave, anto vuṭṭhaṃ, anto pakkaṃ, sāmaṃ pakkaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.3.10"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:17.4.1"
msgid "Anto ce, bhikkhave, vuṭṭhaṃ, anto pakkaṃ, sāmaṃ pakkaṃ tañce paribhuñjeyya, āpatti tiṇṇaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.4.2"
msgid "Anto ce, bhikkhave, vuṭṭhaṃ, anto pakkaṃ, aññehi pakkaṃ, tañce paribhuñjeyya, āpatti dvinnaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.4.3"
msgid "Anto ce, bhikkhave, vuṭṭhaṃ, bahi pakkaṃ, sāmaṃ pakkaṃ, tañce paribhuñjeyya, āpatti dvinnaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.5.1"
msgid "Bahi ce, bhikkhave, vuṭṭhaṃ, anto pakkaṃ, sāmaṃ pakkaṃ, tañce paribhuñjeyya, āpatti dvinnaṃ dukkaṭānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.5.2"
msgid "Anto ce, bhikkhave, vuṭṭhaṃ, bahi pakkaṃ, aññehi pakkaṃ, tañce paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:17.5.3"
msgid "Bahi ce, bhikkhave, vuṭṭhaṃ, anto pakkaṃ, aññehi pakkaṃ, tañce paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:17.5.4"
msgid "Bahi ce, bhikkhave, vuṭṭhaṃ, bahi pakkaṃ, sāmaṃ pakkaṃ, tañce paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:17.5.5"
msgid "Bahi ce, bhikkhave, vuṭṭhaṃ, bahi pakkaṃ, aññehi pakkaṃ, tañce paribhuñjeyya, anāpattī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc56
msgctxt "pli-tv-kd6:17.6.1"
msgid "Tena kho pana samayena bhikkhū—"
msgstr ""

msgctxt "pli-tv-kd6:17.6.2"
msgid "“bhagavatā sāmaṃpāko paṭikkhitto”ti—"
msgstr ""

msgctxt "pli-tv-kd6:17.6.3"
msgid "puna pāke kukkuccāyanti."
msgstr ""

msgctxt "pli-tv-kd6:17.6.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.6.5"
msgid "“Anujānāmi, bhikkhave, puna pākaṃ pacitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc57, pts-vp-pli1.212
msgctxt "pli-tv-kd6:17.7.1"
msgid "Tena kho pana samayena rājagahaṃ dubbhikkhaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.2"
msgid "Manussā loṇampi, telampi, taṇḍulampi, khādanīyampi ārāmaṃ āharanti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.3"
msgid "Tāni bhikkhū bahi vāsenti;"
msgstr ""

msgctxt "pli-tv-kd6:17.7.4"
msgid "ukkapiṇḍakāpi khādanti, corāpi haranti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.7.6"
msgid "“Anujānāmi, bhikkhave, anto vāsetun”ti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.7"
msgid "Anto vāsetvā bahi pācenti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.8"
msgid "Damakā parivārenti."
msgstr ""

#. VAR: avissaṭṭhā → avissatthā (bj, pts1)
msgctxt "pli-tv-kd6:17.7.9"
msgid "Bhikkhū avissaṭṭhā paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.10"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.7.11"
msgid "“Anujānāmi, bhikkhave, anto pacitun”ti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.12"
msgid "Dubbhikkhe kappiyakārakā bahutaraṃ haranti, appataraṃ bhikkhūnaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:17.7.13"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.7.14"
msgid "“Anujānāmi, bhikkhave, sāmaṃ pacituṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.7.15"
msgid "Anujānāmi, bhikkhave, anto vuṭṭhaṃ, anto pakkaṃ, sāmaṃ pakkan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:17.8.0"
msgid "6. Uggahitapaṭiggahaṇa"
msgstr ""

#. HTML: </h2><p>
#. REF: sc58
msgctxt "pli-tv-kd6:17.8.1"
msgid "Tena kho pana samayena sambahulā bhikkhū kāsīsu vassaṃvuṭṭhā rājagahaṃ gacchantā bhagavantaṃ dassanāya antarāmagge na labhiṃsu lūkhassa vā paṇītassa vā bhojanassa yāvadatthaṃ pāripūriṃ;"
msgstr ""

msgctxt "pli-tv-kd6:17.8.2"
msgid "bahuñca phalakhādanīyaṃ ahosi;"
msgstr ""

msgctxt "pli-tv-kd6:17.8.3"
msgid "kappiyakārako ca na ahosi."
msgstr ""

msgctxt "pli-tv-kd6:17.8.4"
msgid "Atha kho te bhikkhū kilantarūpā yena rājagahaṃ veḷuvanaṃ kalandakanivāpo, yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:17.8.5"
msgid "Āciṇṇaṃ kho panetaṃ buddhānaṃ bhagavantānaṃ āgantukehi bhikkhūhi saddhiṃ paṭisammodituṃ."
msgstr ""

msgctxt "pli-tv-kd6:17.8.6"
msgid "Atha kho bhagavā te bhikkhū etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:17.8.7"
msgid "“kacci, bhikkhave, khamanīyaṃ, kacci yāpanīyaṃ, kaccittha appakilamathena addhānaṃ āgatā;"
msgstr ""

msgctxt "pli-tv-kd6:17.8.8"
msgid "kuto ca tumhe, bhikkhave, āgacchathā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:17.9.1"
msgid "“Khamanīyaṃ, bhagavā, yāpanīyaṃ, bhagavā."
msgstr ""

msgctxt "pli-tv-kd6:17.9.2"
msgid "Idha mayaṃ, bhante, kāsīsu vassaṃvuṭṭhā rājagahaṃ āgacchantā bhagavantaṃ dassanāya antarāmagge na labhimhā lūkhassa vā paṇītassa vā bhojanassa yāvadatthaṃ pāripūriṃ;"
msgstr ""

msgctxt "pli-tv-kd6:17.9.3"
msgid "bahuñca phalakhādanīyaṃ ahosi;"
msgstr ""

msgctxt "pli-tv-kd6:17.9.4"
msgid "kappiyakārako ca na ahosi;"
msgstr ""

msgctxt "pli-tv-kd6:17.9.5"
msgid "tena mayaṃ kilantarūpā addhānaṃ āgatā”ti."
msgstr ""

msgctxt "pli-tv-kd6:17.9.6"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—“"
msgstr ""

#. VAR: kappiyakārake → ... kārakaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:17.9.7"
msgid "anujānāmi, bhikkhave, yattha phalakhādanīyaṃ passati, kappiyakārako ca na hoti, sāmaṃ gahetvā, haritvā, kappiyakārake passitvā, bhūmiyaṃ nikkhipitvā, paṭiggahāpetvā paribhuñjituṃ."
msgstr ""

#. VAR: uggahitaṃ paṭiggahitun”ti → uggahitapaṭiggahitanti (bj) | uggahitaṃ paṭiggahetunti (s1-3)
msgctxt "pli-tv-kd6:17.9.8"
msgid "Anujānāmi, bhikkhave, uggahitaṃ paṭiggahitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc59, pts-vp-pli1.213
msgctxt "pli-tv-kd6:18.1.1"
msgid "Tena kho pana samayena aññatarassa brāhmaṇassa navā ca tilā navañca madhu uppannā honti."
msgstr ""

msgctxt "pli-tv-kd6:18.1.2"
msgid "Atha kho tassa brāhmaṇassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:18.1.3"
msgid "“yannūnāhaṃ nave ca tile navañca madhuṃ buddhappamukhassa bhikkhusaṃghassa dadeyyan”ti."
msgstr ""

#. VAR: paṭisammodi → sammodi (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:18.1.4"
msgid "Atha kho so brāhmaṇo yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavatā saddhiṃ paṭisammodi, sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:18.1.5"
msgid "Ekamantaṃ ṭhito kho so brāhmaṇo bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:18.1.6"
msgid "“adhivāsetu me bhavaṃ gotamo svātanāya bhattaṃ, saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:18.1.7"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:18.1.8"
msgid "Atha kho so brāhmaṇo bhagavato adhivāsanaṃ viditvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:18.2.1"
msgid "Atha kho so brāhmaṇo tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:18.2.2"
msgid "“kālo, bho gotama, niṭṭhitaṃ bhattan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc60
msgctxt "pli-tv-kd6:18.2.3"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena tassa brāhmaṇassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paññatte āsane nisīdi, saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:18.2.4"
msgid "Atha kho so brāhmaṇo buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:18.2.5"
msgid "Ekamantaṃ nisinnaṃ kho taṃ brāhmaṇaṃ bhagavā dhammiyā kathāya sandassetvā, samādapetvā, samuttejetvā, sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc61
msgctxt "pli-tv-kd6:18.3.1"
msgid "Atha kho tassa brāhmaṇassa acirapakkantassa bhagavato etadahosi—“"
msgstr ""

#. VAR: pamuṭṭhā → pammuṭṭhā (bj)
msgctxt "pli-tv-kd6:18.3.2"
msgid "yesaṃ kho mayā atthāya buddhappamukho bhikkhusaṃgho nimantito, ‘nave ca tile navañca madhuṃ dassāmī’ti, te mayā pamuṭṭhā dātuṃ."
msgstr ""

#. VAR: harāpeyyan”ti → āharāpeyyanti (bj)
msgctxt "pli-tv-kd6:18.3.3"
msgid "Yannūnāhaṃ nave ca tile navañca madhuṃ kolambehi ca ghaṭehi ca ārāmaṃ harāpeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:18.3.4"
msgid "Atha kho so brāhmaṇo nave ca tile navañca madhuṃ kolambehi ca ghaṭehi ca ārāmaṃ harāpetvā yena bhagavā tenupasaṅkami, upasaṅkamitvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:18.3.5"
msgid "Ekamantaṃ ṭhito kho so brāhmaṇo bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:18.4.1"
msgid "“yesaṃ kho mayā, bho gotama, atthāya buddhappamukho bhikkhusaṃgho nimantito, ‘nave ca tile navañca madhuṃ dassāmī’ti, te mayā pamuṭṭhā dātuṃ."
msgstr ""

msgctxt "pli-tv-kd6:18.4.2"
msgid "Paṭiggaṇhātu me bhavaṃ gotamo nave ca tile navañca madhun”ti."
msgstr ""

msgctxt "pli-tv-kd6:18.4.3"
msgid "“Tena hi, brāhmaṇa, bhikkhūnaṃ dehī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc62
msgctxt "pli-tv-kd6:18.4.4"
msgid "Tena kho pana samayena bhikkhū dubbhikkhe appamattakepi pavārenti, paṭisaṅkhāpi paṭikkhipanti, sabbo ca saṃgho pavārito hoti."
msgstr ""

msgctxt "pli-tv-kd6:18.4.5"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

#. VAR: Paṭiggaṇhatha → na patigaṇhanti patigaṇhatha (bj, pts1)
msgctxt "pli-tv-kd6:18.4.6"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjatha."
msgstr ""

msgctxt "pli-tv-kd6:18.4.7"
msgid "Anujānāmi, bhikkhave, tato nīhaṭaṃ bhuttāvinā pavāritena anatirittaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:19.1.0"
msgid "7. Paṭiggahitādianujānana"
msgstr ""

#. HTML: </h2><p>
#. REF: sc63, pts-vp-pli1.214
msgctxt "pli-tv-kd6:19.1.1"
msgid "Tena kho pana samayena āyasmato upanandassa sakyaputtassa upaṭṭhākakulaṃ saṃghassatthāya khādanīyaṃ pāhesi—"
msgstr ""

msgctxt "pli-tv-kd6:19.1.2"
msgid "“ayyassa upanandassa dassetvā saṃghassa dātabban”ti."
msgstr ""

msgctxt "pli-tv-kd6:19.1.3"
msgid "Tena kho pana samayena āyasmā upanando sakyaputto gāmaṃ piṇḍāya paviṭṭho hoti."
msgstr ""

msgctxt "pli-tv-kd6:19.1.4"
msgid "Atha kho te manussā ārāmaṃ gantvā bhikkhū pucchiṃsu—"
msgstr ""

msgctxt "pli-tv-kd6:19.1.5"
msgid "“kahaṃ, bhante, ayyo upanando”ti?"
msgstr ""

msgctxt "pli-tv-kd6:19.1.6"
msgid "“Esāvuso, āyasmā upanando sakyaputto gāmaṃ piṇḍāya paviṭṭho”ti."
msgstr ""

msgctxt "pli-tv-kd6:19.1.7"
msgid "“Idaṃ, bhante, khādanīyaṃ ayyassa upanandassa dassetvā saṃghassa dātabban”ti."
msgstr ""

msgctxt "pli-tv-kd6:19.1.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:19.1.9"
msgid "“Tena hi, bhikkhave, paṭiggahetvā nikkhipatha yāva upanando āgacchatī”ti."
msgstr ""

msgctxt "pli-tv-kd6:19.2.1"
msgid "Atha kho āyasmā upanando sakyaputto purebhattaṃ kulāni payirupāsitvā divā āgacchati."
msgstr ""

msgctxt "pli-tv-kd6:19.2.2"
msgid "Tena kho pana samayena bhikkhū dubbhikkhe appamattakepi pavārenti, paṭisaṅkhāpi paṭikkhipanti, sabbo ca saṃgho pavārito hoti."
msgstr ""

msgctxt "pli-tv-kd6:19.2.3"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:19.2.4"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjatha."
msgstr ""

msgctxt "pli-tv-kd6:19.2.5"
msgid "Anujānāmi, bhikkhave, purebhattaṃ paṭiggahitaṃ bhuttāvinā pavāritena anatirittaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc64
msgctxt "pli-tv-kd6:20.1.1"
msgid "Atha kho bhagavā rājagahe yathābhirantaṃ viharitvā yena sāvatthi tena cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:20.1.2"
msgid "Anupubbena cārikaṃ caramāno yena sāvatthi tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:20.1.3"
msgid "Tatra sudaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-kd6:20.1.4"
msgid "Tena kho pana samayena āyasmato sāriputtassa kāyaḍāhābādho hoti."
msgstr ""

msgctxt "pli-tv-kd6:20.1.5"
msgid "Atha kho āyasmā mahāmoggallāno yenāyasmā sāriputto tenupasaṅkami, upasaṅkamitvā āyasmantaṃ sāriputtaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:20.1.6"
msgid "“pubbe te, āvuso sāriputta, kāyaḍāhābādho kena phāsu hotī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:20.1.7"
msgid "“Bhisehi ca me, āvuso, muḷālikāhi cā”ti."
msgstr ""

#. VAR: samiñjitaṃ → sammiñjitaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:20.1.8"
msgid "Atha kho āyasmā mahāmoggallāno seyyathāpi nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya, pasāritaṃ vā bāhaṃ samiñjeyya;"
msgstr ""

msgctxt "pli-tv-kd6:20.1.9"
msgid "evameva jetavane antarahito mandākiniyā pokkharaṇiyā tīre pāturahosi."
msgstr ""

msgctxt "pli-tv-kd6:20.2.1"
msgid "Addasā kho aññataro nāgo āyasmantaṃ mahāmoggallānaṃ dūratova āgacchantaṃ, disvāna āyasmantaṃ mahāmoggallānaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:20.2.2"
msgid "“etu kho, bhante, ayyo mahāmoggallāno."
msgstr ""

msgctxt "pli-tv-kd6:20.2.3"
msgid "Svāgataṃ, bhante, ayyassa mahāmoggallānassa."
msgstr ""

msgctxt "pli-tv-kd6:20.2.4"
msgid "Kena, bhante, ayyassa attho;"
msgstr ""

msgctxt "pli-tv-kd6:20.2.5"
msgid "kiṃ dammī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:20.2.6"
msgid "“Bhisehi ca me, āvuso, attho, muḷālikāhi cā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc65, pts-vp-pli1.215
msgctxt "pli-tv-kd6:20.2.7"
msgid "Atha kho so nāgo aññataraṃ nāgaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:20.2.8"
msgid "“tena hi, bhaṇe, ayyassa bhise ca muḷālikāyo ca yāvadatthaṃ dehī”ti."
msgstr ""

#. VAR: bhisañca muḷālikañca abbāhitvā → bhisamūḷālikañca abbāhetvā (bj) | bhisamūlālikāyo abbāhitvā (s1-3) | bhisañ ca muḷāliñ ca abbāhitvā (pts1) | bhisamuḷālaṃ abbuhetvā (^sn20.9#1 [9. Nāgasutta])
msgctxt "pli-tv-kd6:20.2.9"
msgid "Atha kho so nāgo mandākiniṃ pokkharaṇiṃ ogāhetvā, soṇḍāya bhisañca muḷālikañca abbāhitvā, suvikkhālitaṃ vikkhāletvā, bhaṇḍikaṃ bandhitvā yenāyasmā mahāmoggallāno tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:20.3.1"
msgid "Atha kho āyasmā mahāmoggallāno—"
msgstr ""

msgctxt "pli-tv-kd6:20.3.2"
msgid "seyyathāpi nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya, pasāritaṃ vā bāhaṃ samiñjeyya;"
msgstr ""

msgctxt "pli-tv-kd6:20.3.3"
msgid "evameva—"
msgstr ""

msgctxt "pli-tv-kd6:20.3.4"
msgid "mandākiniyā pokkharaṇiyā tīre antarahito jetavane pāturahosi."
msgstr ""

msgctxt "pli-tv-kd6:20.3.5"
msgid "Sopi kho nāgo mandākiniyā pokkharaṇiyā tīre antarahito jetavane pāturahosi."
msgstr ""

msgctxt "pli-tv-kd6:20.3.6"
msgid "Atha kho so nāgo āyasmato mahāmoggallānassa bhise ca muḷālikāyo ca paṭiggahāpetvā jetavane antarahito mandākiniyā pokkharaṇiyā tīre pāturahosi."
msgstr ""

msgctxt "pli-tv-kd6:20.3.7"
msgid "Atha kho āyasmā mahāmoggallāno āyasmato sāriputtassa bhise ca muḷālikāyo ca upanāmesi."
msgstr ""

#. VAR: ca bhuttassa → paribhuttassa (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:20.3.8"
msgid "Atha kho āyasmato sāriputtassa bhise ca muḷālikāyo ca bhuttassa kāyaḍāhābādho paṭippassambhi."
msgstr ""

msgctxt "pli-tv-kd6:20.3.9"
msgid "Bahū bhisā ca muḷālikāyo ca avasiṭṭhā honti."
msgstr ""

msgctxt "pli-tv-kd6:20.4.1"
msgid "Tena kho pana samayena bhikkhū dubbhikkhe appamattakepi pavārenti, paṭisaṅkhāpi paṭikkhipanti, sabbo ca saṃgho pavārito hoti."
msgstr ""

msgctxt "pli-tv-kd6:20.4.2"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:20.4.3"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjatha."
msgstr ""

msgctxt "pli-tv-kd6:20.4.4"
msgid "Anujānāmi, bhikkhave, vanaṭṭhaṃ pokkharaṭṭhaṃ bhuttāvinā pavāritena anatirittaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc66
msgctxt "pli-tv-kd6:21.1.1"
msgid "Tena kho pana samayena sāvatthiyaṃ bahuṃ phalakhādanīyaṃ uppannaṃ hoti, kappiyakārako ca na hoti."
msgstr ""

msgctxt "pli-tv-kd6:21.1.2"
msgid "Bhikkhū kukkuccāyantā phalaṃ na paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:21.1.3"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: nibbattabījaṃ → nibbaṭṭabījaṃ (bj) | nibbaṭabījaṃ (s1-3) | nippaṭṭabījaṃ (mr)
msgctxt "pli-tv-kd6:21.1.4"
msgid "“Anujānāmi, bhikkhave, abījaṃ nibbattabījaṃ akatakappaṃ phalaṃ paribhuñjitun”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:22.1.0"
msgid "8. Satthakammapaṭikkhepakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc67, pts-vp-pli1.216
msgctxt "pli-tv-kd6:22.1.1"
msgid "Atha kho bhagavā sāvatthiyaṃ yathābhirantaṃ viharitvā yena rājagahaṃ tena cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:22.1.2"
msgid "Anupubbena cārikaṃ caramāno yena rājagahaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:22.1.3"
msgid "Tatra sudaṃ bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-kd6:22.1.4"
msgid "Tena kho pana samayena aññatarassa bhikkhuno bhagandalābādho hoti."
msgstr ""

#. VAR: maṃ → mamaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:22.1.5"
msgid "Ākāsagotto vejjo satthakammaṃ karoti."
msgstr ""

msgctxt "pli-tv-kd6:22.1.6"
msgid "Atha kho bhagavā senāsanacārikaṃ āhiṇḍanto yena tassa bhikkhuno vihāro tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:22.2.1"
msgid "Addasā kho ākāsagotto vejjo bhagavantaṃ dūratova āgacchantaṃ, disvāna bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:22.2.2"
msgid "“āgacchatu bhavaṃ gotamo, imassa bhikkhuno vaccamaggaṃ passatu, seyyathāpi godhāmukhan”ti."
msgstr ""

msgctxt "pli-tv-kd6:22.2.3"
msgid "Atha kho bhagavā—"
msgstr ""

msgctxt "pli-tv-kd6:22.2.4"
msgid "“so maṃ khvāyaṃ moghapuriso uppaṇḍetī”ti—"
msgstr ""

msgctxt "pli-tv-kd6:22.2.5"
msgid "tatova paṭinivattitvā, etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā, bhikkhū paṭipucchi—“"
msgstr ""

#. VAR: atthi kira → atthi (bj, s1-3)
msgctxt "pli-tv-kd6:22.2.6"
msgid "atthi kira, bhikkhave, amukasmiṃ vihāre bhikkhu gilāno”ti?"
msgstr ""

msgctxt "pli-tv-kd6:22.2.7"
msgid "“Atthi, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:22.2.8"
msgid "“Kiṃ tassa, bhikkhave, bhikkhuno ābādho”ti?"
msgstr ""

msgctxt "pli-tv-kd6:22.2.9"
msgid "“Tassa, bhante, āyasmato bhagandalābādho, ākāsagotto vejjo satthakammaṃ karotī”ti."
msgstr ""

msgctxt "pli-tv-kd6:22.3.1"
msgid "Vigarahi buddho bhagavā—"
msgstr ""

msgctxt "pli-tv-kd6:22.3.2"
msgid "“ananucchavikaṃ, bhikkhave, tassa moghapurisassa, ananulomikaṃ, appatirūpaṃ, assāmaṇakaṃ, akappiyaṃ, akaraṇīyaṃ."
msgstr ""

msgctxt "pli-tv-kd6:22.3.3"
msgid "Kathañhi nāma so, bhikkhave, moghapuriso sambādhe satthakammaṃ kārāpessati."
msgstr ""

msgctxt "pli-tv-kd6:22.3.4"
msgid "Sambādhe, bhikkhave, sukhumā chavi, duropayo vaṇo, dupparihāraṃ satthaṃ."
msgstr ""

msgctxt "pli-tv-kd6:22.3.5"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:22.3.6"
msgid "vigarahitvā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:22.3.7"
msgid "dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:22.3.8"
msgid "“na, bhikkhave, sambādhe satthakammaṃ kārāpetabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:22.3.9"
msgid "Yo kārāpeyya, āpatti thullaccayassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc68
msgctxt "pli-tv-kd6:22.4.1"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū—"
msgstr ""

msgctxt "pli-tv-kd6:22.4.2"
msgid "“bhagavatā satthakammaṃ paṭikkhittan”ti—"
msgstr ""

msgctxt "pli-tv-kd6:22.4.3"
msgid "vatthikammaṃ kārāpenti."
msgstr ""

msgctxt "pli-tv-kd6:22.4.4"
msgid "Ye te bhikkhū appicchā, te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:22.4.5"
msgid "“kathañhi nāma chabbaggiyā bhikkhū vatthikammaṃ kārāpessantī”ti."
msgstr ""

msgctxt "pli-tv-kd6:22.4.6"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:22.4.7"
msgid "“Saccaṃ kira, bhikkhave, chabbaggiyā bhikkhū vatthikammaṃ kārāpentī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:22.4.8"
msgid "“Saccaṃ, bhagavā”ti … pe …"
msgstr ""

msgctxt "pli-tv-kd6:22.4.9"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:22.4.10"
msgid "“na, bhikkhave, sambādhassa sāmantā dvaṅgulā satthakammaṃ vā vatthikammaṃ vā kārāpetabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:22.4.11"
msgid "Yo kārāpeyya, āpatti thullaccayassā”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:23.1.0"
msgid "9. Manussamaṃsapaṭikkhepakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc69, pts-vp-pli1.217
msgctxt "pli-tv-kd6:23.1.1"
msgid "Atha kho bhagavā rājagahe yathābhirantaṃ viharitvā yena bārāṇasī tena cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:23.1.2"
msgid "Anupubbena cārikaṃ caramāno yena bārāṇasī tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:23.1.3"
msgid "Tatra sudaṃ bhagavā bārāṇasiyaṃ viharati isipatane migadāye."
msgstr ""

#. VAR: ubhatopasannā → ubho pasannā (bj, s1-3)
msgctxt "pli-tv-kd6:23.1.4"
msgid "Tena kho pana samayena bārāṇasiyaṃ suppiyo ca upāsako suppiyā ca upāsikā ubhatopasannā honti, dāyakā, kārakā, saṃghupaṭṭhākā."
msgstr ""

msgctxt "pli-tv-kd6:23.1.5"
msgid "Atha kho suppiyā upāsikā ārāmaṃ gantvā vihārena vihāraṃ pariveṇena pariveṇaṃ upasaṅkamitvā bhikkhū pucchati—"
msgstr ""

msgctxt "pli-tv-kd6:23.1.6"
msgid "“ko, bhante, gilāno, kassa kiṃ āhariyatū”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.2.1"
msgid "Tena kho pana samayena aññatarena bhikkhunā virecanaṃ pītaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:23.2.2"
msgid "Atha kho so bhikkhu suppiyaṃ upāsikaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.2.3"
msgid "“mayā kho, bhagini, virecanaṃ pītaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.2.4"
msgid "Attho me paṭicchādanīyenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.2.5"
msgid "“Suṭṭhu, ayya, āhariyissatī”ti gharaṃ gantvā antevāsiṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:23.2.6"
msgid "“gaccha, bhaṇe, pavattamaṃsaṃ jānāhī”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.2.7"
msgid "“Evaṃ, ayye”ti kho so puriso suppiyāya upāsikāya paṭissuṇitvā kevalakappaṃ bārāṇasiṃ āhiṇḍanto na addasa pavattamaṃsaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc70
msgctxt "pli-tv-kd6:23.2.8"
msgid "Atha kho so puriso yena suppiyā upāsikā tenupasaṅkami, upasaṅkamitvā suppiyaṃ upāsikaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.2.9"
msgid "“natthayye pavattamaṃsaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.2.10"
msgid "Māghāto ajjā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.3.1"
msgid "Atha kho suppiyāya upāsikāya etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:23.3.2"
msgid "“tassa kho gilānassa bhikkhuno paṭicchādanīyaṃ alabhantassa ābādho vā abhivaḍḍhissati, kālaṃkiriyā vā bhavissati."
msgstr ""

msgctxt "pli-tv-kd6:23.3.3"
msgid "Na kho metaṃ patirūpaṃ yāhaṃ paṭissuṇitvā na harāpeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.3.4"
msgid "Potthanikaṃ gahetvā ūrumaṃsaṃ ukkantitvā dāsiyā adāsi—“"
msgstr ""

#. VAR: dajjāhi → dajjehi (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:23.3.5"
msgid "handa, je, imaṃ maṃsaṃ sampādetvā amukasmiṃ vihāre bhikkhu gilāno, tassa dajjāhi."
msgstr ""

#. VAR: veṭhetvā → paveṭhetvā (bj)
msgctxt "pli-tv-kd6:23.3.6"
msgid "Yo ca maṃ pucchati, ‘gilānā’ti paṭivedehī”ti uttarāsaṅgena ūruṃ veṭhetvā ovarakaṃ pavisitvā mañcake nipajji."
msgstr ""

msgctxt "pli-tv-kd6:23.4.1"
msgid "Atha kho suppiyo upāsako gharaṃ gantvā dāsiṃ pucchi—"
msgstr ""

msgctxt "pli-tv-kd6:23.4.2"
msgid "“kahaṃ suppiyā”ti?"
msgstr ""

#. VAR: Esāyya → esayya (bj)
msgctxt "pli-tv-kd6:23.4.3"
msgid "“Esāyya, ovarake nipannā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc71
msgctxt "pli-tv-kd6:23.4.4"
msgid "Atha kho suppiyo upāsako yena suppiyā upāsikā tenupasaṅkami, upasaṅkamitvā suppiyaṃ upāsikaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.4.5"
msgid "“kissa nipannāsī”ti?"
msgstr ""

#. VAR: Gilānāmhī”ti → gilānamhīti (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:23.4.6"
msgid "“Gilānāmhī”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.4.7"
msgid "“Kiṃ te ābādho”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.4.8"
msgid "Atha kho suppiyā upāsikā suppiyassa upāsakassa etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:23.4.9"
msgid "Atha kho suppiyo upāsako—"
msgstr ""

msgctxt "pli-tv-kd6:23.4.10"
msgid "“acchariyaṃ vata bho, abbhutaṃ vata bho."
msgstr ""

msgctxt "pli-tv-kd6:23.4.11"
msgid "Yāva saddhāyaṃ suppiyā pasannā, yatra hi nāma attanopi maṃsāni pariccattāni."
msgstr ""

#. VAR: Kimpimāya → kimpanimāya (bj) | kiṃ panimāya (s1-3) | kim pana imāya (pts1)
msgctxt "pli-tv-kd6:23.4.12"
msgid "Kimpimāya aññaṃ kiñci adeyyaṃ bhavissatī”ti—"
msgstr ""

msgctxt "pli-tv-kd6:23.4.13"
msgid "haṭṭho udaggo yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:23.5.1"
msgid "Ekamantaṃ nisinno kho suppiyo upāsako bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.5.2"
msgid "“adhivāsetu me, bhante, bhagavā svātanāya bhattaṃ, saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.5.3"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:23.5.4"
msgid "Atha kho suppiyo upāsako bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:23.5.5"
msgid "Atha kho suppiyo upāsako tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:23.5.6"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc72, pts-vp-pli1.218
msgctxt "pli-tv-kd6:23.5.7"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena suppiyassa upāsakassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paññatte āsane nisīdi, saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:23.6.1"
msgid "Atha kho suppiyo upāsako yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:23.6.2"
msgid "Ekamantaṃ ṭhitaṃ kho suppiyaṃ upāsakaṃ bhagavā etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.6.3"
msgid "“kahaṃ, suppiyā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.6.4"
msgid "“Gilānā, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.6.5"
msgid "“Tena hi āgacchatū”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.6.6"
msgid "“Na, bhagavā, ussahatī”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.6.7"
msgid "“Tena hi pariggahetvāpi ānethā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.6.8"
msgid "Atha kho suppiyo upāsako suppiyaṃ upāsikaṃ pariggahetvā ānesi."
msgstr ""

msgctxt "pli-tv-kd6:23.6.9"
msgid "Tassā saha dassanena bhagavato tāva mahāvaṇo ruḷho ahosi succhavilomajāto."
msgstr ""

msgctxt "pli-tv-kd6:23.7.1"
msgid "Atha kho suppiyo ca upāsako suppiyā ca upāsikā—"
msgstr ""

msgctxt "pli-tv-kd6:23.7.2"
msgid "“acchariyaṃ vata bho, abbhutaṃ vata bho."
msgstr ""

msgctxt "pli-tv-kd6:23.7.3"
msgid "Tathāgatassa mahiddhikatā mahānubhāvatā, yatra hi nāma saha dassanena bhagavato tāva mahāvaṇo ruḷho bhavissati succhavilomajāto”ti—"
msgstr ""

msgctxt "pli-tv-kd6:23.7.4"
msgid "haṭṭhā udaggā buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:23.7.5"
msgid "Atha kho bhagavā suppiyañca upāsakaṃ suppiyañca upāsikaṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc73
msgctxt "pli-tv-kd6:23.8.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā bhikkhū paṭipucchi—"
msgstr ""

msgctxt "pli-tv-kd6:23.8.2"
msgid "“ko, bhikkhave, suppiyaṃ upāsikaṃ maṃsaṃ viññāpesī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.8.3"
msgid "Evaṃ vutte, so bhikkhu bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.8.4"
msgid "“ahaṃ kho, bhante, suppiyaṃ upāsikaṃ maṃsaṃ viññāpesin”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.8.5"
msgid "“Āhariyittha, bhikkhū”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.8.6"
msgid "“Āhariyittha, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.8.7"
msgid "“Paribhuñji tvaṃ, bhikkhū”ti?"
msgstr ""

#. VAR: Paribhuñjāmahaṃ → pariñjāhaṃ (bj) | paribhuñjāhaṃ (s1-3, pts1)
msgctxt "pli-tv-kd6:23.8.8"
msgid "“Paribhuñjāmahaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.8.9"
msgid "“Paṭivekkhi tvaṃ, bhikkhū”ti?"
msgstr ""

msgctxt "pli-tv-kd6:23.8.10"
msgid "“Nāhaṃ, bhagavā, paṭivekkhin”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.9.1"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.9.2"
msgid "kathañhi nāma tvaṃ, moghapurisa, appaṭivekkhitvā maṃsaṃ paribhuñjissasi."
msgstr ""

msgctxt "pli-tv-kd6:23.9.3"
msgid "Manussamaṃsaṃ kho tayā, moghapurisa, paribhuttaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.9.4"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.9.5"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:23.9.6"
msgid "“santi, bhikkhave, manussā saddhā pasannā, tehi attanopi maṃsāni pariccattāni."
msgstr ""

msgctxt "pli-tv-kd6:23.9.7"
msgid "Na, bhikkhave, manussamaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.9.8"
msgid "Yo paribhuñjeyya, āpatti thullaccayassa."
msgstr ""

msgctxt "pli-tv-kd6:23.9.9"
msgid "Na ca, bhikkhave, appaṭivekkhitvā maṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.9.10"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:23.10.0"
msgid "10. Hatthimaṃsādipaṭikkhepakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc74, pts-vp-pli1.219
msgctxt "pli-tv-kd6:23.10.1"
msgid "Tena kho pana samayena rañño hatthī maranti."
msgstr ""

msgctxt "pli-tv-kd6:23.10.2"
msgid "Manussā dubbhikkhe hatthimaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ hatthimaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.10.3"
msgid "Bhikkhū hatthimaṃsaṃ paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:23.10.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:23.10.5"
msgid "“kathañhi nāma samaṇā sakyaputtiyā hatthimaṃsaṃ paribhuñjissanti."
msgstr ""

msgctxt "pli-tv-kd6:23.10.6"
msgid "Rājaṅgaṃ hatthī, sace rājā jāneyya, na nesaṃ attamano assā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.10.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.10.8"
msgid "“Na, bhikkhave, hatthimaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.10.9"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc75
msgctxt "pli-tv-kd6:23.11.1"
msgid "Tena kho pana samayena rañño assā maranti."
msgstr ""

msgctxt "pli-tv-kd6:23.11.2"
msgid "Manussā dubbhikkhe assamaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ assamaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.11.3"
msgid "Bhikkhū assamaṃsaṃ paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:23.11.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:23.11.5"
msgid "“kathañhi nāma samaṇā sakyaputtiyā assamaṃsaṃ paribhuñjissanti."
msgstr ""

msgctxt "pli-tv-kd6:23.11.6"
msgid "Rājaṅgaṃ assā, sace rājā jāneyya, na nesaṃ attamano assā”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.11.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.11.8"
msgid "“Na, bhikkhave, assamaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.11.9"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc76
msgctxt "pli-tv-kd6:23.12.1"
msgid "Tena kho pana samayena manussā dubbhikkhe sunakhamaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ sunakhamaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.12.2"
msgid "Bhikkhū sunakhamaṃsaṃ paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:23.12.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-kd6:23.12.4"
msgid "“kathañhi nāma samaṇā sakyaputtiyā sunakhamaṃsaṃ paribhuñjissanti, jeguccho sunakho paṭikūlo”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.12.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.12.6"
msgid "“Na, bhikkhave, sunakhamaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.12.7"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc77, pts-vp-pli1.220
msgctxt "pli-tv-kd6:23.13.1"
msgid "Tena kho pana samayena manussā dubbhikkhe ahimaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ ahimaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.13.2"
msgid "Bhikkhū ahimaṃsaṃ paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:23.13.3"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—“"
msgstr ""

#. VAR: santi → santi hi (bj)
msgctxt "pli-tv-kd6:23.13.4"
msgid "kathañhi nāma samaṇā sakyaputtiyā ahimaṃsaṃ paribhuñjissanti, jeguccho ahi paṭikūlo”ti."
msgstr ""

#. VAR: Supassopi → suphassopi (bj)
msgctxt "pli-tv-kd6:23.13.5"
msgid "Supassopi nāgarājā yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:23.13.6"
msgid "Ekamantaṃ ṭhito kho supasso nāgarājā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:23.13.7"
msgid "“santi, bhante, nāgā assaddhā appasannā."
msgstr ""

msgctxt "pli-tv-kd6:23.13.8"
msgid "Te appamattakehipi bhikkhū viheṭheyyuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.13.9"
msgid "Sādhu, bhante, ayyā ahimaṃsaṃ na paribhuñjeyyun”ti."
msgstr ""

msgctxt "pli-tv-kd6:23.13.10"
msgid "Atha kho bhagavā supassaṃ nāgarājānaṃ dhammiyā kathāya sandassesi … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.13.11"
msgid "padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:23.13.12"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:23.13.13"
msgid "“na, bhikkhave, ahimaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.13.14"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc78
#. VAR: sīhamaṃsaṃ → maṃsaṃ (mr)
msgctxt "pli-tv-kd6:23.14.1"
msgid "Tena kho pana samayena luddakā sīhaṃ hantvā sīhamaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ sīhamaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.14.2"
msgid "Bhikkhū sīhamaṃsaṃ paribhuñjitvā araññe viharanti."
msgstr ""

#. VAR: sīhamaṃsagandhena → maṃsagandhena (bj)
msgctxt "pli-tv-kd6:23.14.3"
msgid "Sīhā sīhamaṃsagandhena bhikkhū paripātenti."
msgstr ""

msgctxt "pli-tv-kd6:23.14.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.14.5"
msgid "“Na, bhikkhave, sīhamaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.14.6"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc79
msgctxt "pli-tv-kd6:23.15.1"
msgid "Tena kho pana samayena luddakā byagghaṃ hantvā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.15.2"
msgid "dīpiṃ hantvā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.15.3"
msgid "acchaṃ hantvā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:23.15.4"
msgid "taracchaṃ hantvā taracchamaṃsaṃ paribhuñjanti, bhikkhūnaṃ piṇḍāya carantānaṃ taracchamaṃsaṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:23.15.5"
msgid "Bhikkhū taracchamaṃsaṃ paribhuñjitvā araññe viharanti."
msgstr ""

msgctxt "pli-tv-kd6:23.15.6"
msgid "Taracchā taracchamaṃsagandhena bhikkhū paripātenti."
msgstr ""

msgctxt "pli-tv-kd6:23.15.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.15.8"
msgid "“Na, bhikkhave, taracchamaṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:23.15.9"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc80
msgctxt "pli-tv-kd6:23.15.10"
msgid "Suppiyabhāṇavāro niṭṭhito dutiyo."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:24.1.0"
msgid "11. Yāgumadhugoḷakānujānana"
msgstr ""

#. HTML: </h2><p>
#. REF: sc81
msgctxt "pli-tv-kd6:24.1.1"
msgid "Atha kho bhagavā bārāṇasiyaṃ yathābhirantaṃ viharitvā yena andhakavindaṃ tena cārikaṃ pakkāmi, mahatā bhikkhusaṃghena saddhiṃ, aḍḍhatelasehi bhikkhusatehi."
msgstr ""

#. VAR: anubandhā → anubaddhā (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:24.1.2"
msgid "Tena kho pana samayena jānapadā manussā bahuṃ loṇampi, telampi, taṇḍulampi, khādanīyampi sakaṭesu āropetvā buddhappamukhassa bhikkhusaṃghassa piṭṭhito piṭṭhito anubandhā honti—"
msgstr ""

msgctxt "pli-tv-kd6:24.1.3"
msgid "“yadā paṭipāṭiṃ labhissāma tadā bhattaṃ karissāmā”ti, pañcamattāni ca vighāsādasatāni."
msgstr ""

#. HTML: </p><p>
#. REF: sc82, pts-vp-pli1.221
msgctxt "pli-tv-kd6:24.1.4"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena andhakavindaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:24.2.1"
msgid "Atha kho aññatarassa brāhmaṇassa paṭipāṭiṃ alabhantassa etadahosi—“"
msgstr ""

#. VAR: atītāni → adhikāni (bj, s1-3)
#. VAR: ekattako → ekako (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:24.2.2"
msgid "atītāni kho me dve māsāni buddhappamukhaṃ bhikkhusaṃghaṃ anubandhantassa ‘yadā paṭipāṭiṃ labhissāmi tadā bhattaṃ karissāmī’ti, na ca me paṭipāṭi labbhati, ahañcamhi ekattako, bahu ca me gharāvāsattho hāyati."
msgstr ""

msgctxt "pli-tv-kd6:24.2.3"
msgid "Yannūnāhaṃ bhattaggaṃ olokeyyaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:24.2.4"
msgid "yaṃ bhattagge nāssa, taṃ paṭiyādeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.2.5"
msgid "Atha kho so brāhmaṇo bhattaggaṃ olokento dve nāddasa—"
msgstr ""

msgctxt "pli-tv-kd6:24.2.6"
msgid "yāguñca madhugoḷakañca."
msgstr ""

msgctxt "pli-tv-kd6:24.3.1"
msgid "Atha kho so brāhmaṇo yenāyasmā ānando tenupasaṅkami, upasaṅkamitvā āyasmantaṃ ānandaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:24.3.2"
msgid "“idha me, bho ānanda, paṭipāṭiṃ alabhantassa etadahosi—‘"
msgstr ""

msgctxt "pli-tv-kd6:24.3.3"
msgid "atītāni kho me dve māsāni buddhappamukhaṃ bhikkhusaṃghaṃ anubandhantassa, “yadā paṭipāṭiṃ labhissāmi tadā bhattaṃ karissāmī”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.3.4"
msgid "Na ca me paṭipāṭi labbhati, ahañcamhi ekattako, bahu ca me gharāvāsattho hāyati."
msgstr ""

msgctxt "pli-tv-kd6:24.3.5"
msgid "Yannūnāhaṃ bhattaggaṃ olokeyyaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:24.3.6"
msgid "yaṃ bhattagge nāssa, taṃ paṭiyādeyyan’ti."
msgstr ""

msgctxt "pli-tv-kd6:24.3.7"
msgid "So kho ahaṃ, bho ānanda, bhattaggaṃ olokento dve nāddasaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:24.3.8"
msgid "yāguñca madhugoḷakañca."
msgstr ""

msgctxt "pli-tv-kd6:24.3.9"
msgid "Sacāhaṃ, bho ānanda, paṭiyādeyyaṃ yāguñca madhugoḷakañca, paṭiggaṇheyya me bhavaṃ gotamo”ti?"
msgstr ""

msgctxt "pli-tv-kd6:24.3.10"
msgid "“Tena hi, brāhmaṇa, bhagavantaṃ paṭipucchissāmī”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.1"
msgid "Atha kho āyasmā ānando bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:24.4.2"
msgid "“Tena hānanda, paṭiyādetū”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.3"
msgid "“Tena hi, brāhmaṇa, paṭiyādehī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc83
msgctxt "pli-tv-kd6:24.4.4"
msgid "Atha kho so brāhmaṇo tassā rattiyā accayena pahūtaṃ yāguñca madhugoḷakañca paṭiyādāpetvā bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd6:24.4.5"
msgid "“paṭiggaṇhātu me bhavaṃ gotamo yāguñca madhugoḷakañcā”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.6"
msgid "“Tena hi, brāhmaṇa, bhikkhūnaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.7"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.8"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjathā”ti."
msgstr ""

msgctxt "pli-tv-kd6:24.4.9"
msgid "Atha kho so brāhmaṇo buddhappamukhaṃ bhikkhusaṃghaṃ pahūtāya yāguyā ca madhugoḷakena ca sahatthā santappetvā sampavāretvā bhagavantaṃ dhotahatthaṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:24.5.1"
msgid "Ekamantaṃ nisinnaṃ kho taṃ brāhmaṇaṃ bhagavā etadavoca—"
msgstr ""

#. HTML: </p><p>
#. REF: sc84
msgctxt "pli-tv-kd6:24.5.2"
msgid "“Dasayime, brāhmaṇa, ānisaṃsā yāguyā."
msgstr ""

msgctxt "pli-tv-kd6:24.5.3"
msgid "Katame dasa?"
msgstr ""

#. VAR: khuddaṃ → khudaṃ (bj, s1-3, pts1)
#. VAR: vineti → paṭivineti (bj) | paṭivinodeti (s1-3) | vinodeti (pts1)
#. VAR: paṭihanati → paṭihanti (bj)
msgctxt "pli-tv-kd6:24.5.4"
msgid "Yāguṃ dento āyuṃ deti, vaṇṇaṃ deti, sukhaṃ deti, balaṃ deti, paṭibhānaṃ deti, yāgu pītā khuddaṃ paṭihanati, pipāsaṃ vineti, vātaṃ anulometi, vatthiṃ sodheti, āmāvasesaṃ pāceti—"
msgstr ""

#. VAR: yāguyāti → pacchimā pañca ānisaṃsā ^an5.207#1 [207. Yāgusutta]
msgctxt "pli-tv-kd6:24.5.5"
msgid "ime kho, brāhmaṇa, dasānisaṃsā yāguyāti."
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc85
msgctxt "pli-tv-kd6:24.6.1"
msgid "Yo saññatānaṃ paradattabhojinaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.2"
msgid "Kālena sakkacca dadāti yāguṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.3"
msgid "Dasassa ṭhānāni anuppavecchati,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.4"
msgid "Āyuñca vaṇṇañca sukhaṃ balañca."
msgstr ""

#. HTML: </p><p>
#. REF: sc86
msgctxt "pli-tv-kd6:24.6.5"
msgid "Paṭibhānamassa upajāyate tato,"
msgstr ""

#. HTML: <br>
#. VAR: Khuddaṃ pipāsañca → khudaṃ pipāsaṃ (bj, s1-3)
msgctxt "pli-tv-kd6:24.6.6"
msgid "Khuddaṃ pipāsañca byapaneti vātaṃ;"
msgstr ""

#. HTML: <br>
#. VAR: bhattaṃ → bhuttaṃ (bj)
msgctxt "pli-tv-kd6:24.6.7"
msgid "Sodheti vatthiṃ pariṇāmeti bhattaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.8"
msgid "Bhesajjametaṃ sugatena vaṇṇitaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc87
msgctxt "pli-tv-kd6:24.6.9"
msgid "Tasmā hi yāguṃ alameva dātuṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.10"
msgid "Niccaṃ manussena sukhatthikena;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.11"
msgid "Dibbāni vā patthayatā sukhāni,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:24.6.12"
msgid "Manussasobhagyatamicchatā vā”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc88, pts-vp-pli1.222
msgctxt "pli-tv-kd6:24.7.1"
msgid "Atha kho bhagavā taṃ brāhmaṇaṃ imāhi gāthāhi anumoditvā uṭṭhāyāsanā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:24.7.2"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:24.7.3"
msgid "“anujānāmi, bhikkhave, yāguñca madhugoḷakañcā”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:25.1.0"
msgid "12. Taruṇapasannamahāmattavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc89, pts-vp-pli1.223
#. VAR: bhagavatā kira → kira bhikkhūnaṃ (bj, s1-3)
msgctxt "pli-tv-kd6:25.1.1"
msgid "Assosuṃ kho manussā bhagavatā kira yāgu anuññātā madhugoḷakañcāti."
msgstr ""

msgctxt "pli-tv-kd6:25.1.2"
msgid "Te kālasseva, bhojjayāguṃ paṭiyādenti madhugoḷakañca."
msgstr ""

#. VAR: paribhuñjanti → bhuñjanti (bj, s1-3, pts1)
#. VAR: bhojjayāguyā → bhojjāya yāguyā (bj)
msgctxt "pli-tv-kd6:25.1.3"
msgid "Bhikkhū kālasseva bhojjayāguyā dhātā madhugoḷakena ca bhattagge na cittarūpaṃ paribhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:25.1.4"
msgid "Tena kho pana samayena aññatarena taruṇapasannena mahāmattena svātanāya buddhappamukho bhikkhusaṃgho nimantito hoti."
msgstr ""

msgctxt "pli-tv-kd6:25.1.5"
msgid "Atha kho tassa taruṇapasannassa mahāmattassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:25.1.6"
msgid "“yannūnāhaṃ aḍḍhatelasannaṃ bhikkhusatānaṃ aḍḍhatelasāni maṃsapātisatāni paṭiyādeyyaṃ, ekamekassa bhikkhuno ekamekaṃ maṃsapātiṃ upanāmeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.2.1"
msgid "Atha kho so taruṇapasanno mahāmatto tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā aḍḍhatelasāni ca maṃsapātisatāni, bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:25.2.2"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.2.3"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena tassa taruṇapasannassa mahāmattassa nivesanaṃ tenupasaṅkami, upasaṅkamitvā paññatte āsane nisīdi, saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:25.3.1"
msgid "Atha kho so taruṇapasanno mahāmatto bhattagge bhikkhū parivisati."
msgstr ""

msgctxt "pli-tv-kd6:25.3.2"
msgid "Bhikkhū evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd6:25.3.3"
msgid "“thokaṃ, āvuso, dehi;"
msgstr ""

msgctxt "pli-tv-kd6:25.3.4"
msgid "thokaṃ, āvuso, dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.3.5"
msgid "“Mā kho tumhe, bhante—‘"
msgstr ""

msgctxt "pli-tv-kd6:25.3.6"
msgid "ayaṃ taruṇapasanno mahāmatto’ti—"
msgstr ""

#. VAR: paṭiggaṇhatha → patigaṇhittha (bj) | paṭigaṇhatha (pts1)
msgctxt "pli-tv-kd6:25.3.7"
msgid "thokaṃ thokaṃ paṭiggaṇhatha."
msgstr ""

msgctxt "pli-tv-kd6:25.3.8"
msgid "Bahuṃ me khādanīyaṃ bhojanīyaṃ paṭiyattaṃ, aḍḍhatelasāni ca maṃsapātisatāni."
msgstr ""

#. VAR: upanāmessāmīti → upanāmessāmi (bj, s1-3)
msgctxt "pli-tv-kd6:25.3.9"
msgid "Ekamekassa bhikkhuno ekamekaṃ maṃsapātiṃ upanāmessāmīti."
msgstr ""

msgctxt "pli-tv-kd6:25.3.10"
msgid "Paṭiggaṇhatha, bhante, yāvadatthan”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.3.11"
msgid "“Na kho mayaṃ, āvuso, etaṃkāraṇā thokaṃ thokaṃ paṭiggaṇhāma, api ca mayaṃ kālasseva bhojjayāguyā dhātā madhugoḷakena ca."
msgstr ""

msgctxt "pli-tv-kd6:25.3.12"
msgid "Tena mayaṃ thokaṃ thokaṃ paṭiggaṇhāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.4.1"
msgid "Atha kho so taruṇapasanno mahāmatto ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-kd6:25.4.2"
msgid "“kathañhi nāma bhadantā mayā nimantitā aññassa bhojjayāguṃ paribhuñjissanti, na cāhaṃ paṭibalo yāvadatthaṃ dātun”ti kupito anattamano āsādanāpekkho bhikkhūnaṃ patte pūrento agamāsi—"
msgstr ""

msgctxt "pli-tv-kd6:25.4.3"
msgid "“bhuñjatha vā haratha vā”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.4.4"
msgid "Atha kho so taruṇapasanno mahāmatto buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:25.4.5"
msgid "Ekamantaṃ nisinnaṃ kho taṃ taruṇapasannaṃ mahāmattaṃ bhagavā dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc90, pts-vp-pli1.224
msgctxt "pli-tv-kd6:25.5.1"
msgid "Atha kho tassa taruṇapasannassa mahāmattassa acirapakkantassa bhagavato ahudeva kukkuccaṃ, ahu vippaṭisāro—"
msgstr ""

msgctxt "pli-tv-kd6:25.5.2"
msgid "“alābhā vata me, na vata me lābhā;"
msgstr ""

msgctxt "pli-tv-kd6:25.5.3"
msgid "dulladdhaṃ vata me, na vata me suladdhaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:25.5.4"
msgid "yohaṃ kupito anattamano āsādanāpekkho bhikkhūnaṃ patte pūrento agamāsiṃ—‘"
msgstr ""

msgctxt "pli-tv-kd6:25.5.5"
msgid "bhuñjatha vā haratha vā’ti."
msgstr ""

msgctxt "pli-tv-kd6:25.5.6"
msgid "Kiṃ nu kho mayā bahuṃ pasutaṃ puññaṃ vā apuññaṃ vā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:25.5.7"
msgid "Atha kho so taruṇapasanno mahāmatto yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:25.5.8"
msgid "Ekamantaṃ nisinno kho so taruṇapasanno mahāmatto bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:25.5.9"
msgid "“idha mayhaṃ, bhante, acirapakkantassa bhagavato ahudeva kukkuccaṃ, ahu vippaṭisāro ‘alābhā vata me, na vata me lābhā;"
msgstr ""

msgctxt "pli-tv-kd6:25.5.10"
msgid "dulladdhaṃ vata me, na vata me suladdhaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:25.5.11"
msgid "yohaṃ kupito anattamano āsādanāpekkho bhikkhūnaṃ patte pūrento agamāsiṃ—"
msgstr ""

msgctxt "pli-tv-kd6:25.5.12"
msgid "bhuñjatha vā haratha vāti."
msgstr ""

msgctxt "pli-tv-kd6:25.5.13"
msgid "Kiṃ nu kho mayā bahuṃ pasutaṃ, puññaṃ vā apuññaṃ vā’ti."
msgstr ""

msgctxt "pli-tv-kd6:25.5.14"
msgid "Kiṃ nu kho mayā, bhante, bahuṃ pasutaṃ, puññaṃ vā apuññaṃ vā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:25.6.1"
msgid "“Yadaggena tayā, āvuso, svātanāya buddhappamukho bhikkhusaṃgho nimantito tadaggena te bahuṃ puññaṃ pasutaṃ."
msgstr ""

msgctxt "pli-tv-kd6:25.6.2"
msgid "Yadaggena te ekamekena bhikkhunā ekamekaṃ sitthaṃ paṭiggahitaṃ tadaggena te bahuṃ puññaṃ pasutaṃ, saggā te āraddhā”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.6.3"
msgid "Atha kho so taruṇapasanno mahāmatto—"
msgstr ""

msgctxt "pli-tv-kd6:25.6.4"
msgid "“lābhā kira me, suladdhaṃ kira me, bahuṃ kira mayā puññaṃ pasutaṃ, saggā kira me āraddhā”ti—"
msgstr ""

msgctxt "pli-tv-kd6:25.6.5"
msgid "haṭṭho udaggo uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:25.7.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā bhikkhū paṭipucchi—"
msgstr ""

msgctxt "pli-tv-kd6:25.7.2"
msgid "“saccaṃ kira, bhikkhave, bhikkhū aññatra nimantitā aññassa bhojjayāguṃ paribhuñjantī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:25.7.3"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-kd6:25.7.4"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:25.7.5"
msgid "kathañhi nāma te, bhikkhave, moghapurisā aññatra nimantitā aññassa bhojjayāguṃ paribhuñjissanti."
msgstr ""

msgctxt "pli-tv-kd6:25.7.6"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:25.7.7"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:25.7.8"
msgid "“na, bhikkhave, aññatra nimantitena aññassa bhojjayāgu paribhuñjitabbā."
msgstr ""

msgctxt "pli-tv-kd6:25.7.9"
msgid "Yo paribhuñjeyya, yathādhammo kāretabbo”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:26.1.0"
msgid "13. Belaṭṭhakaccānavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc91
msgctxt "pli-tv-kd6:26.1.1"
msgid "Atha kho bhagavā andhakavinde yathābhirantaṃ viharitvā yena rājagahaṃ tena cārikaṃ pakkāmi, mahatā bhikkhusaṃghena saddhiṃ, aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:26.1.2"
msgid "Tena kho pana samayena belaṭṭho kaccāno rājagahā andhakavindaṃ addhānamaggappaṭipanno hoti, pañcamattehi sakaṭasatehi, sabbeheva guḷakumbhapūrehi."
msgstr ""

msgctxt "pli-tv-kd6:26.1.3"
msgid "Addasā kho bhagavā belaṭṭhaṃ kaccānaṃ dūratova āgacchantaṃ, disvāna maggā okkamma aññatarasmiṃ rukkhamūle nisīdi."
msgstr ""

#. HTML: </p><p>
#. REF: sc92, pts-vp-pli1.225
msgctxt "pli-tv-kd6:26.2.1"
msgid "Atha kho belaṭṭho kaccāno yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:26.2.2"
msgid "Ekamantaṃ ṭhito kho belaṭṭho kaccāno bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.2.3"
msgid "“icchāmahaṃ, bhante, ekamekassa bhikkhuno ekamekaṃ guḷakumbhaṃ dātun”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.2.4"
msgid "“Tena hi tvaṃ, kaccāna, ekaṃyeva guḷakumbhaṃ āharā”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.2.5"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā ekaṃyeva guḷakumbhaṃ ādāya yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ etadavoca—"
msgstr ""

#. VAR: ābhato → āhaṭo (bj, s1-3, pts1, mr)
msgctxt "pli-tv-kd6:26.2.6"
msgid "“ābhato, bhante, guḷakumbho;"
msgstr ""

msgctxt "pli-tv-kd6:26.2.7"
msgid "kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.2.8"
msgid "“Tena hi tvaṃ, kaccāna, bhikkhūnaṃ guḷaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.3.1"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā bhikkhūnaṃ guḷaṃ datvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.3.2"
msgid "“dinno, bhante, bhikkhūnaṃ guḷo, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.3.3"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.3.4"
msgid "“Tena hi tvaṃ, kaccāna, bhikkhūnaṃ guḷaṃ yāvadatthaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.3.5"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā bhikkhūnaṃ guḷaṃ yāvadatthaṃ datvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.3.6"
msgid "“dinno, bhante, bhikkhūnaṃ guḷo yāvadattho, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.3.7"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.3.8"
msgid "“Tena hi tvaṃ, kaccāna, bhikkhū guḷehi santappehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.3.9"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā bhikkhū guḷehi santappesi."
msgstr ""

msgctxt "pli-tv-kd6:26.3.10"
msgid "Ekacce bhikkhū pattepi pūresuṃ parissāvanānipi thavikāyopi pūresuṃ."
msgstr ""

msgctxt "pli-tv-kd6:26.4.1"
msgid "Atha kho belaṭṭho kaccāno bhikkhū guḷehi santappetvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.4.2"
msgid "“santappitā, bhante, bhikkhū guḷehi, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.4.3"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.4.4"
msgid "“Tena hi tvaṃ, kaccāna, vighāsādānaṃ guḷaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.4.5"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā vighāsādānaṃ guḷaṃ datvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.4.6"
msgid "“dinno, bhante, vighāsādānaṃ guḷo, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.4.7"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.4.8"
msgid "“Tena hi tvaṃ, kaccāna, vighāsādānaṃ guḷaṃ yāvadatthaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.5.1"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā vighāsādānaṃ guḷaṃ yāvadatthaṃ datvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.5.2"
msgid "“dinno, bhante, vighāsādānaṃ guḷo yāvadattho, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.5.3"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:26.5.4"
msgid "“Tena hi tvaṃ, kaccāna, vighāsāde guḷehi santappehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.5.5"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā vighāsāde guḷehi santappesi."
msgstr ""

msgctxt "pli-tv-kd6:26.5.6"
msgid "Ekacce vighāsādā kolambepi ghaṭepi pūresuṃ, piṭakānipi ucchaṅgepi pūresuṃ."
msgstr ""

msgctxt "pli-tv-kd6:26.6.1"
msgid "Atha kho belaṭṭho kaccāno vighāsāde guḷehi santappetvā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.6.2"
msgid "“santappitā, bhante, vighāsādā guḷehi, bahu cāyaṃ guḷo avasiṭṭho."
msgstr ""

msgctxt "pli-tv-kd6:26.6.3"
msgid "Kathāhaṃ, bhante, paṭipajjāmī”ti?"
msgstr ""

#. VAR: yassa so → yasseso (bj)
msgctxt "pli-tv-kd6:26.6.4"
msgid "“Nāhaṃ taṃ, kaccāna, passāmi sadevake loke samārake sabrahmake sassamaṇabrāhmaṇiyā pajāya sadevamanussāya yassa so guḷo paribhutto sammā pariṇāmaṃ gaccheyya, aññatra tathāgatassa vā tathāgatasāvakassa vā."
msgstr ""

msgctxt "pli-tv-kd6:26.6.5"
msgid "Tena hi tvaṃ, kaccāna, taṃ guḷaṃ appaharite vā chaḍḍehi, appāṇake vā udake opilāpehī”ti."
msgstr ""

#. VAR: opilāpeti → opilāpesi (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:26.6.6"
msgid "“Evaṃ, bhante”ti kho belaṭṭho kaccāno bhagavato paṭissuṇitvā taṃ guḷaṃ appāṇake udake opilāpeti."
msgstr ""

#. VAR: padhūpāyati → sandhūpāyati (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:26.7.1"
msgid "Atha kho so guḷo udake pakkhitto cicciṭāyati ciṭiciṭāyati padhūpāyati sampadhūpāyati."
msgstr ""

#. VAR: divasaṃsantatto → divasasantatto (bj)
msgctxt "pli-tv-kd6:26.7.2"
msgid "Seyyathāpi nāma phālo divasaṃsantatto udake pakkhitto cicciṭāyati ciṭiciṭāyati padhūpāyati sampadhūpāyati;"
msgstr ""

msgctxt "pli-tv-kd6:26.7.3"
msgid "evameva so guḷo udake pakkhitto cicciṭāyati ciṭiciṭāyati padhūpāyati sampadhūpāyati."
msgstr ""

#. HTML: </p><p>
#. REF: sc93, pts-vp-pli1.226
msgctxt "pli-tv-kd6:26.7.4"
msgid "Atha kho belaṭṭho kaccāno saṃviggo lomahaṭṭhajāto yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:26.8.1"
msgid "Ekamantaṃ nisinnassa kho belaṭṭhassa kaccānassa bhagavā anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:26.8.2"
msgid "dānakathaṃ sīlakathaṃ saggakathaṃ, kāmānaṃ ādīnavaṃ okāraṃ saṃkilesaṃ, nekkhamme ānisaṃsaṃ pakāsesi."
msgstr ""

msgctxt "pli-tv-kd6:26.8.3"
msgid "Yadā bhagavā aññāsi belaṭṭhaṃ kaccānaṃ kallacittaṃ, muducittaṃ, vinīvaraṇacittaṃ, udaggacittaṃ, pasannacittaṃ, atha yā buddhānaṃ sāmukkaṃsikā dhammadesanā, taṃ pakāsesi … pe …"
msgstr ""

msgctxt "pli-tv-kd6:26.8.4"
msgid "evameva belaṭṭhassa kaccānassa tasmiṃyeva āsane virajaṃ vītamalaṃ dhammacakkhuṃ udapādi—"
msgstr ""

msgctxt "pli-tv-kd6:26.8.5"
msgid "“yaṃ kiñci samudayadhammaṃ, sabbaṃ taṃ nirodhadhamman”ti."
msgstr ""

msgctxt "pli-tv-kd6:26.9.1"
msgid "Atha kho belaṭṭho kaccāno diṭṭhadhammo pattadhammo viditadhammo pariyogāḷhadhammo tiṇṇavicikiccho vigatakathaṃkatho vesārajjappatto aparappaccayo satthusāsane bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:26.9.2"
msgid "“abhikkantaṃ, bhante, abhikkantaṃ, bhante."
msgstr ""

msgctxt "pli-tv-kd6:26.9.3"
msgid "Seyyathāpi, bhante, nikkujjitaṃ vā ukkujjeyya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:26.9.4"
msgid "evamevaṃ kho bhagavatā anekapariyāyena dhammo pakāsito."
msgstr ""

msgctxt "pli-tv-kd6:26.9.5"
msgid "Esāhaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāmi, dhammañca, bhikkhusaṃghañca."
msgstr ""

msgctxt "pli-tv-kd6:26.9.6"
msgid "Upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇagatan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc94
msgctxt "pli-tv-kd6:27.1.1"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena rājagahaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:27.1.2"
msgid "Tatra sudaṃ bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

msgctxt "pli-tv-kd6:27.1.3"
msgid "Tena kho pana samayena rājagahe guḷo ussanno hoti."
msgstr ""

msgctxt "pli-tv-kd6:27.1.4"
msgid "Bhikkhū—"
msgstr ""

msgctxt "pli-tv-kd6:27.1.5"
msgid "“gilānasseva bhagavatā guḷo anuññāto, no agilānassā”ti—"
msgstr ""

msgctxt "pli-tv-kd6:27.1.6"
msgid "kukkuccāyantā guḷaṃ na bhuñjanti."
msgstr ""

msgctxt "pli-tv-kd6:27.1.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:27.1.8"
msgid "“Anujānāmi, bhikkhave, gilānassa guḷaṃ, agilānassa guḷodakan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:28.1.0"
msgid "14. Pāṭaligāmavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc95, pts-vp-pli1.227
msgctxt "pli-tv-kd6:28.1.1"
msgid "Atha kho bhagavā rājagahe yathābhirantaṃ viharitvā yena pāṭaligāmo tena cārikaṃ pakkāmi, mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:28.1.2"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena pāṭaligāmo tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:28.1.3"
msgid "Assosuṃ kho pāṭaligāmikā upāsakā—"
msgstr ""

msgctxt "pli-tv-kd6:28.1.4"
msgid "“bhagavā kira pāṭaligāmaṃ anuppatto”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.1.5"
msgid "Atha kho pāṭaligāmikā upāsakā yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.1.6"
msgid "Ekamantaṃ nisinne kho pāṭaligāmike upāsake bhagavā dhammiyā kathāya sandassesi, samādapesi, samuttejesi, sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd6:28.2.1"
msgid "Atha kho pāṭaligāmikā upāsakā bhagavatā dhammiyā kathāya sandassitā samādapitā samuttejitā sampahaṃsitā bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:28.2.2"
msgid "“adhivāsetu no, bhante, bhagavā āvasathāgāraṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.2.3"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:28.2.4"
msgid "Atha kho pāṭaligāmikā upāsakā bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā yena āvasathāgāraṃ tenupasaṅkamiṃsu, upasaṅkamitvā sabbasanthariṃ āvasathāgāraṃ santharitvā, āsanāni paññapetvā, udakamaṇikaṃ patiṭṭhāpetvā, telapadīpaṃ āropetvā yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhaṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.3.1"
msgid "Ekamantaṃ ṭhitā kho pāṭaligāmikā upāsakā bhagavantaṃ etadavocuṃ—"
msgstr ""

#. VAR: sabbasantharisanthataṃ → sabbasanthariṃ santhataṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:28.3.2"
msgid "“sabbasantharisanthataṃ, bhante, āvasathāgāraṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.3.3"
msgid "Āsanāni paññattāni."
msgstr ""

msgctxt "pli-tv-kd6:28.3.4"
msgid "Udakamaṇiko patiṭṭhāpito."
msgstr ""

msgctxt "pli-tv-kd6:28.3.5"
msgid "Telapadīpo āropito."
msgstr ""

msgctxt "pli-tv-kd6:28.3.6"
msgid "Yassadāni, bhante, bhagavā kālaṃ maññatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc96
msgctxt "pli-tv-kd6:28.3.7"
msgid "Atha kho bhagavā nivāsetvā pattacīvaramādāya saddhiṃ bhikkhusaṃghena yena āvasathāgāraṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:28.3.8"
msgid "upasaṅkamitvā pāde pakkhāletvā āvasathāgāraṃ pavisitvā majjhimaṃ thambhaṃ nissāya puratthābhimukho nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:28.3.9"
msgid "Bhikkhusaṃghopi kho pāde pakkhāletvā āvasathāgāraṃ pavisitvā pacchimaṃ bhittiṃ nissāya puratthābhimukho nisīdi, bhagavantaṃyeva purakkhatvā."
msgstr ""

msgctxt "pli-tv-kd6:28.3.10"
msgid "Pāṭaligāmikāpi kho upāsakā pāde pakkhāletvā āvasathāgāraṃ pavisitvā puratthimaṃ bhittiṃ nissāya pacchimābhimukhā nisīdiṃsu, bhagavantaṃyeva purakkhatvā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.1"
msgid "Atha kho bhagavā pāṭaligāmike upāsake āmantesi—"
msgstr ""

#. HTML: </p><p>
#. REF: sc97
msgctxt "pli-tv-kd6:28.4.2"
msgid "“Pañcime, gahapatayo, ādīnavā dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.3"
msgid "Katame pañca?"
msgstr ""

msgctxt "pli-tv-kd6:28.4.4"
msgid "Idha, gahapatayo, dussīlo sīlavipanno pamādādhikaraṇaṃ mahatiṃ bhogajāniṃ nigacchati."
msgstr ""

msgctxt "pli-tv-kd6:28.4.5"
msgid "Ayaṃ paṭhamo ādīnavo dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.6"
msgid "Puna caparaṃ, gahapatayo, dussīlassa sīlavipannassa pāpako kittisaddo abbhuggacchati."
msgstr ""

msgctxt "pli-tv-kd6:28.4.7"
msgid "Ayaṃ dutiyo ādīnavo dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.8"
msgid "Puna caparaṃ, gahapatayo, dussīlo sīlavipanno yaññadeva parisaṃ upasaṅkamati, yadi khattiyaparisaṃ, yadi brāhmaṇaparisaṃ, yadi gahapatiparisaṃ, yadi samaṇaparisaṃ, avisārado upasaṅkamati maṅkubhūto."
msgstr ""

msgctxt "pli-tv-kd6:28.4.9"
msgid "Ayaṃ tatiyo ādīnavo dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.10"
msgid "Puna caparaṃ, gahapatayo, dussīlo sīlavipanno sammūḷho kālaṃ karoti."
msgstr ""

msgctxt "pli-tv-kd6:28.4.11"
msgid "Ayaṃ catuttho ādīnavo dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.12"
msgid "Puna caparaṃ, gahapatayo, dussīlo sīlavipanno kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjati."
msgstr ""

msgctxt "pli-tv-kd6:28.4.13"
msgid "Ayaṃ pañcamo ādīnavo dussīlassa sīlavipattiyā."
msgstr ""

msgctxt "pli-tv-kd6:28.4.14"
msgid "Ime kho, gahapatayo, pañca ādīnavā dussīlassa sīlavipattiyā."
msgstr ""

#. HTML: </p><p>
#. REF: sc98, pts-vp-pli1.228
msgctxt "pli-tv-kd6:28.5.1"
msgid "Pañcime, gahapatayo, ānisaṃsā sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.2"
msgid "Katame pañca?"
msgstr ""

msgctxt "pli-tv-kd6:28.5.3"
msgid "Idha, gahapatayo, sīlavā sīlasampanno appamādādhikaraṇaṃ mahantaṃ bhogakkhandhaṃ adhigacchati."
msgstr ""

msgctxt "pli-tv-kd6:28.5.4"
msgid "Ayaṃ paṭhamo ānisaṃso sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.5"
msgid "Puna caparaṃ, gahapatayo, sīlavato sīlasampannassa kalyāṇo kittisaddo abbhuggacchati."
msgstr ""

msgctxt "pli-tv-kd6:28.5.6"
msgid "Ayaṃ dutiyo ānisaṃso sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.7"
msgid "Puna caparaṃ, gahapatayo, sīlavā sīlasampanno yaññadeva parisaṃ upasaṅkamati, yadi khattiyaparisaṃ, yadi brāhmaṇaparisaṃ, yadi gahapatiparisaṃ, yadi samaṇaparisaṃ, visārado upasaṅkamati amaṅkubhūto."
msgstr ""

msgctxt "pli-tv-kd6:28.5.8"
msgid "Ayaṃ tatiyo ānisaṃso sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.9"
msgid "Puna caparaṃ, gahapatayo, sīlavā sīlasampanno asammūḷho kālaṃ karoti."
msgstr ""

msgctxt "pli-tv-kd6:28.5.10"
msgid "Ayaṃ catuttho ānisaṃso sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.11"
msgid "Puna caparaṃ, gahapatayo, sīlavā sīlasampanno kāyassa bhedā paraṃ maraṇā sugatiṃ saggaṃ lokaṃ upapajjati."
msgstr ""

msgctxt "pli-tv-kd6:28.5.12"
msgid "Ayaṃ pañcamo ānisaṃso sīlavato sīlasampadāya."
msgstr ""

msgctxt "pli-tv-kd6:28.5.13"
msgid "Ime kho, gahapatayo, pañca ānisaṃsā sīlavato sīlasampadāyā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc99
msgctxt "pli-tv-kd6:28.6.1"
msgid "Atha kho bhagavā pāṭaligāmike upāsake bahudeva rattiṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uyyojesi—"
msgstr ""

msgctxt "pli-tv-kd6:28.6.2"
msgid "“abhikkantā kho, gahapatayo, ratti."
msgstr ""

msgctxt "pli-tv-kd6:28.6.3"
msgid "Yassadāni tumhe kālaṃ maññathā”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.6.4"
msgid "“Evaṃ, bhante”ti, kho pāṭaligāmikā upāsakā bhagavato paṭissuṇitvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkamiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.7.1"
msgid "Atha kho bhagavā acirapakkantesu pāṭaligāmikesu upāsakesu suññāgāraṃ pāvisi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:28.7.2"
msgid "15. Sunidhavassakāravatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc100
msgctxt "pli-tv-kd6:28.7.3"
msgid "Tena kho pana samayena sunidhavassakārā magadhamahāmattā pāṭaligāme nagaraṃ māpenti vajjīnaṃ paṭibāhāya."
msgstr ""

msgctxt "pli-tv-kd6:28.7.4"
msgid "Addasā kho bhagavā rattiyā paccūsasamayaṃ paccuṭṭhāya dibbena cakkhunā visuddhena atikkantamānusakena sambahulā devatāyo pāṭaligāme vatthūni pariggaṇhantiyo."
msgstr ""

msgctxt "pli-tv-kd6:28.7.5"
msgid "Yasmiṃ padese mahesakkhā devatā vatthūni pariggaṇhanti, mahesakkhānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.7.6"
msgid "Yasmiṃ padese majjhimā devatā vatthūni pariggaṇhanti, majjhimānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.7.7"
msgid "Yasmiṃ padese nīcā devatā vatthūni pariggaṇhanti, nīcānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc101, pts-vp-pli1.229
msgctxt "pli-tv-kd6:28.8.1"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:28.8.2"
msgid "“ke nu kho te, ānanda, pāṭaligāme nagaraṃ māpentī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:28.8.3"
msgid "“Sunidhavassakārā, bhante, magadhamahāmattā pāṭaligāme nagaraṃ māpenti vajjīnaṃ paṭibāhāyā”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.8.4"
msgid "“Seyyathāpi, ānanda, devehi tāvatiṃsehi saddhiṃ mantetvā;"
msgstr ""

msgctxt "pli-tv-kd6:28.8.5"
msgid "evameva kho, ānanda, sunidhavassakārā magadhamahāmattā pāṭaligāme nagaraṃ māpenti vajjīnaṃ paṭibāhāya."
msgstr ""

msgctxt "pli-tv-kd6:28.8.6"
msgid "Idhāhaṃ, ānanda, rattiyā paccūsasamayaṃ paccuṭṭhāya addasaṃ dibbena cakkhunā visuddhena atikkantamānusakena sambahulā devatāyo pāṭaligāme vatthūni pariggaṇhantiyo."
msgstr ""

msgctxt "pli-tv-kd6:28.8.7"
msgid "Yasmiṃ padese mahesakkhā devatā vatthūni pariggaṇhanti, mahesakkhānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.8.8"
msgid "Yasmiṃ padese majjhimā devatā vatthūni pariggaṇhanti, majjhimānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.8.9"
msgid "Yasmiṃ padese nīcā devatā vatthūni pariggaṇhanti, nīcānaṃ tattha rājūnaṃ rājamahāmattānaṃ cittāni namanti nivesanāni māpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.8.10"
msgid "Yāvatā, ānanda, ariyaṃ āyatanaṃ, yāvatā vaṇippatho, idaṃ agganagaraṃ bhavissati pāṭaliputtaṃ puṭabhedanaṃ."
msgstr ""

msgctxt "pli-tv-kd6:28.8.11"
msgid "Pāṭaliputtassa kho, ānanda, tayo antarāyā bhavissanti—"
msgstr ""

msgctxt "pli-tv-kd6:28.8.12"
msgid "aggito vā udakato vā abbhantarato vā mithubhedā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc102
msgctxt "pli-tv-kd6:28.9.1"
msgid "Atha kho sunidhavassakārā magadhamahāmattā yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavatā saddhiṃ sammodiṃsu, sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhaṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.9.2"
msgid "Ekamantaṃ ṭhitā kho sunidhavassakārā magadhamahāmattā bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:28.9.3"
msgid "“adhivāsetu no bhavaṃ gotamo ajjatanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.9.4"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:28.9.5"
msgid "Atha kho sunidhavassakārā magadhamahāmattā bhagavato adhivāsanaṃ viditvā pakkamiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.10.1"
msgid "Atha kho sunidhavassakārā magadhamahāmattā paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:28.10.2"
msgid "“kālo, bho gotama, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:28.10.3"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena sunidhavassakārānaṃ magadhamahāmattānaṃ parivesanā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:28.10.4"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:28.10.5"
msgid "Atha kho sunidhavassakārā magadhamahāmattā buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:28.10.6"
msgid "Ekamantaṃ nisinne kho sunidhavassakāre magadhamahāmatte bhagavā imāhi gāthāhi anumodi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc103
msgctxt "pli-tv-kd6:28.11.1"
msgid "“Yasmiṃ padese kappeti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.2"
msgid "vāsaṃ paṇḍitajātiyo;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.3"
msgid "Sīlavantettha bhojetvā,"
msgstr ""

#. HTML: <br>
#. VAR: brahmacārayo → brahmacārino (si, s1-3) | brahmacariye (pts1)
msgctxt "pli-tv-kd6:28.11.4"
msgid "saññate brahmacārayo."
msgstr ""

#. HTML: </p><p>
#. REF: sc104
msgctxt "pli-tv-kd6:28.11.5"
msgid "Yā tattha devatā āsuṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.6"
msgid "tāsaṃ dakkhiṇamādise;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.7"
msgid "Tā pūjitā pūjayanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.8"
msgid "mānitā mānayanti naṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc105, pts-vp-pli1.230
msgctxt "pli-tv-kd6:28.11.9"
msgid "Tato naṃ anukampanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.10"
msgid "mātā puttaṃva orasaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.11"
msgid "Devatānukampito poso,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.11.12"
msgid "sadā bhadrāni passatī”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc106
msgctxt "pli-tv-kd6:28.11.13"
msgid "Atha kho bhagavā sunidhavassakāre magadhamahāmatte imāhi gāthāhi anumoditvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc107
msgctxt "pli-tv-kd6:28.12.1"
msgid "Tena kho pana samayena sunidhavassakārā magadhamahāmattā bhagavantaṃ piṭṭhito piṭṭhito anubandhā honti—"
msgstr ""

msgctxt "pli-tv-kd6:28.12.2"
msgid "“yenajja samaṇo gotamo dvārena nikkhamissati, taṃ gotamadvāraṃ nāma bhavissati;"
msgstr ""

msgctxt "pli-tv-kd6:28.12.3"
msgid "yena titthena gaṅgaṃ nadiṃ uttarissati, taṃ gotamatitthaṃ nāma bhavissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc108
msgctxt "pli-tv-kd6:28.12.4"
msgid "Atha kho bhagavā yena dvārena nikkhami, taṃ gotamadvāraṃ nāma ahosi."
msgstr ""

msgctxt "pli-tv-kd6:28.12.5"
msgid "Atha kho bhagavā yena gaṅgā nadī tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:28.12.6"
msgid "Tena kho pana samayena gaṅgā nadī pūrā hoti samatittikā kākapeyyā."
msgstr ""

msgctxt "pli-tv-kd6:28.12.7"
msgid "Manussā aññe nāvaṃ pariyesanti, aññe uḷumpaṃ pariyesanti, aññe kullaṃ bandhanti orā pāraṃ gantukāmā."
msgstr ""

#. HTML: </p><p>
#. REF: sc109
msgctxt "pli-tv-kd6:28.13.1"
msgid "Addasā kho bhagavā te manusse aññe nāvaṃ pariyesante, aññe uḷumpaṃ pariyesante, aññe kullaṃ bandhante orā pāraṃ gantukāme, disvāna seyyathāpi nāma balavā puriso samiñjitaṃ vā bāhaṃ pasāreyya, pasāritaṃ vā bāhaṃ samiñjeyya;"
msgstr ""

#. VAR: evameva kho → evameva bhagavā (bj, s1-3) | evameva (pts1)
msgctxt "pli-tv-kd6:28.13.2"
msgid "evameva kho—"
msgstr ""

msgctxt "pli-tv-kd6:28.13.3"
msgid "gaṅgāya nadiyā orimatīre antarahito pārimatīre paccuṭṭhāsi saddhiṃ bhikkhusaṃghena."
msgstr ""

#. HTML: </p><p>
#. REF: sc110
msgctxt "pli-tv-kd6:28.13.4"
msgid "Atha kho bhagavā etamatthaṃ viditvā tāyaṃ velāyaṃ imaṃ udānaṃ udānesi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc111
msgctxt "pli-tv-kd6:28.13.5"
msgid "“Ye taranti aṇṇavaṃ saraṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.13.6"
msgid "Setuṃ katvāna visajja pallalāni;"
msgstr ""

#. HTML: <br>
#. VAR: jano bandhati → pabandhati (bj, s1-3)
msgctxt "pli-tv-kd6:28.13.7"
msgid "Kullañhi jano bandhati,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:28.13.8"
msgid "Tiṇṇā medhāvino janā”ti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-kd6:29.1.0"
msgid "16. Koṭigāmesaccakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc112, pts-vp-pli1.231
msgctxt "pli-tv-kd6:29.1.1"
msgid "Atha kho bhagavā yena koṭigāmo tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:29.1.2"
msgid "Tatra sudaṃ bhagavā koṭigāme viharati."
msgstr ""

msgctxt "pli-tv-kd6:29.1.3"
msgid "Tatra kho bhagavā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:29.1.4"
msgid "“catunnaṃ, bhikkhave, ariyasaccānaṃ ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "pli-tv-kd6:29.1.5"
msgid "Katamesaṃ catunnaṃ?"
msgstr ""

msgctxt "pli-tv-kd6:29.1.6"
msgid "Dukkhassa, bhikkhave, ariyasaccassa ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

msgctxt "pli-tv-kd6:29.1.7"
msgid "Dukkhasamudayassa ariyasaccassa … pe …"
msgstr ""

msgctxt "pli-tv-kd6:29.1.8"
msgid "dukkhanirodhassa ariyasaccassa … pe …"
msgstr ""

msgctxt "pli-tv-kd6:29.1.9"
msgid "dukkhanirodhagāminiyā paṭipadāya ariyasaccassa ananubodhā appaṭivedhā evamidaṃ dīghamaddhānaṃ sandhāvitaṃ saṃsaritaṃ mamañceva tumhākañca."
msgstr ""

#. VAR: dukkhanirodhaṃ → dukkhanirodho (s1-3)
#. VAR: dukkhasamudayaṃ → dukkhasamudayo (s1-3)
msgctxt "pli-tv-kd6:29.2.1"
msgid "Tayidaṃ, bhikkhave, dukkhaṃ ariyasaccaṃ anubuddhaṃ paṭividdhaṃ, dukkhasamudayaṃ ariyasaccaṃ anubuddhaṃ paṭividdhaṃ, dukkhanirodhaṃ ariyasaccaṃ anubuddhaṃ paṭividdhaṃ, dukkhanirodhagāminī paṭipadā ariyasaccaṃ anubuddhaṃ paṭividdhaṃ, ucchinnā bhavataṇhā, khīṇā bhavanetti, natthi dāni punabbhavoti."
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc113
msgctxt "pli-tv-kd6:29.2.2"
msgid "Catunnaṃ ariyasaccānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.3"
msgid "yathābhūtaṃ adassanā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.4"
msgid "Saṃsitaṃ dīghamaddhānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.5"
msgid "tāsu tāsveva jātisu."
msgstr ""

#. HTML: </p><p>
#. REF: sc114
msgctxt "pli-tv-kd6:29.2.6"
msgid "Tāni etāni diṭṭhāni,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.7"
msgid "bhavanetti samūhatā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.8"
msgid "Ucchinnaṃ mūlaṃ dukkhassa,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:29.2.9"
msgid "natthi dāni punabbhavo”ti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-kd6:30.1.0"
msgid "17. Ambapālīvatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc115
msgctxt "pli-tv-kd6:30.1.1"
msgid "Assosi kho ambapālī gaṇikā—"
msgstr ""

msgctxt "pli-tv-kd6:30.1.2"
msgid "“bhagavā kira koṭigāmaṃ anuppatto”ti."
msgstr ""

#. VAR: yojāpetvā bhadraṃ bhadraṃ yānaṃ → yojāpetvā bhadraṃ yānaṃ (bj, s3, pts1)
msgctxt "pli-tv-kd6:30.1.3"
msgid "Atha kho ambapālī gaṇikā bhadrāni bhadrāni yānāni yojāpetvā bhadraṃ bhadraṃ yānaṃ abhiruhitvā bhadrehi bhadrehi yānehi vesāliyā niyyāsi bhagavantaṃ dassanāya."
msgstr ""

msgctxt "pli-tv-kd6:30.1.4"
msgid "Yāvatikā yānassa bhūmi, yānena gantvā, yānā paccorohitvā, pattikāva yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:30.1.5"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:30.2.1"
msgid "Ekamantaṃ nisinnaṃ kho ambapāliṃ gaṇikaṃ bhagavā dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd6:30.2.2"
msgid "Atha kho ambapālī gaṇikā bhagavatā dhammiyā kathāya sandassitā samādapitā samuttejitā sampahaṃsitā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:30.2.3"
msgid "“adhivāsetu me, bhante, bhagavā svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.2.4"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:30.2.5"
msgid "Atha kho ambapālī gaṇikā bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:30.3.0"
msgid "18. Licchavīvatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc116, pts-vp-pli1.232
msgctxt "pli-tv-kd6:30.3.1"
msgid "Assosuṃ kho vesālikā licchavī—"
msgstr ""

msgctxt "pli-tv-kd6:30.3.2"
msgid "“bhagavā kira koṭigāmaṃ anuppatto”ti."
msgstr ""

#. VAR: niyyāsuṃ → nīsiṃsu (bj) | niyyiṃsu (s1-3)
msgctxt "pli-tv-kd6:30.3.3"
msgid "Atha kho vesālikā licchavī bhadrāni bhadrāni yānāni yojāpetvā bhadraṃ bhadraṃ yānaṃ abhiruhitvā bhadrehi bhadrehi yānehi vesāliyā niyyāsuṃ bhagavantaṃ dassanāya."
msgstr ""

#. VAR: lohitavaṇṇā lohitavatthā lohitālaṅkārā → lohitakavaṇṇā lohitakavatthā lohitakālaṅkārā (bj, s1-3)
msgctxt "pli-tv-kd6:30.3.4"
msgid "Appekacce licchavī nīlā honti nīlavaṇṇā nīlavatthā nīlālaṅkārā, appekacce licchavī pītā honti pītavaṇṇā pītavatthā pītālaṅkārā, appekacce licchavī lohitā honti lohitavaṇṇā lohitavatthā lohitālaṅkārā, appekacce licchavī odātā honti odātavaṇṇā odātavatthā odātālaṅkārā."
msgstr ""

#. VAR: paṭivaṭṭesi → paṭivattesi (bj, s1-3, mr)
msgctxt "pli-tv-kd6:30.3.5"
msgid "Atha kho ambapālī gaṇikā daharānaṃ daharānaṃ licchavīnaṃ īsāya īsaṃ yugena yugaṃ cakkena cakkaṃ akkhena akkhaṃ paṭivaṭṭesi."
msgstr ""

msgctxt "pli-tv-kd6:30.4.1"
msgid "Atha kho te licchavī ambapāliṃ gaṇikaṃ etadavocuṃ—“"
msgstr ""

#. VAR: ambapāli, daharānaṃ daharānaṃ → amhākaṃ daharānaṃ daharānaṃ (bj, s1-3)
msgctxt "pli-tv-kd6:30.4.2"
msgid "kissa, je ambapāli, daharānaṃ daharānaṃ licchavīnaṃ īsāya īsaṃ yugena yugaṃ cakkena cakkaṃ akkhena akkhaṃ paṭivaṭṭesī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:30.4.3"
msgid "“Tathā hi pana mayā, ayyaputtā, svātanāya buddhappamukho bhikkhusaṃgho nimantito”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.4.4"
msgid "“Dehi, je ambapāli, amhākaṃ etaṃ bhattaṃ satasahassenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.4.5"
msgid "“Sacepi me, ayyaputtā, vesāliṃ sāhāraṃ dajjeyyātha, neva dajjāhaṃ taṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.4.6"
msgid "Atha kho te licchavī aṅguliṃ phoṭesuṃ—“"
msgstr ""

#. VAR: jitamha → parājitamha (bj, s1-3)
msgctxt "pli-tv-kd6:30.4.7"
msgid "jitamha vata bho ambakāya, parājitamha vata bho ambakāyā”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.5.1"
msgid "Atha kho te licchavī yena bhagavā tenupasaṅkamiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:30.5.2"
msgid "Addasā kho bhagavā te licchavī dūratova āgacchante, disvāna bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:30.5.3"
msgid "“yehi, bhikkhave, bhikkhūhi devā tāvatiṃsā adiṭṭhapubbā, oloketha, bhikkhave, licchavīparisaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:30.5.4"
msgid "apaloketha, bhikkhave, licchavīparisaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:30.5.5"
msgid "upasaṃharatha, bhikkhave, licchavīparisaṃ tāvatiṃsaparisan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc117
msgctxt "pli-tv-kd6:30.5.6"
msgid "Atha kho te licchavī yāvatikā yānassa bhūmi, yānena gantvā yānā paccorohitvā pattikāva yena bhagavā tenupasaṅkamiṃsu;"
msgstr ""

msgctxt "pli-tv-kd6:30.5.7"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:30.5.8"
msgid "Ekamantaṃ nisinne kho te licchavī bhagavā dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd6:30.5.9"
msgid "Atha kho te licchavī, bhagavatā dhammiyā kathāya sandassitā samādapitā samuttejitā sampahaṃsitā bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:30.5.10"
msgid "“adhivāsetu no, bhante, bhagavā svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.5.11"
msgid "“Adhivuṭṭhomhi, licchavī, svātanāya ambapāliyā gaṇikāya bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.5.12"
msgid "Atha kho te licchavī aṅguliṃ phoṭesuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:30.5.13"
msgid "“jitamha vata bho ambakāya, parājitamha vata bho ambakāyā”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.5.14"
msgid "Atha kho te licchavī bhagavato bhāsitaṃ abhinanditvā anumoditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkamiṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc118, pts-vp-pli1.233
#. VAR: nātikā → nādikā (si, s1-3) | ñātikā (pts1)
#. VAR: viharitvā → ^dn16#102 [Mahāparinibbānasutta/11. Ambapālīgaṇikā] mahāparinibbānasutte anusandhi aññathā
msgctxt "pli-tv-kd6:30.6.1"
msgid "Atha kho bhagavā koṭigāme yathābhirantaṃ viharitvā yena nātikā tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:30.6.2"
msgid "Tatra sudaṃ bhagavā nātike viharati giñjakāvasathe."
msgstr ""

msgctxt "pli-tv-kd6:30.6.3"
msgid "Atha kho ambapālī gaṇikā tassā rattiyā accayena sake ārāme paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:30.6.4"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.6.5"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena ambapāliyā gaṇikāya parivesanā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:30.6.6"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:30.6.7"
msgid "Atha kho ambapālī gaṇikā buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:30.6.8"
msgid "Ekamantaṃ nisinnā kho ambapālī gaṇikā bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:30.6.9"
msgid "“imāhaṃ, bhante, ambavanaṃ buddhappamukhassa bhikkhusaṃghassa dammī”ti."
msgstr ""

msgctxt "pli-tv-kd6:30.6.10"
msgid "Paṭiggahesi bhagavā ārāmaṃ."
msgstr ""

msgctxt "pli-tv-kd6:30.6.11"
msgid "Atha kho bhagavā ambapāliṃ gaṇikaṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā yena mahāvanaṃ tenupasaṅkami."
msgstr ""

msgctxt "pli-tv-kd6:30.6.12"
msgid "Tatra sudaṃ bhagavā vesāliyaṃ viharati mahāvane kūṭāgārasālāyaṃ."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc119
msgctxt "pli-tv-kd6:30.6.13"
msgid "Licchavibhāṇavāro niṭṭhito tatiyo."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:31.1.0"
msgid "19. Sīhasenāpativatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc120
#. VAR: sandhāgāre → santhāgāre (bj, s1-3, pts1 ^an8.12#1 [12. Sīhasutta])
msgctxt "pli-tv-kd6:31.1.1"
msgid "Tena kho pana samayena abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.1.2"
msgid "Tena kho pana samayena sīho senāpati nigaṇṭhasāvako tassaṃ parisāyaṃ nisinno hoti."
msgstr ""

msgctxt "pli-tv-kd6:31.1.3"
msgid "Atha kho sīhassa senāpatissa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:31.1.4"
msgid "“nissaṃsayaṃ kho so bhagavā arahaṃ sammāsambuddho bhavissati, tathā hime abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.1.5"
msgid "Yannūnāhaṃ taṃ bhagavantaṃ dassanāya upasaṅkameyyaṃ arahantaṃ sammāsambuddhan”ti."
msgstr ""

#. VAR: nāṭaputto → nātaputto (bj, pts1)
msgctxt "pli-tv-kd6:31.2.1"
msgid "Atha kho sīho senāpati yena nigaṇṭho nāṭaputto tenupasaṅkami, upasaṅkamitvā nigaṇṭhaṃ nāṭaputtaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:31.2.2"
msgid "“icchāmahaṃ, bhante, samaṇaṃ gotamaṃ dassanāya upasaṅkamitun”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.2.3"
msgid "“Kiṃ pana tvaṃ, sīha, kiriyavādo samāno akiriyavādaṃ samaṇaṃ gotamaṃ dassanāya upasaṅkamissasi?"
msgstr ""

msgctxt "pli-tv-kd6:31.2.4"
msgid "Samaṇo hi, sīha, gotamo akiriyavādo akiriyāya dhammaṃ deseti, tena ca sāvake vinetī”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.2.5"
msgid "Atha kho sīhassa senāpatissa yo ahosi gamikābhisaṅkhāro bhagavantaṃ dassanāya, so paṭippassambhi."
msgstr ""

#. HTML: </p><p>
#. REF: sc121, pts-vp-pli1.234
msgctxt "pli-tv-kd6:31.3.1"
msgid "Dutiyampi kho abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.2"
msgid "Dutiyampi kho sīhassa senāpatissa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:31.3.3"
msgid "“nissaṃsayaṃ kho so bhagavā arahaṃ sammāsambuddho bhavissati, tathā hime abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.4"
msgid "Yannūnāhaṃ taṃ bhagavantaṃ dassanāya upasaṅkameyyaṃ arahantaṃ sammāsambuddhan”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.5"
msgid "Dutiyampi kho sīho senāpati yena nigaṇṭho nāṭaputto tenupasaṅkami, upasaṅkamitvā nigaṇṭhaṃ nāṭaputtaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:31.3.6"
msgid "“icchāmahaṃ, bhante, samaṇaṃ gotamaṃ dassanāya upasaṅkamitun”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.7"
msgid "“Kiṃ pana tvaṃ, sīha, kiriyavādo samāno akiriyavādaṃ samaṇaṃ gotamaṃ dassanāya upasaṅkamissasi?"
msgstr ""

msgctxt "pli-tv-kd6:31.3.8"
msgid "Samaṇo hi, sīha, gotamo akiriyavādo akiriyāya dhammaṃ deseti, tena ca sāvake vinetī”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.9"
msgid "Dutiyampi kho sīhassa senāpatissa yo ahosi gamikābhisaṅkhāro bhagavantaṃ dassanāya, so paṭippassambhi."
msgstr ""

#. HTML: </p><p>
#. REF: sc122
msgctxt "pli-tv-kd6:31.3.10"
msgid "Tatiyampi kho abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.11"
msgid "Tatiyampi kho sīhassa senāpatissa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:31.3.12"
msgid "“nissaṃsayaṃ kho so bhagavā arahaṃ sammāsambuddho bhavissati, tathā hime abhiññātā abhiññātā licchavī sandhāgāre sannisinnā sannipatitā anekapariyāyena buddhassa vaṇṇaṃ bhāsanti, dhammassa vaṇṇaṃ bhāsanti, saṃghassa vaṇṇaṃ bhāsanti."
msgstr ""

msgctxt "pli-tv-kd6:31.3.13"
msgid "Kiñhi me karissanti nigaṇṭhā apalokitā vā anapalokitā vā?"
msgstr ""

msgctxt "pli-tv-kd6:31.3.14"
msgid "Yannūnāhaṃ anapaloketvāva nigaṇṭhe taṃ bhagavantaṃ dassanāya upasaṅkameyyaṃ arahantaṃ sammāsambuddhan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc123
msgctxt "pli-tv-kd6:31.4.1"
msgid "Atha kho sīho senāpati pañcahi rathasatehi divādivassa vesāliyā niyyāsi bhagavantaṃ dassanāya."
msgstr ""

msgctxt "pli-tv-kd6:31.4.2"
msgid "Yāvatikā yānassa bhūmi, yānena gantvā yānā paccorohitvā pattikova yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:31.4.3"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:31.4.4"
msgid "Ekamantaṃ nisinno kho sīho senāpati bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:31.4.5"
msgid "“sutaṃ me taṃ, bhante—‘"
msgstr ""

msgctxt "pli-tv-kd6:31.4.6"
msgid "akiriyavādo samaṇo gotamo akiriyāya dhammaṃ deseti, tena ca sāvake vinetī’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.4.7"
msgid "Ye te, bhante, evamāhaṃsu—‘"
msgstr ""

msgctxt "pli-tv-kd6:31.4.8"
msgid "akiriyavādo samaṇo gotamo, akiriyāya dhammaṃ deseti, tena ca sāvake vinetī’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.4.9"
msgid "Kacci te, bhante, bhagavato vuttavādino, na ca bhagavantaṃ abhūtena abbhācikkhanti, dhammassa cānudhammaṃ byākaronti, na ca koci sahadhammiko vādānuvādo gārayhaṃ ṭhānaṃ āgacchati?"
msgstr ""

msgctxt "pli-tv-kd6:31.4.10"
msgid "Anabbhakkhātukāmā hi mayaṃ, bhante, bhagavantan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc124
msgctxt "pli-tv-kd6:31.5.1"
msgid "“Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.2"
msgid "akiriyavādo samaṇo gotamo, akiriyāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.3"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.4"
msgid "kiriyavādo samaṇo gotamo kiriyāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.5"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.6"
msgid "ucchedavādo samaṇo gotamo ucchedāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.7"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.8"
msgid "jegucchī samaṇo gotamo, jegucchitāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.9"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.10"
msgid "venayiko samaṇo gotamo, vinayāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.11"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.12"
msgid "tapassī samaṇo gotamo, tapassitāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.13"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.14"
msgid "apagabbho samaṇo gotamo, apagabbhatāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

msgctxt "pli-tv-kd6:31.5.15"
msgid "Atthi, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.5.16"
msgid "assattho samaṇo gotamo, assāsāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc125, pts-vp-pli1.235
msgctxt "pli-tv-kd6:31.6.1"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.6.2"
msgid "akiriyavādo samaṇo gotamo, akiriyāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.6.3"
msgid "Ahañhi, sīha, akiriyaṃ vadāmi kāyaduccaritassa vacīduccaritassa manoduccaritassa;"
msgstr ""

msgctxt "pli-tv-kd6:31.6.4"
msgid "anekavihitānaṃ pāpakānaṃ akusalānaṃ dhammānaṃ akiriyaṃ vadāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.6.5"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.6.6"
msgid "akiriyavādo samaṇo gotamo, akiriyāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc126
msgctxt "pli-tv-kd6:31.6.7"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.6.8"
msgid "kiriyavādo samaṇo gotamo, kiriyāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.6.9"
msgid "Ahañhi, sīha, kiriyaṃ vadāmi kāyasucaritassa vacīsucaritassa manosucaritassa, anekavihitānaṃ kusalānaṃ dhammānaṃ kiriyaṃ vadāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.6.10"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.6.11"
msgid "kiriyavādo samaṇo gotamo, kiriyāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc127
msgctxt "pli-tv-kd6:31.7.1"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.7.2"
msgid "ucchedavādo samaṇo gotamo, ucchedāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.7.3"
msgid "Ahañhi, sīha, ucchedaṃ vadāmi rāgassa dosassa mohassa;"
msgstr ""

msgctxt "pli-tv-kd6:31.7.4"
msgid "anekavihitānaṃ pāpakānaṃ akusalānaṃ dhammānaṃ ucchedaṃ vadāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.7.5"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.7.6"
msgid "ucchedavādo samaṇo gotamo ucchedāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc128
msgctxt "pli-tv-kd6:31.7.7"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.7.8"
msgid "jegucchī samaṇo gotamo, jegucchitāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.7.9"
msgid "Ahañhi, sīha, jigucchāmi kāyaduccaritena vacīduccaritena manoduccaritena;"
msgstr ""

msgctxt "pli-tv-kd6:31.7.10"
msgid "anekavihitānaṃ pāpakānaṃ akusalānaṃ dhammānaṃ samāpattiyā jigucchāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.7.11"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.7.12"
msgid "jegucchī samaṇo gotamo, jegucchitāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc129
msgctxt "pli-tv-kd6:31.8.1"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.8.2"
msgid "venayiko samaṇo gotamo, vinayāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.8.3"
msgid "Ahañhi, sīha, vinayāya dhammaṃ desemi rāgassa dosassa mohassa;"
msgstr ""

msgctxt "pli-tv-kd6:31.8.4"
msgid "anekavihitānaṃ pāpakānaṃ akusalānaṃ dhammānaṃ vinayāya dhammaṃ desemi."
msgstr ""

msgctxt "pli-tv-kd6:31.8.5"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.8.6"
msgid "venayiko samaṇo gotamo, vinayāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc130, pts-vp-pli1.236
msgctxt "pli-tv-kd6:31.8.7"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.8.8"
msgid "tapassī samaṇo gotamo, tapassitāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.8.9"
msgid "Tapanīyāhaṃ, sīha, pāpake akusale dhamme vadāmi—"
msgstr ""

msgctxt "pli-tv-kd6:31.8.10"
msgid "kāyaduccaritaṃ vacīduccaritaṃ manoduccaritaṃ."
msgstr ""

#. VAR: anabhāvaṃkatā → anabhāvakatā (bj)
msgctxt "pli-tv-kd6:31.8.11"
msgid "Yassa kho, sīha, tapanīyā pāpakā akusalā dhammā pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṃkatā āyatiṃ anuppādadhammā, tamahaṃ tapassīti vadāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.8.12"
msgid "Tathāgatassa kho, sīha, tapanīyā pāpakā akusalā dhammā pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṃkatā āyatiṃ anuppādadhammā."
msgstr ""

msgctxt "pli-tv-kd6:31.8.13"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya tapassī samaṇo gotamo tapassitāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc131
msgctxt "pli-tv-kd6:31.9.1"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.9.2"
msgid "apagabbho samaṇo gotamo apagabbhatāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.9.3"
msgid "Yassa kho, sīha, āyatiṃ gabbhaseyyā punabbhavābhinibbatti pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṃkatā āyatiṃ anuppādadhammā, tamahaṃ apagabbhoti vadāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.9.4"
msgid "Tathāgatassa kho, sīha, āyatiṃ gabbhaseyyā punabbhavābhinibbatti pahīnā ucchinnamūlā tālāvatthukatā anabhāvaṃkatā āyatiṃ anuppādadhammā."
msgstr ""

msgctxt "pli-tv-kd6:31.9.5"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.9.6"
msgid "apagabbho samaṇo gotamo, apagabbhatāya dhammaṃ deseti, tena ca sāvake vinetīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc132
msgctxt "pli-tv-kd6:31.9.7"
msgid "Katamo ca, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

#. VAR: assāsāya → assāsāya ca (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:31.9.8"
msgid "assattho samaṇo gotamo assāsāya dhammaṃ deseti, tena ca sāvake vinetīti?"
msgstr ""

msgctxt "pli-tv-kd6:31.9.9"
msgid "Ahañhi, sīha, assattho paramena assāsena, assāsāya dhammaṃ desemi, tena ca sāvake vinemi."
msgstr ""

msgctxt "pli-tv-kd6:31.9.10"
msgid "Ayaṃ kho, sīha, pariyāyo, yena maṃ pariyāyena sammā vadamāno vadeyya—"
msgstr ""

msgctxt "pli-tv-kd6:31.9.11"
msgid "assattho samaṇo gotamo assāsāya dhammaṃ deseti, tena ca sāvake vinetī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc133, pts-vp-pli1.237
msgctxt "pli-tv-kd6:31.10.1"
msgid "Evaṃ vutte sīho senāpati bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:31.10.2"
msgid "“abhikkantaṃ, bhante … pe …"
msgstr ""

msgctxt "pli-tv-kd6:31.10.3"
msgid "upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti."
msgstr ""

#. VAR: Anuviccakāraṃ → anuvijjakāraṃ (pts1, mr)
#. VAR: kho → sīho (bj, pts1)
msgctxt "pli-tv-kd6:31.10.4"
msgid "“Anuviccakāraṃ kho, sīha, karohi;"
msgstr ""

msgctxt "pli-tv-kd6:31.10.5"
msgid "anuviccakāro tumhādisānaṃ ñātamanussānaṃ sādhu hotī”ti."
msgstr ""

#. VAR: bhagavato → bhagavato vacanena (bj, s1-3)
#. VAR: bhiyyoso mattāya → bhīyosomattāya (bj)
msgctxt "pli-tv-kd6:31.10.6"
msgid "“Imināpāhaṃ, bhante, bhagavato bhiyyoso mattāya attamano abhiraddho, yaṃ maṃ bhagavā evamāha—‘"
msgstr ""

msgctxt "pli-tv-kd6:31.10.7"
msgid "anuviccakāraṃ kho, sīha, karohi;"
msgstr ""

msgctxt "pli-tv-kd6:31.10.8"
msgid "anuviccakāro tumhādisānaṃ ñātamanussānaṃ sādhu hotī’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.10.9"
msgid "Mamañhi, bhante, aññatitthiyā sāvakaṃ labhitvā kevalakappaṃ vesāliṃ paṭākaṃ parihareyyuṃ—‘"
msgstr ""

msgctxt "pli-tv-kd6:31.10.10"
msgid "sīho kho amhākaṃ senāpati sāvakattaṃ upagato’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.10.11"
msgid "Atha ca pana maṃ bhagavā evamāha—"
msgstr ""

msgctxt "pli-tv-kd6:31.10.12"
msgid "‘anuviccakāraṃ kho, sīha, karohi;"
msgstr ""

msgctxt "pli-tv-kd6:31.10.13"
msgid "anuviccakāro tumhādisānaṃ ñātamanussānaṃ sādhu hotī’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.10.14"
msgid "Esāhaṃ, bhante, dutiyampi bhagavantaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṃghañca."
msgstr ""

msgctxt "pli-tv-kd6:31.10.15"
msgid "Upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.11.1"
msgid "“Dīgharattaṃ kho te, sīha, nigaṇṭhānaṃ opānabhūtaṃ kulaṃ, yena nesaṃ upagatānaṃ piṇḍakaṃ dātabbaṃ maññeyyāsī”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.11.2"
msgid "“Imināpāhaṃ, bhante, bhagavato bhiyyoso mattāya attamano abhiraddho, yaṃ maṃ bhagavā evamāha—‘"
msgstr ""

msgctxt "pli-tv-kd6:31.11.3"
msgid "dīgharattaṃ kho te, sīha, nigaṇṭhānaṃ opānabhūtaṃ kulaṃ, yena nesaṃ upagatānaṃ piṇḍakaṃ dātabbaṃ maññeyyāsī’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.11.4"
msgid "Sutaṃ me taṃ, bhante, samaṇo gotamo evamāha—"
msgstr ""

msgctxt "pli-tv-kd6:31.11.5"
msgid "‘mayhameva dānaṃ dātabbaṃ, na aññesaṃ dānaṃ dātabbaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:31.11.6"
msgid "mayhameva sāvakānaṃ dānaṃ dātabbaṃ, na aññesaṃ sāvakānaṃ dānaṃ dātabbaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:31.11.7"
msgid "mayhameva dinnaṃ mahapphalaṃ, na aññesaṃ dinnaṃ mahapphalaṃ;"
msgstr ""

msgctxt "pli-tv-kd6:31.11.8"
msgid "mayhameva sāvakānaṃ dinnaṃ mahapphalaṃ, na aññesaṃ sāvakānaṃ dinnaṃ mahapphalan’ti."
msgstr ""

msgctxt "pli-tv-kd6:31.11.9"
msgid "Atha ca pana maṃ bhagavā nigaṇṭhesupi dāne samādapeti."
msgstr ""

msgctxt "pli-tv-kd6:31.11.10"
msgid "Api ca, bhante, mayamettha kālaṃ jānissāma."
msgstr ""

msgctxt "pli-tv-kd6:31.11.11"
msgid "Esāhaṃ, bhante, tatiyampi bhagavantaṃ saraṇaṃ gacchāmi dhammañca bhikkhusaṃghañca."
msgstr ""

msgctxt "pli-tv-kd6:31.11.12"
msgid "Upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gatan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc134
msgctxt "pli-tv-kd6:31.12.1"
msgid "Atha kho bhagavā sīhassa senāpatissa anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:31.12.2"
msgid "dānakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:31.12.3"
msgid "aparappaccayo satthusāsane bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:31.12.4"
msgid "“adhivāsetu me, bhante, bhagavā svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.12.5"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:31.12.6"
msgid "Atha kho sīho senāpati bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc135
msgctxt "pli-tv-kd6:31.12.7"
msgid "Atha kho sīho senāpati aññataraṃ purisaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:31.12.8"
msgid "“gaccha, bhaṇe, pavattamaṃsaṃ jānāhī”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.12.9"
msgid "Atha kho sīho senāpati tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:31.12.10"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.12.11"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena sīhassa senāpatissa nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:31.12.12"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

#. HTML: </p><p>
#. REF: sc136, pts-vp-pli1.238
#. VAR: rathikāya rathikaṃ → rathiyā rathiyaṃ (bj) | rathiyāya rathiyaṃ (s1-3, pts1)
msgctxt "pli-tv-kd6:31.13.1"
msgid "Tena kho pana samayena sambahulā nigaṇṭhā vesāliyaṃ rathikāya rathikaṃ siṅghāṭakena siṅghāṭakaṃ bāhā paggayha kandanti—“"
msgstr ""

#. VAR: thūlaṃ → thullaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:31.13.2"
msgid "ajja sīhena senāpatinā thūlaṃ pasuṃ vadhitvā samaṇassa gotamassa bhattaṃ kataṃ, taṃ samaṇo gotamo jānaṃ uddissakataṃ maṃsaṃ paribhuñjati paṭiccakamman”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.13.3"
msgid "Atha kho aññataro puriso yena sīho senāpati tenupasaṅkami, upasaṅkamitvā sīhassa senāpatissa upakaṇṇake ārocesi—"
msgstr ""

msgctxt "pli-tv-kd6:31.13.4"
msgid "“yagghe, bhante, jāneyyāsi, ete sambahulā nigaṇṭhā vesāliyaṃ rathikāya rathikaṃ siṅghāṭakena siṅghāṭakaṃ bāhā paggayha kandanti—"
msgstr ""

msgctxt "pli-tv-kd6:31.13.5"
msgid "‘ajja sīhena senāpatinā thūlaṃ pasuṃ vadhitvā samaṇassa gotamassa bhattaṃ kataṃ, taṃ samaṇo gotamo jānaṃ uddissakataṃ maṃsaṃ paribhuñjati paṭiccakamman’”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.13.6"
msgid "“Alaṃ, ayyo, dīgharattampi te āyasmantā avaṇṇakāmā buddhassa, avaṇṇakāmā dhammassa, avaṇṇakāmā saṃghassa;"
msgstr ""

#. VAR: jiridanti → jīranti (bj, pts1) | kīranti (s1-3)
msgctxt "pli-tv-kd6:31.13.7"
msgid "na ca pana te āyasmantā jiridanti taṃ bhagavantaṃ asatā tucchā musā abhūtena abbhācikkhantā;"
msgstr ""

msgctxt "pli-tv-kd6:31.13.8"
msgid "na ca mayaṃ jīvitahetupi sañcicca pāṇaṃ jīvitā voropeyyāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:31.14.1"
msgid "Atha kho sīho senāpati buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:31.14.2"
msgid "Ekamantaṃ nisinnaṃ kho sīhaṃ senāpatiṃ bhagavā dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:31.14.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:31.14.4"
msgid "“na, bhikkhave, jānaṃ uddissakataṃ maṃsaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:31.14.5"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:31.14.6"
msgid "Anujānāmi, bhikkhave, tikoṭiparisuddhaṃ macchamaṃsaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:31.14.7"
msgid "adiṭṭhaṃ assutaṃ aparisaṅkitan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:32.1.0"
msgid "20. Kappiyabhūmianujānana"
msgstr ""

#. HTML: </h2><p>
#. REF: sc137
msgctxt "pli-tv-kd6:32.1.1"
msgid "Tena kho pana samayena vesālī subhikkhā hoti susassā sulabhapiṇḍā, sukarā uñchena paggahena yāpetuṃ."
msgstr ""

msgctxt "pli-tv-kd6:32.1.2"
msgid "Atha kho bhagavato rahogatassa paṭisallīnassa evaṃ cetaso parivitakko udapādi—"
msgstr ""

msgctxt "pli-tv-kd6:32.1.3"
msgid "“yāni tāni mayā bhikkhūnaṃ anuññātāni dubbhikkhe dussasse dullabhapiṇḍe anto vuṭṭhaṃ anto pakkaṃ sāmaṃ pakkaṃ uggahitapaṭiggahitakaṃ tato nīhaṭaṃ purebhattaṃ paṭiggahitaṃ vanaṭṭhaṃ pokkharaṭṭhaṃ, ajjāpi nu kho tāni bhikkhū paribhuñjantī”ti."
msgstr ""

msgctxt "pli-tv-kd6:32.1.4"
msgid "Atha kho bhagavā sāyanhasamayaṃ paṭisallānā vuṭṭhito āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:32.1.5"
msgid "“yāni tāni, ānanda, mayā bhikkhūnaṃ anuññātāni dubbhikkhe dussasse dullabhapiṇḍe anto vuṭṭhaṃ anto pakkaṃ sāmaṃ pakkaṃ uggahitapaṭiggahitakaṃ tato nīhaṭaṃ purebhattaṃ paṭiggahitaṃ vanaṭṭhaṃ pokkharaṭṭhaṃ, ajjāpi nu kho tāni bhikkhū paribhuñjantī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:32.1.6"
msgid "“Paribhuñjanti, bhagavā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc138
msgctxt "pli-tv-kd6:32.2.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:32.2.2"
msgid "“yāni tāni, bhikkhave, mayā bhikkhūnaṃ anuññātāni dubbhikkhe dussasse dullabhapiṇḍe anto vuṭṭhaṃ anto pakkaṃ sāmaṃ pakkaṃ uggahitapaṭiggahitakaṃ tato nīhaṭaṃ purebhattaṃ paṭiggahitaṃ vanaṭṭhaṃ pokkharaṭṭhaṃ, tānāhaṃ ajjatagge paṭikkhipāmi."
msgstr ""

msgctxt "pli-tv-kd6:32.2.3"
msgid "Na, bhikkhave, anto vuṭṭhaṃ anto pakkaṃ sāmaṃ pakkaṃ uggahitapaṭiggahitakaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:32.2.4"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:32.2.5"
msgid "Na ca, bhikkhave, tato nīhaṭaṃ purebhattaṃ paṭiggahitaṃ vanaṭṭhaṃ pokkharaṭṭhaṃ bhuttāvinā pavāritena anatirittaṃ paribhuñjitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:32.2.6"
msgid "Yo paribhuñjeyya, yathādhammo kāretabbo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc139, pts-vp-pli1.239
msgctxt "pli-tv-kd6:33.1.1"
msgid "Tena kho pana samayena jānapadā manussā bahuṃ loṇampi, telampi, taṇḍulampi, khādanīyampi sakaṭesu āropetvā bahārāmakoṭṭhake sakaṭaparivaṭṭaṃ karitvā acchanti—"
msgstr ""

msgctxt "pli-tv-kd6:33.1.2"
msgid "“yadā paṭipāṭiṃ labhissāma, tadā bhattaṃ karissāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:33.1.3"
msgid "Mahā ca megho uggato hoti."
msgstr ""

msgctxt "pli-tv-kd6:33.1.4"
msgid "Atha kho te manussā yenāyasmā ānando tenupasaṅkamiṃsu, upasaṅkamitvā āyasmantaṃ ānandaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:33.1.5"
msgid "“idha, bhante ānanda, bahuṃ loṇampi, telampi, taṇḍulampi, khādanīyampi sakaṭesu āropitā tiṭṭhanti, mahā ca megho uggato;"
msgstr ""

msgctxt "pli-tv-kd6:33.1.6"
msgid "kathaṃ nu kho, bhante ānanda, paṭipajjitabban”ti?"
msgstr ""

msgctxt "pli-tv-kd6:33.1.7"
msgid "Atha kho āyasmā ānando bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:33.2.1"
msgid "“Tena hānanda, saṃgho paccantimaṃ vihāraṃ kappiyabhūmiṃ sammannitvā tattha vāsetu, yaṃ saṃgho ākaṅkhati vihāraṃ vā aḍḍhayogaṃ vā pāsādaṃ vā hammiyaṃ vā guhaṃ vā."
msgstr ""

#. VAR: sammannitabbā → sammannitabbo (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:33.2.2"
msgid "Evañca pana, bhikkhave, sammannitabbā."
msgstr ""

msgctxt "pli-tv-kd6:33.2.3"
msgid "Byattena bhikkhunā paṭibalena saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc140
msgctxt "pli-tv-kd6:33.2.4"
msgid "‘Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-kd6:33.2.5"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmaṃ vihāraṃ kappiyabhūmiṃ sammanneyya, esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc141
msgctxt "pli-tv-kd6:33.2.6"
msgid "Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-kd6:33.2.7"
msgid "Saṃgho itthannāmaṃ vihāraṃ kappiyabhūmiṃ sammannati."
msgstr ""

msgctxt "pli-tv-kd6:33.2.8"
msgid "Yassāyasmato khamati itthannāmassa vihārassa kappiyabhūmiyā sammuti, so tuṇhassa;"
msgstr ""

msgctxt "pli-tv-kd6:33.2.9"
msgid "yassa nakkhamati, so bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc142
msgctxt "pli-tv-kd6:33.2.10"
msgid "Sammato saṃghena itthannāmo vihāro kappiyabhūmi."
msgstr ""

msgctxt "pli-tv-kd6:33.2.11"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc143
#. VAR: sammuti → sammatikā (s1-3) | sammutī (pts1)
#. VAR: sammutiyā → sammatikāya (s1-3)
msgctxt "pli-tv-kd6:33.3.1"
msgid "Tena kho pana samayena manussā tattheva sammutiyā kappiyabhūmiyā yāguyo pacanti, bhattāni pacanti, sūpāni sampādenti, maṃsāni koṭṭenti, kaṭṭhāni phālenti."
msgstr ""

msgctxt "pli-tv-kd6:33.3.2"
msgid "Assosi kho bhagavā rattiyā paccūsasamayaṃ paccuṭṭhāya uccāsaddaṃ mahāsaddaṃ kākoravasaddaṃ, sutvāna āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:33.3.3"
msgid "“kiṃ nu kho so, ānanda, uccāsaddo mahāsaddo kākoravasaddo”ti?"
msgstr ""

msgctxt "pli-tv-kd6:33.4.1"
msgid "“Etarahi, bhante, manussā tattheva sammutiyā kappiyabhūmiyā yāguyo pacanti, bhattāni pacanti, sūpāni sampādenti, maṃsāni koṭṭenti, kaṭṭhāni phālenti."
msgstr ""

msgctxt "pli-tv-kd6:33.4.2"
msgid "So eso, bhagavā, uccāsaddo mahāsaddo kākoravasaddo”ti."
msgstr ""

msgctxt "pli-tv-kd6:33.4.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:33.4.4"
msgid "“na, bhikkhave, sammuti kappiyabhūmi paribhuñjitabbā."
msgstr ""

msgctxt "pli-tv-kd6:33.4.5"
msgid "Yo paribhuñjeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:33.4.6"
msgid "Anujānāmi, bhikkhave, tisso kappiyabhūmiyo—"
msgstr ""

msgctxt "pli-tv-kd6:33.4.7"
msgid "ussāvanantikaṃ gonisādikaṃ gahapatin”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc144, pts-vp-pli1.240
msgctxt "pli-tv-kd6:33.5.1"
msgid "Tena kho pana samayena āyasmā yasojo gilāno hoti."
msgstr ""

msgctxt "pli-tv-kd6:33.5.2"
msgid "Tassatthāya bhesajjāni āhariyanti."
msgstr ""

msgctxt "pli-tv-kd6:33.5.3"
msgid "Tāni bhikkhū bahi vāsenti."
msgstr ""

msgctxt "pli-tv-kd6:33.5.4"
msgid "Ukkapiṇḍakāpi khādanti, corāpi haranti."
msgstr ""

msgctxt "pli-tv-kd6:33.5.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:33.5.6"
msgid "“Anujānāmi, bhikkhave, sammutiṃ kappiyabhūmiṃ paribhuñjituṃ."
msgstr ""

msgctxt "pli-tv-kd6:33.5.7"
msgid "Anujānāmi, bhikkhave, catasso kappiyabhūmiyo—"
msgstr ""

msgctxt "pli-tv-kd6:33.5.8"
msgid "ussāvanantikaṃ gonisādikaṃ gahapatiṃ sammutin”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc145
msgctxt "pli-tv-kd6:33.5.9"
msgid "Sīhabhāṇavāro niṭṭhito catuttho."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:34.1.0"
msgid "21. Meṇḍakagahapativatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc146
msgctxt "pli-tv-kd6:34.1.1"
msgid "Tena kho pana samayena bhaddiyanagare meṇḍako gahapati paṭivasati."
msgstr ""

msgctxt "pli-tv-kd6:34.1.2"
msgid "Tassa evarūpo iddhānubhāvo hoti—"
msgstr ""

#. VAR: bahidvāre → padvāre (bj)
msgctxt "pli-tv-kd6:34.1.3"
msgid "sīsaṃ nahāyitvā dhaññāgāraṃ sammajjāpetvā bahidvāre nisīdati, antalikkhā dhaññassa dhārā opatitvā dhaññāgāraṃ pūreti."
msgstr ""

msgctxt "pli-tv-kd6:34.1.4"
msgid "Bhariyāya evarūpo iddhānubhāvo hoti—"
msgstr ""

#. VAR: khiyyati → khīyati (bj, s1-3)
#. VAR: sūpabhiñjanakaṃ → sūpabhiñjarakaṃ (bj) | sūpagiñjarakaṃ (s1-3) | sūpavyañjanakaṃ (pts1)
msgctxt "pli-tv-kd6:34.1.5"
msgid "ekaṃyeva āḷhakathālikaṃ upanisīditvā ekañca sūpabhiñjanakaṃ dāsakammakaraporisaṃ bhattena parivisati, na tāva taṃ khiyyati yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.1.6"
msgid "Puttassa evarūpo iddhānubhāvo hoti—"
msgstr ""

#. VAR: chamāsikaṃ → chammāsikaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:34.1.7"
msgid "ekaṃyeva sahassathavikaṃ gahetvā dāsakammakaraporisassa chamāsikaṃ vetanaṃ deti, na tāva taṃ khiyyati yāvassa hatthagatā."
msgstr ""

msgctxt "pli-tv-kd6:34.2.1"
msgid "Suṇisāya evarūpo iddhānubhāvo hoti—"
msgstr ""

#. VAR: bhattaṃ → bījabhattaṃ (bj)
msgctxt "pli-tv-kd6:34.2.2"
msgid "ekaṃyeva catudoṇikaṃ piṭakaṃ upanisīditvā dāsakammakaraporisassa chamāsikaṃ bhattaṃ deti, na tāva taṃ khiyyati yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.2.3"
msgid "Dāsassa evarūpo iddhānubhāvo hoti—"
msgstr ""

msgctxt "pli-tv-kd6:34.2.4"
msgid "ekena naṅgalena kasantassa satta sītāyo gacchanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc147, pts-vp-pli1.241
msgctxt "pli-tv-kd6:34.3.1"
msgid "Assosi kho rājā māgadho seniyo bimbisāro—"
msgstr ""

msgctxt "pli-tv-kd6:34.3.2"
msgid "“amhākaṃ kira vijite bhaddiyanagare meṇḍako gahapati paṭivasati."
msgstr ""

msgctxt "pli-tv-kd6:34.3.3"
msgid "Tassa evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.3.4"
msgid "sīsaṃ nahāyitvā dhaññāgāraṃ sammajjāpetvā bahidvāre nisīdati, antalikkhā dhaññassa dhārā opatitvā dhaññāgāraṃ pūreti."
msgstr ""

msgctxt "pli-tv-kd6:34.3.5"
msgid "Bhariyāya evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.3.6"
msgid "ekaṃyeva āḷhakathālikaṃ upanisīditvā ekañca sūpabhiñjanakaṃ dāsakammakaraporisaṃ bhattena parivisati, na tāva taṃ khiyyati yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.3.7"
msgid "Puttassa evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.3.8"
msgid "ekaṃyeva sahassathavikaṃ gahetvā dāsakammakaraporisassa chamāsikaṃ vetanaṃ deti, na tāva taṃ khiyyati yāvassa hatthagatā."
msgstr ""

msgctxt "pli-tv-kd6:34.4.1"
msgid "Suṇisāya evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.4.2"
msgid "ekaṃyeva catudoṇikaṃ piṭakaṃ upanisīditvā dāsakammakaraporisassa chamāsikaṃ bhattaṃ deti, na tāva taṃ khiyyati yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.4.3"
msgid "Dāsassa evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.4.4"
msgid "ekena naṅgalena kasantassa satta sītāyo gacchantī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.5.1"
msgid "Atha kho rājā māgadho seniyo bimbisāro aññataraṃ sabbatthakaṃ mahāmattaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.5.2"
msgid "“amhākaṃ kira, bhaṇe, vijite bhaddiyanagare meṇḍako gahapati paṭivasati."
msgstr ""

msgctxt "pli-tv-kd6:34.5.3"
msgid "Tassa evarūpo iddhānubhāvo—"
msgstr ""

msgctxt "pli-tv-kd6:34.5.4"
msgid "sīsaṃ nahāyitvā dhaññāgāraṃ sammajjāpetvā bahidvāre nisīdati, antalikkhā dhaññassa dhārā opatitvā dhaññāgāraṃ pūreti."
msgstr ""

msgctxt "pli-tv-kd6:34.5.5"
msgid "Bhariyāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.5.6"
msgid "puttassa …"
msgstr ""

msgctxt "pli-tv-kd6:34.5.7"
msgid "suṇisāya …"
msgstr ""

msgctxt "pli-tv-kd6:34.5.8"
msgid "dāsassa evarūpo iddhānubhāvo, ekena naṅgalena kasantassa satta sītāyo gacchantīti."
msgstr ""

msgctxt "pli-tv-kd6:34.5.9"
msgid "Gaccha, bhaṇe, jānāhi."
msgstr ""

msgctxt "pli-tv-kd6:34.5.10"
msgid "Yathā mayā sāmaṃ diṭṭho, evaṃ tava diṭṭho bhavissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc148
msgctxt "pli-tv-kd6:34.5.11"
msgid "“Evaṃ, devā”ti kho so mahāmatto rañño māgadhassa seniyassa bimbisārassa paṭissuṇitvā caturaṅginiyā senāya yena bhaddiyaṃ tena pāyāsi."
msgstr ""

msgctxt "pli-tv-kd6:34.6.1"
msgid "Anupubbena yena bhaddiyaṃ yena meṇḍako gahapati tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:34.6.2"
msgid "upasaṅkamitvā meṇḍakaṃ gahapatiṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:34.6.3"
msgid "“ahañhi, gahapati, raññā āṇatto—‘"
msgstr ""

msgctxt "pli-tv-kd6:34.6.4"
msgid "amhākaṃ kira, bhaṇe, vijite bhaddiyanagare meṇḍako gahapati paṭivasati, tassa evarūpo iddhānubhāvo, sīsaṃ nahāyitvā … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.6.5"
msgid "bhariyāya …"
msgstr ""

msgctxt "pli-tv-kd6:34.6.6"
msgid "puttassa …"
msgstr ""

msgctxt "pli-tv-kd6:34.6.7"
msgid "suṇisāya …"
msgstr ""

msgctxt "pli-tv-kd6:34.6.8"
msgid "dāsassa evarūpo iddhānubhāvo, ekena naṅgalena kasantassa satta sītāyo gacchantīti, gaccha, bhaṇe, jānāhi."
msgstr ""

msgctxt "pli-tv-kd6:34.6.9"
msgid "Yathā mayā sāmaṃ diṭṭho, evaṃ tava diṭṭho bhavissatī’ti."
msgstr ""

msgctxt "pli-tv-kd6:34.6.10"
msgid "Passāma te, gahapati, iddhānubhāvan”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.6.11"
msgid "Atha kho meṇḍako gahapati sīsaṃ nahāyitvā dhaññāgāraṃ sammajjāpetvā bahidvāre nisīdi, antalikkhā dhaññassa dhārā opatitvā dhaññāgāraṃ pūresi."
msgstr ""

msgctxt "pli-tv-kd6:34.6.12"
msgid "“Diṭṭho te, gahapati, iddhānubhāvo."
msgstr ""

#. VAR: passissāmā”ti → passāmāti (bj, s1-3)
msgctxt "pli-tv-kd6:34.6.13"
msgid "Bhariyāya te iddhānubhāvaṃ passissāmā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc149
msgctxt "pli-tv-kd6:34.7.1"
msgid "Atha kho meṇḍako gahapati bhariyaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.7.2"
msgid "“tena hi caturaṅginiṃ senaṃ bhattena parivisā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.7.3"
msgid "Atha kho meṇḍakassa gahapatissa bhariyā ekaṃyeva āḷhakathālikaṃ upanisīditvā ekañca sūpabhiñjanakaṃ caturaṅginiṃ senaṃ bhattena parivisi, na tāva taṃ khiyyati, yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.7.4"
msgid "“Diṭṭho te, gahapati, bhariyāyapi iddhānubhāvo."
msgstr ""

msgctxt "pli-tv-kd6:34.7.5"
msgid "Puttassa te iddhānubhāvaṃ passissāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.8.1"
msgid "Atha kho meṇḍako gahapati puttaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.8.2"
msgid "“tena hi caturaṅginiyā senāya chamāsikaṃ vetanaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.8.3"
msgid "Atha kho meṇḍakassa gahapatissa putto ekaṃyeva sahassathavikaṃ gahetvā caturaṅginiyā senāya chamāsikaṃ vetanaṃ adāsi, na tāva taṃ khiyyati, yāvassa hatthagatā."
msgstr ""

msgctxt "pli-tv-kd6:34.8.4"
msgid "“Diṭṭho te, gahapati, puttassapi iddhānubhāvo."
msgstr ""

msgctxt "pli-tv-kd6:34.8.5"
msgid "Suṇisāya te iddhānubhāvaṃ passissāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.1"
msgid "Atha kho meṇḍako gahapati suṇisaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.9.2"
msgid "“tena hi caturaṅginiyā senāya chamāsikaṃ bhattaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.3"
msgid "Atha kho meṇḍakassa gahapatissa suṇisā ekaṃyeva catudoṇikaṃ piṭakaṃ upanisīditvā caturaṅginiyā senāya chamāsikaṃ bhattaṃ adāsi, na tāva taṃ khiyyati yāva sā na vuṭṭhāti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.4"
msgid "“Diṭṭho te, gahapati, suṇisāyapi iddhānubhāvo."
msgstr ""

msgctxt "pli-tv-kd6:34.9.5"
msgid "Dāsassa te iddhānubhāvaṃ passissāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.6"
msgid "“Mayhaṃ kho, sāmi, dāsassa iddhānubhāvo khette passitabbo”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.7"
msgid "“Alaṃ, gahapati, diṭṭho te dāsassapi iddhānubhāvo”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.9.8"
msgid "Atha kho so mahāmatto caturaṅginiyā senāya punadeva rājagahaṃ paccāgañchi."
msgstr ""

msgctxt "pli-tv-kd6:34.9.9"
msgid "Yena rājā māgadho seniyo bimbisāro tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:34.9.10"
msgid "upasaṅkamitvā rañño māgadhassa seniyassa bimbisārassa etamatthaṃ ārocesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc150, pts-vp-pli1.242
#. VAR: bhagavā → bhagavāti (si, mr)
msgctxt "pli-tv-kd6:34.10.1"
msgid "Atha kho bhagavā vesāliyaṃ yathābhirantaṃ viharitvā yena bhaddiyaṃ tena cārikaṃ pakkāmi mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:34.10.2"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena bhaddiyaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:34.10.3"
msgid "Tatra sudaṃ bhagavā bhaddiye viharati jātiyā vane."
msgstr ""

msgctxt "pli-tv-kd6:34.11.1"
msgid "Assosi kho meṇḍako gahapati—"
msgstr ""

msgctxt "pli-tv-kd6:34.11.2"
msgid "“samaṇo khalu bho gotamo sakyaputto sakyakulā pabbajito bhaddiyaṃ anuppatto bhaddiye viharati jātiyā vane."
msgstr ""

msgctxt "pli-tv-kd6:34.11.3"
msgid "Taṃ kho pana bhagavantaṃ gotamaṃ evaṃ kalyāṇo kittisaddo abbhuggato—‘"
msgstr ""

msgctxt "pli-tv-kd6:34.11.4"
msgid "itipi so bhagavā arahaṃ sammāsambuddho vijjācaraṇasampanno sugato lokavidū anuttaro purisadammasārathi satthā devamanussānaṃ buddho bhagavā’."
msgstr ""

msgctxt "pli-tv-kd6:34.11.5"
msgid "So imaṃ lokaṃ sadevakaṃ samārakaṃ sabrahmakaṃ sassamaṇabrāhmaṇiṃ pajaṃ sadevamanussaṃ sayaṃ abhiññā sacchikatvā pavedeti."
msgstr ""

msgctxt "pli-tv-kd6:34.11.6"
msgid "So dhammaṃ deseti ādikalyāṇaṃ majjhekalyāṇaṃ pariyosānakalyāṇaṃ sātthaṃ sabyañjanaṃ kevalaparipuṇṇaṃ parisuddhaṃ brahmacariyaṃ pakāseti."
msgstr ""

msgctxt "pli-tv-kd6:34.11.7"
msgid "Sādhu kho pana tathārūpānaṃ arahataṃ dassanaṃ hotī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc151, pts-vp-pli1.243
#. VAR: bhagavantaṃ → idaṃ padaṃ si, s1-3 potthakesu
msgctxt "pli-tv-kd6:34.12.1"
msgid "Atha kho meṇḍako gahapati bhadrāni bhadrāni yānāni yojāpetvā bhadraṃ bhadraṃ yānaṃ abhiruhitvā bhadrehi bhadrehi yānehi bhaddiyā niyyāsi bhagavantaṃ dassanāya."
msgstr ""

msgctxt "pli-tv-kd6:34.12.2"
msgid "Addasaṃsu kho sambahulā titthiyā meṇḍakaṃ gahapatiṃ dūratova āgacchantaṃ, disvāna meṇḍakaṃ gahapatiṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:34.12.3"
msgid "“kahaṃ tvaṃ, gahapati, gacchasī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:34.12.4"
msgid "“Gacchāmahaṃ, bhante, bhagavantaṃ samaṇaṃ gotamaṃ dassanāyā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.12.5"
msgid "“Kiṃ pana tvaṃ, gahapati, kiriyavādo samāno akiriyavādaṃ samaṇaṃ gotamaṃ dassanāya upasaṅkamissasi?"
msgstr ""

msgctxt "pli-tv-kd6:34.12.6"
msgid "Samaṇo hi, gahapati, gotamo akiriyavādo akiriyāya dhammaṃ deseti, tena ca sāvake vinetī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.13.1"
msgid "Atha kho meṇḍakassa gahapatissa etadahosi—“"
msgstr ""

#. VAR: yathayime → yathāpime (bj) | yathāyime (pts1)
msgctxt "pli-tv-kd6:34.13.2"
msgid "nissaṃsayaṃ kho so bhagavā arahaṃ sammāsambuddho bhavissati, yathayime titthiyā usūyantī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.13.3"
msgid "Yāvatikā yānassa bhūmi, yānena gantvā yānā paccorohitvā pattikova yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:34.13.4"
msgid "Ekamantaṃ nisinnassa kho meṇḍakassa gahapatissa bhagavā anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:34.13.5"
msgid "dānakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.13.6"
msgid "aparappaccayo satthusāsane bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:34.13.7"
msgid "“abhikkantaṃ, bhante … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.13.8"
msgid "upāsakaṃ maṃ bhagavā dhāretu ajjatagge pāṇupetaṃ saraṇaṃ gataṃ."
msgstr ""

msgctxt "pli-tv-kd6:34.13.9"
msgid "Adhivāsetu ca me, bhante, bhagavā svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.13.10"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:34.14.1"
msgid "Atha kho meṇḍako gahapati bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc152
msgctxt "pli-tv-kd6:34.14.2"
msgid "Atha kho meṇḍako gahapati tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.14.3"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.14.4"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena meṇḍakassa gahapatissa nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:34.14.5"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:34.15.1"
msgid "Atha kho meṇḍakassa gahapatissa bhariyā ca putto ca suṇisā ca dāso ca yena bhagavā tenupasaṅkamiṃsu, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:34.15.2"
msgid "Tesaṃ bhagavā anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:34.15.3"
msgid "dānakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.15.4"
msgid "aparappaccayā satthusāsane bhagavantaṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-kd6:34.15.5"
msgid "“abhikkantaṃ, bhante … pe …"
msgstr ""

msgctxt "pli-tv-kd6:34.15.6"
msgid "ete mayaṃ, bhante, bhagavantaṃ saraṇaṃ gacchāma dhammañca bhikkhusaṃghañca."
msgstr ""

msgctxt "pli-tv-kd6:34.15.7"
msgid "Upāsake no bhagavā dhāretu ajjatagge pāṇupete saraṇaṃ gate”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.16.1"
msgid "Atha kho meṇḍako gahapati buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:34.16.2"
msgid "Ekamantaṃ nisinno kho meṇḍako gahapati bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:34.16.3"
msgid "“yāva, bhante, bhagavā bhaddiye viharati tāva ahaṃ buddhappamukhassa bhikkhusaṃghassa dhuvabhattenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.16.4"
msgid "Atha kho bhagavā meṇḍakaṃ gahapatiṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:34.17.0"
msgid "22. Pañcagorasādianujānana"
msgstr ""

#. HTML: </h2><p>
#. REF: sc153, pts-vp-pli1.244
msgctxt "pli-tv-kd6:34.17.1"
msgid "Atha kho bhagavā bhaddiye yathābhirantaṃ viharitvā meṇḍakaṃ gahapatiṃ anāpucchā yena aṅguttarāpo tena cārikaṃ pakkāmi mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:34.17.2"
msgid "Assosi kho meṇḍako gahapati—"
msgstr ""

msgctxt "pli-tv-kd6:34.17.3"
msgid "“bhagavā kira yena aṅguttarāpo tena cārikaṃ pakkanto mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.17.4"
msgid "Atha kho meṇḍako gahapati dāse ca kammakare ca āṇāpesi—"
msgstr ""

#. VAR: taruṇena → dhāruṇhena (bj, s1-3)
#. VAR: yattha → yattha mayaṃ (bj)
msgctxt "pli-tv-kd6:34.17.5"
msgid "“tena hi, bhaṇe, bahuṃ loṇampi, telampi, taṇḍulampi, khādanīyampi sakaṭesu āropetvā āgacchatha, aḍḍhatelasāni ca gopālakasatāni aḍḍhatelasāni ca dhenusatāni ādāya āgacchantu, yattha bhagavantaṃ passissāma tattha taruṇena khīrena bhojessāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.18.1"
msgid "Atha kho meṇḍako gahapati bhagavantaṃ antarāmagge kantāre sambhāvesi."
msgstr ""

msgctxt "pli-tv-kd6:34.18.2"
msgid "Atha kho meṇḍako gahapati yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:34.18.3"
msgid "upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:34.18.4"
msgid "Ekamantaṃ ṭhito kho meṇḍako gahapati bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:34.18.5"
msgid "“adhivāsetu me, bhante, bhagavā svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.18.6"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:34.18.7"
msgid "Atha kho meṇḍako gahapati bhagavato adhivāsanaṃ viditvā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc154
msgctxt "pli-tv-kd6:34.18.8"
msgid "Atha kho meṇḍako gahapati tassā rattiyā accayena paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.18.9"
msgid "“kālo, bhante, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.19.1"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena meṇḍakassa gahapatissa parivesanā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:34.19.2"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:34.19.3"
msgid "Atha kho meṇḍako gahapati aḍḍhatelasāni gopālakasatāni āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.19.4"
msgid "“tena hi, bhaṇe, ekamekaṃ dhenuṃ gahetvā ekamekassa bhikkhuno upatiṭṭhatha taruṇena khīrena bhojessāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.19.5"
msgid "Atha kho meṇḍako gahapati buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappesi sampavāresi, taruṇena ca khīrena."
msgstr ""

msgctxt "pli-tv-kd6:34.19.6"
msgid "Bhikkhū kukkuccāyantā khīraṃ na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:34.19.7"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjathā”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.20.1"
msgid "Atha kho meṇḍako gahapati buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā taruṇena ca khīrena bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:34.20.2"
msgid "Ekamantaṃ nisinno kho meṇḍako gahapati bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:34.20.3"
msgid "“santi, bhante, maggā kantārā, appodakā appabhakkhā, na sukarā apātheyyena gantuṃ."
msgstr ""

msgctxt "pli-tv-kd6:34.20.4"
msgid "Sādhu, bhante, bhagavā bhikkhūnaṃ pātheyyaṃ anujānātū”ti."
msgstr ""

msgctxt "pli-tv-kd6:34.20.5"
msgid "Atha kho bhagavā meṇḍakaṃ gahapatiṃ dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc155, pts-vp-pli1.245
msgctxt "pli-tv-kd6:34.21.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:34.21.2"
msgid "“anujānāmi, bhikkhave, pañca gorase—"
msgstr ""

msgctxt "pli-tv-kd6:34.21.3"
msgid "khīraṃ, dadhiṃ, takkaṃ, navanītaṃ, sappiṃ."
msgstr ""

msgctxt "pli-tv-kd6:34.21.4"
msgid "Santi, bhikkhave, maggā kantārā appodakā appabhakkhā, na sukarā apātheyyena gantuṃ."
msgstr ""

msgctxt "pli-tv-kd6:34.21.5"
msgid "Anujānāmi, bhikkhave, pātheyyaṃ pariyesituṃ taṇḍulo taṇḍulatthikena, muggo muggatthikena, māso māsatthikena, loṇaṃ loṇatthikena, guḷo guḷatthikena, telaṃ telatthikena, sappi sappitthikena."
msgstr ""

msgctxt "pli-tv-kd6:34.21.6"
msgid "Santi, bhikkhave, manussā, saddhā pasannā, te kappiyakārakānaṃ hatthe hiraññaṃ upanikkhipanti—"
msgstr ""

msgctxt "pli-tv-kd6:34.21.7"
msgid "‘iminā ayyassa yaṃ kappiyaṃ taṃ dethā’ti."
msgstr ""

#. VAR: sādituṃ → sādiyituṃ (bj)
msgctxt "pli-tv-kd6:34.21.8"
msgid "Anujānāmi, bhikkhave, yaṃ tato kappiyaṃ taṃ sādituṃ;"
msgstr ""

#. VAR: sāditabbaṃ → sādisitabbaṃ (bj)
msgctxt "pli-tv-kd6:34.21.9"
msgid "na tvevāhaṃ, bhikkhave, kenaci pariyāyena jātarūparajataṃ sāditabbaṃ pariyesitabbanti vadāmī”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:35.1.0"
msgid "23. Keṇiyajaṭilavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc156, pts-vp-pli1.246
msgctxt "pli-tv-kd6:35.1.1"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena āpaṇaṃ tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:35.1.2"
msgid "Assosi kho keṇiyo jaṭilo—“"
msgstr ""

#. VAR: anuppatto → anuppatto āpaṇe viharati (bj, pts1)
msgctxt "pli-tv-kd6:35.1.3"
msgid "samaṇo khalu bho gotamo sakyaputto sakyakulā pabbajito āpaṇaṃ anuppatto, taṃ kho pana bhavantaṃ gotamaṃ evaṃ kalyāṇo kittisaddo abbhuggato … pe …"
msgstr ""

msgctxt "pli-tv-kd6:35.1.4"
msgid "sādhu kho pana tathārūpānaṃ arahataṃ dassanaṃ hotī”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.1.5"
msgid "Atha kho keṇiyassa jaṭilassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:35.1.6"
msgid "“kiṃ nu kho ahaṃ samaṇassa gotamassa harāpeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.2.1"
msgid "Atha kho keṇiyassa jaṭilassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:35.2.2"
msgid "“yepi kho te brāhmaṇānaṃ pubbakā isayo mantānaṃ kattāro mantānaṃ pavattāro, yesamidaṃ etarahi brāhmaṇā porāṇaṃ mantapadaṃ gītaṃ pavuttaṃ samihitaṃ, tadanugāyanti tadanubhāsanti, bhāsitamanubhāsanti, vācitamanuvācenti, seyyathidaṃ—"
msgstr ""

#. VAR: yamataggi → yamadaggi (mr)
msgctxt "pli-tv-kd6:35.2.3"
msgid "aṭṭhako vāmako vāmadevo vessāmitto yamataggi aṅgīraso bhāradvājo vāseṭṭho kassapo bhagu, rattūparatā viratā vikālabhojanā, te evarūpāni pānāni sādiyiṃsu."
msgstr ""

msgctxt "pli-tv-kd6:35.3.1"
msgid "Samaṇopi gotamo rattūparato virato vikālabhojanā, arahati samaṇopi gotamo evarūpāni pānāni sādiyitun”ti pahūtaṃ pānaṃ paṭiyādāpetvā kājehi gāhāpetvā yena bhagavā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:35.3.2"
msgid "upasaṅkamitvā bhagavatā saddhiṃ sammodi;"
msgstr ""

msgctxt "pli-tv-kd6:35.3.3"
msgid "sammodanīyaṃ kathaṃ sāraṇīyaṃ vītisāretvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:35.3.4"
msgid "Ekamantaṃ ṭhito kho keṇiyo jaṭilo bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:35.3.5"
msgid "“paṭiggaṇhātu me bhavaṃ gotamo pānan”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.3.6"
msgid "“Tena hi, keṇiya, bhikkhūnaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.3.7"
msgid "Atha kho keṇiyo jaṭilo bhikkhūnaṃ deti."
msgstr ""

msgctxt "pli-tv-kd6:35.3.8"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:35.3.9"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjathā”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.4.1"
msgid "Atha kho keṇiyo jaṭilo buddhappamukhaṃ bhikkhusaṃghaṃ pahūtehi pānehi sahatthā santappetvā sampavāretvā bhagavantaṃ dhotahatthaṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:35.4.2"
msgid "Ekamantaṃ nisinnaṃ kho keṇiyaṃ jaṭilaṃ bhagavā dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd6:35.4.3"
msgid "Atha kho keṇiyo jaṭilo bhagavatā dhammiyā kathāya sandassito samādapito samuttejito sampahaṃsito bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:35.4.4"
msgid "“adhivāsetu me bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.5.1"
msgid "“Mahā kho, keṇiya, bhikkhusaṃgho aḍḍhatelasāni bhikkhusatāni, tvañca brāhmaṇesu abhippasanno”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc157
msgctxt "pli-tv-kd6:35.5.2"
msgid "Dutiyampi kho keṇiyo jaṭilo bhagavantaṃ etadavoca—“"
msgstr ""

#. VAR: kiñcāpi kho, bho → kiñcāpi bho (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:35.5.3"
msgid "kiñcāpi kho, bho gotama, mahā bhikkhusaṃgho aḍḍhatelasāni bhikkhusatāni, ahañca brāhmaṇesu abhippasanno, adhivāsetu me bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.5.4"
msgid "“Mahā kho, keṇiya, bhikkhusaṃgho aḍḍhatelasāni bhikkhusatāni, tvañca brāhmaṇesu abhippasanno”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.5.5"
msgid "Tatiyampi kho keṇiyo jaṭilo bhagavantaṃ etadavoca—“"
msgstr ""

#. VAR: adhivāsetu bhavaṃ → me bhavaṃ (bj, s1-3)
msgctxt "pli-tv-kd6:35.5.6"
msgid "kiñcāpi kho, bho gotama, mahā bhikkhusaṃgho aḍḍhatelasāni bhikkhusatāni, ahañca brāhmaṇesu abhippasanno, adhivāsetu bhavaṃ gotamo svātanāya bhattaṃ saddhiṃ bhikkhusaṃghenā”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.5.7"
msgid "Adhivāsesi bhagavā tuṇhībhāvena."
msgstr ""

msgctxt "pli-tv-kd6:35.5.8"
msgid "Atha kho keṇiyo jaṭilo bhagavato adhivāsanaṃ viditvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><p>
#. REF: sc158
msgctxt "pli-tv-kd6:35.6.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:35.6.2"
msgid "“anujānāmi, bhikkhave, aṭṭha pānāni—"
msgstr ""

#. VAR: madhūkapānaṃ → madhupānaṃ (bj, s1-3, pts1)
msgctxt "pli-tv-kd6:35.6.3"
msgid "ambapānaṃ jambupānaṃ cocapānaṃ mocapānaṃ madhūkapānaṃ muddikapānaṃ sālūkapānaṃ phārusakapānaṃ."
msgstr ""

msgctxt "pli-tv-kd6:35.6.4"
msgid "Anujānāmi, bhikkhave, sabbaṃ phalarasaṃ ṭhapetvā dhaññaphalarasaṃ."
msgstr ""

msgctxt "pli-tv-kd6:35.6.5"
msgid "Anujānāmi, bhikkhave, sabbaṃ pattarasaṃ ṭhapetvā ḍākarasaṃ."
msgstr ""

msgctxt "pli-tv-kd6:35.6.6"
msgid "Anujānāmi, bhikkhave, sabbaṃ puppharasaṃ ṭhapetvā madhūkapuppharasaṃ."
msgstr ""

msgctxt "pli-tv-kd6:35.6.7"
msgid "Anujānāmi, bhikkhave, ucchurasan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc159
msgctxt "pli-tv-kd6:35.7.1"
msgid "Atha kho keṇiyo jaṭilo tassā rattiyā accayena sake assame paṇītaṃ khādanīyaṃ bhojanīyaṃ paṭiyādāpetvā bhagavato kālaṃ ārocāpesi—"
msgstr ""

msgctxt "pli-tv-kd6:35.7.2"
msgid "“kālo, bho gotama, niṭṭhitaṃ bhattan”ti."
msgstr ""

msgctxt "pli-tv-kd6:35.7.3"
msgid "Atha kho bhagavā pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena keṇiyassa jaṭilassa assamo tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:35.7.4"
msgid "upasaṅkamitvā paññatte āsane nisīdi saddhiṃ bhikkhusaṃghena."
msgstr ""

msgctxt "pli-tv-kd6:35.7.5"
msgid "Atha kho keṇiyo jaṭilo buddhappamukhaṃ bhikkhusaṃghaṃ paṇītena khādanīyena bhojanīyena sahatthā santappetvā sampavāretvā bhagavantaṃ bhuttāviṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:35.8.1"
msgid "Ekamantaṃ nisinnaṃ kho keṇiyaṃ jaṭilaṃ bhagavā imāhi gāthāhi anumodi—"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc160
msgctxt "pli-tv-kd6:35.8.2"
msgid "“Aggihuttamukhā yaññā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:35.8.3"
msgid "sāvittī chandaso mukhaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:35.8.4"
msgid "Rājā mukhaṃ manussānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:35.8.5"
msgid "nadīnaṃ sāgaro mukhaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc161
msgctxt "pli-tv-kd6:35.8.6"
msgid "Nakkhattānaṃ mukhaṃ cando,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:35.8.7"
msgid "ādicco tapataṃ mukhaṃ;"
msgstr ""

#. HTML: <br>
#. VAR: Puññaṃ ākaṅkhamānānaṃ → puññamākaṅkhamānānaṃ (bj)
msgctxt "pli-tv-kd6:35.8.8"
msgid "Puññaṃ ākaṅkhamānānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:35.8.9"
msgid "saṃgho ve yajataṃ mukhan”ti."
msgstr ""

#. HTML: </p></blockquote><p>
#. REF: sc162
msgctxt "pli-tv-kd6:35.8.10"
msgid "Atha kho bhagavā keṇiyaṃ jaṭilaṃ imāhi gāthāhi anumoditvā uṭṭhāyāsanā pakkāmi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:36.1.0"
msgid "24. Rojamallavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc163, pts-vp-pli1.247
msgctxt "pli-tv-kd6:36.1.1"
msgid "Atha kho bhagavā āpaṇe yathābhirantaṃ viharitvā yena kusinārā tena cārikaṃ pakkāmi mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:36.1.2"
msgid "Assosuṃ kho kosinārakā mallā—"
msgstr ""

msgctxt "pli-tv-kd6:36.1.3"
msgid "“bhagavā kira kusināraṃ āgacchati mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehī”ti."
msgstr ""

#. VAR: saṅgaraṃ → saṃgavaṃ (pts1) | saṅkaraṃ (mr)
msgctxt "pli-tv-kd6:36.1.4"
msgid "Te saṅgaraṃ akaṃsu—"
msgstr ""

msgctxt "pli-tv-kd6:36.1.5"
msgid "“yo bhagavato paccuggamanaṃ na karissati, pañcasatānissa daṇḍo”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.1.6"
msgid "Tena kho pana samayena rojo mallo āyasmato ānandassa sahāyo hoti."
msgstr ""

msgctxt "pli-tv-kd6:36.1.7"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena kusinārā tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:36.2.1"
msgid "Atha kho kosinārakā mallā bhagavato paccuggamanaṃ akaṃsu."
msgstr ""

msgctxt "pli-tv-kd6:36.2.2"
msgid "Atha kho rojo mallo bhagavato paccuggamanaṃ karitvā yenāyasmā ānando tenupasaṅkami, upasaṅkamitvā āyasmantaṃ ānandaṃ abhivādetvā ekamantaṃ aṭṭhāsi."
msgstr ""

msgctxt "pli-tv-kd6:36.2.3"
msgid "Ekamantaṃ ṭhitaṃ kho rojaṃ mallaṃ āyasmā ānando etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:36.2.4"
msgid "“uḷāraṃ kho te idaṃ, āvuso roja, yaṃ tvaṃ bhagavato paccuggamanaṃ akāsī”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.2.5"
msgid "“Nāhaṃ, bhante ānanda, bahukato buddhe vā dhamme vā saṃghe vā;"
msgstr ""

msgctxt "pli-tv-kd6:36.2.6"
msgid "api ca ñātīhi saṅgaro kato—‘"
msgstr ""

msgctxt "pli-tv-kd6:36.2.7"
msgid "yo bhagavato paccuggamanaṃ na karissati, pañcasatānissa daṇḍo’ti;"
msgstr ""

msgctxt "pli-tv-kd6:36.2.8"
msgid "so kho ahaṃ, bhante ānanda, ñātīnaṃ daṇḍabhayā evāhaṃ bhagavato paccuggamanaṃ akāsin”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.2.9"
msgid "Atha kho āyasmā ānando anattamano ahosi “kathañhi nāma rojo mallo evaṃ vakkhatī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:36.3.1"
msgid "Atha kho āyasmā ānando yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:36.3.2"
msgid "Ekamantaṃ nisinno kho āyasmā ānando bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:36.3.3"
msgid "“ayaṃ, bhante, rojo mallo abhiññāto ñātamanusso."
msgstr ""

#. VAR: Mahatthiko → mahiddhiyo (bj, pts1) | mahitthiko (si) | mahiddhiko (s1-3)
msgctxt "pli-tv-kd6:36.3.4"
msgid "Mahatthiko kho pana evarūpānaṃ ñātamanussānaṃ imasmiṃ dhammavinaye pasādo."
msgstr ""

msgctxt "pli-tv-kd6:36.3.5"
msgid "Sādhu, bhante, bhagavā tathā karotu, yathā rojo mallo imasmiṃ dhammavinaye pasīdeyyā”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.3.6"
msgid "“Na kho taṃ, ānanda, dukkaraṃ tathāgatena, yathā rojo mallo imasmiṃ dhammavinaye pasīdeyyā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc164, pts-vp-pli1.248
msgctxt "pli-tv-kd6:36.4.1"
msgid "Atha kho bhagavā rojaṃ mallaṃ mettena cittena pharitvā uṭṭhāyāsanā vihāraṃ pāvisi."
msgstr ""

msgctxt "pli-tv-kd6:36.4.2"
msgid "Atha kho rojo mallo bhagavato mettena cittena phuṭṭho, seyyathāpi nāma gāviṃ taruṇavaccho;"
msgstr ""

msgctxt "pli-tv-kd6:36.4.3"
msgid "evameva vihārena vihāraṃ pariveṇena pariveṇaṃ upasaṅkamitvā bhikkhū pucchati—"
msgstr ""

msgctxt "pli-tv-kd6:36.4.4"
msgid "“kahaṃ nu kho, bhante, etarahi so bhagavā viharati arahaṃ sammāsambuddho, dassanakāmā hi mayaṃ taṃ bhagavantaṃ arahantaṃ sammāsambuddhan”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.4.5"
msgid "“Esāvuso roja, vihāro saṃvutadvāro, tena appasaddo upasaṅkamitvā ataramāno āḷindaṃ pavisitvā ukkāsitvā aggaḷaṃ ākoṭehi, vivarissati te bhagavā dvāran”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.5.1"
msgid "Atha kho rojo mallo yena so vihāro saṃvutadvāro, tena appasaddo upasaṅkamitvā ataramāno āḷindaṃ pavisitvā ukkāsitvā aggaḷaṃ ākoṭesi."
msgstr ""

msgctxt "pli-tv-kd6:36.5.2"
msgid "Vivari bhagavā dvāraṃ."
msgstr ""

msgctxt "pli-tv-kd6:36.5.3"
msgid "Atha kho rojo mallo vihāraṃ pavisitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:36.5.4"
msgid "Ekamantaṃ nisinnassa kho rojassa mallassa bhagavā anupubbiṃ kathaṃ kathesi, seyyathidaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:36.5.5"
msgid "dānakathaṃ … pe …"
msgstr ""

msgctxt "pli-tv-kd6:36.5.6"
msgid "aparappaccayo satthusāsane bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:36.5.7"
msgid "“sādhu, bhante, ayyā mamaññeva paṭiggaṇheyyuṃ cīvarapiṇḍapātasenāsanagilānappaccayabhesajjaparikkhāraṃ, no aññesan”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.5.8"
msgid "“Yesaṃ kho, roja, sekkhena ñāṇena sekkhena dassanena dhammo diṭṭho seyyathāpi tayā, tesampi evaṃ hoti—‘"
msgstr ""

msgctxt "pli-tv-kd6:36.5.9"
msgid "aho nūna ayyā amhākaññeva paṭiggaṇheyyuṃ cīvarapiṇḍapātasenāsanagilānappaccayabhesajjaparikkhāraṃ, no aññesan’ti."
msgstr ""

msgctxt "pli-tv-kd6:36.5.10"
msgid "Tena hi, roja, tava ceva paṭiggahissanti aññesañcā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc165, pts-vp-pli1.249
msgctxt "pli-tv-kd6:36.6.1"
msgid "Tena kho pana samayena kusinārāyaṃ paṇītānaṃ bhattānaṃ bhattapaṭipāṭi aṭṭhitā hoti."
msgstr ""

msgctxt "pli-tv-kd6:36.6.2"
msgid "Atha kho rojassa mallassa paṭipāṭiṃ alabhantassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:36.6.3"
msgid "“yannūnāhaṃ bhattaggaṃ olokeyyaṃ, yaṃ bhattagge nāssa, taṃ paṭiyādeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.6.4"
msgid "Atha kho rojo mallo bhattaggaṃ olokento dve nāddasa—"
msgstr ""

msgctxt "pli-tv-kd6:36.6.5"
msgid "ḍākañca piṭṭhakhādanīyañca."
msgstr ""

msgctxt "pli-tv-kd6:36.6.6"
msgid "Atha kho rojo mallo yenāyasmā ānando tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd6:36.6.7"
msgid "upasaṅkamitvā āyasmantaṃ ānandaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:36.6.8"
msgid "“idha me, bhante ānanda, paṭipāṭiṃ alabhantassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:36.6.9"
msgid "‘yannūnāhaṃ bhattaggaṃ olokeyyaṃ, yaṃ bhattagge nāssa, taṃ paṭiyādeyyan’ti."
msgstr ""

msgctxt "pli-tv-kd6:36.6.10"
msgid "So kho ahaṃ, bhante ānanda, bhattaggaṃ olokento dve nāddasaṃ—"
msgstr ""

msgctxt "pli-tv-kd6:36.6.11"
msgid "ḍākañca piṭṭhakhādanīyañca."
msgstr ""

msgctxt "pli-tv-kd6:36.6.12"
msgid "Sacāhaṃ, bhante ānanda, paṭiyādeyyaṃ ḍākañca piṭṭhakhādanīyañca, paṭiggaṇheyya me bhagavā”ti?"
msgstr ""

msgctxt "pli-tv-kd6:36.6.13"
msgid "“Tena hi, roja, bhagavantaṃ paṭipucchissāmī”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.1"
msgid "Atha kho āyasmā ānando bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:36.7.2"
msgid "“Tena hānanda, paṭiyādetū”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.3"
msgid "“Tena hi, roja, paṭiyādehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.4"
msgid "Atha kho rojo mallo tassā rattiyā accayena pahūtaṃ ḍākañca piṭṭhakhādanīyañca paṭiyādāpetvā bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd6:36.7.5"
msgid "“paṭiggaṇhātu me, bhante, bhagavā ḍākañca piṭṭhakhādanīyañcā”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.6"
msgid "“Tena hi, roja, bhikkhūnaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.7"
msgid "Atha kho rojo mallo bhikkhūnaṃ deti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.8"
msgid "Bhikkhū kukkuccāyantā na paṭiggaṇhanti."
msgstr ""

msgctxt "pli-tv-kd6:36.7.9"
msgid "“Paṭiggaṇhatha, bhikkhave, paribhuñjathā”ti."
msgstr ""

msgctxt "pli-tv-kd6:36.8.1"
msgid "Atha kho rojo mallo buddhappamukhaṃ bhikkhusaṃghaṃ pahūtehi ḍākehi ca piṭṭhakhādanīyehi ca sahatthā santappetvā sampavāretvā bhagavantaṃ dhotahatthaṃ onītapattapāṇiṃ ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd6:36.8.2"
msgid "Ekamantaṃ nisinnaṃ kho rojaṃ mallaṃ bhagavā dhammiyā kathāya sandassetvā samādapetvā samuttejetvā sampahaṃsetvā uṭṭhāyāsanā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:36.8.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd6:36.8.4"
msgid "“anujānāmi, bhikkhave, sabbañca ḍākaṃ sabbañca piṭṭhakhādanīyan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:37.1.0"
msgid "25. Vuḍḍhapabbajitavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc166
msgctxt "pli-tv-kd6:37.1.1"
msgid "Atha kho bhagavā kusinārāyaṃ yathābhirantaṃ viharitvā yena ātumā tena cārikaṃ pakkāmi mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

msgctxt "pli-tv-kd6:37.1.2"
msgid "Tena kho pana samayena aññataro vuḍḍhapabbajito ātumāyaṃ paṭivasati nahāpitapubbo."
msgstr ""

msgctxt "pli-tv-kd6:37.1.3"
msgid "Tassa dve dārakā honti, mañjukā paṭibhāneyyakā, dakkhā pariyodātasippā sake ācariyake nahāpitakamme."
msgstr ""

msgctxt "pli-tv-kd6:37.2.1"
msgid "Assosi kho so vuḍḍhapabbajito—"
msgstr ""

msgctxt "pli-tv-kd6:37.2.2"
msgid "“bhagavā kira ātumaṃ āgacchati mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehī”ti."
msgstr ""

msgctxt "pli-tv-kd6:37.2.3"
msgid "Atha kho so vuḍḍhapabbajito te dārake etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:37.2.4"
msgid "“bhagavā kira, tātā, ātumaṃ āgacchati mahatā bhikkhusaṃghena saddhiṃ aḍḍhatelasehi bhikkhusatehi."
msgstr ""

#. VAR: nāḷiyāvāpakena anugharakaṃ anugharakaṃ āhiṇḍatha → nāḷiyāvāpakena anugharakaṃ āhiṇḍatha (bj)
#. VAR: yāgupānaṃ → yāgudānaṃ (bj)
msgctxt "pli-tv-kd6:37.2.5"
msgid "Gacchatha tumhe, tātā, khurabhaṇḍaṃ ādāya nāḷiyāvāpakena anugharakaṃ anugharakaṃ āhiṇḍatha, loṇampi, telampi, taṇḍulampi, khādanīyampi saṃharatha, bhagavato āgatassa yāgupānaṃ karissāmā”ti."
msgstr ""

msgctxt "pli-tv-kd6:37.3.1"
msgid "“Evaṃ, tātā”ti kho te dārakā tassa vuḍḍhapabbajitassa paṭissuṇitvā khurabhaṇḍaṃ ādāya nāḷiyāvāpakena anugharakaṃ anugharakaṃ āhiṇḍanti, loṇampi, telampi, taṇḍulampi, khādanīyampi saṃharantā."
msgstr ""

msgctxt "pli-tv-kd6:37.3.2"
msgid "Manussā te dārake mañjuke paṭibhāneyyake passitvā yepi na kārāpetukāmā tepi kārāpenti, kārāpetvāpi bahuṃ denti."
msgstr ""

msgctxt "pli-tv-kd6:37.3.3"
msgid "Atha kho te dārakā bahuṃ loṇampi, telampi, taṇḍulampi, khādanīyampi saṃhariṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc167, pts-vp-pli1.250
msgctxt "pli-tv-kd6:37.4.1"
msgid "Atha kho bhagavā anupubbena cārikaṃ caramāno yena ātumā tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:37.4.2"
msgid "Tatra sudaṃ bhagavā ātumāyaṃ viharati bhusāgāre."
msgstr ""

#. VAR: pabbajito → pabbajite (bj)
msgctxt "pli-tv-kd6:37.4.3"
msgid "Atha kho so vuḍḍhapabbajito tassā rattiyā accayena pahūtaṃ yāguṃ paṭiyādāpetvā bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd6:37.4.4"
msgid "“paṭiggaṇhātu me, bhante, bhagavā yāgun”ti."
msgstr ""

msgctxt "pli-tv-kd6:37.4.5"
msgid "Jānantāpi tathāgatā pucchanti … pe …"
msgstr ""

msgctxt "pli-tv-kd6:37.4.6"
msgid "sāvakānaṃ vā sikkhāpadaṃ paññapessāmāti."
msgstr ""

msgctxt "pli-tv-kd6:37.4.7"
msgid "Atha kho bhagavā taṃ vuḍḍhapabbajitaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd6:37.4.8"
msgid "“kutāyaṃ, bhikkhu, yāgū”ti?"
msgstr ""

msgctxt "pli-tv-kd6:37.4.9"
msgid "Atha kho so vuḍḍhapabbajito bhagavato etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd6:37.5.1"
msgid "Vigarahi buddho bhagavā—"
msgstr ""

msgctxt "pli-tv-kd6:37.5.2"
msgid "“ananucchavikaṃ, moghapurisa, ananulomikaṃ appatirūpaṃ assāmaṇakaṃ akappiyaṃ akaraṇīyaṃ."
msgstr ""

#. VAR: samādapessasi → samādapesi (mr)
msgctxt "pli-tv-kd6:37.5.3"
msgid "Kathañhi nāma tvaṃ, moghapurisa, pabbajito akappiye samādapessasi."
msgstr ""

msgctxt "pli-tv-kd6:37.5.4"
msgid "Netaṃ, moghapurisa, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-kd6:37.5.5"
msgid "vigarahitvā dhammiṃ kathaṃ katvā bhikkhū āmantesi—“"
msgstr ""

#. VAR: pabbajitena akappiye samādapetabbaṃ → pabbajitā akappiye samādapetabbā (bj)
msgctxt "pli-tv-kd6:37.5.6"
msgid "na, bhikkhave, pabbajitena akappiye samādapetabbaṃ, yo samādapeyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd6:37.5.7"
msgid "Na ca, bhikkhave, nahāpitapubbena khurabhaṇḍaṃ pariharitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd6:37.5.8"
msgid "Yo parihareyya, āpatti dukkaṭassā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc168
msgctxt "pli-tv-kd6:38.1.1"
msgid "Atha kho bhagavā ātumāyaṃ yathābhirantaṃ viharitvā yena sāvatthi tena cārikaṃ pakkāmi."
msgstr ""

msgctxt "pli-tv-kd6:38.1.2"
msgid "Anupubbena cārikaṃ caramāno yena sāvatthi tadavasari."
msgstr ""

msgctxt "pli-tv-kd6:38.1.3"
msgid "Tatra sudaṃ bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-kd6:38.1.4"
msgid "Tena kho pana samayena sāvatthiyaṃ bahuṃ phalakhādanīyaṃ uppannaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd6:38.1.5"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:38.1.6"
msgid "“kiṃ nu kho bhagavatā phalakhādanīyaṃ anuññātaṃ, kiṃ ananuññātan”ti?"
msgstr ""

msgctxt "pli-tv-kd6:38.1.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:38.1.8"
msgid "“Anujānāmi, bhikkhave, sabbaṃ phalakhādanīyan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc169
msgctxt "pli-tv-kd6:39.1.1"
msgid "Tena kho pana samayena saṃghikāni bījāni puggalikāya bhūmiyā ropiyanti, puggalikāni bījāni saṃghikāya bhūmiyā ropiyanti."
msgstr ""

msgctxt "pli-tv-kd6:39.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:39.1.3"
msgid "“Saṃghikāni, bhikkhave, bījāni puggalikāya bhūmiyā ropitāni bhāgaṃ datvā paribhuñjitabbāni."
msgstr ""

msgctxt "pli-tv-kd6:39.1.4"
msgid "Puggalikāni bījāni saṃghikāya bhūmiyā ropitāni bhāgaṃ datvā paribhuñjitabbānī”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd6:40.1.0"
msgid "26. Catumahāpadesakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc170, pts-vp-pli1.251
msgctxt "pli-tv-kd6:40.1.1"
msgid "Tena kho pana samayena bhikkhūnaṃ kismiñci kismiñci ṭhāne kukkuccaṃ uppajjati—"
msgstr ""

msgctxt "pli-tv-kd6:40.1.2"
msgid "“kiṃ nu kho bhagavatā anuññātaṃ, kiṃ ananuññātan”ti?"
msgstr ""

msgctxt "pli-tv-kd6:40.1.3"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd6:40.1.4"
msgid "“Yaṃ, bhikkhave, mayā ‘idaṃ na kappatī’ti appaṭikkhittaṃ tañce akappiyaṃ anulometi, kappiyaṃ paṭibāhati, taṃ vo na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.1.5"
msgid "Yaṃ, bhikkhave, mayā ‘idaṃ na kappatī’ti appaṭikkhittaṃ tañce kappiyaṃ anulometi, akappiyaṃ paṭibāhati, taṃ vo kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.1.6"
msgid "Yaṃ, bhikkhave, mayā ‘idaṃ kappatī’ti ananuññātaṃ tañce akappiyaṃ anulometi, kappiyaṃ paṭibāhati, taṃ vo na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.1.7"
msgid "Yaṃ, bhikkhave, mayā ‘idaṃ kappatī’ti ananuññātaṃ, tañce kappiyaṃ anulometi, akappiyaṃ paṭibāhati, taṃ vo kappatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc171
msgctxt "pli-tv-kd6:40.2.1"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd6:40.2.2"
msgid "“kappati nu kho yāvakālikena yāmakālikaṃ, na nu kho kappati?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.3"
msgid "Kappati nu kho yāvakālikena sattāhakālikaṃ, na nu kho kappati?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.4"
msgid "Kappati nu kho yāvakālikena yāvajīvikaṃ, na nu kho kappati?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.5"
msgid "Kappati nu kho yāmakālikena sattāhakālikaṃ, na nu kho kappati?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.6"
msgid "Kappati nu kho yāmakālikena yāvajīvikaṃ, na nu kho kappati?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.7"
msgid "Kappati nu kho sattāhakālikena yāvajīvikaṃ, na nu kho kappatī”ti?"
msgstr ""

msgctxt "pli-tv-kd6:40.2.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc172
msgctxt "pli-tv-kd6:40.3.1"
msgid "“Yāvakālikena, bhikkhave, yāmakālikaṃ, tadahu paṭiggahitaṃ kāle kappati, vikāle na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.3.2"
msgid "Yāvakālikena, bhikkhave, sattāhakālikaṃ, tadahu paṭiggahitaṃ kāle kappati, vikāle na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.3.3"
msgid "Yāvakālikena, bhikkhave, yāvajīvikaṃ, tadahu paṭiggahitaṃ kāle kappati, vikāle na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.3.4"
msgid "Yāmakālikena, bhikkhave, sattāhakālikaṃ, tadahu paṭiggahitaṃ yāme kappati, yāmātikkante na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.3.5"
msgid "Yāmakālikena, bhikkhave, yāvajīvikaṃ, tadahu paṭiggahitaṃ yāme kappati, yāmātikkante na kappati."
msgstr ""

msgctxt "pli-tv-kd6:40.3.6"
msgid "Sattāhakālikena, bhikkhave, yāvajīvikaṃ paṭiggahitaṃ, sattāhaṃ kappati, sattāhātikkante na kappatī”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc173
msgctxt "pli-tv-kd6:40.3.7"
msgid "Bhesajjakkhandhako chaṭṭho."
msgstr ""

#. HTML: </p><p class="uddana-intro">
#. REF: sc174
msgctxt "pli-tv-kd6:40.3.8"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc175
msgctxt "pli-tv-kd6:40.3.9"
msgid "Sāradike vikālepi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.10"
msgid "vasaṃ mūle piṭṭhehi ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.11"
msgid "Kasāvehi paṇṇaṃ phalaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.12"
msgid "jatu loṇaṃ chakaṇañca."
msgstr ""

#. HTML: </p><p>
#. REF: sc176
msgctxt "pli-tv-kd6:40.3.13"
msgid "Cuṇṇaṃ cālini maṃsañca,"
msgstr ""

#. HTML: <br>
#. VAR: upapisanī → upapiṃsanī (bj) | upapiṃsanaṃ (s1-3) | upapisanaṃ (pts1)
#. VAR: añjanaṃ → añjanī (bj)
msgctxt "pli-tv-kd6:40.3.14"
msgid "añjanaṃ upapisanī;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.15"
msgid "Añjanī uccāpārutā,"
msgstr ""

#. HTML: <br>
#. VAR: salākaṭhāniṃ → salākodhanī (bj, s1-3) | salākodhani (pts1)
msgctxt "pli-tv-kd6:40.3.16"
msgid "salākā salākaṭhāniṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc177
#. VAR: Thavikaṃsabaddhakaṃ → savaṭṭakaṃ (bj) | vaddhakaṃ (s1-3) | bandhakaṃ (pts1)
msgctxt "pli-tv-kd6:40.3.17"
msgid "Thavikaṃsabaddhakaṃ suttaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.18"
msgid "Muddhanitelanatthu ca;"
msgstr ""

#. HTML: <br>
#. VAR: dhūmañca → dhūma (bj)
msgctxt "pli-tv-kd6:40.3.19"
msgid "Natthukaraṇī dhūmañca,"
msgstr ""

#. HTML: <br>
#. VAR: Nettañcāpidhanatthavi → nettañca pidhānaṃ yamakatthaci (bj) | nettañ cāpidhānaṃ thavi (pts1)
msgctxt "pli-tv-kd6:40.3.20"
msgid "Nettañcāpidhanatthavi."
msgstr ""

#. HTML: </p><p>
#. REF: sc178
msgctxt "pli-tv-kd6:40.3.21"
msgid "Telapākesu majjañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.22"
msgid "atikkhittaṃ abbhañjanaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.23"
msgid "Tumbaṃ sedaṃ sambhārañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.24"
msgid "mahā bhaṅgodakaṃ tathā."
msgstr ""

#. HTML: </p><p>
#. REF: sc179
msgctxt "pli-tv-kd6:40.3.25"
msgid "Dakakoṭṭhaṃ lohitañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.26"
msgid "visāṇaṃ pādabbhañjanaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.27"
msgid "Pajjaṃ satthaṃ kasāvañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.28"
msgid "tilakakkaṃ kabaḷikaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc180, pts-vp-pli1.252
msgctxt "pli-tv-kd6:40.3.29"
msgid "Coḷaṃ sāsapakuṭṭañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.30"
msgid "dhūma sakkharikāya ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.31"
msgid "Vaṇatelaṃ vikāsikaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.32"
msgid "vikaṭañca paṭiggahaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc181
msgctxt "pli-tv-kd6:40.3.33"
msgid "Gūthaṃ karonto loḷiñca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.34"
msgid "khāraṃ muttaharītakaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.35"
msgid "Gandhā virecanañceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.36"
msgid "acchākaṭaṃ kaṭākaṭaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc182
msgctxt "pli-tv-kd6:40.3.37"
msgid "Paṭicchādani pabbhārā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.38"
msgid "ārāma sattāhena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.39"
msgid "Guḷaṃ muggaṃ sovīrañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.40"
msgid "sāmaṃpākā punāpace."
msgstr ""

#. HTML: </p><p>
#. REF: sc183
msgctxt "pli-tv-kd6:40.3.41"
msgid "Punānuññāsi dubbhikkhe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.42"
msgid "phalañca tilakhādanī;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.43"
msgid "Purebhattaṃ kāyaḍāho,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.44"
msgid "nibbattañca bhagandalaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc184
msgctxt "pli-tv-kd6:40.3.45"
msgid "Vatthikammañca suppiñca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.46"
msgid "manussamaṃsameva ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.47"
msgid "Hatthiassā sunakho ca,"
msgstr ""

#. HTML: <br>
#. VAR: ahi sīhañca dīpikaṃ → sīhabyagghaṃ ca dīpikaṃ (bj) | ahi sīha-byaggha-dīpakaṃ (s1-3, pts1)
msgctxt "pli-tv-kd6:40.3.48"
msgid "ahi sīhañca dīpikaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc185
msgctxt "pli-tv-kd6:40.3.49"
msgid "Acchataracchamaṃsañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.50"
msgid "paṭipāṭi ca yāgu ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.51"
msgid "Taruṇaṃ aññatra guḷaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd6:40.3.52"
