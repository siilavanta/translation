#. HTML: <section class="sutta" id="pli-tv-kd8"><article><div class="hgroup"><p class="collection">
msgctxt "pli-tv-kd8:0.1"
msgid "Theravāda Vinayapiṭaka"
msgstr ""

#. HTML: </p><p class="division">
msgctxt "pli-tv-kd8:0.2"
msgid "Mahāvagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-kd8:0.3"
msgid "Cīvarakkhandhaka"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-kd8:1.1.0"
msgid "1. Jīvakavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1, pts-vp-pli1.268
msgctxt "pli-tv-kd8:1.1.1"
msgid "Tena samayena buddho bhagavā rājagahe viharati veḷuvane kalandakanivāpe."
msgstr ""

#. VAR: phitā → phītā (s1-3, pts1)
msgctxt "pli-tv-kd8:1.1.2"
msgid "Tena kho pana samayena vesālī iddhā ceva hoti phitā ca bahujanā ca ākiṇṇamanussā ca subhikkhā ca;"
msgstr ""

msgctxt "pli-tv-kd8:1.1.3"
msgid "satta ca pāsādasahassāni satta ca pāsādasatāni satta ca pāsādā;"
msgstr ""

msgctxt "pli-tv-kd8:1.1.4"
msgid "satta ca kūṭāgārasahassāni satta ca kūṭāgārasatāni satta ca kūṭāgārāni;"
msgstr ""

msgctxt "pli-tv-kd8:1.1.5"
msgid "satta ca ārāmasahassāni satta ca ārāmasatāni satta ca ārāmā;"
msgstr ""

msgctxt "pli-tv-kd8:1.1.6"
msgid "satta ca pokkharaṇīsahassāni satta ca pokkharaṇīsatāni satta ca pokkharaṇiyo;"
msgstr ""

#. VAR: ambapālī ca → ambapālikā (pts1)
#. VAR: padakkhiṇā → padakkhā (s1-3)
msgctxt "pli-tv-kd8:1.1.7"
msgid "ambapālī ca gaṇikā abhirūpā hoti dassanīyā pāsādikā paramāya vaṇṇapokkharatāya samannāgatā, padakkhiṇā nacce ca gīte ca vādite ca, abhisaṭā atthikānaṃ atthikānaṃ manussānaṃ paññāsāya ca rattiṃ gacchati;"
msgstr ""

msgctxt "pli-tv-kd8:1.1.8"
msgid "tāya ca vesālī bhiyyoso mattāya upasobhati."
msgstr ""

#. VAR: rājagahako → rājagahiko (bj)
msgctxt "pli-tv-kd8:1.2.1"
msgid "Atha kho rājagahako negamo vesāliṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-kd8:1.2.2"
msgid "Addasā kho rājagahako negamo vesāliṃ iddhañceva phitañca bahujanañca ākiṇṇamanussañca subhikkhañca;"
msgstr ""

msgctxt "pli-tv-kd8:1.2.3"
msgid "satta ca pāsādasahassāni satta ca pāsādasatāni satta ca pāsāde;"
msgstr ""

msgctxt "pli-tv-kd8:1.2.4"
msgid "satta ca kūṭāgārasahassāni satta ca kūṭāgārasatāni satta ca kūṭāgārāni;"
msgstr ""

msgctxt "pli-tv-kd8:1.2.5"
msgid "satta ca ārāmasahassāni satta ca ārāmasatāni satta ca ārāme;"
msgstr ""

msgctxt "pli-tv-kd8:1.2.6"
msgid "satta ca pokkharaṇīsahassāni satta ca pokkharaṇīsatāni satta ca pokkharaṇiyo;"
msgstr ""

#. VAR: padakkhiṇaṃ → padakkhaṃ (s1-3)
#. VAR: upasobhantiṃ → upasobhitaṃ (bj) | upasobhitanti (pts1)
msgctxt "pli-tv-kd8:1.2.7"
msgid "ambapāliñca gaṇikaṃ abhirūpaṃ dassanīyaṃ pāsādikaṃ paramāya vaṇṇapokkharatāya samannāgataṃ, padakkhiṇaṃ nacce ca gīte ca vādite ca, abhisaṭaṃ atthikānaṃ atthikānaṃ manussānaṃ paññāsāya ca rattiṃ gacchantiṃ, tāya ca vesāliṃ bhiyyoso mattāya upasobhantiṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-kd8:1.2.8"
msgid "Atha kho rājagahako negamo vesāliyaṃ taṃ karaṇīyaṃ tīretvā punadeva rājagahaṃ paccāgañchi."
msgstr ""

msgctxt "pli-tv-kd8:1.2.9"
msgid "Yena rājā māgadho seniyo bimbisāro tenupasaṅkami, upasaṅkamitvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.2.10"
msgid "“vesālī, deva, iddhā ceva phitā ca bahujanā ca ākiṇṇamanussā ca subhikkhā ca;"
msgstr ""

msgctxt "pli-tv-kd8:1.2.11"
msgid "satta ca pāsādasahassāni … pe …"
msgstr ""

msgctxt "pli-tv-kd8:1.2.13"
msgid "tāya ca vesālī bhiyyoso mattāya upasobhati."
msgstr ""

#. VAR: vuṭṭhāpessāmā”ti → vuṭṭhāpeyyāmāti (bj, s1-3, pts1, mr)
msgctxt "pli-tv-kd8:1.2.14"
msgid "Sādhu, deva, mayampi gaṇikaṃ vuṭṭhāpessāmā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.2.15"
msgid "“Tena hi, bhaṇe, tādisiṃ kumāriṃ jānātha yaṃ tumhe gaṇikaṃ vuṭṭhāpeyyāthā”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3, pts-vp-pli1.269
#. VAR: kumārī → kumārikā (bj)
msgctxt "pli-tv-kd8:1.3.1"
msgid "Tena kho pana samayena rājagahe sālavatī nāma kumārī abhirūpā hoti dassanīyā pāsādikā paramāya vaṇṇapokkharatāya samannāgatā."
msgstr ""

msgctxt "pli-tv-kd8:1.3.2"
msgid "Atha kho rājagahako negamo sālavatiṃ kumāriṃ gaṇikaṃ vuṭṭhāpesi."
msgstr ""

msgctxt "pli-tv-kd8:1.3.3"
msgid "Atha kho sālavatī gaṇikā nacirasseva padakkhiṇā ahosi nacce ca gīte ca vādite ca, abhisaṭā atthikānaṃ atthikānaṃ manussānaṃ paṭisatena ca rattiṃ gacchati."
msgstr ""

msgctxt "pli-tv-kd8:1.3.4"
msgid "Atha kho sālavatī gaṇikā nacirasseva gabbhinī ahosi."
msgstr ""

msgctxt "pli-tv-kd8:1.3.5"
msgid "Atha kho sālavatiyā gaṇikāya etadahosi—“"
msgstr ""

#. VAR: amanāpā → amanāpā hoti (bj)
msgctxt "pli-tv-kd8:1.3.6"
msgid "itthī kho gabbhinī purisānaṃ amanāpā."
msgstr ""

msgctxt "pli-tv-kd8:1.3.7"
msgid "Sace maṃ koci jānissati—"
msgstr ""

#. VAR: sakkāro bhañjissati → parihāyissati (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.3.8"
msgid "sālavatī gaṇikā gabbhinīti, sabbo me sakkāro bhañjissati."
msgstr ""

msgctxt "pli-tv-kd8:1.3.9"
msgid "Yannūnāhaṃ gilānaṃ paṭivedeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.3.10"
msgid "Atha kho sālavatī gaṇikā dovārikaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.3.11"
msgid "“mā, bhaṇe dovārika, koci puriso pāvisi."
msgstr ""

msgctxt "pli-tv-kd8:1.3.12"
msgid "Yo ca maṃ pucchati, ‘gilānā’ti paṭivedehī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.3.13"
msgid "“Evaṃ, ayye”ti kho so dovāriko sālavatiyā gaṇikāya paccassosi."
msgstr ""

msgctxt "pli-tv-kd8:1.4.1"
msgid "Atha kho sālavatī gaṇikā tassa gabbhassa paripākamanvāya puttaṃ vijāyi."
msgstr ""

msgctxt "pli-tv-kd8:1.4.2"
msgid "Atha kho sālavatī gaṇikā dāsiṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.4.3"
msgid "“handa, je, imaṃ dārakaṃ kattarasuppe pakkhipitvā nīharitvā saṅkārakūṭe chaḍḍehī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.4.4"
msgid "“Evaṃ, ayye”ti kho sā dāsī sālavatiyā gaṇikāya paṭissutvā taṃ dārakaṃ kattarasuppe pakkhipitvā nīharitvā saṅkārakūṭe chaḍḍesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
#. VAR: abhayo nāma rājakumāro → abhayo rājakumāro (bj)
msgctxt "pli-tv-kd8:1.4.5"
msgid "Tena kho pana samayena abhayo nāma rājakumāro kālasseva rājupaṭṭhānaṃ gacchanto addasa taṃ dārakaṃ kākehi samparikiṇṇaṃ, disvāna manusse pucchi—"
msgstr ""

msgctxt "pli-tv-kd8:1.4.6"
msgid "“kiṃ etaṃ, bhaṇe, kākehi samparikiṇṇan”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.4.7"
msgid "“Dārako, devā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.4.8"
msgid "“Jīvati, bhaṇe”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.4.9"
msgid "“Jīvati, devā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.4.10"
msgid "“Tena hi, bhaṇe, taṃ dārakaṃ amhākaṃ antepuraṃ netvā dhātīnaṃ detha posetun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.4.11"
msgid "“Evaṃ, devā”ti kho te manussā abhayassa rājakumārassa paṭissutvā taṃ dārakaṃ abhayassa rājakumārassa antepuraṃ netvā dhātīnaṃ adaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.4.12"
msgid "“posethā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.4.13"
msgid "Tassa jīvatīti “jīvako”ti nāmaṃ akaṃsu."
msgstr ""

msgctxt "pli-tv-kd8:1.4.14"
msgid "Kumārena posāpitoti “komārabhacco”ti nāmaṃ akaṃsu."
msgstr ""

msgctxt "pli-tv-kd8:1.5.1"
msgid "Atha kho jīvako komārabhacco nacirasseva viññutaṃ pāpuṇi."
msgstr ""

msgctxt "pli-tv-kd8:1.5.2"
msgid "Atha kho jīvako komārabhacco yena abhayo rājakumāro tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.5.3"
msgid "upasaṅkamitvā abhayaṃ rājakumāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.5.4"
msgid "“kā me, deva, mātā, ko pitā”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.5.5"
msgid "“Ahampi kho te, bhaṇe jīvaka, mātaraṃ na jānāmi;"
msgstr ""

msgctxt "pli-tv-kd8:1.5.6"
msgid "api cāhaṃ te pitā;"
msgstr ""

#. VAR: mayāsi → mayāpi (s1-3, pts1, mr)
msgctxt "pli-tv-kd8:1.5.7"
msgid "mayāsi posāpito”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.5.8"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.5.9"
msgid "“imāni kho rājakulāni na sukarāni asippena upajīvituṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.5.10"
msgid "Yannūnāhaṃ sippaṃ sikkheyyan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5, pts-vp-pli1.270
#. VAR: takkasilāyaṃ → takkasīlāyaṃ (mr)
msgctxt "pli-tv-kd8:1.5.11"
msgid "Tena kho pana samayena takkasilāyaṃ disāpāmokkho vejjo paṭivasati."
msgstr ""

msgctxt "pli-tv-kd8:1.6.1"
msgid "Atha kho jīvako komārabhacco abhayaṃ rājakumāraṃ anāpucchā yena takkasilā tena pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.6.2"
msgid "Anupubbena yena takkasilā, yena vejjo tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.6.3"
msgid "upasaṅkamitvā taṃ vejjaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.6.4"
msgid "“icchāmahaṃ, ācariya, sippaṃ sikkhitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.6.5"
msgid "“Tena hi, bhaṇe jīvaka, sikkhassū”ti."
msgstr ""

#. VAR: na sammussati → na pamussati (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.6.6"
msgid "Atha kho jīvako komārabhacco bahuñca gaṇhāti lahuñca gaṇhāti suṭṭhu ca upadhāreti, gahitañcassa na sammussati."
msgstr ""

msgctxt "pli-tv-kd8:1.6.7"
msgid "Atha kho jīvakassa komārabhaccassa sattannaṃ vassānaṃ accayena etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.6.8"
msgid "“ahaṃ kho bahuñca gaṇhāmi lahuñca gaṇhāmi suṭṭhu ca upadhāremi, gahitañca me na sammussati, satta ca me vassāni adhīyantassa, nayimassa sippassa anto paññāyati."
msgstr ""

msgctxt "pli-tv-kd8:1.6.9"
msgid "Kadā imassa sippassa anto paññāyissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-kd8:1.7.1"
msgid "Atha kho jīvako komārabhacco yena so vejjo tenupasaṅkami, upasaṅkamitvā taṃ vejjaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.7.2"
msgid "“ahaṃ kho, ācariya, bahuñca gaṇhāmi lahuñca gaṇhāmi suṭṭhu ca upadhāremi, gahitañca me na sammussati, satta ca me vassāni adhīyantassa, nayimassa sippassa anto paññāyati."
msgstr ""

msgctxt "pli-tv-kd8:1.7.3"
msgid "Kadā imassa sippassa anto paññāyissatī”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.7.4"
msgid "“Tena hi, bhaṇe jīvaka, khaṇittiṃ ādāya takkasilāya samantā yojanaṃ āhiṇḍitvā yaṃ kiñci abhesajjaṃ passeyyāsi taṃ āharā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.7.5"
msgid "“Evaṃ, ācariyā”ti kho jīvako komārabhacco tassa vejjassa paṭissutvā khaṇittiṃ ādāya takkasilāya samantā yojanaṃ āhiṇḍanto na kiñci abhesajjaṃ addasa."
msgstr ""

msgctxt "pli-tv-kd8:1.7.6"
msgid "Atha kho jīvako komārabhacco yena so vejjo tenupasaṅkami, upasaṅkamitvā taṃ vejjaṃ etadavoca—“"
msgstr ""

#. VAR: yojanaṃ, na kiñci → āhiṇṭanto na kiñci (mr)
msgctxt "pli-tv-kd8:1.7.7"
msgid "āhiṇḍantomhi, ācariya, takkasilāya samantā yojanaṃ, na kiñci abhesajjaṃ addasan”ti."
msgstr ""

#. VAR: Susikkhitosi → sikkhitosi (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.7.8"
msgid "“Susikkhitosi, bhaṇe jīvaka."
msgstr ""

msgctxt "pli-tv-kd8:1.7.9"
msgid "Alaṃ te ettakaṃ jīvikāyā”ti jīvakassa komārabhaccassa parittaṃ pātheyyaṃ pādāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.8.1"
msgid "Atha kho jīvako komārabhacco taṃ parittaṃ pātheyyaṃ ādāya yena rājagahaṃ tena pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.8.2"
msgid "Atha kho jīvakassa komārabhaccassa taṃ parittaṃ pātheyyaṃ antarāmagge sākete parikkhayaṃ agamāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.8.3"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.8.4"
msgid "“ime kho maggā kantārā appodakā appabhakkhā, na sukarā apātheyyena gantuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.8.5"
msgid "Yannūnāhaṃ pātheyyaṃ pariyeseyyan”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.8.6"
msgid "2. Seṭṭhibhariyāvatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc7, pts-vp-pli1.271
msgctxt "pli-tv-kd8:1.8.7"
msgid "Tena kho pana samayena sākete seṭṭhibhariyāya sattavassiko sīsābādho hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.8.8"
msgid "Bahū mahantā mahantā disāpāmokkhā vejjā āgantvā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.8.9"
msgid "Bahuṃ hiraññaṃ ādāya agamaṃsu."
msgstr ""

msgctxt "pli-tv-kd8:1.8.10"
msgid "Atha kho jīvako komārabhacco sāketaṃ pavisitvā manusse pucchi—"
msgstr ""

msgctxt "pli-tv-kd8:1.8.11"
msgid "“ko, bhaṇe, gilāno, kaṃ tikicchāmī”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.8.12"
msgid "“Etissā, ācariya, seṭṭhibhariyāya sattavassiko sīsābādho;"
msgstr ""

msgctxt "pli-tv-kd8:1.8.13"
msgid "gaccha, ācariya, seṭṭhibhariyaṃ tikicchāhī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.9.1"
msgid "Atha kho jīvako komārabhacco yena seṭṭhissa gahapatissa nivesanaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.9.2"
msgid "upasaṅkamitvā dovārikaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.9.3"
msgid "“gaccha, bhaṇe dovārika, seṭṭhibhariyāya pāvada—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.9.4"
msgid "vejjo, ayye, āgato, so taṃ daṭṭhukāmo’”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.9.5"
msgid "“Evaṃ, ācariyā”ti kho so dovāriko jīvakassa komārabhaccassa paṭissutvā yena seṭṭhibhariyā tenupasaṅkami, upasaṅkamitvā seṭṭhibhariyaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.9.6"
msgid "“vejjo, ayye, āgato;"
msgstr ""

msgctxt "pli-tv-kd8:1.9.7"
msgid "so taṃ daṭṭhukāmo”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.9.8"
msgid "“Kīdiso, bhaṇe dovārika, vejjo”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.9.9"
msgid "“Daharako, ayye”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.9.10"
msgid "“Alaṃ, bhaṇe dovārika, kiṃ me daharako vejjo karissati?"
msgstr ""

msgctxt "pli-tv-kd8:1.9.11"
msgid "Bahū mahantā mahantā disāpāmokkhā vejjā āgantvā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.9.12"
msgid "Bahuṃ hiraññaṃ ādāya agamaṃsū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.10.1"
msgid "Atha kho so dovāriko yena jīvako komārabhacco tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.10.2"
msgid "upasaṅkamitvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.10.3"
msgid "“seṭṭhibhariyā, ācariya, evamāha—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.10.4"
msgid "alaṃ, bhaṇe dovārika, kiṃ me daharako vejjo karissati?"
msgstr ""

msgctxt "pli-tv-kd8:1.10.5"
msgid "Bahū mahantā mahantā disāpāmokkhā vejjā āgantvā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.10.6"
msgid "Bahuṃ hiraññaṃ ādāya agamaṃsū’”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.10.7"
msgid "“Gaccha, bhaṇe dovārika, seṭṭhibhariyāya pāvada—"
msgstr ""

msgctxt "pli-tv-kd8:1.10.8"
msgid "‘vejjo, ayye, evamāha—"
msgstr ""

msgctxt "pli-tv-kd8:1.10.9"
msgid "mā kira, ayye, pure kiñci adāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.10.10"
msgid "Yadā arogā ahosi tadā yaṃ iccheyyāsi taṃ dajjeyyāsī’”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.10.11"
msgid "“Evaṃ, ācariyā”ti kho so dovāriko jīvakassa komārabhaccassa paṭissutvā yena seṭṭhibhariyā tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.10.12"
msgid "upasaṅkamitvā seṭṭhibhariyaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.10.13"
msgid "“vejjo, ayye, evamāha—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.10.14"
msgid "mā kira, ayye, pure kiñci adāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.10.15"
msgid "Yadā arogā ahosi tadā yaṃ iccheyyāsi taṃ dajjeyyāsī’”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.10.16"
msgid "“Tena hi, bhaṇe dovārika, vejjo āgacchatū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.10.17"
msgid "“Evaṃ, ayye”ti kho so dovāriko seṭṭhibhariyāya paṭissutvā yena jīvako komārabhacco tenupasaṅkami, upasaṅkamitvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.10.18"
msgid "“seṭṭhibhariyā taṃ, ācariya, pakkosatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8, pts-vp-pli1.272
msgctxt "pli-tv-kd8:1.11.1"
msgid "Atha kho jīvako komārabhacco yena seṭṭhibhariyā tenupasaṅkami, upasaṅkamitvā seṭṭhibhariyāya vikāraṃ sallakkhetvā seṭṭhibhariyaṃ etadavoca—“"
msgstr ""

#. VAR: pasatena → pasatena me (bj, s1-3)
msgctxt "pli-tv-kd8:1.11.2"
msgid "pasatena, ayye, sappinā attho”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.11.3"
msgid "Atha kho seṭṭhibhariyā jīvakassa komārabhaccassa pasataṃ sappiṃ dāpesi."
msgstr ""

#. VAR: nipātetvā → nipajjāpetvā (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.11.4"
msgid "Atha kho jīvako komārabhacco taṃ pasataṃ sappiṃ nānābhesajjehi nippacitvā seṭṭhibhariyaṃ mañcake uttānaṃ nipātetvā natthuto adāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.11.5"
msgid "Atha kho taṃ sappi natthuto dinnaṃ mukhato uggañchi."
msgstr ""

msgctxt "pli-tv-kd8:1.11.6"
msgid "Atha kho seṭṭhibhariyā paṭiggahe niṭṭhubhitvā dāsiṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.11.7"
msgid "“handa, je, imaṃ sappiṃ picunā gaṇhāhī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.12.1"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—“"
msgstr ""

#. VAR: acchariyaṃ → acchariyaṃ vata bho (s1-3)
msgctxt "pli-tv-kd8:1.12.2"
msgid "acchariyaṃ yāva lūkhāyaṃ gharaṇī, yatra hi nāma imaṃ chaḍḍanīyadhammaṃ sappiṃ picunā gāhāpessati."
msgstr ""

#. VAR: Bahukāni ca me mahagghāni → mahagghāni mahagghāni (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.12.3"
msgid "Bahukāni ca me mahagghāni bhesajjāni upagatāni."
msgstr ""

#. VAR: kiñci → kañci (s1-3)
msgctxt "pli-tv-kd8:1.12.4"
msgid "Kimpi māyaṃ kiñci deyyadhammaṃ dassatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.12.5"
msgid "Atha kho seṭṭhibhariyā jīvakassa komārabhaccassa vikāraṃ sallakkhetvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.12.6"
msgid "“kissa tvaṃ, ācariya, vimanosī”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.12.7"
msgid "Idha me etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.12.8"
msgid "“acchariyaṃ yāva lūkhāyaṃ gharaṇī, yatra hi nāma imaṃ chaḍḍanīyadhammaṃ sappiṃ picunā gāhāpessati."
msgstr ""

msgctxt "pli-tv-kd8:1.12.9"
msgid "Bahukāni ca me mahagghāni bhesajjāni upagatāni."
msgstr ""

msgctxt "pli-tv-kd8:1.12.10"
msgid "Kimpi māyaṃ kiñci deyyadhammaṃ dassatī”ti."
msgstr ""

#. VAR: āgārikā → agārikā (bj, pts1)
msgctxt "pli-tv-kd8:1.12.11"
msgid "“Mayaṃ kho, ācariya, āgārikā nāma upajānāmetassa saṃyamassa."
msgstr ""

msgctxt "pli-tv-kd8:1.12.12"
msgid "Varametaṃ sappi dāsānaṃ vā kammakarānaṃ vā pādabbhañjanaṃ vā padīpakaraṇe vā āsittaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.12.13"
msgid "Mā kho tvaṃ, ācariya, vimano ahosi."
msgstr ""

msgctxt "pli-tv-kd8:1.12.14"
msgid "Na te deyyadhammo hāyissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-kd8:1.13.1"
msgid "Atha kho jīvako komārabhacco seṭṭhibhariyāya sattavassikaṃ sīsābādhaṃ ekeneva natthukammena apakaḍḍhi."
msgstr ""

msgctxt "pli-tv-kd8:1.13.2"
msgid "Atha kho seṭṭhibhariyā arogā samānā jīvakassa komārabhaccassa cattāri sahassāni pādāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.13.3"
msgid "Putto—“"
msgstr ""

#. VAR: arogā ṭhitā”ti → arogāpitāti (bj)
msgctxt "pli-tv-kd8:1.13.4"
msgid "mātā me arogā ṭhitā”ti cattāri sahassāni pādāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.13.5"
msgid "Suṇisā—"
msgstr ""

msgctxt "pli-tv-kd8:1.13.6"
msgid "“sassu me arogā ṭhitā”ti cattāri sahassāni pādāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.13.7"
msgid "Seṭṭhi gahapati—"
msgstr ""

msgctxt "pli-tv-kd8:1.13.8"
msgid "“bhariyā me arogā ṭhitā”ti cattāri sahassāni pādāsi dāsañca dāsiñca assarathañca."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-kd8:1.13.9"
msgid "Atha kho jīvako komārabhacco tāni soḷasasahassāni ādāya dāsañca dāsiñca assarathañca yena rājagahaṃ tena pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.13.10"
msgid "Anupubbena yena rājagahaṃ yena abhayo rājakumāro tenupasaṅkami, upasaṅkamitvā abhayaṃ rājakumāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.13.11"
msgid "“idaṃ me, deva, paṭhamakammaṃ soḷasasahassāni dāso ca dāsī ca assaratho ca."
msgstr ""

msgctxt "pli-tv-kd8:1.13.12"
msgid "Paṭiggaṇhātu me devo posāvanikan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.13.13"
msgid "“Alaṃ, bhaṇe jīvaka;"
msgstr ""

msgctxt "pli-tv-kd8:1.13.14"
msgid "tuyhameva hotu."
msgstr ""

msgctxt "pli-tv-kd8:1.13.15"
msgid "Amhākaññeva antepure nivesanaṃ māpehī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.13.16"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco abhayassa rājakumārassa paṭissutvā abhayassa rājakumārassa antepure nivesanaṃ māpesi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.14.0"
msgid "3. Bimbisārarājavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc11, pts-vp-pli1.273
msgctxt "pli-tv-kd8:1.14.1"
msgid "Tena kho pana samayena rañño māgadhassa seniyassa bimbisārassa bhagandalābādho hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.2"
msgid "Sāṭakā lohitena makkhiyanti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.3"
msgid "Deviyo disvā uppaṇḍenti—“"
msgstr ""

#. VAR: na ciraṃ → nacirasseva (s1-3, pts1)
msgctxt "pli-tv-kd8:1.14.4"
msgid "utunī dāni devo, pupphaṃ devassa uppannaṃ, na ciraṃ devo vijāyissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.5"
msgid "Tena rājā maṅku hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.6"
msgid "Atha kho rājā māgadho seniyo bimbisāro abhayaṃ rājakumāraṃ etadavoca—“"
msgstr ""

#. VAR: maṃ disvā → deviyo disvā (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.14.7"
msgid "mayhaṃ kho, bhaṇe abhaya, tādiso ābādho, sāṭakā lohitena makkhiyanti, deviyo maṃ disvā uppaṇḍenti—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.14.8"
msgid "utunī dāni devo, pupphaṃ devassa uppannaṃ, na ciraṃ devo vijāyissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.9"
msgid "Iṅgha, bhaṇe abhaya, tādisaṃ vejjaṃ jānāhi yo maṃ tikiccheyyā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.10"
msgid "“Ayaṃ, deva, amhākaṃ jīvako vejjo taruṇo bhadrako."
msgstr ""

msgctxt "pli-tv-kd8:1.14.11"
msgid "So devaṃ tikicchissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.14.12"
msgid "“Tena hi, bhaṇe abhaya, jīvakaṃ vejjaṃ āṇāpehi;"
msgstr ""

msgctxt "pli-tv-kd8:1.14.13"
msgid "so maṃ tikicchissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-kd8:1.15.1"
msgid "Atha kho abhayo rājakumāro jīvakaṃ komārabhaccaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.15.2"
msgid "“gaccha, bhaṇe jīvaka, rājānaṃ tikicchāhī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.15.3"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco abhayassa rājakumārassa paṭissutvā nakhena bhesajjaṃ ādāya yena rājā māgadho seniyo bimbisāro tenupasaṅkami, upasaṅkamitvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—“"
msgstr ""

#. VAR: passāmā”ti → passāmīti (s1-3)
msgctxt "pli-tv-kd8:1.15.4"
msgid "ābādhaṃ te, deva, passāmā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.15.5"
msgid "Atha kho jīvako komārabhacco rañño māgadhassa seniyassa bimbisārassa bhagandalābādhaṃ ekeneva ālepena apakaḍḍhi."
msgstr ""

msgctxt "pli-tv-kd8:1.15.6"
msgid "Atha kho rājā māgadho seniyo bimbisāro arogo samāno pañca itthisatāni sabbālaṅkāraṃ bhūsāpetvā omuñcāpetvā puñjaṃ kārāpetvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.15.7"
msgid "“etaṃ, bhaṇe jīvaka, pañcannaṃ itthisatānaṃ sabbālaṅkāraṃ tuyhaṃ hotū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.15.8"
msgid "“Alaṃ, deva, adhikāraṃ me devo saratū”ti."
msgstr ""

#. VAR: bhikkhusaṃghan”ti → saṅghanti (bj) | bhikkhusaṅghañcāti (s1-3, pts1)
msgctxt "pli-tv-kd8:1.15.9"
msgid "“Tena hi, bhaṇe jīvaka, maṃ upaṭṭhaha, itthāgārañca, buddhappamukhañca bhikkhusaṃghan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.15.10"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco rañño māgadhassa seniyassa bimbisārassa paccassosi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.16.0"
msgid "4. Rājagahaseṭṭhivatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc13
msgctxt "pli-tv-kd8:1.16.1"
msgid "Tena kho pana samayena rājagahakassa seṭṭhissa sattavassiko sīsābādho hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.2"
msgid "Bahū mahantā mahantā disāpāmokkhā vejjā āgantvā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.16.3"
msgid "Bahuṃ hiraññaṃ ādāya agamaṃsu."
msgstr ""

msgctxt "pli-tv-kd8:1.16.4"
msgid "Api ca vejjehi paccakkhāto hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.5"
msgid "Ekacce vejjā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.16.6"
msgid "“pañcamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.7"
msgid "Ekacce vejjā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.16.8"
msgid "“sattamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.9"
msgid "Atha kho rājagahakassa negamassa etadahosi—“"
msgstr ""

#. VAR: bahūpakāro → bahukāro (bj)
msgctxt "pli-tv-kd8:1.16.10"
msgid "ayaṃ kho seṭṭhi gahapati bahūpakāro rañño ceva negamassa ca."
msgstr ""

msgctxt "pli-tv-kd8:1.16.11"
msgid "Api ca vejjehi paccakkhāto."
msgstr ""

msgctxt "pli-tv-kd8:1.16.12"
msgid "Ekacce vejjā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.16.13"
msgid "‘pañcamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.14"
msgid "Ekacce vejjā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.16.15"
msgid "‘sattamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.16.16"
msgid "Ayañca rañño jīvako vejjo taruṇo bhadrako."
msgstr ""

msgctxt "pli-tv-kd8:1.16.17"
msgid "Yannūna mayaṃ rājānaṃ jīvakaṃ vejjaṃ yāceyyāma seṭṭhiṃ gahapatiṃ tikicchitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc14, pts-vp-pli1.274
msgctxt "pli-tv-kd8:1.17.1"
msgid "Atha kho rājagahako negamo yena rājā māgadho seniyo bimbisāro tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.17.2"
msgid "upasaṅkamitvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.17.3"
msgid "“ayaṃ, deva, seṭṭhi gahapati bahūpakāro devassa ceva negamassa ca;"
msgstr ""

msgctxt "pli-tv-kd8:1.17.4"
msgid "api ca vejjehi paccakkhāto."
msgstr ""

msgctxt "pli-tv-kd8:1.17.5"
msgid "Ekacce vejjā evamāhaṃsu—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.17.6"
msgid "pañcamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.17.7"
msgid "Ekacce vejjā evamāhaṃsu—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.17.8"
msgid "sattamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.17.9"
msgid "Sādhu devo jīvakaṃ vejjaṃ āṇāpetu seṭṭhiṃ gahapatiṃ tikicchitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-kd8:1.17.10"
msgid "Atha kho rājā māgadho seniyo bimbisāro jīvakaṃ komārabhaccaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.17.11"
msgid "“gaccha, bhaṇe jīvaka, seṭṭhiṃ gahapatiṃ tikicchāhī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.17.12"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco rañño māgadhassa seniyassa bimbisārassa paṭissutvā yena seṭṭhi gahapati tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.17.13"
msgid "upasaṅkamitvā seṭṭhissa gahapatissa vikāraṃ sallakkhetvā seṭṭhiṃ gahapatiṃ etadavoca—“"
msgstr ""

#. VAR: sace tvaṃ, gahapati, arogo bhaveyyāsi → sacāhaṃ taṃ gahapati arogāpeyyaṃ (bj, pts1) | sacāhantaṃ gahapati arogaṃ kareyyaṃ (s1-3)
msgctxt "pli-tv-kd8:1.17.14"
msgid "sace tvaṃ, gahapati, arogo bhaveyyāsi, kiṃ me assa deyyadhammo”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.17.15"
msgid "“Sabbaṃ sāpateyyañca te, ācariya, hotu, ahañca te dāso”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.18.1"
msgid "“Sakkhissasi pana tvaṃ, gahapati, ekena passena sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.18.2"
msgid "“Sakkomahaṃ, ācariya, ekena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.18.3"
msgid "“Sakkhissasi pana tvaṃ, gahapati, dutiyena passena sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.18.4"
msgid "“Sakkomahaṃ, ācariya, dutiyena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.18.5"
msgid "“Sakkhissasi pana tvaṃ, gahapati, uttāno sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.18.6"
msgid "“Sakkomahaṃ, ācariya, uttāno sattamāse nipajjitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
#. VAR: mañcake → mañcakena (bj)
#. VAR: uppāṭetvā → phāletvā (bj) | upphāletvā (pts1)
#. VAR: nipātetvā → nipajjāpetvā (bj, s1-3, pts1)
#. VAR: sibbiniṃ → sibbaniṃ (bj)
#. VAR: mahājanassa → janassa (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.18.7"
msgid "Atha kho jīvako komārabhacco seṭṭhiṃ gahapatiṃ mañcake nipātetvā mañcake sambandhitvā sīsacchaviṃ uppāṭetvā sibbiniṃ vināmetvā dve pāṇake nīharitvā mahājanassa dassesi—“"
msgstr ""

#. VAR: passathayye → passesyātha (bj) | passatha (s1-3) | passathayyo (pts1, mr)
msgctxt "pli-tv-kd8:1.18.8"
msgid "passathayye, ime dve pāṇake, ekaṃ khuddakaṃ ekaṃ mahallakaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.18.9"
msgid "Ye te ācariyā evamāhaṃsu—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.18.10"
msgid "pañcamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti—"
msgstr ""

msgctxt "pli-tv-kd8:1.18.11"
msgid "tehāyaṃ mahallako pāṇako diṭṭho."
msgstr ""

msgctxt "pli-tv-kd8:1.18.12"
msgid "Pañcamaṃ divasaṃ seṭṭhissa gahapatissa matthaluṅgaṃ pariyādiyissati."
msgstr ""

msgctxt "pli-tv-kd8:1.18.13"
msgid "Matthaluṅgassa pariyādānā seṭṭhi gahapati kālaṃ karissati."
msgstr ""

msgctxt "pli-tv-kd8:1.18.14"
msgid "Sudiṭṭho tehi ācariyehi."
msgstr ""

msgctxt "pli-tv-kd8:1.18.15"
msgid "Ye te ācariyā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:1.18.16"
msgid "‘sattamaṃ divasaṃ seṭṭhi gahapati kālaṃ karissatī’ti—"
msgstr ""

msgctxt "pli-tv-kd8:1.18.17"
msgid "tehāyaṃ khuddako pāṇako diṭṭho."
msgstr ""

msgctxt "pli-tv-kd8:1.18.18"
msgid "Sattamaṃ divasaṃ seṭṭhissa gahapatissa matthaluṅgaṃ pariyādiyissati."
msgstr ""

msgctxt "pli-tv-kd8:1.18.19"
msgid "Matthaluṅgassa pariyādānā seṭṭhi gahapati kālaṃ karissati."
msgstr ""

msgctxt "pli-tv-kd8:1.18.20"
msgid "Sudiṭṭho tehi ācariyehī”ti."
msgstr ""

#. VAR: sibbitvā → sibbetvā (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.18.21"
msgid "Sibbiniṃ sampaṭipāṭetvā sīsacchaviṃ sibbitvā ālepaṃ adāsi."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-kd8:1.19.1"
msgid "Atha kho seṭṭhi gahapati sattāhassa accayena jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.19.2"
msgid "“nāhaṃ, ācariya, sakkomi ekena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.19.3"
msgid "“Nanu me tvaṃ, gahapati, paṭissuṇi—"
msgstr ""

msgctxt "pli-tv-kd8:1.19.4"
msgid "sakkomahaṃ, ācariya, ekena passena sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.19.5"
msgid "“Saccāhaṃ, ācariya, paṭissuṇiṃ, apāhaṃ marissāmi, nāhaṃ sakkomi ekena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.19.6"
msgid "“Tena hi tvaṃ, gahapati, dutiyena passena sattamāse nipajjāhī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc18, pts-vp-pli1.275
msgctxt "pli-tv-kd8:1.19.7"
msgid "Atha kho seṭṭhi gahapati sattāhassa accayena jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

#. VAR: ācariya, sakkomi → nāhaṃ sakkomi (bj, s1-3)
msgctxt "pli-tv-kd8:1.19.8"
msgid "“nāhaṃ, ācariya, sakkomi dutiyena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.19.9"
msgid "“Nanu me tvaṃ, gahapati, paṭissuṇi—"
msgstr ""

msgctxt "pli-tv-kd8:1.19.10"
msgid "sakkomahaṃ, ācariya, dutiyena passena sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.19.11"
msgid "“Saccāhaṃ, ācariya, paṭissuṇiṃ, apāhaṃ marissāmi, nāhaṃ, ācariya, sakkomi dutiyena passena sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.19.12"
msgid "“Tena hi tvaṃ, gahapati, uttāno sattamāse nipajjāhī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-kd8:1.19.13"
msgid "Atha kho seṭṭhi gahapati sattāhassa accayena jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.19.14"
msgid "“nāhaṃ, ācariya, sakkomi uttāno sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.19.15"
msgid "“Nanu me tvaṃ, gahapati, paṭissuṇi—"
msgstr ""

msgctxt "pli-tv-kd8:1.19.16"
msgid "sakkomahaṃ, ācariya, uttāno sattamāse nipajjitun”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.19.17"
msgid "“Saccāhaṃ, ācariya, paṭissuṇiṃ, apāhaṃ marissāmi, nāhaṃ sakkomi uttāno sattamāse nipajjitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.20.1"
msgid "“Ahañce taṃ, gahapati, na vadeyyaṃ, ettakampi tvaṃ na nipajjeyyāsi, api ca paṭikacceva mayā ñāto—"
msgstr ""

msgctxt "pli-tv-kd8:1.20.2"
msgid "tīhi sattāhehi seṭṭhi gahapati arogo bhavissatīti."
msgstr ""

msgctxt "pli-tv-kd8:1.20.3"
msgid "Uṭṭhehi, gahapati, arogosi."
msgstr ""

#. VAR: Jānāsi → jānābhi (bj) | jānāhi (s1-3, pts1)
msgctxt "pli-tv-kd8:1.20.4"
msgid "Jānāsi kiṃ me deyyadhammo”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.20.5"
msgid "“Sabbaṃ sāpateyyañca te, ācariya, hotu, ahañca te dāso”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.20.6"
msgid "“Alaṃ, gahapati, mā me tvaṃ sabbaṃ sāpateyyaṃ adāsi, mā ca me dāso."
msgstr ""

msgctxt "pli-tv-kd8:1.20.7"
msgid "Rañño satasahassaṃ dehi, mayhaṃ satasahassan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.20.8"
msgid "Atha kho seṭṭhi gahapati arogo samāno rañño satasahassaṃ adāsi, jīvakassa komārabhaccassa satasahassaṃ."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.21.0"
msgid "5. Seṭṭhiputtavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc20, pts-vp-pli1.276
msgctxt "pli-tv-kd8:1.21.1"
msgid "Tena kho pana samayena bārāṇaseyyakassa seṭṭhiputtassa mokkhacikāya kīḷantassa antagaṇṭhābādho hoti, yena yāgupi pītā na sammā pariṇāmaṃ gacchati, bhattampi bhuttaṃ na sammā pariṇāmaṃ gacchati, uccāropi passāvopi na paguṇo."
msgstr ""

msgctxt "pli-tv-kd8:1.21.2"
msgid "So tena kiso hoti lūkho dubbaṇṇo uppaṇḍuppaṇḍukajāto dhamanisanthatagatto."
msgstr ""

msgctxt "pli-tv-kd8:1.21.3"
msgid "Atha kho bārāṇaseyyakassa seṭṭhissa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.21.4"
msgid "“mayhaṃ kho puttassa tādiso ābādho, yena yāgupi pītā na sammā pariṇāmaṃ gacchati, bhattampi bhuttaṃ na sammā pariṇāmaṃ gacchati, uccāropi passāvopi na paguṇo."
msgstr ""

msgctxt "pli-tv-kd8:1.21.5"
msgid "So tena kiso lūkho dubbaṇṇo uppaṇḍuppaṇḍukajāto dhamanisanthatagatto."
msgstr ""

msgctxt "pli-tv-kd8:1.21.6"
msgid "Yannūnāhaṃ rājagahaṃ gantvā rājānaṃ jīvakaṃ vejjaṃ yāceyyaṃ puttaṃ me tikicchitun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.21.7"
msgid "Atha kho bārāṇaseyyako seṭṭhi rājagahaṃ gantvā yena rājā māgadho seniyo bimbisāro tenupasaṅkami, upasaṅkamitvā rājānaṃ māgadhaṃ seniyaṃ bimbisāraṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.21.8"
msgid "“mayhaṃ kho, deva, puttassa tādiso ābādho, yena yāgupi pītā na sammā pariṇāmaṃ gacchati, bhattampi bhuttaṃ na sammā pariṇāmaṃ gacchati, uccāropi passāvopi na paguṇo."
msgstr ""

msgctxt "pli-tv-kd8:1.21.9"
msgid "So tena kiso lūkho dubbaṇṇo uppaṇḍuppaṇḍukajāto dhamanisanthatagatto."
msgstr ""

msgctxt "pli-tv-kd8:1.21.10"
msgid "Sādhu devo jīvakaṃ vejjaṃ āṇāpetu puttaṃ me tikicchitun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-kd8:1.22.1"
msgid "Atha kho rājā māgadho seniyo bimbisāro jīvakaṃ komārabhaccaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.22.2"
msgid "“gaccha, bhaṇe jīvaka, bārāṇasiṃ gantvā bārāṇaseyyakaṃ seṭṭhiputtaṃ tikicchāhī”ti."
msgstr ""

#. VAR: ubbandhitvā → upanibandhitvā (bj, s1-3)
#. VAR: tirokaraṇiyaṃ → tirokaraṇiṃ (bj, s1-3)
msgctxt "pli-tv-kd8:1.22.3"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco rañño māgadhassa seniyassa bimbisārassa paṭissutvā bārāṇasiṃ gantvā yena bārāṇaseyyako seṭṭhiputto tenupasaṅkami, upasaṅkamitvā bārāṇaseyyakassa seṭṭhiputtassa vikāraṃ sallakkhetvā janaṃ ussāretvā tirokaraṇiyaṃ parikkhipitvā thambhe ubbandhitvā bhariyaṃ purato ṭhapetvā udaracchaviṃ uppāṭetvā antagaṇṭhiṃ nīharitvā bhariyāya dassesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.22.4"
msgid "“passa te sāmikassa ābādhaṃ, iminā yāgupi pītā na sammā pariṇāmaṃ gacchati, bhattampi bhuttaṃ na sammā pariṇāmaṃ gacchati, uccāropi passāvopi na paguṇo;"
msgstr ""

msgctxt "pli-tv-kd8:1.22.5"
msgid "imināyaṃ kiso lūkho dubbaṇṇo uppaṇḍuppaṇḍukajāto dhamanisanthatagatto”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.22.6"
msgid "Antagaṇṭhiṃ viniveṭhetvā antāni paṭipavesetvā udaracchaviṃ sibbitvā ālepaṃ adāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.22.7"
msgid "Atha kho bārāṇaseyyako seṭṭhiputto nacirasseva arogo ahosi."
msgstr ""

msgctxt "pli-tv-kd8:1.22.8"
msgid "Atha kho bārāṇaseyyako seṭṭhi—“"
msgstr ""

#. VAR: arogo ṭhito”ti → arogāpitoti (bj)
msgctxt "pli-tv-kd8:1.22.9"
msgid "putto me arogo ṭhito”ti jīvakassa komārabhaccassa soḷasasahassāni pādāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.22.10"
msgid "Atha kho jīvako komārabhacco tāni soḷasasahassāni ādāya punadeva rājagahaṃ paccāgañchi."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.23.0"
msgid "6. Pajjotarājavatthu"
msgstr ""

#. HTML: </h2><p>
#. REF: sc22, pts-vp-pli1.277
#. VAR: samayena rañño → ujjeniyaṃ rañño (s1-3)
msgctxt "pli-tv-kd8:1.23.1"
msgid "Tena kho pana samayena rañño pajjotassa paṇḍurogābādho hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.23.2"
msgid "Bahū mahantā mahantā disāpāmokkhā vejjā āgantvā nāsakkhiṃsu arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.23.3"
msgid "Bahuṃ hiraññaṃ ādāya agamaṃsu."
msgstr ""

msgctxt "pli-tv-kd8:1.23.4"
msgid "Atha kho rājā pajjoto rañño māgadhassa seniyassa bimbisārassa santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.23.5"
msgid "“mayhaṃ kho tādiso ābādho, sādhu devo jīvakaṃ vejjaṃ āṇāpetu, so maṃ tikicchissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.23.6"
msgid "Atha kho rājā māgadho seniyo bimbisāro jīvakaṃ komārabhaccaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.23.7"
msgid "“gaccha, bhaṇe jīvaka;"
msgstr ""

msgctxt "pli-tv-kd8:1.23.8"
msgid "ujjeniṃ gantvā rājānaṃ pajjotaṃ tikicchāhī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.23.9"
msgid "“Evaṃ, devā”ti kho jīvako komārabhacco rañño māgadhassa seniyassa bimbisārassa paṭissutvā ujjeniṃ gantvā yena rājā pajjoto tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.23.10"
msgid "upasaṅkamitvā rañño pajjotassa vikāraṃ sallakkhetvā rājānaṃ pajjotaṃ etadavoca—“"
msgstr ""

#. VAR: dehi → idaṃ padadvayaṃ bj, s1-3 potthakesu
msgctxt "pli-tv-kd8:1.24.1"
msgid "sappiṃ dehi, sappiṃ, deva, nippacissāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.24.2"
msgid "Taṃ devo pivissatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.24.3"
msgid "“Alaṃ, bhaṇe jīvaka, yaṃ te sakkā vinā sappinā arogaṃ kātuṃ taṃ karohi."
msgstr ""

msgctxt "pli-tv-kd8:1.24.4"
msgid "Jegucchaṃ me sappi, paṭikūlan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.24.5"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.24.6"
msgid "“imassa kho rañño tādiso ābādho, na sakkā vinā sappinā arogaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.24.7"
msgid "Yannūnāhaṃ sappiṃ nippaceyyaṃ kasāvavaṇṇaṃ kasāvagandhaṃ kasāvarasan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.24.8"
msgid "Atha kho jīvako komārabhacco nānābhesajjehi sappiṃ nippaci kasāvavaṇṇaṃ kasāvagandhaṃ kasāvarasaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.24.9"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.24.10"
msgid "“imassa kho rañño sappi pītaṃ pariṇāmentaṃ uddekaṃ dassati."
msgstr ""

msgctxt "pli-tv-kd8:1.24.11"
msgid "Caṇḍoyaṃ rājā ghātāpeyyāpi maṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.24.12"
msgid "Yannūnāhaṃ paṭikacceva āpuccheyyan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.24.13"
msgid "Atha kho jīvako komārabhacco yena rājā pajjoto tenupasaṅkami, upasaṅkamitvā rājānaṃ pajjotaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.25.1"
msgid "“mayaṃ kho, deva, vejjā nāma tādisena muhuttena mūlāni uddharāma bhesajjāni saṃharāma."
msgstr ""

msgctxt "pli-tv-kd8:1.25.2"
msgid "Sādhu devo vāhanāgāresu ca dvāresu ca āṇāpetu—"
msgstr ""

msgctxt "pli-tv-kd8:1.25.3"
msgid "yena vāhanena jīvako icchati tena vāhanena gacchatu, yena dvārena icchati tena dvārena gacchatu, yaṃ kālaṃ icchati taṃ kālaṃ gacchatu, yaṃ kālaṃ icchati taṃ kālaṃ pavisatū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.25.4"
msgid "Atha kho rājā pajjoto vāhanāgāresu ca dvāresu ca āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.25.5"
msgid "“yena vāhanena jīvako icchati tena vāhanena gacchatu, yena dvārena icchati tena dvārena gacchatu, yaṃ kālaṃ icchati taṃ kālaṃ gacchatu, yaṃ kālaṃ icchati taṃ kālaṃ pavisatū”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-kd8:1.25.6"
msgid "Tena kho pana samayena rañño pajjotassa bhaddavatikā nāma hatthinikā paññāsayojanikā hoti."
msgstr ""

#. VAR: sappiṃ → taṃ sappiṃ (s1-3)
msgctxt "pli-tv-kd8:1.25.7"
msgid "Atha kho jīvako komārabhacco rañño pajjotassa sappiṃ upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.25.8"
msgid "“kasāvaṃ devo pivatū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.25.9"
msgid "Atha kho jīvako komārabhacco rājānaṃ pajjotaṃ sappiṃ pāyetvā hatthisālaṃ gantvā bhaddavatikāya hatthinikāya nagaramhā nippati."
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-kd8:1.26.1"
msgid "Atha kho rañño pajjotassa taṃ sappi pītaṃ pariṇāmentaṃ uddekaṃ adāsi."
msgstr ""

msgctxt "pli-tv-kd8:1.26.2"
msgid "Atha kho rājā pajjoto manusse etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.26.3"
msgid "“duṭṭhena, bhaṇe, jīvakena sappiṃ pāyitomhi."
msgstr ""

msgctxt "pli-tv-kd8:1.26.4"
msgid "Tena hi, bhaṇe, jīvakaṃ vejjaṃ vicinathā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.26.5"
msgid "“Bhaddavatikāya, deva, hatthinikāya nagaramhā nippatito”ti."
msgstr ""

#. VAR: amanussena paṭicca jāto → amanussena jāto (bj)
msgctxt "pli-tv-kd8:1.26.6"
msgid "Tena kho pana samayena rañño pajjotassa kāko nāma dāso saṭṭhiyojaniko hoti, amanussena paṭicca jāto."
msgstr ""

msgctxt "pli-tv-kd8:1.26.7"
msgid "Atha kho rājā pajjoto kākaṃ dāsaṃ āṇāpesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.26.8"
msgid "“gaccha, bhaṇe kāka, jīvakaṃ vejjaṃ nivattehi—"
msgstr ""

msgctxt "pli-tv-kd8:1.26.9"
msgid "rājā taṃ, ācariya, nivattāpetīti."
msgstr ""

msgctxt "pli-tv-kd8:1.26.10"
msgid "Ete kho, bhaṇe kāka, vejjā nāma bahumāyā."
msgstr ""

msgctxt "pli-tv-kd8:1.26.11"
msgid "Mā cassa kiñci paṭiggahesī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc25, pts-vp-pli1.278
msgctxt "pli-tv-kd8:1.27.1"
msgid "Atha kho kāko dāso jīvakaṃ komārabhaccaṃ antarāmagge kosambiyaṃ sambhāvesi pātarāsaṃ karontaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.27.2"
msgid "Atha kho kāko dāso jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.27.3"
msgid "“rājā taṃ, ācariya, nivattāpetī”ti."
msgstr ""

#. VAR: bhuñjāma → bhuñjāmi (bj, s1-3)
msgctxt "pli-tv-kd8:1.27.4"
msgid "“Āgamehi, bhaṇe kāka, yāva bhuñjāma."
msgstr ""

msgctxt "pli-tv-kd8:1.27.5"
msgid "Handa, bhaṇe kāka, bhuñjassū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.27.6"
msgid "“Alaṃ, ācariya, raññāmhi āṇatto—"
msgstr ""

msgctxt "pli-tv-kd8:1.27.7"
msgid "ete kho, bhaṇe kāka, vejjā nāma bahumāyā, mā cassa kiñci paṭiggahesī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.27.8"
msgid "Tena kho pana samayena jīvako komārabhacco nakhena bhesajjaṃ olumpetvā āmalakañca khādati pānīyañca pivati."
msgstr ""

msgctxt "pli-tv-kd8:1.27.9"
msgid "Atha kho jīvako komārabhacco kākaṃ dāsaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.27.10"
msgid "“handa, bhaṇe kāka, āmalakañca khāda pānīyañca pivassū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.28.1"
msgid "Atha kho kāko dāso—"
msgstr ""

msgctxt "pli-tv-kd8:1.28.2"
msgid "“ayaṃ kho vejjo āmalakañca khādati pānīyañca pivati, na arahati kiñci pāpakaṃ hotun”ti—"
msgstr ""

msgctxt "pli-tv-kd8:1.28.3"
msgid "upaḍḍhāmalakañca khādi pānīyañca apāyi."
msgstr ""

msgctxt "pli-tv-kd8:1.28.4"
msgid "Tassa taṃ upaḍḍhāmalakaṃ khāditaṃ tattheva nicchāresi."
msgstr ""

msgctxt "pli-tv-kd8:1.28.5"
msgid "Atha kho kāko dāso jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.28.6"
msgid "“atthi me, ācariya, jīvitan”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.28.7"
msgid "“Mā, bhaṇe kāka, bhāyi, tvañceva arogo bhavissasi rājā ca."
msgstr ""

#. VAR: hatthinikaṃ kākassa niyyādetvā yena → yena rājagahaṃ yena (bj, s1-3, pts1)
msgctxt "pli-tv-kd8:1.28.8"
msgid "Caṇḍo so rājā ghātāpeyyāpi maṃ, tenāhaṃ na nivattāmī”ti bhaddavatikaṃ hatthinikaṃ kākassa niyyādetvā yena rājagahaṃ tena pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.28.9"
msgid "Anupubbena yena rājā māgadho seniyo bimbisāro tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.28.10"
msgid "upasaṅkamitvā rañño māgadhassa seniyassa bimbisārassa etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-kd8:1.28.11"
msgid "“Suṭṭhu, bhaṇe jīvaka, akāsi yampi na nivatto, caṇḍo so rājā ghātāpeyyāpi tan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.29.1"
msgid "Atha kho rājā pajjoto arogo samāno jīvakassa komārabhaccassa santike dūtaṃ pāhesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.29.2"
msgid "“āgacchatu jīvako, varaṃ dassāmī”ti."
msgstr ""

#. VAR: ayyo → deva (s1-3)
msgctxt "pli-tv-kd8:1.29.3"
msgid "“Alaṃ, ayyo, adhikāraṃ me devo saratū”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.29.4"
msgid "7. Siveyyakadussayugakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc26
msgctxt "pli-tv-kd8:1.29.5"
msgid "Tena kho pana samayena rañño pajjotassa siveyyakaṃ dussayugaṃ uppannaṃ hoti—"
msgstr ""

#. VAR: bahūnaṃ → bahunnaṃ (bj, s1-3)
msgctxt "pli-tv-kd8:1.29.6"
msgid "bahūnaṃ dussānaṃ bahūnaṃ dussayugānaṃ bahūnaṃ dussayugasatānaṃ bahūnaṃ dussayugasahassānaṃ bahūnaṃ dussayugasatasahassānaṃ aggañca seṭṭhañca mokkhañca uttamañca pavarañca."
msgstr ""

msgctxt "pli-tv-kd8:1.29.7"
msgid "Atha kho rājā pajjoto taṃ siveyyakaṃ dussayugaṃ jīvakassa komārabhaccassa pāhesi."
msgstr ""

msgctxt "pli-tv-kd8:1.29.8"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.29.9"
msgid "“idaṃ kho me siveyyakaṃ dussayugaṃ raññā pajjotena pahitaṃ—"
msgstr ""

msgctxt "pli-tv-kd8:1.29.10"
msgid "bahūnaṃ dussānaṃ bahūnaṃ dussayugānaṃ bahūnaṃ dussayugasatānaṃ bahūnaṃ dussayugasahassānaṃ bahūnaṃ dussayugasatasahassānaṃ aggañca seṭṭhañca mokkhañca uttamañca pavarañca."
msgstr ""

msgctxt "pli-tv-kd8:1.29.11"
msgid "Nayidaṃ añño koci paccārahati aññatra tena bhagavatā arahatā sammāsambuddhena, raññā vā māgadhena seniyena bimbisārenā”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.30.0"
msgid "8. Samattiṃsavirecanakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc27, pts-vp-pli1.279
msgctxt "pli-tv-kd8:1.30.1"
msgid "Tena kho pana samayena bhagavato kāyo dosābhisanno hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.30.2"
msgid "Atha kho bhagavā āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.30.3"
msgid "“dosābhisanno kho, ānanda, tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.30.4"
msgid "Icchati tathāgato virecanaṃ pātun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.30.5"
msgid "Atha kho āyasmā ānando yena jīvako komārabhacco tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.30.6"
msgid "upasaṅkamitvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.30.7"
msgid "“dosābhisanno kho, āvuso jīvaka, tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.30.8"
msgid "Icchati tathāgato virecanaṃ pātun”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.30.9"
msgid "“Tena hi, bhante ānanda, bhagavato kāyaṃ katipāhaṃ sinehethā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.30.10"
msgid "Atha kho āyasmā ānando bhagavato kāyaṃ katipāhaṃ sinehetvā yena jīvako komārabhacco tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-kd8:1.30.11"
msgid "upasaṅkamitvā jīvakaṃ komārabhaccaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.30.12"
msgid "“siniddho kho, āvuso jīvaka, tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.30.13"
msgid "Yassadāni kālaṃ maññasī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.1"
msgid "Atha kho jīvakassa komārabhaccassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.31.2"
msgid "“na kho metaṃ patirūpaṃ yohaṃ bhagavato oḷārikaṃ virecanaṃ dadeyyan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.3"
msgid "Tīṇi uppalahatthāni nānābhesajjehi paribhāvetvā yena bhagavā tenupasaṅkami, upasaṅkamitvā ekaṃ uppalahatthaṃ bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.31.4"
msgid "“imaṃ, bhante, bhagavā paṭhamaṃ uppalahatthaṃ upasiṅghatu."
msgstr ""

msgctxt "pli-tv-kd8:1.31.5"
msgid "Idaṃ bhagavantaṃ dasakkhattuṃ virecessatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.6"
msgid "Dutiyaṃ uppalahatthaṃ bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.31.7"
msgid "“imaṃ, bhante, bhagavā dutiyaṃ uppalahatthaṃ upasiṅghatu."
msgstr ""

msgctxt "pli-tv-kd8:1.31.8"
msgid "Idaṃ bhagavantaṃ dasakkhattuṃ virecessatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.9"
msgid "Tatiyaṃ uppalahatthaṃ bhagavato upanāmesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.31.10"
msgid "“imaṃ, bhante, bhagavā tatiyaṃ uppalahatthaṃ upasiṅghatu."
msgstr ""

msgctxt "pli-tv-kd8:1.31.11"
msgid "Idaṃ bhagavantaṃ dasakkhattuṃ virecessatī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.12"
msgid "Evaṃ bhagavato samattiṃsāya virecanaṃ bhavissatīti."
msgstr ""

msgctxt "pli-tv-kd8:1.31.13"
msgid "Atha kho jīvako komārabhacco bhagavato samattiṃsāya virecanaṃ datvā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.32.1"
msgid "Atha kho jīvakassa komārabhaccassa bahi dvārakoṭṭhakā nikkhantassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.32.2"
msgid "“mayā kho bhagavato samattiṃsāya virecanaṃ dinnaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.32.3"
msgid "Dosābhisanno tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.32.4"
msgid "Na bhagavantaṃ samattiṃsakkhattuṃ virecessati, ekūnattiṃsakkhattuṃ bhagavantaṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.5"
msgid "Api ca bhagavā viritto nahāyissati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.6"
msgid "Nahātaṃ bhagavantaṃ sakiṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.7"
msgid "Evaṃ bhagavato samattiṃsāya virecanaṃ bhavissatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc28, pts-vp-pli1.280
msgctxt "pli-tv-kd8:1.32.8"
msgid "Atha kho bhagavā jīvakassa komārabhaccassa cetasā cetoparivitakkamaññāya āyasmantaṃ ānandaṃ āmantesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.32.9"
msgid "“idhānanda, jīvakassa komārabhaccassa bahi dvārakoṭṭhakā nikkhantassa etadahosi—‘"
msgstr ""

msgctxt "pli-tv-kd8:1.32.10"
msgid "mayā kho bhagavato samattiṃsāya virecanaṃ dinnaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.32.11"
msgid "Dosābhisanno tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.32.12"
msgid "Na bhagavantaṃ samatiṃsakkhattuṃ virecessati, ekūnattiṃsakkhattuṃ bhagavantaṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.13"
msgid "Api ca bhagavā viritto nahāyissati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.14"
msgid "Nahātaṃ bhagavantaṃ sakiṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.32.15"
msgid "Evaṃ bhagavato samattiṃsāya virecanaṃ bhavissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.32.16"
msgid "Tena hānanda, uṇhodakaṃ paṭiyādehī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.32.17"
msgid "“Evaṃ, bhante”ti kho āyasmā ānando bhagavato paṭissuṇitvā uṇhodakaṃ paṭiyādesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc29
msgctxt "pli-tv-kd8:1.33.1"
msgid "Atha kho jīvako komārabhacco yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd8:1.33.2"
msgid "Ekamantaṃ nisinno kho jīvako komārabhacco bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.33.3"
msgid "“viritto, bhante, bhagavā”ti?"
msgstr ""

msgctxt "pli-tv-kd8:1.33.4"
msgid "“Virittomhi, jīvakā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.33.5"
msgid "“Idha mayhaṃ, bhante, bahi dvārakoṭṭhakā nikkhantassa etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:1.33.6"
msgid "‘mayā kho bhagavato samattiṃsāya virecanaṃ dinnaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.33.7"
msgid "Dosābhisanno tathāgatassa kāyo."
msgstr ""

msgctxt "pli-tv-kd8:1.33.8"
msgid "Na bhagavantaṃ samattiṃsakkhattuṃ virecessati, ekūnattiṃsakkhattuṃ bhagavantaṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.33.9"
msgid "Api ca bhagavā viritto nahāyissati."
msgstr ""

msgctxt "pli-tv-kd8:1.33.10"
msgid "Nahātaṃ bhagavantaṃ sakiṃ virecessati."
msgstr ""

msgctxt "pli-tv-kd8:1.33.11"
msgid "Evaṃ bhagavato samattiṃsāya virecanaṃ bhavissatī’ti."
msgstr ""

msgctxt "pli-tv-kd8:1.33.12"
msgid "Nahāyatu, bhante, bhagavā, nahāyatu sugato”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.33.13"
msgid "Atha kho bhagavā uṇhodakaṃ nahāyi."
msgstr ""

msgctxt "pli-tv-kd8:1.33.14"
msgid "Nahātaṃ bhagavantaṃ sakiṃ virecesi."
msgstr ""

msgctxt "pli-tv-kd8:1.33.15"
msgid "Evaṃ bhagavato samattiṃsāya virecanaṃ ahosi."
msgstr ""

msgctxt "pli-tv-kd8:1.33.16"
msgid "Atha kho jīvako komārabhacco bhagavantaṃ etadavoca—“"
msgstr ""

#. VAR: alaṃ yūsapiṇḍapātenā”ti → alaṃ tāva yūsapiṇḍapātenāti (bj) | alaṃ yūsapiṇḍakenāti (s1-3)
msgctxt "pli-tv-kd8:1.33.17"
msgid "yāva, bhante, bhagavato kāyo pakatatto hoti, alaṃ yūsapiṇḍapātenā”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:1.33.18"
msgid "9. Varayācanākathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc30
msgctxt "pli-tv-kd8:1.33.19"
msgid "Atha kho bhagavato kāyo nacirasseva pakatatto ahosi."
msgstr ""

msgctxt "pli-tv-kd8:1.34.1"
msgid "Atha kho jīvako komārabhacco taṃ siveyyakaṃ dussayugaṃ ādāya yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd8:1.34.2"
msgid "Ekamantaṃ nisinno kho jīvako komārabhacco bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:1.34.3"
msgid "“ekāhaṃ, bhante, bhagavantaṃ varaṃ yācāmī”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.34.4"
msgid "“Atikkantavarā kho, jīvaka, tathāgatā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.34.5"
msgid "“Yañca, bhante, kappati yañca anavajjan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.34.6"
msgid "“Vadehi, jīvakā”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.34.7"
msgid "“Bhagavā, bhante, paṃsukūliko, bhikkhusaṃgho ca."
msgstr ""

msgctxt "pli-tv-kd8:1.34.8"
msgid "Idaṃ me, bhante, siveyyakaṃ dussayugaṃ raññā pajjotena pahitaṃ—"
msgstr ""

msgctxt "pli-tv-kd8:1.34.9"
msgid "bahūnaṃ dussānaṃ bahūnaṃ dussayugānaṃ bahūnaṃ dussayugasatānaṃ bahūnaṃ dussayugasahassānaṃ bahūnaṃ dussayugasatasahassānaṃ aggañca seṭṭhañca mokkhañca uttamañca pavarañca."
msgstr ""

msgctxt "pli-tv-kd8:1.34.10"
msgid "Paṭiggaṇhātu me, bhante, bhagavā siveyyakaṃ dussayugaṃ;"
msgstr ""

msgctxt "pli-tv-kd8:1.34.11"
msgid "bhikkhusaṃghassa ca gahapaticīvaraṃ anujānātū”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.34.12"
msgid "Paṭiggahesi bhagavā siveyyakaṃ dussayugaṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.34.13"
msgid "Atha kho bhagavā jīvakaṃ komārabhaccaṃ dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-kd8:1.34.14"
msgid "Atha kho jīvako komārabhacco bhagavatā dhammiyā kathāya sandassito samādapito samuttejito sampahaṃsito uṭṭhāyāsanā bhagavantaṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:1.35.1"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd8:1.35.2"
msgid "“anujānāmi, bhikkhave, gahapaticīvaraṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.35.3"
msgid "Yo icchati, paṃsukūliko hotu."
msgstr ""

msgctxt "pli-tv-kd8:1.35.4"
msgid "Yo icchati, gahapaticīvaraṃ sādiyatu."
msgstr ""

#. VAR: Itarītarenapāhaṃ → pahaṃ (bj) | cāhaṃ (s1-3)
msgctxt "pli-tv-kd8:1.35.5"
msgid "Itarītarenapāhaṃ, bhikkhave, santuṭṭhiṃ vaṇṇemī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc31, pts-vp-pli1.281
msgctxt "pli-tv-kd8:1.35.6"
msgid "Assosuṃ kho rājagahe manussā—"
msgstr ""

msgctxt "pli-tv-kd8:1.35.7"
msgid "“bhagavatā kira bhikkhūnaṃ gahapaticīvaraṃ anuññātan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.35.8"
msgid "Te ca manussā haṭṭhā ahesuṃ udaggā—"
msgstr ""

msgctxt "pli-tv-kd8:1.35.9"
msgid "“idāni kho mayaṃ dānāni dassāma puññāni karissāma, yato bhagavatā bhikkhūnaṃ gahapaticīvaraṃ anuññātan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.35.10"
msgid "Ekāheneva rājagahe bahūni cīvarasahassāni uppajjiṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc32
msgctxt "pli-tv-kd8:1.35.11"
msgid "Assosuṃ kho jānapadā manussā—"
msgstr ""

msgctxt "pli-tv-kd8:1.35.12"
msgid "“bhagavatā kira bhikkhūnaṃ gahapaticīvaraṃ anuññātan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.35.13"
msgid "Te ca manussā haṭṭhā ahesuṃ udaggā—"
msgstr ""

msgctxt "pli-tv-kd8:1.35.14"
msgid "“idāni kho mayaṃ dānāni dassāma puññāni karissāma, yato bhagavatā bhikkhūnaṃ gahapaticīvaraṃ anuññātan”ti."
msgstr ""

msgctxt "pli-tv-kd8:1.35.15"
msgid "Janapadepi ekāheneva bahūni cīvarasahassāni uppajjiṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc33
msgctxt "pli-tv-kd8:1.36.1"
msgid "Tena kho pana samayena saṃghassa pāvāro uppanno hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.36.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.36.3"
msgid "“Anujānāmi, bhikkhave, pāvāran”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc34
msgctxt "pli-tv-kd8:1.36.4"
msgid "Koseyyapāvāro uppanno hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.36.5"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.36.6"
msgid "“Anujānāmi, bhikkhave, koseyyapāvāran”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc35
msgctxt "pli-tv-kd8:1.36.7"
msgid "Kojavaṃ uppannaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd8:1.36.8"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:1.36.9"
msgid "“Anujānāmi, bhikkhave, kojavan”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc36
msgctxt "pli-tv-kd8:1.36.10"
msgid "Paṭhamabhāṇavāro niṭṭhito."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:2.1.0"
msgid "10. Kambalānujānanādikathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc37
msgctxt "pli-tv-kd8:2.1.1"
msgid "Tena kho pana samayena kāsirājā jīvakassa komārabhaccassa aḍḍhakāsikaṃ kambalaṃ pāhesi upaḍḍhakāsinaṃ khamamānaṃ."
msgstr ""

msgctxt "pli-tv-kd8:2.1.2"
msgid "Atha kho jīvako komārabhacco taṃ aḍḍhakāsikaṃ kambalaṃ ādāya yena bhagavā tenupasaṅkami, upasaṅkamitvā bhagavantaṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-kd8:2.1.3"
msgid "Ekamantaṃ nisinno kho jīvako komārabhacco bhagavantaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-kd8:2.1.4"
msgid "“ayaṃ me, bhante, aḍḍhakāsiko kambalo kāsiraññā pahito upaḍḍhakāsinaṃ khamamāno."
msgstr ""

msgctxt "pli-tv-kd8:2.1.5"
msgid "Paṭiggaṇhātu me, bhante, bhagavā kambalaṃ, yaṃ mamassa dīgharattaṃ hitāya sukhāyā”ti."
msgstr ""

msgctxt "pli-tv-kd8:2.1.6"
msgid "Paṭiggahesi bhagavā kambalaṃ."
msgstr ""

msgctxt "pli-tv-kd8:2.1.7"
msgid "Atha kho bhagavā jīvakaṃ komārabhaccaṃ dhammiyā kathāya sandassesi … pe …"
msgstr ""

msgctxt "pli-tv-kd8:2.1.9"
msgid "padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-kd8:2.1.10"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-kd8:2.1.11"
msgid "“anujānāmi, bhikkhave, kambalan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc38
msgctxt "pli-tv-kd8:3.1.1"
msgid "Tena kho pana samayena saṃghassa uccāvacāni cīvarāni uppannāni honti."
msgstr ""

msgctxt "pli-tv-kd8:3.1.2"
msgid "Atha kho bhikkhūnaṃ etadahosi—"
msgstr ""

msgctxt "pli-tv-kd8:3.1.3"
msgid "“kiṃ nu kho bhagavatā cīvaraṃ anuññātaṃ, kiṃ ananuññātan”ti?"
msgstr ""

msgctxt "pli-tv-kd8:3.1.4"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:3.1.5"
msgid "“Anujānāmi, bhikkhave, cha cīvarāni—"
msgstr ""

msgctxt "pli-tv-kd8:3.1.6"
msgid "khomaṃ kappāsikaṃ koseyyaṃ kambalaṃ sāṇaṃ bhaṅgan”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc39, pts-vp-pli1.282
msgctxt "pli-tv-kd8:3.2.1"
msgid "Tena kho pana samayena ye te bhikkhū gahapaticīvaraṃ sādiyanti te kukkuccāyantā paṃsukūlaṃ na sādiyanti—"
msgstr ""

msgctxt "pli-tv-kd8:3.2.2"
msgid "“ekaṃyeva bhagavatā cīvaraṃ anuññātaṃ, na dve”ti."
msgstr ""

msgctxt "pli-tv-kd8:3.2.3"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:3.2.4"
msgid "“Anujānāmi, bhikkhave, gahapaticīvaraṃ sādiyantena paṃsukūlampi sādiyituṃ;"
msgstr ""

msgctxt "pli-tv-kd8:3.2.5"
msgid "tadubhayenapāhaṃ, bhikkhave, santuṭṭhiṃ vaṇṇemī”ti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-kd8:4.1.0"
msgid "11. Paṃsukūlapariyesanakathā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc40
msgctxt "pli-tv-kd8:4.1.1"
msgid "Tena kho pana samayena sambahulā bhikkhū kosalesu janapade addhānamaggappaṭipannā honti."
msgstr ""

msgctxt "pli-tv-kd8:4.1.2"
msgid "Ekacce bhikkhū susānaṃ okkamiṃsu paṃsukūlāya, ekacce bhikkhū nāgamesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:4.1.3"
msgid "Ye te bhikkhū susānaṃ okkamiṃsu paṃsukūlāya te paṃsukūlāni labhiṃsu."
msgstr ""

msgctxt "pli-tv-kd8:4.1.4"
msgid "Ye te bhikkhū nāgamesuṃ te evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:4.1.5"
msgid "“amhākampi, āvuso, bhāgaṃ dethā”ti."
msgstr ""

msgctxt "pli-tv-kd8:4.1.6"
msgid "Te evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-kd8:4.1.7"
msgid "“na mayaṃ, āvuso, tumhākaṃ bhāgaṃ dassāma."
msgstr ""

msgctxt "pli-tv-kd8:4.1.8"
msgid "Kissa tumhe nāgamitthā”ti?"
msgstr ""

msgctxt "pli-tv-kd8:4.1.9"
msgid "Bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-kd8:4.1.10"
msgid "“Anujānāmi, bhikkhave, nāgamentānaṃ nākāmā bhāgaṃ dātun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc41
msgctxt "pli-tv-kd8:4.2.1"
msgid "Tena kho pana samayena sambahulā bhikkhū kosalesu janapade addhānamaggappaṭipannā honti."
msgstr ""

msgctxt "pli-tv-kd8:4.2.2"
msgid "Ekacce bhikkhū susānaṃ okkamiṃsu paṃsukūlāya, ekacce bhikkhū āgamesuṃ."
