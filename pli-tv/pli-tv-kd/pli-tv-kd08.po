msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.49"
msgid "nāgamesāgamesuṃ ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.50"
msgid "Paṭhamaṃ pacchā sadisā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.51"
msgid "katikā ca paṭiharuṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc202
msgctxt "pli-tv-kd8:32.1.52"
msgid "Bhaṇḍāgāraṃ aguttañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.53"
msgid "vuṭṭhāpenti tatheva ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.54"
msgid "Ussannaṃ kolāhalañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.55"
msgid "kathaṃ bhāje kathaṃ dade."
msgstr ""

#. HTML: </p><p>
#. REF: sc203
