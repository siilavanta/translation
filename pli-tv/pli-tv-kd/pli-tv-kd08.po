msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.27"
msgid "natthukammena nāsayi."
msgstr ""

#. HTML: </p><p>
#. REF: sc196
msgctxt "pli-tv-kd8:32.1.28"
msgid "Rañño bhagandalābādhaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.29"
msgid "ālepena apākaḍḍhi;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.30"
msgid "Mamañca itthāgārañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd8:32.1.31"
