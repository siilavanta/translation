#. HTML: </p><h2>
msgctxt "pli-tv-kd8:32.1.0"
msgid "31. Aṭṭhacīvaramātikā"
msgstr ""

#. HTML: </h2><p>
#. REF: sc189
msgctxt "pli-tv-kd8:32.1.1"
msgid "Aṭṭhimā, bhikkhave, mātikā cīvarassa uppādāya—"
msgstr ""

msgctxt "pli-tv-kd8:32.1.2"
msgid "sīmāya deti, katikāya deti, bhikkhāpaññattiyā deti, saṃghassa deti, ubhatosaṃghassa deti, vassaṃvuṭṭhasaṃghassa deti, ādissa deti, puggalassa deti."
msgstr ""

#. HTML: </p><p>
#. REF: sc190, pts-vp-pli1.310
msgctxt "pli-tv-kd8:32.1.3"
msgid "Sīmāya deti—"
msgstr ""

msgctxt "pli-tv-kd8:32.1.4"
msgid "yāvatikā bhikkhū antosīmagatā tehi bhājetabbaṃ."
msgstr ""

msgctxt "pli-tv-kd8:32.1.5"
msgid "Katikāya deti—"
msgstr ""

msgctxt "pli-tv-kd8:32.1.6"
msgid "sambahulā āvāsā samānalābhā honti ekasmiṃ āvāse dinne sabbattha dinnaṃ hoti."
msgstr ""

msgctxt "pli-tv-kd8:32.1.7"
msgid "Bhikkhāpaññattiyā deti, yattha saṃghassa dhuvakārā kariyyanti, tattha deti."
msgstr ""

msgctxt "pli-tv-kd8:32.1.8"
msgid "Saṃghassa deti, sammukhībhūtena saṃghena bhājetabbaṃ."
msgstr ""

msgctxt "pli-tv-kd8:32.1.9"
msgid "Ubhatosaṃghassa deti, bahukāpi bhikkhū honti, ekā bhikkhunī hoti, upaḍḍhaṃ dātabbaṃ, bahukāpi bhikkhuniyo honti, eko bhikkhu hoti, upaḍḍhaṃ dātabbaṃ."
msgstr ""

msgctxt "pli-tv-kd8:32.1.10"
msgid "Vassaṃvuṭṭhasaṃghassa deti, yāvatikā bhikkhū tasmiṃ āvāse vassaṃvuṭṭhā, tehi bhājetabbaṃ."
msgstr ""

msgctxt "pli-tv-kd8:32.1.11"
msgid "Ādissa deti, yāguyā vā bhatte vā khādanīye vā cīvare vā senāsane vā bhesajje vā."
msgstr ""

msgctxt "pli-tv-kd8:32.1.12"
msgid "Puggalassa deti—‘"
msgstr ""

msgctxt "pli-tv-kd8:32.1.13"
msgid "imaṃ cīvaraṃ itthannāmassa dammī’”ti."
msgstr ""

