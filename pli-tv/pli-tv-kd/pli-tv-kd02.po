msgid "Na theyyasaṃvāsakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.5"
msgid "na titthiyapakkantakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.7"
msgid "na tiracchānagatassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.9"
msgid "na mātughātakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.11"
msgid "na pitughātakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.13"
msgid "na arahantaghātakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.15"
msgid "na bhikkhunidūsakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.17"
msgid "na saṃghabhedakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.19"
msgid "na lohituppādakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.3.21"
msgid "na ubhatobyañjanakassa nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.3.22"
msgid "Yo uddiseyya, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc221
msgctxt "pli-tv-kd2:36.4.1"
msgid "Na, bhikkhave, pārivāsikapārisuddhidānena uposatho kātabbo, aññatra avuṭṭhitāya parisāya."
msgstr ""

msgctxt "pli-tv-kd2:36.4.2"
msgid "Na ca, bhikkhave, anuposathe uposatho kātabbo, aññatra saṃghasāmaggiyā”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc222
msgctxt "pli-tv-kd2:36.4.3"
msgid "Tatiyabhāṇavāro niṭṭhito."
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.4"
msgid "Uposathakkhandhako dutiyo."
msgstr ""

#. HTML: </p><p class="uddana-intro">
#. REF: sc223
msgctxt "pli-tv-kd2:36.4.5"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc224
msgctxt "pli-tv-kd2:36.4.6"
msgid "Titthiyā bimbisāro ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.7"
msgid "sannipatituṃ tuṇhikā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.8"
msgid "Dhammaṃ raho pātimokkhaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.9"
msgid "devasikaṃ tadā sakiṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc225
msgctxt "pli-tv-kd2:36.4.10"
msgid "Yathāparisā samaggaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.11"
msgid "sāmaggī maddakucchi ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.12"
msgid "Sīmā mahatī nadiyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.13"
msgid "anu dve khuddakāni ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc226
msgctxt "pli-tv-kd2:36.4.14"
msgid "Navā rājagahe ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.15"
msgid "Sīmā avippavāsanā;"
msgstr ""

#. HTML: <br>
#. VAR: Sammanne → sammane (mr)
msgctxt "pli-tv-kd2:36.4.16"
msgid "Sammanne paṭhamaṃ sīmaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.17"
msgid "Pacchā sīmaṃ samūhane."
msgstr ""

#. HTML: </p><p>
#. REF: sc227
msgctxt "pli-tv-kd2:36.4.18"
msgid "Asammatā gāmasīmā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.19"
msgid "nadiyā samudde sare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.20"
msgid "Udakukkhepo bhindanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.21"
msgid "tathevajjhottharanti ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc228
msgctxt "pli-tv-kd2:36.4.22"
msgid "Kati kammāni uddeso,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.23"
msgid "savarā asatīpi ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.24"
msgid "Dhammaṃ vinayaṃ tajjenti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.25"
msgid "puna vinayatajjanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc229
msgctxt "pli-tv-kd2:36.4.26"
msgid "Codanā kate okāse,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.27"
msgid "adhammappaṭikkosanā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.28"
msgid "Catupañcaparā āvi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.29"
msgid "sañcicca cepi vāyame."
msgstr ""

#. HTML: </p><p>
#. REF: sc230
msgctxt "pli-tv-kd2:36.4.30"
msgid "Sagahaṭṭhā anajjhiṭṭhā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.31"
msgid "codanamhi na jānati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.32"
msgid "Sambahulā na jānanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.33"
msgid "sajjukaṃ na ca gacchare."
msgstr ""

#. HTML: </p><p>
#. REF: sc231
msgctxt "pli-tv-kd2:36.4.34"
msgid "Katimī kīvatikā dūre,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.35"
msgid "ārocetuñca nassari;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.36"
msgid "Uklāpaṃ āsanaṃ dīpo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.37"
msgid "disā añño bahussuto."
msgstr ""

#. HTML: </p><p>
#. REF: sc232
#. VAR: Sajjukaṃ vassuposatho → sajjucassuposatho (si) | sajjuvassuposathe (si) | sajjuvassaruposatho (mr)
msgctxt "pli-tv-kd2:36.4.38"
msgid "Sajjukaṃ vassuposatho,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.39"
msgid "suddhikammañca ñātakā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.40"
msgid "Gaggo catutayo dveko,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.41"
msgid "āpattisabhāgā sari."
msgstr ""

#. HTML: </p><p>
#. REF: sc233
msgctxt "pli-tv-kd2:36.4.42"
msgid "Sabbo saṃgho vematiko,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.43"
msgid "na jānanti bahussuto;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.44"
msgid "Bahū samasamā thokā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.45"
msgid "parisā avuṭṭhitāya ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc234
msgctxt "pli-tv-kd2:36.4.46"
msgid "Ekaccā vuṭṭhitā sabbā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.47"
msgid "jānanti ca vematikā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.48"
msgid "Kappatevāti kukkuccā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.49"
msgid "jānaṃ passaṃ suṇanti ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc235
msgctxt "pli-tv-kd2:36.4.50"
msgid "Āvāsikena āgantu,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.51"
msgid "cātupannaraso puna;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.52"
msgid "Pāṭipado pannaraso,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.53"
msgid "liṅgasaṃvāsakā ubho."
msgstr ""

#. HTML: </p><p>
#. REF: sc236
msgctxt "pli-tv-kd2:36.4.54"
msgid "Pārivāsānuposatho,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.55"
msgid "aññatra saṃghasāmaggiyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.56"
msgid "Ete vibhattā uddānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd2:36.4.57"
msgid "vatthuvibhūtakāraṇāti."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc237
msgctxt "pli-tv-kd2:36.4.58"
msgid "Imasmiṃ khandhake vatthūni chaasīti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc238
msgctxt "pli-tv-kd2:36.4.59"
msgid "Uposathakkhandhako niṭṭhito."
msgstr ""

