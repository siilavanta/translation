msgstr ""

#. HTML: </h2><p>
#. REF: sc218
msgctxt "pli-tv-kd2:36.1.1"
msgid "Na, bhikkhave, bhikkhuniyā nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.1.2"
msgid "Yo uddiseyya, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-kd2:36.1.3"
msgid "Na sikkhamānāya … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.1.5"
msgid "na sāmaṇerassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.1.7"
msgid "na sāmaṇeriyā … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.1.9"
msgid "na sikkhāpaccakkhātakassa … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.1.11"
msgid "na antimavatthuṃ ajjhāpannakassa nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.1.12"
msgid "Yo uddiseyya, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc219
msgctxt "pli-tv-kd2:36.2.1"
msgid "Na āpattiyā adassane ukkhittakassa nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.2.2"
msgid "Yo uddiseyya, yathādhammo kāretabbo."
msgstr ""

msgctxt "pli-tv-kd2:36.2.3"
msgid "Na āpattiyā appaṭikamme ukkhittakassa nisinnaparisāya … pe …"
msgstr ""

msgctxt "pli-tv-kd2:36.2.5"
msgid "na pāpikāya diṭṭhiyā appaṭinissagge ukkhittakassa nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.2.6"
msgid "Yo uddiseyya, yathādhammo kāretabbo."
msgstr ""

#. HTML: </p><p>
#. REF: sc220, pts-vp-pli1.136
msgctxt "pli-tv-kd2:36.3.1"
msgid "Na paṇḍakassa nisinnaparisāya pātimokkhaṃ uddisitabbaṃ."
msgstr ""

msgctxt "pli-tv-kd2:36.3.2"
msgid "Yo uddiseyya, āpatti dukkaṭassa."
msgstr ""

