msgctxt "pli-tv-kd17:5.5.45"
msgid "aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.46"
msgid "tasmiṃ adhammadiṭṭhi, bhede adhammadiṭṭhi … pe …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.48"
msgid "tasmiṃ adhammadiṭṭhi, bhede dhammadiṭṭhi …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.49"
msgid "tasmiṃ adhammadiṭṭhi, bhede vematiko …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.50"
msgid "tasmiṃ dhammadiṭṭhi, bhede adhammadiṭṭhi …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.51"
msgid "tasmiṃ dhammadiṭṭhi, bhede dhammadiṭṭhi …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.52"
msgid "tasmiṃ dhammadiṭṭhi, bhede vematiko …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.53"
msgid "tasmiṃ vematiko, bhede adhammadiṭṭhi …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.54"
msgid "tasmiṃ vematiko, bhede dhammadiṭṭhi …"
msgstr ""

msgctxt "pli-tv-kd17:5.5.55"
msgid "tasmiṃ vematiko, bhede vematiko, vinidhāya diṭṭhiṃ, vinidhāya khantiṃ, vinidhāya ruciṃ, vinidhāya bhāvaṃ, anussāveti, salākaṃ gāheti—‘"
msgstr ""

msgctxt "pli-tv-kd17:5.5.56"
msgid "ayaṃ dhammo, ayaṃ vinayo, idaṃ satthusāsanaṃ, imaṃ gaṇhatha, imaṃ rocethā’ti."
msgstr ""

msgctxt "pli-tv-kd17:5.5.57"
msgid "Ayampi kho, upāli, saṃghabhedako āpāyiko, nerayiko, kappaṭṭho, atekiccho”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc155, pts-vp-pli2.206
msgctxt "pli-tv-kd17:5.6.1"
msgid "“Katamo pana, bhante, saṃghabhedako na āpāyiko, na nerayiko, na kappaṭṭho, na atekiccho”ti?"
msgstr ""

msgctxt "pli-tv-kd17:5.6.2"
msgid "“Idhupāli, bhikkhu adhammaṃ dhammoti dīpeti."
msgstr ""

msgctxt "pli-tv-kd17:5.6.3"
msgid "Tasmiṃ dhammadiṭṭhi, bhede dhammadiṭṭhi, avinidhāya diṭṭhiṃ, avinidhāya khantiṃ, avinidhāya ruciṃ, avinidhāya bhāvaṃ, anussāveti, salākaṃ gāheti—‘"
msgstr ""

msgctxt "pli-tv-kd17:5.6.4"
msgid "ayaṃ dhammo, ayaṃ vinayo, idaṃ satthusāsanaṃ, imaṃ gaṇhatha, imaṃ rocethā’ti."
msgstr ""

msgctxt "pli-tv-kd17:5.6.5"
msgid "Ayampi kho, upāli, saṃghabhedako na āpāyiko, na nerayiko, na kappaṭṭho, na atekiccho."
msgstr ""

#. HTML: </p><p>
#. REF: sc156
msgctxt "pli-tv-kd17:5.6.6"
msgid "Puna caparaṃ, upāli, bhikkhu dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-kd17:5.6.8"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-kd17:5.6.9"
msgid "Tasmiṃ dhammadiṭṭhi, bhede dhammadiṭṭhi, avinidhāya diṭṭhiṃ, avinidhāya khantiṃ, avinidhāya ruciṃ, avinidhāya bhāvaṃ, anussāveti, salākaṃ gāheti—‘"
msgstr ""

msgctxt "pli-tv-kd17:5.6.10"
msgid "ayaṃ dhammo, ayaṃ vinayo, idaṃ satthusāsanaṃ, imaṃ gaṇhatha, imaṃ rocethā’ti."
msgstr ""

msgctxt "pli-tv-kd17:5.6.11"
msgid "Ayampi kho, upāli, saṃghabhedako na āpāyiko, na nerayiko, na kappaṭṭho, na atekiccho”ti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc157
msgctxt "pli-tv-kd17:5.6.12"
msgid "Tatiyabhāṇavāro niṭṭhito."
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:5.6.13"
msgid "Saṃghabhedakakkhandhako sattamo."
msgstr ""

#. HTML: </p><p class="uddana-intro">
#. REF: sc158
msgctxt "pli-tv-kd17:6.1.1"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc159
msgctxt "pli-tv-kd17:6.1.2"
msgid "Anupiye abhiññātā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.3"
msgid "sukhumālo na icchati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.4"
msgid "Kasā vapā abhi ninne,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.5"
msgid "niddhā lāve ca ubbahe."
msgstr ""

#. HTML: </p><p>
#. REF: sc160
msgctxt "pli-tv-kd17:6.1.6"
msgid "Puñjamaddapalālañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.7"
msgid "bhusaophuṇanīhare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.8"
msgid "Āyatimpi na khīyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.9"
msgid "pitaro ca pitāmahā."
msgstr ""

#. HTML: </p><p>
#. REF: sc161
msgctxt "pli-tv-kd17:6.1.10"
msgid "Bhaddiyo anuruddho ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.11"
msgid "ānando bhagu kimilo;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.12"
msgid "Sakyamāno ca kosambiṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.13"
msgid "parihāyi kakudhena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc162
msgctxt "pli-tv-kd17:6.1.14"
msgid "Pakāsesi pituno ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.15"
msgid "purise silaṃ nāḷāgiriṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.16"
msgid "Tikapañcagaruko kho,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.17"
msgid "bhindi thullaccayena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.18"
msgid "Tayo aṭṭha puna tīṇi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-kd17:6.1.19"
msgid "rāji bhedā siyā nu khoti."
msgstr ""

#. HTML: </p></blockquote><p class="endsection">
#. REF: sc163
msgctxt "pli-tv-kd17:6.1.20"
msgid "Saṃghabhedakakkhandhako niṭṭhito."
msgstr ""

