#. HTML: <section class="sutta" id="pli-tv-pvr15"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-pvr15:1.1"
msgid "Parivāra"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-pvr15:2.1"
msgid "Mahāsaṅgāma"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-pvr15:3.1"
msgid "1. Voharantenajānitabbādi"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1, pts-vp-pli5.166
msgctxt "pli-tv-pvr15:4.1"
msgid "Saṅgāmāvacarena bhikkhunā saṃghe voharantena vatthu jānitabbaṃ, vipatti jānitabbā, āpatti jānitabbā, nidānaṃ jānitabbaṃ, ākāro jānitabbo, pubbāparaṃ jānitabbaṃ, katākataṃ jānitabbaṃ, kammaṃ jānitabbaṃ, adhikaraṇaṃ jānitabbaṃ, samatho jānitabbo, na chandāgati gantabbā, na dosāgati gantabbā, na mohāgati gantabbā, na bhayāgati gantabbā, saññāpanīye ṭhāne saññāpetabbaṃ, nijjhāpanīye ṭhāne nijjhāpetabbaṃ, pekkhanīye ṭhāne pekkhitabbaṃ, pasādanīye ṭhāne pasādetabbaṃ, “laddhapakkhomhī”ti parapakkho nāvajānitabbo, bahussutomhīti appassuto nāvajānitabbo, therataromhīti navakataro nāvajānitabbo, asampattaṃ na byāhātabbaṃ, sampattaṃ dhammato vinayato na parihāpetabbaṃ, yena dhammena yena vinayena yena satthusāsanena taṃ adhikaraṇaṃ vūpasammati, tathā taṃ adhikaraṇaṃ vūpasametabbaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
#. VAR: aṭṭhapārājikānaṃ → aṭṭhannaṃ pārājikānaṃ (pts1, mr)+. HTML: <b>
msgctxt "pli-tv-pvr15:5.1"
msgid "Vatthu jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:5.2"
msgid "aṭṭhapārājikānaṃ vatthu jānitabbaṃ, tevīsasaṃghādisesānaṃ vatthu jānitabbaṃ, dveaniyatānaṃ vatthu jānitabbaṃ, dvecattārīsanissaggiyānaṃ vatthu jānitabbaṃ, aṭṭhāsītisatapācittiyānaṃ vatthu jānitabbaṃ, dvādasapāṭidesanīyānaṃ vatthu jānitabbaṃ, dukkaṭānaṃ vatthu jānitabbaṃ, dubbhāsitānaṃ vatthu jānitabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc3
msgctxt "pli-tv-pvr15:6.1"
msgid "Vipatti jānitabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:6.2"
msgid "sīlavipatti jānitabbā, ācāravipatti jānitabbā, diṭṭhivipatti jānitabbā, ājīvavipatti jānitabbā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc4
msgctxt "pli-tv-pvr15:7.1"
msgid "Āpatti jānitabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:7.2"
msgid "pārājikāpatti jānitabbā, saṃghādisesāpatti jānitabbā, thullaccayāpatti jānitabbā, pācittiyāpatti jānitabbā, pāṭidesanīyāpatti jānitabbā, dukkaṭāpatti jānitabbā, dubbhāsitāpatti jānitabbā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-pvr15:8.1"
msgid "Nidānaṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:8.2"
msgid "aṭṭhapārājikānaṃ nidānaṃ jānitabbaṃ, tevīsasaṃghādisesānaṃ nidānaṃ jānitabbaṃ, dveaniyatānaṃ nidānaṃ jānitabbaṃ, dvecattārīsanissaggiyānaṃ nidānaṃ jānitabbaṃ, aṭṭhāsītisatapācittiyānaṃ nidānaṃ jānitabbaṃ, dvādasapāṭidesanīyānaṃ nidānaṃ jānitabbaṃ, dukkaṭānaṃ nidānaṃ jānitabbaṃ, dubbhāsitānaṃ nidānaṃ jānitabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6, pts-vp-pli5.167
msgctxt "pli-tv-pvr15:9.1"
msgid "Ākāro jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.2"
msgid "saṃgho ākārato jānitabbo, gaṇo ākārato jānitabbo, puggalo ākārato jānitabbo, codako ākārato jānitabbo, cuditako ākārato jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:9.3"
msgid "Saṃgho ākārato jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.4"
msgid "paṭibalo nu kho ayaṃ saṃgho imaṃ adhikaraṇaṃ vūpasametuṃ dhammena vinayena satthusāsanena udāhu noti, evaṃ saṃgho ākārato jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:9.5"
msgid "Gaṇo ākārato jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.6"
msgid "paṭibalo nu kho ayaṃ gaṇo imaṃ adhikaraṇaṃ vūpasametuṃ dhammena vinayena satthusāsanena udāhu noti, evaṃ gaṇo ākārato jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:9.7"
msgid "Puggalo ākārato jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.8"
msgid "paṭibalo nu kho ayaṃ puggalo imaṃ adhikaraṇaṃ vūpasametuṃ dhammena vinayena satthusāsanena udāhu noti, evaṃ puggalo ākārato jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:9.9"
msgid "Codako ākārato jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.10"
msgid "kacci nu kho ayamāyasmā pañcasu dhammesu patiṭṭhāya paraṃ codeti udāhu noti, evaṃ codako ākārato jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:9.11"
msgid "Cuditako ākārato jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:9.12"
msgid "kacci nu kho ayamāyasmā dvīsu dhammesu patiṭṭhito sacce ca akuppe ca udāhu noti, evaṃ cuditako ākārato jānitabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-pvr15:10.1"
msgid "Pubbāparaṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:10.2"
msgid "kacci nu kho ayamāyasmā vatthuto vā vatthuṃ saṅkamati, vipattito vā vipattiṃ saṅkamati, āpattito vā āpattiṃ saṅkamati, avajānitvā vā paṭijānāti, paṭijānitvā vā avajānāti, aññena vā aññaṃ paṭicarati, udāhu noti, evaṃ pubbāparaṃ jānitabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-pvr15:11.1"
msgid "Katākataṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:11.2"
msgid "methunadhammo jānitabbo, methunadhammassa anulomaṃ jānitabbaṃ, methunadhammassa pubbabhāgo jānitabbo."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:11.3"
msgid "Methunadhammo jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:11.4"
msgid "dvayaṃdvayasamāpatti jānitabbā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:11.5"
msgid "Methunadhammassa anulomaṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:11.6"
msgid "bhikkhu attano mukhena parassa aṅgajātaṃ gaṇhāti."
msgstr ""

#. VAR: vaṇṇāvaṇṇo → vaṇṇo avaṇṇo (s1-3)
#. VAR: vacanamanuppadānaṃ → vaṇṇamanuppādanaṃ (s1-3) | dhanamanuppadānaṃ (pts1, mr)+. HTML: <b>
msgctxt "pli-tv-pvr15:11.7"
msgid "Methunadhammassa pubbabhāgo jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:11.8"
msgid "vaṇṇāvaṇṇo, kāyasaṃsaggo, duṭṭhullavācā, attakāmapāricariyā, vacanamanuppadānaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-pvr15:12.1"
msgid "Kammaṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:12.2"
msgid "soḷasakammāni jānitabbāni—"
msgstr ""

msgctxt "pli-tv-pvr15:12.3"
msgid "cattāri apalokanakammāni jānitabbāni, cattāri ñattikammāni jānitabbāni, cattāri ñattidutiyakammāni jānitabbāni, cattāri ñatticatutthakammāni jānitabbāni."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-pvr15:13.1"
msgid "Adhikaraṇaṃ jānitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:13.2"
msgid "cattāri adhikaraṇāni jānitabbāni—"
msgstr ""

msgctxt "pli-tv-pvr15:13.3"
msgid "vivādādhikaraṇaṃ jānitabbaṃ, anuvādādhikaraṇaṃ jānitabbaṃ, āpattādhikaraṇaṃ jānitabbaṃ, kiccādhikaraṇaṃ jānitabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-pvr15:14.1"
msgid "Samatho jānitabboti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:14.2"
msgid "satta samathā jānitabbā—"
msgstr ""

msgctxt "pli-tv-pvr15:14.3"
msgid "sammukhāvinayo jānitabbo, sativinayo jānitabbo, amūḷhavinayo jānitabbo, paṭiññātakaraṇaṃ jānitabbaṃ, yebhuyyasikā jānitabbā, tassapāpiyasikā jānitabbā, tiṇavatthārako jānitabbo."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr15:15.1"
msgid "2. Agatiagantabba"
msgstr ""

#. HTML: </h2><p><b>
#. REF: sc12, pts-vp-pli5.168
msgctxt "pli-tv-pvr15:16.1"
msgid "Na chandāgati gantabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:16.2"
msgid "chandāgatiṃ gacchanto kathaṃ chandāgatiṃ gacchati?"
msgstr ""

msgctxt "pli-tv-pvr15:16.3"
msgid "Idhekacco—"
msgstr ""

msgctxt "pli-tv-pvr15:16.4"
msgid "“ayaṃ me upajjhāyo vā ācariyo vā saddhivihāriko vā antevāsiko vā samānupajjhāyako vā samānācariyako vā sandiṭṭho vā sambhatto vā ñātisālohito vā”ti, tassānukampāya tassānurakkhāya adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti, avinayaṃ vinayoti dīpeti, vinayaṃ avinayoti dīpeti, abhāsitaṃ alapitaṃ tathāgatena bhāsitaṃ lapitaṃ tathāgatenāti dīpeti, bhāsitaṃ lapitaṃ tathāgatena abhāsitaṃ alapitaṃ tathāgatenāti dīpeti, anāciṇṇaṃ tathāgatena āciṇṇaṃ tathāgatenāti dīpeti, āciṇṇaṃ tathāgatena anāciṇṇaṃ tathāgatenāti dīpeti, apaññattaṃ tathāgatena paññattaṃ tathāgatenāti dīpeti, paññattaṃ tathāgatena apaññattaṃ tathāgatenāti dīpeti, anāpattiṃ āpattīti dīpeti, āpattiṃ anāpattīti dīpeti, lahukaṃ āpattiṃ garukā āpattīti dīpeti, garukaṃ āpattiṃ lahukā āpattīti dīpeti, sāvasesaṃ āpattiṃ anavasesā āpattīti dīpeti, anavasesaṃ āpattiṃ sāvasesā āpattīti dīpeti, duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:16.5"
msgid "Imehi aṭṭhārasahi vatthūhi chandāgatiṃ gacchanto bahujanāhitāya paṭipanno hoti bahujanāsukhāya bahuno janassa anatthāya ahitāya dukkhāya devamanussānaṃ."
msgstr ""

msgctxt "pli-tv-pvr15:16.6"
msgid "Imehi aṭṭhārasahi vatthūhi chandāgatiṃ gacchanto khataṃ upahataṃ attānaṃ pariharati, sāvajjo ca hoti sānuvajjo ca viññūnaṃ, bahuñca apuññaṃ pasavati."
msgstr ""

msgctxt "pli-tv-pvr15:16.7"
msgid "Chandāgatiṃ gacchanto evaṃ chandāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-pvr15:17.1"
msgid "Na dosāgati gantabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:17.2"
msgid "dosāgatiṃ gacchanto kathaṃ dosāgatiṃ gacchati?"
msgstr ""

msgctxt "pli-tv-pvr15:17.3"
msgid "Idhekacco anatthaṃ me acarīti āghātaṃ bandhati, anatthaṃ me caratīti āghātaṃ bandhati, anatthaṃ me carissatīti āghātaṃ bandhati, piyassa me manāpassa anatthaṃ acari …"
msgstr ""

msgctxt "pli-tv-pvr15:17.4"
msgid "anatthaṃ carati …"
msgstr ""

msgctxt "pli-tv-pvr15:17.5"
msgid "anatthaṃ carissatīti āghātaṃ bandhati, appiyassa me amanāpassa atthaṃ acari …"
msgstr ""

msgctxt "pli-tv-pvr15:17.6"
msgid "atthaṃ carati …"
msgstr ""

msgctxt "pli-tv-pvr15:17.7"
msgid "atthaṃ carissatīti āghātaṃ bandhati."
msgstr ""

#. VAR: āghāto paṭighāto → āghātito paṭighātito (bj, pts1)
msgctxt "pli-tv-pvr15:17.8"
msgid "Imehi navahi āghātavatthūhi āghāto paṭighāto kuddho kodhābhibhūto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:17.9"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:17.10"
msgid "Imehi aṭṭhārasahi vatthūhi dosāgatiṃ gacchanto bahujanāhitāya paṭipanno hoti bahujanāsukhāya bahuno janassa anatthāya ahitāya dukkhāya devamanussānaṃ."
msgstr ""

msgctxt "pli-tv-pvr15:17.11"
msgid "Imehi aṭṭhārasahi vatthūhi dosāgatiṃ gacchanto khataṃ upahataṃ attānaṃ pariharati, sāvajjo ca hoti sānuvajjo ca viññūnaṃ bahuñca apuññaṃ pasavati."
msgstr ""

msgctxt "pli-tv-pvr15:17.12"
msgid "Dosāgatiṃ gacchanto evaṃ dosāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-pvr15:18.1"
msgid "Na mohāgati gantabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:18.2"
msgid "mohāgatiṃ gacchanto kathaṃ mohāgatiṃ gacchati?"
msgstr ""

msgctxt "pli-tv-pvr15:18.3"
msgid "Ratto rāgavasena gacchati, duṭṭho dosavasena gacchati, mūḷho mohavasena gacchati, parāmaṭṭho diṭṭhivasena gacchati, mūḷho sammūḷho mohābhibhūto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:18.4"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:18.5"
msgid "Imehi aṭṭhārasahi vatthūhi mohāgatiṃ gacchanto bahujanāhitāya paṭipanno hoti bahujanāsukhāya bahuno janassa anatthāya ahitāya dukkhāya devamanussānaṃ."
msgstr ""

msgctxt "pli-tv-pvr15:18.6"
msgid "Imehi aṭṭhārasahi vatthūhi mohāgatiṃ gacchanto khataṃ upahataṃ attānaṃ pariharati, sāvajjo ca hoti sānuvajjo ca viññūnaṃ, bahuñca apuññaṃ pasavati."
msgstr ""

msgctxt "pli-tv-pvr15:18.7"
msgid "Mohāgatiṃ gacchanto evaṃ mohāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-pvr15:19.1"
msgid "Na bhayāgati gantabbāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:19.2"
msgid "bhayāgatiṃ gacchanto kathaṃ bhayāgatiṃ gacchati?"
msgstr ""

msgctxt "pli-tv-pvr15:19.3"
msgid "Idhekacco—"
msgstr ""

msgctxt "pli-tv-pvr15:19.4"
msgid "“ayaṃ visamanissito vā gahananissito vā balavanissito vā kakkhaḷo pharuso jīvitantarāyaṃ vā brahmacariyantarāyaṃ vā karissatī”ti, tassa bhayā bhīto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti, avinayaṃ vinayoti dīpeti, vinayaṃ avinayoti dīpeti, abhāsitaṃ alapitaṃ tathāgatena bhāsitaṃ lapitaṃ tathāgatenāti dīpeti, bhāsitaṃ lapitaṃ tathāgatena abhāsitaṃ alapitaṃ tathāgatenāti dīpeti, anāciṇṇaṃ tathāgatena āciṇṇaṃ tathāgatenāti dīpeti, āciṇṇaṃ tathāgatena anāciṇṇaṃ tathāgatenāti dīpeti, apaññattaṃ tathāgatena paññattaṃ tathāgatenāti dīpeti, paññattaṃ tathāgatena apaññattaṃ tathāgatenāti dīpeti, anāpattiṃ āpattīti dīpeti, āpattiṃ anāpattīti dīpeti, lahukaṃ āpattiṃ garukā āpattīti dīpeti, garukaṃ āpattiṃ lahukā āpattīti dīpeti, sāvasesaṃ āpattiṃ anavasesā āpattīti dīpeti, anavasesaṃ āpattiṃ sāvasesā āpattīti dīpeti, duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:19.5"
msgid "Imehi aṭṭhārasahi vatthūhi bhayāgatiṃ gacchanto bahujanāhitāya paṭipanno hoti bahujanāsukhāya bahuno janassa anatthāya ahitāya dukkhāya devamanussānaṃ."
msgstr ""

msgctxt "pli-tv-pvr15:19.6"
msgid "Imehi aṭṭhārasahi vatthūhi bhayāgatiṃ gacchanto khataṃ upahataṃ attānaṃ pariharati, sāvajjo ca hoti, sānuvajjo ca viññūnaṃ, bahuñca apuññaṃ pasavati."
msgstr ""

msgctxt "pli-tv-pvr15:19.7"
msgid "Bhayāgatiṃ gacchanto evaṃ bhayāgatiṃ gacchati."
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc16
msgctxt "pli-tv-pvr15:20.1"
msgid "Chandā dosā bhayā mohā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:20.2"
msgid "yo dhammaṃ ativattati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:20.3"
msgid "Nihīyati tassa yaso,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:20.4"
msgid "kāḷapakkheva candimāti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr15:21.1"
msgid "3. Agatiagamana"
msgstr ""

#. HTML: </h2><p><b>
#. REF: sc17, pts-vp-pli5.169
msgctxt "pli-tv-pvr15:22.1"
msgid "Kathaṃ na chandāgatiṃ gacchati?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:22.2"
msgid "Adhammaṃ adhammoti dīpento na chandāgatiṃ gacchati, dhammaṃ dhammoti dīpento na chandāgatiṃ gacchati, avinayaṃ avinayoti dīpento na chandāgatiṃ gacchati, vinayaṃ vinayoti dīpento na chandāgatiṃ gacchati, abhāsitaṃ alapitaṃ tathāgatena abhāsitaṃ alapitaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, bhāsitaṃ lapitaṃ tathāgatena bhāsitaṃ lapitaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, anāciṇṇaṃ tathāgatena anāciṇṇaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, āciṇṇaṃ tathāgatena āciṇṇaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, apaññattaṃ tathāgatena apaññattaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, paññattaṃ tathāgatena paññattaṃ tathāgatenāti dīpento na chandāgatiṃ gacchati, anāpattiṃ anāpattīti dīpento na chandāgatiṃ gacchati, āpattiṃ āpattīti dīpento na chandāgatiṃ gacchati, lahukaṃ āpattiṃ lahukā āpattīti dīpento na chandāgatiṃ gacchati, garukaṃ āpattiṃ garukā āpattīti dīpento na chandāgatiṃ gacchati, sāvasesaṃ āpattiṃ sāvasesā āpattīti dīpento na chandāgatiṃ gacchati, anavasesaṃ āpattiṃ anavasesā āpattīti dīpento na chandāgatiṃ gacchati, duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento na chandāgatiṃ gacchati, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento na chandāgatiṃ gacchati."
msgstr ""

msgctxt "pli-tv-pvr15:22.3"
msgid "Evaṃ na chandāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc18
msgctxt "pli-tv-pvr15:23.1"
msgid "Kathaṃ na dosāgatiṃ gacchati?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:23.2"
msgid "Adhammaṃ adhammoti dīpento na dosāgatiṃ gacchati, dhammaṃ dhammoti dīpento na dosāgatiṃ gacchati … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:23.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento na dosāgatiṃ gacchati, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento na dosāgatiṃ gacchati."
msgstr ""

msgctxt "pli-tv-pvr15:23.4"
msgid "Evaṃ na dosāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc19
msgctxt "pli-tv-pvr15:24.1"
msgid "Kathaṃ na mohāgatiṃ gacchati?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:24.2"
msgid "Adhammaṃ adhammoti dīpento na mohāgatiṃ gacchati, dhammaṃ dhammoti dīpento na mohāgatiṃ gacchati … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:24.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento na mohāgatiṃ gacchati, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento na mohāgatiṃ gacchati."
msgstr ""

msgctxt "pli-tv-pvr15:24.4"
msgid "Evaṃ na mohāgatiṃ gacchati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20
msgctxt "pli-tv-pvr15:25.1"
msgid "Kathaṃ na bhayāgatiṃ gacchati?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:25.2"
msgid "Adhammaṃ adhammoti dīpento na bhayāgatiṃ gacchati, dhammaṃ dhammoti dīpento na bhayāgatiṃ gacchati, avinayaṃ avinayoti dīpento na bhayāgatiṃ gacchati, vinayaṃ vinayoti dīpento na bhayāgatiṃ gacchati, abhāsitaṃ alapitaṃ tathāgatena abhāsitaṃ alapitaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, bhāsitaṃ lapitaṃ tathāgatena bhāsitaṃ lapitaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, anāciṇṇaṃ tathāgatena anāciṇṇaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, āciṇṇaṃ tathāgatena āciṇṇaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, apaññattaṃ tathāgatena apaññattaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, paññattaṃ tathāgatena paññattaṃ tathāgatenāti dīpento na bhayāgatiṃ gacchati, anāpattiṃ anāpattīti dīpento na bhayāgatiṃ gacchati, āpattiṃ āpattīti dīpento na bhayāgatiṃ gacchati, lahukaṃ āpattiṃ lahukā āpattīti dīpento na bhayāgatiṃ gacchati, garukaṃ āpattiṃ garukā āpattīti dīpento na bhayāgatiṃ gacchati, sāvasesaṃ āpattiṃ sāvasesā āpattīti dīpento na bhayāgatiṃ gacchati, anavasesaṃ āpattiṃ anavasesā āpattīti dīpento na bhayāgatiṃ gacchati, duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento na bhayāgatiṃ gacchati, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento na bhayāgatiṃ gacchati."
msgstr ""

msgctxt "pli-tv-pvr15:25.3"
msgid "Evaṃ na bhayāgatiṃ gacchati."
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc21
msgctxt "pli-tv-pvr15:26.1"
msgid "Chandā dosā bhayā mohā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:26.2"
msgid "yo dhammaṃ nātivattati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:26.3"
msgid "Āpūrati tassa yaso,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:26.4"
msgid "sukkapakkheva candimāti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr15:27.1"
msgid "4. Saññāpanīyādi"
msgstr ""

#. HTML: </h2><p><b>
#. REF: sc22
msgctxt "pli-tv-pvr15:28.1"
msgid "Kathaṃ saññāpanīye ṭhāne saññāpeti?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:28.2"
msgid "Adhammaṃ adhammoti dīpento saññāpanīye ṭhāne saññāpeti, dhammaṃ dhammoti dīpento saññāpanīye ṭhāne saññāpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:28.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento saññāpanīye ṭhāne saññāpeti, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento saññāpanīye ṭhāne saññāpeti."
msgstr ""

msgctxt "pli-tv-pvr15:28.4"
msgid "Evaṃ saññāpanīye ṭhāne saññāpeti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc23
msgctxt "pli-tv-pvr15:29.1"
msgid "Kathaṃ nijjhāpanīye ṭhāne nijjhāpeti?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:29.2"
msgid "Adhammaṃ adhammoti dīpento nijjhāpanīye ṭhāne nijjhāpeti, dhammaṃ dhammoti dīpento nijjhāpanīye ṭhāne nijjhāpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:29.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento nijjhāpanīye ṭhāne nijjhāpeti, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento nijjhāpanīye ṭhāne nijjhāpeti."
msgstr ""

msgctxt "pli-tv-pvr15:29.4"
msgid "Evaṃ nijjhāpanīye ṭhāne nijjhāpeti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc24
msgctxt "pli-tv-pvr15:30.1"
msgid "Kathaṃ pekkhanīye ṭhāne pekkhati?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:30.2"
msgid "Adhammaṃ adhammoti dīpento pekkhanīye ṭhāne pekkhati, dhammaṃ dhammoti dīpento pekkhanīye ṭhāne pekkhati … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:30.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento pekkhanīye ṭhāne pekkhati, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento pekkhanīye ṭhāne pekkhati."
msgstr ""

msgctxt "pli-tv-pvr15:30.4"
msgid "Evaṃ pekkhanīye ṭhāne pekkhati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc25
msgctxt "pli-tv-pvr15:31.1"
msgid "Kathaṃ pasādanīye ṭhāne pasādeti?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:31.2"
msgid "Adhammaṃ adhammoti dīpento pasādanīye ṭhāne pasādeti, dhammaṃ dhammoti dīpento pasādanīye ṭhāne pasādeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:31.3"
msgid "duṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpento pasādanīye ṭhāne pasādeti, aduṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpento pasādanīye ṭhāne pasādeti."
msgstr ""

msgctxt "pli-tv-pvr15:31.4"
msgid "Evaṃ pasādanīye ṭhāne pasādeti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr15:32.1"
msgid "5. Parapakkhādiavajānana"
msgstr ""

#. HTML: </h2><p><b>
#. REF: sc26
msgctxt "pli-tv-pvr15:33.1"
msgid "Kathaṃ laddhapakkhomhīti parapakkhaṃ avajānāti?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:33.2"
msgid "Idhekacco laddhapakkho hoti laddhaparivāro pakkhavā ñātimā."
msgstr ""

msgctxt "pli-tv-pvr15:33.3"
msgid "“Ayaṃ aladdhapakkho aladdhaparivāro na pakkhavā na ñātimā”ti tassa avajānanto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:33.4"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:33.5"
msgid "Evaṃ laddhapakkhomhīti parapakkhaṃ avajānāti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc27
msgctxt "pli-tv-pvr15:34.1"
msgid "Kathaṃ bahussutomhīti appassutaṃ avajānāti?"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:34.2"
msgid "Idhekacco bahussuto hoti sutadharo sutasannicayo."
msgstr ""

msgctxt "pli-tv-pvr15:34.3"
msgid "“Ayaṃ appassuto appāgamo appadharo”ti tassa avajānanto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:34.4"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:34.5"
msgid "Evaṃ bahussutomhīti appassutaṃ avajānāti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc28, pts-vp-pli5.170
msgctxt "pli-tv-pvr15:35.1"
msgid "Kathaṃ therataromhīti navakataraṃ avajānāti?"
msgstr ""

#. HTML: </b>
#. VAR: appaññāto → apaññāto (bj)
msgctxt "pli-tv-pvr15:35.2"
msgid "Idhekacco thero hoti rattaññū cirapabbajito “ayaṃ navako appaññāto appakataññū imassa vacanaṃ akataṃ bhavissatī”ti tassa avajānanto adhammaṃ dhammoti dīpeti, dhammaṃ adhammoti dīpeti … pe …"
msgstr ""

msgctxt "pli-tv-pvr15:35.3"
msgid "duṭṭhullaṃ āpattiṃ aduṭṭhullā āpattīti dīpeti, aduṭṭhullaṃ āpattiṃ duṭṭhullā āpattīti dīpeti."
msgstr ""

msgctxt "pli-tv-pvr15:35.4"
msgid "Evaṃ therataromhīti navakataraṃ avajānāti."
msgstr ""

#. HTML: </p><p>
#. REF: sc29
#. VAR: bhāraṃ → bhāsaṃ (s1-3)+. HTML: <b>
msgctxt "pli-tv-pvr15:36.1"
msgid "Asampattaṃ na byāharitabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:36.2"
msgid "anotiṇṇaṃ bhāraṃ na otāretabbaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:36.3"
msgid "Sampattaṃ dhammato vinayato na parihāpetabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:36.4"
msgid "yaṃatthāya saṃgho sannipatito hoti, taṃ atthaṃ dhammato vinayato na parihāpetabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc30
msgctxt "pli-tv-pvr15:37.1"
msgid "Yena dhammenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:37.2"
msgid "bhūtena vatthunā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:37.3"
msgid "Yena vinayenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:37.4"
msgid "codetvā sāretvā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-pvr15:37.5"
msgid "Yena satthusāsanenāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:37.6"
msgid "ñattisampadāya anussāvanasampadāya, yena dhammena yena vinayena yena satthusāsanena taṃ adhikaraṇaṃ vūpasammati, tathā taṃ adhikaraṇaṃ vūpasametabbanti."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr15:38.1"
msgid "6. Anuvijjakassaanuyoga"
msgstr ""

#. HTML: </h2><p>
#. REF: sc31
msgctxt "pli-tv-pvr15:39.1"
msgid "Anuvijjakena codako pucchitabbo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.2"
msgid "“yaṃ kho tvaṃ, āvuso, imassa bhikkhuno pavāraṇaṃ ṭhapesi, kimhi naṃ ṭhapesi, sīlavipattiyā vā ṭhapesi, ācāravipattiyā vā ṭhapesi, diṭṭhivipattiyā vā ṭhapesī”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.3"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.4"
msgid "“sīlavipattiyā vā ṭhapemi, ācāravipattiyā vā ṭhapemi, diṭṭhivipattiyā vā ṭhapemī”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.5"
msgid "“jānāti panāyasmā sīlavipattiṃ, jānāti ācāravipattiṃ, jānāti diṭṭhivipattin”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.6"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.7"
msgid "“jānāmi kho ahaṃ, āvuso, sīlavipattiṃ, jānāmi ācāravipattiṃ, jānāmi diṭṭhivipattin”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.8"
msgid "“katamā panāvuso, sīlavipatti, katamā ācāravipatti, katamā diṭṭhivipattī”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.9"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.10"
msgid "“cattāri pārājikāni terasa saṃghādisesā—"
msgstr ""

msgctxt "pli-tv-pvr15:39.11"
msgid "ayaṃ sīlavipatti."
msgstr ""

msgctxt "pli-tv-pvr15:39.12"
msgid "Thullaccayaṃ pācittiyaṃ pāṭidesanīyaṃ dukkaṭaṃ dubbhāsitaṃ—"
msgstr ""

msgctxt "pli-tv-pvr15:39.13"
msgid "ayaṃ ācāravipatti."
msgstr ""

msgctxt "pli-tv-pvr15:39.14"
msgid "Micchādiṭṭhi antaggāhikādiṭṭhi—"
msgstr ""

msgctxt "pli-tv-pvr15:39.15"
msgid "ayaṃ diṭṭhivipattī”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.16"
msgid "“yaṃ kho tvaṃ, āvuso, imassa bhikkhuno pavāraṇaṃ ṭhapesi, diṭṭhena vā ṭhapesi, sutena vā ṭhapesi, parisaṅkāya vā ṭhapesī”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.17"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.18"
msgid "“diṭṭhena vā ṭhapemi, sutena vā ṭhapemi, parisaṅkāya vā ṭhapemī”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.19"
msgid "“yaṃ kho tvaṃ, āvuso, imassa bhikkhuno diṭṭhena pavāraṇaṃ ṭhapesi, kiṃ te diṭṭhaṃ, kinti te diṭṭhaṃ, kadā te diṭṭhaṃ, kattha te diṭṭhaṃ, pārājikaṃ ajjhāpajjanto diṭṭho, saṃghādisesaṃ ajjhāpajjanto diṭṭho, thullaccayaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.20"
msgid "pācittiyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.21"
msgid "pāṭidesanīyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.22"
msgid "dukkaṭaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.23"
msgid "dubbhāsitaṃ ajjhāpajjanto diṭṭho, kattha ca tvaṃ ahosi, kattha cāyaṃ bhikkhu ahosi, kiñca tvaṃ karosi, kiṃ cāyaṃ bhikkhu karotī”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.24"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.25"
msgid "“na kho ahaṃ, āvuso, imassa bhikkhuno diṭṭhena pavāraṇaṃ ṭhapemi, api ca sutena pavāraṇaṃ ṭhapemī”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.26"
msgid "“yaṃ kho tvaṃ, āvuso, imassa bhikkhuno sutena pavāraṇaṃ ṭhapesi, kiṃ te sutaṃ, kinti te sutaṃ, kadā te sutaṃ, kattha te sutaṃ, pārājikaṃ ajjhāpannoti sutaṃ, saṃghādisesaṃ ajjhāpannoti sutaṃ, thullaccayaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.27"
msgid "pācittiyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.28"
msgid "pāṭidesanīyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.29"
msgid "dukkaṭaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.30"
msgid "dubbhāsitaṃ ajjhāpannoti sutaṃ, bhikkhussa sutaṃ, bhikkhuniyā sutaṃ, sikkhamānāya sutaṃ, sāmaṇerassa sutaṃ, sāmaṇeriyā sutaṃ, upāsakassa sutaṃ, upāsikāya sutaṃ, rājūnaṃ sutaṃ, rājamahāmattānaṃ sutaṃ, titthiyānaṃ sutaṃ, titthiyasāvakānaṃ sutan”ti?"
msgstr ""

msgctxt "pli-tv-pvr15:39.31"
msgid "So ce evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-pvr15:39.32"
msgid "“na kho ahaṃ, āvuso, imassa bhikkhuno sutena pavāraṇaṃ ṭhapemi, api ca parisaṅkāya pavāraṇaṃ ṭhapemī”ti, so evamassa vacanīyo—"
msgstr ""

msgctxt "pli-tv-pvr15:39.33"
msgid "“yaṃ kho tvaṃ, āvuso, imassa bhikkhuno parisaṅkāya pavāraṇaṃ ṭhapesi, kiṃ parisaṅkasi, kinti parisaṅkasi, kadā parisaṅkasi, kattha parisaṅkasi, pārājikaṃ ajjhāpannoti parisaṅkasi, saṃghādisesaṃ ajjhāpannoti parisaṅkasi, thullaccayaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.34"
msgid "pācittiyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.35"
msgid "pāṭidesanīyaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.36"
msgid "dukkaṭaṃ …"
msgstr ""

msgctxt "pli-tv-pvr15:39.37"
msgid "dubbhāsitaṃ ajjhāpannoti parisaṅkasi, bhikkhussa sutvā parisaṅkasi, bhikkhuniyā sutvā parisaṅkasi, sikkhamānāya sutvā parisaṅkasi, sāmaṇerassa sutvā parisaṅkasi, sāmaṇeriyā sutvā parisaṅkasi, upāsakassa sutvā parisaṅkasi, upāsikāya sutvā parisaṅkasi, rājūnaṃ sutvā parisaṅkasi, rājamahāmattānaṃ sutvā parisaṅkasi, titthiyānaṃ sutvā parisaṅkasi, titthiyasāvakānaṃ sutvā parisaṅkasī”ti?"
msgstr ""

#. HTML: </p><blockquote class="gatha"><p>
#. REF: sc32
msgctxt "pli-tv-pvr15:40.1"
msgid "Diṭṭhaṃ diṭṭhena sameti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:40.2"
msgid "diṭṭhena saṃsandate diṭṭhaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:40.3"
msgid "Diṭṭhaṃ paṭicca na upeti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:40.4"
msgid "asuddhaparisaṅkito;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:40.5"
msgid "So puggalo paṭiññāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:40.6"
msgid "kātabbā tena pavāraṇā."
msgstr ""

#. HTML: </p><p>
#. REF: sc33
msgctxt "pli-tv-pvr15:41.1"
msgid "Sutaṃ sutena sameti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:41.2"
msgid "sutena saṃsandate sutaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:41.3"
msgid "Sutaṃ paṭicca na upeti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:41.4"
msgid "asuddhaparisaṅkito;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:41.5"
msgid "So puggalo paṭiññāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:41.6"
msgid "kātabbā tena pavāraṇā."
msgstr ""

#. HTML: </p><p>
#. REF: sc34
msgctxt "pli-tv-pvr15:42.1"
msgid "Mutaṃ mutena sameti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:42.2"
msgid "Mutena saṃsandate mutaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:42.3"
msgid "Mutaṃ paṭicca na upeti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:42.4"
msgid "Asuddhaparisaṅkito;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:42.5"
msgid "So puggalo paṭiññāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:42.6"
msgid "Kātabbā tena pavāraṇāti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr15:43.1"
msgid "7. Pucchāvibhāga"
msgstr ""

#. HTML: </h2><p>
#. REF: sc35
msgctxt "pli-tv-pvr15:44.1"
msgid "Kiṃ te diṭṭhanti katamā pucchā?"
msgstr ""

msgctxt "pli-tv-pvr15:44.2"
msgid "Kinti te diṭṭhanti katamā pucchā?"
msgstr ""

msgctxt "pli-tv-pvr15:44.3"
msgid "Kadā te diṭṭhanti katamā pucchā?"
msgstr ""

msgctxt "pli-tv-pvr15:44.4"
msgid "Kattha te diṭṭhanti katamā pucchā?"
msgstr ""

#. HTML: </p><p><b>
#. REF: sc36
msgctxt "pli-tv-pvr15:45.1"
msgid "Kiṃ te diṭṭhanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:45.2"
msgid "vatthupucchā, vipattipucchā, āpattipucchā, ajjhācārapucchā."
msgstr ""

msgctxt "pli-tv-pvr15:45.3"
msgid "Vatthupucchāti—"
msgstr ""

msgctxt "pli-tv-pvr15:45.4"
msgid "aṭṭhapārājikānaṃ vatthupucchā, tevīsasaṃghādisesānaṃ vatthupucchā, dveaniyatānaṃ vatthupucchā, dvecattārīsanissaggiyānaṃ vatthupucchā, aṭṭhāsītisatapācittiyānaṃ vatthupucchā, dvādasapāṭidesanīyānaṃ vatthupucchā, dukkaṭānaṃ vatthupucchā, dubbhāsitānaṃ vatthupucchā."
msgstr ""

msgctxt "pli-tv-pvr15:45.5"
msgid "Vipattipucchāti—"
msgstr ""

msgctxt "pli-tv-pvr15:45.6"
msgid "sīlavipattipucchā, ācāravipattipucchā, diṭṭhivipattipucchā, ājīvavipattipucchā."
msgstr ""

msgctxt "pli-tv-pvr15:45.7"
msgid "Āpattipucchāti—"
msgstr ""

msgctxt "pli-tv-pvr15:45.8"
msgid "pārājikāpattipucchā, saṃghādisesāpattipucchā, thullaccayāpattipucchā, pācittiyāpattipucchā, pāṭidesanīyāpattipucchā, dukkaṭāpattipucchā, dubbhāsitāpattipucchā."
msgstr ""

msgctxt "pli-tv-pvr15:45.9"
msgid "Ajjhācārapucchāti—"
msgstr ""

msgctxt "pli-tv-pvr15:45.10"
msgid "dvayaṃdvayasamāpattipucchā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc37
msgctxt "pli-tv-pvr15:46.1"
msgid "Kinti te diṭṭhanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:46.2"
msgid "liṅgapucchā, iriyāpathapucchā, ākārapucchā, vippakārapucchā."
msgstr ""

msgctxt "pli-tv-pvr15:46.3"
msgid "Liṅgapucchāti—"
msgstr ""

msgctxt "pli-tv-pvr15:46.4"
msgid "dīghaṃ vā rassaṃ vā kaṇhaṃ vā odātaṃ vā."
msgstr ""

msgctxt "pli-tv-pvr15:46.5"
msgid "Iriyāpathapucchāti gacchantaṃ vā ṭhitaṃ vā nisinnaṃ vā nipannaṃ vā."
msgstr ""

msgctxt "pli-tv-pvr15:46.6"
msgid "Ākārapucchāti gihiliṅge vā titthiyaliṅge vā pabbajitaliṅge vā."
msgstr ""

msgctxt "pli-tv-pvr15:46.7"
msgid "Vippakārapucchāti gacchantaṃ vā ṭhitaṃ vā nisinnaṃ vā nipannaṃ vā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc38, pts-vp-pli5.171
msgctxt "pli-tv-pvr15:47.1"
msgid "Kadā te diṭṭhanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:47.2"
msgid "kālapucchā, samayapucchā, divasapucchā, utupucchā."
msgstr ""

msgctxt "pli-tv-pvr15:47.3"
msgid "Kālapucchāti pubbaṇhakāle vā majjhanhikakāle vā sāyanhakāle vā."
msgstr ""

msgctxt "pli-tv-pvr15:47.4"
msgid "Samayapucchāti pubbaṇhasamaye vā majjhanhikasamaye vā sāyanhasamaye vā."
msgstr ""

msgctxt "pli-tv-pvr15:47.5"
msgid "Divasapucchāti purebhattaṃ vā pacchābhattaṃ vā rattiṃ vā divā vā kāḷe vā juṇhe vā."
msgstr ""

#. VAR: vasse vā → vassāne vā (bj)
msgctxt "pli-tv-pvr15:47.6"
msgid "Utupucchāti hemante vā gimhe vā vasse vā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc39
msgctxt "pli-tv-pvr15:48.1"
msgid "Kattha te diṭṭhanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-pvr15:48.2"
msgid "ṭhānapucchā, bhūmipucchā, okāsapucchā, padesapucchā."
msgstr ""

msgctxt "pli-tv-pvr15:48.3"
msgid "Ṭhānapucchāti bhūmiyā vā pathaviyā vā dharaṇiyā vā jagatiyā vā."
msgstr ""

msgctxt "pli-tv-pvr15:48.4"
msgid "Bhūmipucchāti bhūmiyā vā pathaviyā vā pabbate vā pāsāṇe vā pāsāde vā."
msgstr ""

msgctxt "pli-tv-pvr15:48.5"
msgid "Okāsapucchāti puratthime vā okāse pacchime vā okāse uttare vā okāse dakkhiṇe vā okāse."
msgstr ""

msgctxt "pli-tv-pvr15:48.6"
msgid "Padesapucchāti puratthime vā padese pacchime vā padese uttare vā padese dakkhiṇe vā padeseti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc40
msgctxt "pli-tv-pvr15:49.1"
msgid "Mahāsaṅgāmaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><p class="uddana-intro">
#. REF: sc41
msgctxt "pli-tv-pvr15:50.1"
msgid "Tassuddānaṃ"
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc42
msgctxt "pli-tv-pvr15:51.1"
msgid "Vatthu nidānaṃ ākāro,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:51.2"
msgid "pubbāparaṃ katākataṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:51.3"
msgid "Kammādhikaraṇañceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:51.4"
msgid "samatho chandagāmi ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc43
msgctxt "pli-tv-pvr15:52.1"
msgid "Dosā mohā bhayā ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:52.2"
msgid "saññā nijjhāpanena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:52.3"
msgid "Pekkhā pasāde pakkhomhi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:52.4"
msgid "sutatheratarena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc44
msgctxt "pli-tv-pvr15:53.1"
msgid "Asampattañca sampattaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:53.2"
msgid "dhammena vinayena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:53.3"
msgid "Satthussa sāsanenāpi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr15:53.4"
msgid "mahāsaṅgāmañāpanāti."
msgstr ""
