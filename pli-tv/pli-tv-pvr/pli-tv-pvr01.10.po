#. HTML: </h1></div><h2>
msgctxt "pli-tv-pvr1.10:5.1"
msgid "1. Pārājikakaṇḍa"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1, pts-vp-pli5.51
msgctxt "pli-tv-pvr1.10:6.1"
msgid "Methunaṃ dhammaṃ paṭisevanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:6.2"
msgid "Methunaṃ dhammaṃ paṭisevanapaccayā catasso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:6.3"
msgid "akkhāyite sarīre methunaṃ dhammaṃ paṭisevati, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:6.4"
msgid "yebhuyyena khāyite sarīre methunaṃ dhammaṃ paṭisevati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:6.5"
msgid "vaṭṭakate mukhe acchupantaṃ aṅgajātaṃ paveseti, āpatti dukkaṭassa;"
msgstr ""

#. VAR: jatumaṭṭhake → jatumaṭṭake (bj)
msgctxt "pli-tv-pvr1.10:6.6"
msgid "jatumaṭṭhake pācittiyaṃ—"
msgstr ""

msgctxt "pli-tv-pvr1.10:6.7"
msgid "methunaṃ dhammaṃ paṭisevanapaccayā imā catasso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:6.8"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-pvr1.10:7.1"
msgid "Adinnaṃ ādiyanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:7.2"
msgid "Adinnaṃ ādiyanapaccayā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:7.3"
msgid "Pañcamāsakaṃ vā atirekapañcamāsakaṃ vā agghanakaṃ adinnaṃ theyyasaṅkhātaṃ ādiyati, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:7.4"
msgid "atirekamāsakaṃ vā ūnapañcamāsakaṃ vā agghanakaṃ adinnaṃ theyyasaṅkhātaṃ ādiyati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:7.5"
msgid "māsakaṃ vā ūnamāsakaṃ vā agghanakaṃ adinnaṃ theyyasaṅkhātaṃ ādiyati, āpatti dukkaṭassa—"
msgstr ""

msgctxt "pli-tv-pvr1.10:7.6"
msgid "adinnaṃ ādiyanapaccayā imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:7.7"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-pvr1.10:8.1"
msgid "Sañcicca manussaviggahaṃ jīvitā voropanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:8.2"
msgid "Sañcicca manussaviggahaṃ jīvitā voropanapaccayā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:8.3"
msgid "Manussaṃ odissa opātaṃ khaṇati “papatitvā marissatī”ti, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:8.4"
msgid "papatite dukkhā vedanā uppajjati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:8.5"
msgid "marati, āpatti pārājikassa—"
msgstr ""

msgctxt "pli-tv-pvr1.10:8.6"
msgid "sañcicca manussaviggahaṃ jīvitā voropanapaccayā imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:8.7"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-pvr1.10:9.1"
msgid "Asantaṃ abhūtaṃ uttarimanussadhammaṃ ullapanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:9.2"
msgid "Asantaṃ abhūtaṃ uttarimanussadhammaṃ ullapanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:9.3"
msgid "pāpiccho icchāpakato asantaṃ abhūtaṃ uttarimanussadhammaṃ ullapati, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:9.4"
msgid "“yo te vihāre vasati so bhikkhu arahā”ti bhaṇati, paṭivijānantassa āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:9.5"
msgid "na paṭivijānantassa āpatti dukkaṭassa—"
msgstr ""

msgctxt "pli-tv-pvr1.10:9.6"
msgid "asantaṃ abhūtaṃ uttarimanussadhammaṃ ullapanapaccayā imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:9.7"
msgid "(4)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc5
msgctxt "pli-tv-pvr1.10:10.1"
msgid "Cattāro pārājikā niṭṭhitā."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-pvr1.10:11.1"
msgid "2. Saṃghādisesakaṇḍādi"
msgstr ""

#. HTML: </h2><p>
#. REF: sc6
msgctxt "pli-tv-pvr1.10:12.1"
msgid "Upakkamitvā asucimocanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:12.2"
msgid "Upakkamitvā asucimocanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:12.3"
msgid "ceteti upakkamati muccati, āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:12.4"
msgid "ceteti upakkamati na muccati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:12.5"
msgid "payoge dukkaṭaṃ—"
msgstr ""

msgctxt "pli-tv-pvr1.10:12.6"
msgid "upakkamitvā asucimocanapaccayā imā tisso āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:12.7"
msgid "(1)"
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-pvr1.10:13.1"
msgid "Kāyasaṃsaggaṃ samāpajjanapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.2"
msgid "Kāyasaṃsaggaṃ samāpajjanapaccayā pañca āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.3"
msgid "avassutā bhikkhunī avassutassa purisapuggalassa adhakkhakaṃ ubbhajāṇumaṇḍalaṃ gahaṇaṃ sādiyati, āpatti pārājikassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.4"
msgid "bhikkhu kāyena kāyaṃ āmasati, āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.5"
msgid "kāyena kāyapaṭibaddhaṃ āmasati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.6"
msgid "kāyapaṭibaddhena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.7"
msgid "aṅgulipatodake pācittiyaṃ—"
msgstr ""

msgctxt "pli-tv-pvr1.10:13.8"
msgid "kāyasaṃsaggaṃ samāpajjanapaccayā imā pañca āpattiyo āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:13.9"
msgid "(2)"
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-pvr1.10:14.1"
msgid "Mātugāmaṃ duṭṭhullāhi vācāhi obhāsanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:14.2"
msgid "vaccamaggaṃ passāvamaggaṃ ādissa vaṇṇampi bhaṇati avaṇṇampi bhaṇati, āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:14.3"
msgid "vaccamaggaṃ passāvamaggaṃ ṭhapetvā adhakkhakaṃ ubbhajāṇumaṇḍalaṃ ādissa vaṇṇampi bhaṇati avaṇṇampi bhaṇati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:14.4"
msgid "kāyapaṭibaddhaṃ ādissa vaṇṇampi bhaṇati avaṇṇampi bhaṇati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:14.5"
msgid "(3)"
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-pvr1.10:15.1"
msgid "Attakāmapāricariyāya vaṇṇaṃ bhāsanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:15.2"
msgid "mātugāmassa santike attakāmapāricariyāya vaṇṇaṃ bhāsati, āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:15.3"
msgid "paṇḍakassa santike attakāmapāricariyāya vaṇṇaṃ bhāsati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:15.4"
msgid "tiracchānagatassa santike attakāmapāricariyāya vaṇṇaṃ bhāsati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:15.5"
msgid "(4)"
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-pvr1.10:16.1"
msgid "Sañcarittaṃ samāpajjanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:16.2"
msgid "paṭiggaṇhāti vīmaṃsati paccāharati, āpatti saṃghādisesassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:16.3"
msgid "paṭiggaṇhāti vīmaṃsati na paccāharati, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:16.4"
msgid "paṭiggaṇhāti na vīmaṃsati na paccāharati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:16.5"
msgid "(5)"
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-pvr1.10:17.1"
msgid "Saññācikāya kuṭiṃ kārāpanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:17.2"
msgid "kārāpeti, payoge dukkaṭaṃ;"
msgstr ""

#. VAR: ekaṃ piṇḍaṃ → ekapiṇḍe (s1-3)
msgctxt "pli-tv-pvr1.10:17.3"
msgid "ekaṃ piṇḍaṃ anāgate āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:17.4"
msgid "tasmiṃ piṇḍe āgate āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:17.5"
msgid "(6)"
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-pvr1.10:18.1"
msgid "Mahallakaṃ vihāraṃ kārāpanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:18.2"
msgid "kārāpeti, payoge dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr1.10:18.3"
msgid "ekaṃ piṇḍaṃ anāgate, āpatti thullaccayassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:18.4"
msgid "tasmiṃ piṇḍe āgate āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:18.5"
msgid "(7)"
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-pvr1.10:19.1"
msgid "Bhikkhuṃ amūlakena pārājikena dhammena anuddhaṃsanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:19.2"
msgid "anokāsaṃ kārāpetvā cāvanādhippāyo vadeti, āpatti saṃghādisesena dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:19.3"
msgid "okāsaṃ kārāpetvā akkosādhippāyo vadeti, āpatti omasavādassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:19.4"
msgid "(8)"
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-pvr1.10:20.1"
msgid "Bhikkhuṃ aññabhāgiyassa adhikaraṇassa kiñci desaṃ lesamattaṃ upādāya pārājikena dhammena anuddhaṃsanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:20.2"
msgid "anokāsaṃ kārāpetvā cāvanādhippāyo vadeti, āpatti saṃghādisesena dukkaṭassa;"
msgstr ""

msgctxt "pli-tv-pvr1.10:20.3"
msgid "okāsaṃ kārāpetvā akkosādhippāyo vadeti, āpatti omasavādassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:20.4"
msgid "(9)"
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-pvr1.10:21.1"
msgid "Saṃghabhedako bhikkhu yāvatatiyaṃ samanubhāsanāya na paṭinissajjanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:21.2"
msgid "ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr1.10:21.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr1.10:21.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:21.5"
msgid "(10)"
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-pvr1.10:22.1"
msgid "Bhedakānuvattakā bhikkhū yāvatatiyaṃ samanubhāsanāya na paṭinissajjanapaccayā tisso āpattiyo āpajjanti—"
msgstr ""

msgctxt "pli-tv-pvr1.10:22.2"
msgid "ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr1.10:22.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr1.10:22.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:22.5"
msgid "(11)"
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-pvr1.10:23.1"
msgid "Dubbaco bhikkhu yāvatatiyaṃ samanubhāsanāya na paṭinissajjanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:23.2"
msgid "ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr1.10:23.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr1.10:23.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-pvr1.10:23.5"
msgid "(12)"
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-pvr1.10:24.1"
msgid "Kuladūsako bhikkhu yāvatatiyaṃ samanubhāsanāya na paṭinissajjanapaccayā tisso āpattiyo āpajjati—"
msgstr ""

msgctxt "pli-tv-pvr1.10:24.2"
msgid "ñattiyā dukkaṭaṃ;"
msgstr ""

msgctxt "pli-tv-pvr1.10:24.3"
msgid "dvīhi kammavācāhi thullaccayā;"
msgstr ""

msgctxt "pli-tv-pvr1.10:24.4"
msgid "kammavācāpariyosāne āpatti saṃghādisesassa …"
msgstr ""

msgctxt "pli-tv-pvr1.10:24.5"
msgid "pe …."
msgstr ""

msgctxt "pli-tv-pvr1.10:24.6"
msgid "(13)"
msgstr ""

#. HTML: </p><p>
#. REF: sc19, pts-vp-pli5.52
msgctxt "pli-tv-pvr1.10:25.1"
msgid "Anādariyaṃ paṭicca udake uccāraṃ vā passāvaṃ vā kheḷaṃ vā karaṇapaccayā kati āpattiyo āpajjati?"
msgstr ""

msgctxt "pli-tv-pvr1.10:25.2"
msgid "Anādariyaṃ paṭicca udake uccāraṃ vā passāvaṃ vā kheḷaṃ vā karaṇapaccayā ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:25.3"
msgid "Dukkaṭaṃ—"
msgstr ""

msgctxt "pli-tv-pvr1.10:25.4"
msgid "anādariyaṃ paṭicca udake uccāraṃ vā passāvaṃ vā kheḷaṃ vā karaṇapaccayā imaṃ ekaṃ āpattiṃ āpajjati."
msgstr ""

msgctxt "pli-tv-pvr1.10:25.5"
msgid "(14)"
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc20
msgctxt "pli-tv-pvr1.10:26.1"
msgid "Katāpattivāro niṭṭhito dutiyo."
msgstr ""

