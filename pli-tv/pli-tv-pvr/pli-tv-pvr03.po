#. HTML: <section class="sutta" id="pli-tv-pvr3"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-pvr3:1.1"
msgid "Parivāra"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-pvr3:2.1"
msgid "Samuṭṭhānasīsasaṅkhepa"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-pvr3:3.1"
msgid "1. Samuṭṭhānassuddāna"
msgstr ""

#. HTML: </h2><blockquote class="gatha"><p>
#. REF: sc1, pts-vp-pli5.86
msgctxt "pli-tv-pvr3:4.1"
msgid "Aniccā sabbe saṅkhārā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:4.2"
msgid "dukkhānattā ca saṅkhatā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:4.3"
msgid "Nibbānañceva paññatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:4.4"
msgid "anattā iti nicchayā."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-pvr3:5.1"
msgid "Buddhacande anuppanne,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:5.2"
msgid "buddhādicce anuggate;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:5.3"
msgid "Tesaṃ sabhāgadhammānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:5.4"
msgid "nāmamattaṃ na nāyati."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-pvr3:6.1"
msgid "Dukkaraṃ vividhaṃ katvā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:6.2"
msgid "pūrayitvāna pāramī;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:6.3"
msgid "Uppajjanti mahāvīrā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:6.4"
msgid "cakkhubhūtā sabrahmake."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-pvr3:7.1"
msgid "Te desayanti saddhammaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:7.2"
msgid "dukkhahāniṃ sukhāvahaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:7.3"
msgid "Aṅgīraso sakyamuni,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:7.4"
msgid "sabbabhūtānukampako."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-pvr3:8.1"
msgid "Sabbasattuttamo sīho,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:8.2"
msgid "piṭake tīṇi desayi;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:8.3"
msgid "Suttantamabhidhammañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:8.4"
msgid "vinayañca mahāguṇaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-pvr3:9.1"
msgid "Evaṃ nīyati saddhammo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:9.2"
msgid "vinayo yadi tiṭṭhati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:9.3"
msgid "Ubhato ca vibhaṅgāni,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:9.4"
msgid "khandhakā yā ca mātikā."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-pvr3:10.1"
msgid "Mālā suttaguṇeneva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:10.2"
msgid "parivārena ganthitā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:10.3"
msgid "Tasseva parivārassa,"
msgstr ""

#. HTML: <br>
#. VAR: niyato → nayato (bj)
msgctxt "pli-tv-pvr3:10.4"
msgid "samuṭṭhānaṃ niyato kataṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-pvr3:11.1"
msgid "Sambhedaṃ nidānañcaññaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:11.2"
msgid "sutte dissanti upari;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:11.3"
msgid "Tasmā sikkhe parivāraṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:11.4"
msgid "dhammakāmo supesaloti."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr3:12.1"
msgid "2. Terasasamuṭṭhāna"
msgstr ""

#. HTML: </h2><blockquote class="gatha"><p>
#. REF: sc9
msgctxt "pli-tv-pvr3:13.1"
msgid "Vibhaṅge dvīsu paññattaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:13.2"
msgid "uddisanti uposathe;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:13.3"
msgid "Pavakkhāmi samuṭṭhānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:13.4"
msgid "yathāñāyaṃ suṇātha me."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-pvr3:14.1"
msgid "Pārājikaṃ yaṃ paṭhamaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:14.2"
msgid "dutiyañca tato paraṃ;"
msgstr ""

#. HTML: <br>
#. VAR: Sañcarittānubhāsanañca → sañcarittānubhāsañca (bj, s1-3)
msgctxt "pli-tv-pvr3:14.3"
msgid "Sañcarittānubhāsanañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:14.4"
msgid "atirekañca cīvaraṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-pvr3:15.1"
msgid "Lomāni padasodhammo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:15.2"
msgid "bhūtaṃ saṃvidhānena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:15.3"
msgid "Theyyadesanacorī ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:15.4"
msgid "ananuññātāya terasa."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-pvr3:16.1"
msgid "Terasete samuṭṭhāna-"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:16.2"
msgid "nayā viññūhi cintitā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:16.3"
msgid "Ekekasmiṃ samuṭṭhāne,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:16.4"
msgid "sadisā idha dissare."
msgstr ""

#. HTML: </p></blockquote><h3>
msgctxt "pli-tv-pvr3:17.1"
msgid "2.1. Paṭhamapārājikasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc13
msgctxt "pli-tv-pvr3:18.1"
msgid "Methunaṃ sukkasaṃsaggo,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:18.2"
msgid "aniyatā paṭhamikā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:18.3"
msgid "Pubbūpaparipācitā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:18.4"
msgid "raho bhikkhuniyā saha."
msgstr ""

#. HTML: </p><p>
#. REF: sc14, pts-vp-pli5.87
#. VAR: raho dve ca → raho ceva (bj)
msgctxt "pli-tv-pvr3:19.1"
msgid "Sabhojane raho dve ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:19.2"
msgid "aṅguli udake hasaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:19.3"
msgid "Pahāre uggire ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:19.4"
msgid "tepaññāsā ca sekhiyā."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-pvr3:20.1"
msgid "Adhakkhagāmāvassutā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:20.2"
msgid "talamaṭṭhañca suddhikā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:20.3"
msgid "Vassaṃvuṭṭhā ca ovādaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:20.4"
msgid "nānubandhe pavattiniṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-pvr3:21.1"
msgid "Chasattati ime sikkhā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:21.2"
msgid "kāyamānasikā katā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:21.3"
msgid "Sabbe ekasamuṭṭhānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:21.4"
msgid "paṭhamaṃ pārājikaṃ yathā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc17
msgctxt "pli-tv-pvr3:22.1"
msgid "Paṭhamapārājikasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:23.1"
msgid "2.2. Dutiyapārājikasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc18
msgctxt "pli-tv-pvr3:24.1"
msgid "Adinnaṃ viggahuttari,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:24.2"
msgid "duṭṭhullā attakāminaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:24.3"
msgid "Amūlā aññabhāgiyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:24.4"
msgid "aniyatā dutiyikā."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-pvr3:25.1"
msgid "Acchinde pariṇāmane,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:25.2"
msgid "musā omasapesuṇā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:25.3"
msgid "Duṭṭhullā pathavīkhaṇe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:25.4"
msgid "bhūtaṃ aññāya ujjhāpe."
msgstr ""

#. HTML: </p><p>
#. REF: sc20
msgctxt "pli-tv-pvr3:26.1"
msgid "Nikkaḍḍhanaṃ siñcanañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:26.2"
msgid "āmisahetu bhuttāvī;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:26.3"
msgid "Ehi anādari bhiṃsā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:26.4"
msgid "apanidhe ca jīvitaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-pvr3:27.1"
msgid "Jānaṃ sappāṇakaṃ kammaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:27.2"
msgid "ūnasaṃvāsanāsanā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:27.3"
msgid "Sahadhammikavilekhā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:27.4"
msgid "moho amūlakena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
#. VAR: Kukkuccaṃ dhammikaṃ cīvaraṃ datvā → kukkuccaṃ dhammikaṃ cīvaraṃ (bj) | kukkuccaṃ dhammikaṃ datvā (s1-3) | kukkuccaṃ dhammakaṃ datvā (pts1)
msgctxt "pli-tv-pvr3:28.1"
msgid "Kukkuccaṃ dhammikaṃ cīvaraṃ datvā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:28.2"
msgid "Pariṇāmeyya puggale;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:28.3"
msgid "Kiṃ te akālaṃ acchinde,"
msgstr ""

#. HTML: <br>
#. VAR: Duggahī → duggahīna (bj)
msgctxt "pli-tv-pvr3:28.4"
msgid "Duggahī nirayena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-pvr3:29.1"
msgid "Gaṇaṃ vibhaṅgaṃ dubbalaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:29.2"
msgid "kathināphāsupassayaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:29.3"
msgid "Akkosacaṇḍī maccharī,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:29.4"
msgid "gabbhinī ca pāyantiyā."
msgstr ""

#. HTML: </p><p>
#. REF: sc24
msgctxt "pli-tv-pvr3:30.1"
msgid "Dvevassaṃ sikkhā saṃghena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:30.2"
msgid "tayo ceva gihīgatā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:30.3"
msgid "Kumāribhūtā tisso ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:30.4"
msgid "ūnadvādasasammatā."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-pvr3:31.1"
msgid "Alaṃ tāva sokāvāsaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:31.2"
msgid "chandā anuvassā ca dve;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:31.3"
msgid "Sikkhāpadā sattatime,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:31.4"
msgid "samuṭṭhānā tikā katā."
msgstr ""

#. HTML: </p><p>
#. REF: sc26
msgctxt "pli-tv-pvr3:32.1"
msgid "Kāyacittena na vācā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:32.2"
msgid "vācācittaṃ na kāyikaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:32.3"
msgid "Tīhi dvārehi jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:32.4"
msgid "pārājikaṃ dutiyaṃ yathā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc27
msgctxt "pli-tv-pvr3:33.1"
msgid "Dutiyapārājikasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:34.1"
msgid "2.3. Sañcarittasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc28
msgctxt "pli-tv-pvr3:35.1"
msgid "Sañcarī kuṭi vihāro,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:35.2"
msgid "dhovanañca paṭiggaho;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:35.3"
msgid "Viññattuttari abhihaṭṭhuṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:35.4"
msgid "ubhinnaṃ dūtakena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc29
msgctxt "pli-tv-pvr3:36.1"
msgid "Kosiyā suddhadvebhāgā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:36.2"
msgid "chabbassāni nisīdanaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:36.3"
msgid "Riñcanti rūpikā ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:36.4"
msgid "ubho nānappakārakā."
msgstr ""

#. HTML: </p><p>
#. REF: sc30
msgctxt "pli-tv-pvr3:37.1"
msgid "Ūnabandhanavassikā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:37.2"
msgid "suttaṃ vikappanena ca;"
msgstr ""

#. HTML: <br>
#. VAR: Dvāradānasibbāni → dvāradānasibbinī (bj, s1-3, pts1)
msgctxt "pli-tv-pvr3:37.3"
msgid "Dvāradānasibbāni ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:37.4"
msgid "pūvapaccayajoti ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc31
msgctxt "pli-tv-pvr3:38.1"
msgid "Ratanaṃ sūci mañco ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:38.2"
msgid "tūlaṃ nisīdanakaṇḍu ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:38.3"
msgid "Vassikā ca sugatena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:38.4"
msgid "viññatti aññaṃ cetāpanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc32
msgctxt "pli-tv-pvr3:39.1"
msgid "Dve saṃghikā mahājanikā dve,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:39.2"
msgid "Puggalalahukā garu;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:39.3"
msgid "Dve vighāsā sāṭikā ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:39.4"
msgid "Samaṇacīvarena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc33
msgctxt "pli-tv-pvr3:40.1"
msgid "Samapaññāsime dhammā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:40.2"
msgid "chahi ṭhānehi jāyare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:40.3"
msgid "Kāyato na vācācittā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:40.4"
msgid "vācato na kāyamanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc34, pts-vp-pli5.88
#. VAR: ca cittā → na cittato (bj, s1-3)
msgctxt "pli-tv-pvr3:41.1"
msgid "Kāyavācā na ca cittā,"
msgstr ""

#. HTML: <br>
#. VAR: na vācikā → na vācato (bj, s1-3)
msgctxt "pli-tv-pvr3:41.2"
msgid "kāyacittā na vācikā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:41.3"
msgid "Vācācittā na kāyena,"
msgstr ""

#. HTML: <br>
#. VAR: tīhi dvārehi → tīhi ṭhānehi (s1-3)
msgctxt "pli-tv-pvr3:41.4"
msgid "tīhi dvārehi jāyare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:41.5"
msgid "Chasamuṭṭhānikā ete,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:41.6"
msgid "sañcarittena sādisā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc35
msgctxt "pli-tv-pvr3:42.1"
msgid "Sañcarittasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:43.1"
msgid "2.4. Samanubhāsanāsamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc36
msgctxt "pli-tv-pvr3:44.1"
msgid "Bhedānuvattadubbaca-"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:44.2"
msgid "dūsaduṭṭhulladiṭṭhi ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:44.3"
msgid "Chandaṃ ujjagghikā dve ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:44.4"
msgid "dve ca saddā na byāhare."
msgstr ""

#. HTML: </p><p>
#. REF: sc37
msgctxt "pli-tv-pvr3:45.1"
msgid "Chamā nīcāsane ṭhānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:45.2"
msgid "pacchato uppathena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:45.3"
msgid "Vajjānuvattigahaṇā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:45.4"
msgid "osāre paccācikkhanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc38
msgctxt "pli-tv-pvr3:46.1"
msgid "Kismiṃ saṃsaṭṭhā dve vadhi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:46.2"
msgid "Visibbe dukkhitāya ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:46.3"
msgid "Puna saṃsaṭṭhā na vūpasame,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:46.4"
msgid "Ārāmañca pavāraṇā."
msgstr ""

#. HTML: </p><p>
#. REF: sc39
#. VAR: Anvaddhaṃ → anvaddhamāsaṃ (bj) | anvaḍḍhamāsaṃ (s1-3)
#. VAR: saha jīviniṃ → sahajīvi (bj) | sahajīvinī (s1-3) | sahajīvini (pts1)
msgctxt "pli-tv-pvr3:47.1"
msgid "Anvaddhaṃ saha jīviniṃ dve,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:47.2"
msgid "Cīvaraṃ anubandhanā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:47.3"
msgid "Sattatiṃsa ime dhammā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:47.4"
msgid "Kāyavācāya cittato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:47.5"
msgid "Sabbe ekasamuṭṭhānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:47.6"
msgid "Samanubhāsanā yathā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc40
#. VAR: Samanubhāsanāsamuṭṭhānaṃ → samanubhāsana ... (bj, s1-3)
msgctxt "pli-tv-pvr3:48.1"
msgid "Samanubhāsanāsamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:49.1"
msgid "2.5. Kathinasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc41
msgctxt "pli-tv-pvr3:50.1"
msgid "Ubbhataṃ kathinaṃ tīṇi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:50.2"
msgid "paṭhamaṃ pattabhesajjaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:50.3"
msgid "Accekaṃ cāpi sāsaṅkaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:50.4"
msgid "pakkamantena vā duve."
msgstr ""

#. HTML: </p><p>
#. REF: sc42
msgctxt "pli-tv-pvr3:51.1"
msgid "Upassayaṃ paramparā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:51.2"
msgid "anatirittaṃ nimantanā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:51.3"
msgid "Vikappaṃ rañño vikāle,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:51.4"
msgid "vosāsāraññakena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc43
msgctxt "pli-tv-pvr3:52.1"
msgid "Ussayāsannicayañca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:52.2"
msgid "pure pacchā vikāle ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:52.3"
msgid "Pañcāhikā saṅkamanī,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:52.4"
msgid "dvepi āvasathena ca."
msgstr ""

#. HTML: </p><p>
#. REF: sc44
msgctxt "pli-tv-pvr3:53.1"
msgid "Pasākhe āsane ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:53.2"
msgid "tiṃsa ekūnakā ime;"
msgstr ""

#. HTML: <br>
#. VAR: ca cittā → na cittato (s1-3)
msgctxt "pli-tv-pvr3:53.3"
msgid "Kāyavācā na ca cittā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:53.4"
msgid "tīhi dvārehi jāyare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:53.5"
msgid "Dvisamuṭṭhānikā sabbe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:53.6"
msgid "kathinena sahā samā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc45
msgctxt "pli-tv-pvr3:54.1"
msgid "Kathinasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:55.1"
msgid "2.6. Eḷakalomasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc46
msgctxt "pli-tv-pvr3:56.1"
msgid "Eḷakalomā dve seyyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:56.2"
msgid "āhacca piṇḍabhojanaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:56.3"
msgid "Gaṇavikālasannidhi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:56.4"
msgid "dantaponena celakā."
msgstr ""

#. HTML: </p><p>
#. REF: sc47
#. VAR: Uyyuttaṃ senaṃ → uyyuttaṃ vase (s1-3)
msgctxt "pli-tv-pvr3:57.1"
msgid "Uyyuttaṃ senaṃ uyyodhi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:57.2"
msgid "surā orena nhāyanā;"
msgstr ""

#. HTML: <br>
#. VAR: desanikā → desanīyā (bj)
msgctxt "pli-tv-pvr3:57.3"
msgid "Dubbaṇṇe dve desanikā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:57.4"
msgid "lasuṇupatiṭṭhe naccanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc48
msgctxt "pli-tv-pvr3:58.1"
msgid "Nhānamattharaṇaṃ seyyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:58.2"
msgid "antoraṭṭhe tathā bahi;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:58.3"
msgid "Antovassaṃ cittāgāraṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:58.4"
msgid "āsandi suttakantanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc49
msgctxt "pli-tv-pvr3:59.1"
msgid "Veyyāvaccaṃ sahatthā ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:59.2"
msgid "abhikkhukāvāsena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:59.3"
msgid "Chattaṃ yānañca saṅghāṇiṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:59.4"
msgid "alaṅkāraṃ gandhavāsitaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc50
msgctxt "pli-tv-pvr3:60.1"
msgid "Bhikkhunī sikkhamānā ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:60.2"
msgid "sāmaṇerī gihiniyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:60.3"
msgid "Asaṅkaccikā āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:60.4"
msgid "cattārīsā catuttari."
msgstr ""

#. HTML: </p><p>
#. REF: sc51
msgctxt "pli-tv-pvr3:61.1"
msgid "Kāyena na vācācittena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:61.2"
msgid "kāyacittena na vācato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:61.3"
msgid "Dvisamuṭṭhānikā sabbe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:61.4"
msgid "samā eḷakalomikāti."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc52
msgctxt "pli-tv-pvr3:62.1"
msgid "Eḷakalomasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:63.1"
msgid "2.7. Padasodhammasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc53, pts-vp-pli5.89
msgctxt "pli-tv-pvr3:64.1"
msgid "Padaññatra asammatā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:64.2"
msgid "tathā atthaṅgatena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:64.3"
msgid "Tiracchānavijjā dve vuttā,"
msgstr ""

#. HTML: <br>
#. VAR: anokāso → anokāse (bj, s1-3, pts1)
msgctxt "pli-tv-pvr3:64.4"
msgid "anokāso ca pucchanā."
msgstr ""

#. HTML: </p><p>
#. REF: sc54
msgctxt "pli-tv-pvr3:65.1"
msgid "Satta sikkhāpadā ete,"
msgstr ""

#. HTML: <br>
#. VAR: kāyacittato → kāyacittakā (mr)
msgctxt "pli-tv-pvr3:65.2"
msgid "vācā na kāyacittato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:65.3"
msgid "Vācācittena jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:65.4"
msgid "na tu kāyena jāyare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:65.5"
msgid "Dvisamuṭṭhānikā sabbe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:65.6"
msgid "padasodhammasadisā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc55
msgctxt "pli-tv-pvr3:66.1"
msgid "Padasodhammasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:67.1"
msgid "2.8. Addhānasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc56
msgctxt "pli-tv-pvr3:68.1"
msgid "Addhānanāvaṃ paṇītaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:68.2"
msgid "mātugāmena saṃhare;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:68.3"
msgid "Dhaññaṃ nimantitā ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:68.4"
msgid "aṭṭha ca pāṭidesanī."
msgstr ""

#. HTML: </p><p>
#. REF: sc57
msgctxt "pli-tv-pvr3:69.1"
msgid "Sikkhā pannarasa ete,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:69.2"
msgid "kāyā na vācā na manā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:69.3"
msgid "Kāyavācāhi jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:69.4"
msgid "na te cittena jāyare."
msgstr ""

#. HTML: </p><p>
#. REF: sc58
msgctxt "pli-tv-pvr3:70.1"
msgid "Kāyacittena jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:70.2"
msgid "na te jāyanti vācato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:70.3"
msgid "Kāyavācāhi cittena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:70.4"
msgid "samuṭṭhānā catubbidhā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:70.5"
msgid "Paññattā buddhañāṇena,"
msgstr ""

#. HTML: <br>
#. VAR: sahā samā → samā nayā (s1-3)
msgctxt "pli-tv-pvr3:70.6"
msgid "addhānena sahā samā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc59
msgctxt "pli-tv-pvr3:71.1"
msgid "Addhānasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:72.1"
msgid "2.9. Theyyasatthasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc60
msgctxt "pli-tv-pvr3:73.1"
msgid "Theyyasatthaṃ upassuti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:73.2"
msgid "sūpaviññāpanena ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:73.3"
msgid "Rattichannañca okāsaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:73.4"
msgid "ete byūhena sattamā."
msgstr ""

#. HTML: </p><p>
#. REF: sc61
msgctxt "pli-tv-pvr3:74.1"
msgid "Kāyacittena jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:74.2"
msgid "na te jāyanti vācato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:74.3"
msgid "Tīhi dvārehi jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:74.4"
msgid "dvisamuṭṭhānikā ime;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:74.5"
msgid "Theyyasatthasamuṭṭhānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:74.6"
msgid "desitādiccabandhunā."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc62
msgctxt "pli-tv-pvr3:75.1"
msgid "Theyyasatthasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:76.1"
msgid "2.10. Dhammadesanāsamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc63
msgctxt "pli-tv-pvr3:77.1"
msgid "Chattapāṇissa saddhammaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:77.2"
msgid "na desenti tathāgatā;"
msgstr ""

#. HTML: <br>
#. VAR: Evameva → tatheva (bj, s1-3)
msgctxt "pli-tv-pvr3:77.3"
msgid "Evameva daṇḍapāṇissa,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:77.4"
msgid "satthaāvudhapāṇinaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc64
msgctxt "pli-tv-pvr3:78.1"
msgid "Pādukupāhanā yānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:78.2"
msgid "seyyapallatthikāya ca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:78.3"
msgid "Veṭhitoguṇṭhito ceva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:78.4"
msgid "ekādasamanūnakā."
msgstr ""

#. HTML: </p><p>
#. REF: sc65
msgctxt "pli-tv-pvr3:79.1"
msgid "Vācācittena jāyanti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:79.2"
msgid "na te jāyanti kāyato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:79.3"
msgid "Sabbe ekasamuṭṭhānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:79.4"
msgid "samakā dhammadesane."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc66
#. VAR: Dhammadesanāsamuṭṭhānaṃ → dhammadesana ... (bj, s1-3, pts1)
msgctxt "pli-tv-pvr3:80.1"
msgid "Dhammadesanāsamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:81.1"
msgid "2.11. Bhūtārocanasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc67
msgctxt "pli-tv-pvr3:82.1"
msgid "Bhūtaṃ kāyena jāyati,"
msgstr ""

#. HTML: <br>
#. VAR: na vācā → na vācāya (bj, s1-3, pts1)
msgctxt "pli-tv-pvr3:82.2"
msgid "na vācā na ca cittato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:82.3"
msgid "Vācato ca samuṭṭhāti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:82.4"
msgid "na kāyā na ca cittato."
msgstr ""

#. HTML: </p><p>
#. REF: sc68
msgctxt "pli-tv-pvr3:83.1"
msgid "Kāyavācāya jāyati,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:83.2"
msgid "na tu jāyati cittato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:83.3"
msgid "Bhūtārocanakā nāma,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:83.4"
msgid "tīhi ṭhānehi jāyati."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc69
msgctxt "pli-tv-pvr3:84.1"
msgid "Bhūtārocanasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:85.1"
msgid "2.12. Corivuṭṭhāpanasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc70
#. VAR: Corī → coriṃ (bj)
msgctxt "pli-tv-pvr3:86.1"
msgid "Corī vācāya cittena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:86.2"
msgid "na taṃ jāyati kāyato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:86.3"
msgid "Jāyati tīhi dvārehi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:86.4"
msgid "corivuṭṭhāpanaṃ idaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:86.5"
msgid "Akataṃ dvisamuṭṭhānaṃ,"
msgstr ""

#. HTML: <br>
#. VAR: bhāsitaṃ → ṭhapitaṃ (s1-3)
msgctxt "pli-tv-pvr3:86.6"
msgid "dhammarājena bhāsitaṃ."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc71
msgctxt "pli-tv-pvr3:87.1"
msgid "Corivuṭṭhāpanasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h3>
msgctxt "pli-tv-pvr3:88.1"
msgid "2.13. Ananuññātasamuṭṭhāna"
msgstr ""

#. HTML: </h3><blockquote class="gatha"><p>
#. REF: sc72
msgctxt "pli-tv-pvr3:89.1"
msgid "Ananuññātaṃ vācāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:89.2"
msgid "na kāyā na ca cittato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:89.3"
msgid "Jāyati kāyavācāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:89.4"
msgid "na taṃ jāyati cittato."
msgstr ""

#. HTML: </p><p>
#. REF: sc73, pts-vp-pli5.90
msgctxt "pli-tv-pvr3:90.1"
msgid "Jāyati vācācittena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:90.2"
msgid "na taṃ jāyati kāyato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:90.3"
msgid "Jāyati tīhi dvārehi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:90.4"
msgid "akataṃ catuṭhānikaṃ."
msgstr ""

#. HTML: </p></blockquote><p class="endsutta">
#. REF: sc74
msgctxt "pli-tv-pvr3:91.1"
msgid "Ananuññātasamuṭṭhānaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc75
msgctxt "pli-tv-pvr3:92.1"
msgid "Samuṭṭhānañhi saṅkhepaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:92.2"
msgid "dasa tīṇi sudesitaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:92.3"
msgid "Asammohakaraṃ ṭhānaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:92.4"
msgid "nettidhammānulomikaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:92.5"
msgid "Dhārayanto imaṃ viññū,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr3:92.6"
msgid "samuṭṭhāne na muyhatīti."
msgstr ""

