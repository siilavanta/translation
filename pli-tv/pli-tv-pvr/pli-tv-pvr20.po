msgctxt "pli-tv-pvr20:1.1"
msgid "Parivāra"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-pvr20:2.1"
msgid "Sedamocanagāthā"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-pvr20:3.1"
msgid "1. Avippavāsapañhā"
msgstr ""

#. HTML: </h2><blockquote class="gatha"><p>
#. REF: sc1, pts-vp-pli5.216
msgctxt "pli-tv-pvr20:4.1"
msgid "Asaṃvāso bhikkhūhi ca bhikkhunīhi ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:4.2"
msgid "Sambhogo ekacco tahiṃ na labbhati;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:4.3"
msgid "Avippavāsena anāpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:4.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
#. VAR: Avissajjiyaṃ → avissajjikaṃ (si) | avissajjitaṃ (s1-3)
#. VAR: avebhaṅgiyaṃ → avebhaṅgikaṃ (si)
msgctxt "pli-tv-pvr20:5.1"
msgid "Avissajjiyaṃ avebhaṅgiyaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:5.2"
msgid "Pañca vuttā mahesinā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:5.3"
msgid "Vissajjantassa paribhuñjantassa anāpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:5.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-pvr20:6.1"
msgid "Dasa puggale na vadāmi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:6.2"
msgid "Ekādasa vivajjiya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:6.3"
msgid "Vuḍḍhaṃ vandantassa āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:6.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-pvr20:7.1"
msgid "Na ukkhittako na ca pana pārivāsiko,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:7.2"
msgid "Na saṃghabhinno na ca pana pakkhasaṅkanto;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:7.3"
msgid "Samānasaṃvāsakabhūmiyā ṭhito,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:7.4"
msgid "Kathaṃ nu sikkhāya asādhāraṇo siyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:7.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-pvr20:8.1"
msgid "Upeti dhammaṃ paripucchamāno,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:8.2"
msgid "Kusalaṃ atthūpasañhitaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:8.3"
msgid "Na jīvati na mato na nibbuto,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:8.4"
msgid "Taṃ puggalaṃ katamaṃ vadanti buddhā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:8.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-pvr20:9.1"
msgid "Ubbhakkhake na vadāmi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:9.2"
msgid "Adho nābhiṃ vivajjiya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:9.3"
msgid "Methunadhammapaccayā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:9.4"
msgid "Kathaṃ pārājiko siyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:9.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-pvr20:10.1"
msgid "Bhikkhu saññācikāya kuṭiṃ karoti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:10.2"
msgid "Adesitavatthukaṃ pamāṇātikkantaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:10.3"
msgid "Sārambhaṃ aparikkamanaṃ anāpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:10.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-pvr20:11.1"
msgid "Bhikkhu saññācikāya kuṭiṃ karoti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:11.2"
msgid "Desitavatthukaṃ pamāṇikaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:11.3"
msgid "Anārambhaṃ saparikkamanaṃ āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:11.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-pvr20:12.1"
msgid "Na kāyikaṃ kiñci payogamācare,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:12.2"
msgid "Na cāpi vācāya pare bhaṇeyya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:12.3"
msgid "Āpajjeyya garukaṃ chejjavatthuṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:12.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-pvr20:13.1"
msgid "Na kāyikaṃ vācasikañca kiñci,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:13.2"
msgid "Manasāpi santo na kareyya pāpaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:13.3"
msgid "So nāsito kinti sunāsito bhave,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:13.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc11, pts-vp-pli5.217
msgctxt "pli-tv-pvr20:14.1"
msgid "Anālapanto manujena kenaci,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:14.2"
msgid "Vācāgiraṃ no ca pare bhaṇeyya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:14.3"
msgid "Āpajjeyya vācasikaṃ na kāyikaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:14.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-pvr20:15.1"
msgid "Sikkhāpadā buddhavarena vaṇṇitā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:15.2"
msgid "Saṃghādisesā caturo bhaveyyuṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:15.3"
msgid "Āpajjeyya ekapayogena sabbe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:15.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-pvr20:16.1"
msgid "Ubho ekato upasampannā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:16.2"
msgid "Ubhinnaṃ hatthato cīvaraṃ paṭiggaṇheyya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:16.3"
msgid "Siyā āpattiyo nānā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:16.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-pvr20:17.1"
msgid "Caturo janā saṃvidhāya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:17.2"
msgid "Garubhaṇḍaṃ avāharuṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:17.3"
msgid "Tayo pārājikā eko na pārājiko,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:17.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr20:18.1"
msgid "2. Pārājikādipañhā"
msgstr ""

#. HTML: </h2><blockquote class="gatha"><p>
#. REF: sc15
msgctxt "pli-tv-pvr20:19.1"
msgid "Itthī ca abbhantare siyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:19.2"
msgid "Bhikkhu ca bahiddhā siyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:19.3"
msgid "Chiddaṃ tasmiṃ ghare natthi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:19.4"
msgid "Methunadhammapaccayā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:19.5"
msgid "Kathaṃ pārājiko siyā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:19.6"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-pvr20:20.1"
msgid "Telaṃ madhuṃ phāṇitañcāpi sappiṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:20.2"
msgid "Sāmaṃ gahetvāna nikkhipeyya;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:20.3"
msgid "Avītivatte sattāhe,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:20.4"
msgid "Sati paccaye paribhuñjantassa āpatti;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:20.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-pvr20:21.1"
msgid "Nissaggiyena āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:21.2"
msgid "Suddhakena pācittiyaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:21.3"
msgid "Āpajjantassa ekato,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:21.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc18
msgctxt "pli-tv-pvr20:22.1"
msgid "Bhikkhū siyā vīsatiyā samāgatā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:22.2"
msgid "Kammaṃ kareyyuṃ samaggasaññino;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:22.3"
msgid "Bhikkhu siyā dvādasayojane ṭhito,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:22.4"
msgid "Kammañca taṃ kuppeyya vaggapaccayā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:22.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-pvr20:23.1"
msgid "Padavītihāramattena vācāya bhaṇitena ca,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:23.2"
msgid "Sabbāni garukāni sappaṭikammāni;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:23.3"
msgid "Catusaṭṭhi āpattiyo āpajjeyya ekato,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:23.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc20
msgctxt "pli-tv-pvr20:24.1"
msgid "Nivattho antaravāsakena,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:24.2"
msgid "Diguṇaṃ saṅghāṭiṃ pāruto;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:24.3"
msgid "Sabbāni tāni nissaggiyāni honti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:24.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-pvr20:25.1"
msgid "Na cāpi ñatti na ca pana kammavācā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:25.2"
msgid "Na cehi bhikkhūti jino avoca;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:25.3"
msgid "Saraṇagamanampi na tassa atthi,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:25.4"
msgid "Upasampadā cassa akuppā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:25.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-pvr20:26.1"
msgid "Itthiṃ hane na mātaraṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:26.2"
msgid "Purisañca na pitaraṃ hane;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:26.3"
msgid "Haneyya anariyaṃ mando,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:26.4"
msgid "Tena cānantaraṃ phuse;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:26.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc23
msgctxt "pli-tv-pvr20:27.1"
msgid "Itthiṃ hane ca mātaraṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:27.2"
msgid "Purisañca pitaraṃ hane;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:27.3"
msgid "Mātaraṃ pitaraṃ hantvā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:27.4"
msgid "Na tenānantaraṃ phuse;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:27.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc24, pts-vp-pli5.218
msgctxt "pli-tv-pvr20:28.1"
msgid "Acodayitvā assārayitvā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:28.2"
msgid "Asammukhībhūtassa kareyya kammaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:28.3"
msgid "Katañca kammaṃ sukataṃ bhaveyya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:28.4"
msgid "Kārako ca saṃgho anāpattiko siyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:28.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-pvr20:29.1"
msgid "Codayitvā sārayitvā,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:29.2"
msgid "Sammukhībhūtassa kareyya kammaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:29.3"
msgid "Katañca kammaṃ akataṃ bhaveyya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:29.4"
msgid "Kārako ca saṃgho sāpattiko siyā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:29.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc26
msgctxt "pli-tv-pvr20:30.1"
msgid "Chindantassa āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:30.2"
msgid "Chindantassa anāpatti;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:30.3"
msgid "Chādentassa āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:30.4"
msgid "Chādentassa anāpatti;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:30.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc27
msgctxt "pli-tv-pvr20:31.1"
msgid "Saccaṃ bhaṇanto garukaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:31.2"
msgid "Musā ca lahu bhāsato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:31.3"
msgid "Musā bhaṇanto garukaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:31.4"
msgid "Saccañca lahu bhāsato;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:31.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p></blockquote><h2>
msgctxt "pli-tv-pvr20:32.1"
msgid "3. Pācittiyādipañhā"
msgstr ""

#. HTML: </h2><blockquote class="gatha"><p>
#. REF: sc28
msgctxt "pli-tv-pvr20:33.1"
msgid "Adhiṭṭhitaṃ rajanāya rattaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:33.2"
msgid "Kappakatampi santaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:33.3"
msgid "Paribhuñjantassa āpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:33.4"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc29
msgctxt "pli-tv-pvr20:34.1"
msgid "Atthaṅgate sūriye bhikkhu maṃsāni khādati,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:34.2"
msgid "Na ummattako na ca pana khittacitto;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:34.3"
msgid "Na cāpi so vedanāṭṭo bhaveyya,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:34.4"
msgid "Na cassa hoti āpatti;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:34.5"
msgid "So ca dhammo sugatena desito,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:34.6"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc30
msgctxt "pli-tv-pvr20:35.1"
msgid "Na rattacitto na ca pana theyyacitto,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:35.2"
msgid "Na cāpi so paraṃ maraṇāya cetayi;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:35.3"
msgid "Salākaṃ dentassa hoti chejjaṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:35.4"
msgid "Paṭiggaṇhantassa thullaccayaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:35.5"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc31
msgctxt "pli-tv-pvr20:36.1"
msgid "Na cāpi āraññakaṃ sāsaṅkasammataṃ,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:36.2"
msgid "Na cāpi saṃghena sammuti dinnā;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:36.3"
msgid "Na cassa kathinaṃ atthataṃ tattheva,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:36.4"
msgid "Cīvaraṃ nikkhipitvā gaccheyya aḍḍhayojanaṃ;"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:36.5"
msgid "Tattheva aruṇaṃ uggacchantassa anāpatti,"
msgstr ""

#. HTML: <br>
msgctxt "pli-tv-pvr20:36.6"
msgid "Pañhā mesā kusalehi cintitā."
msgstr ""

#. HTML: </p><p>
#. REF: sc32
msgctxt "pli-tv-pvr20:37.1"
msgid "Kāyikāni na vācasikāni,"
msgstr ""

#. HTML: <br>
