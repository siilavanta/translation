#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc63:0.5"
msgid "63. Ukkoṭanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.126
msgctxt "pli-tv-bu-vb-pc63:1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū jānaṃ yathādhammaṃ nihatādhikaraṇaṃ punakammāya ukkoṭenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.3"
msgid "“akataṃ kammaṃ dukkaṭaṃ kammaṃ puna kātabbaṃ kammaṃ anihataṃ dunnihataṃ puna nihanitabban”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc63:1.4"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.5"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.6"
msgid "“kathañhi nāma chabbaggiyā bhikkhū jānaṃ yathādhammaṃ nihatādhikaraṇaṃ punakammāya ukkoṭessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.7"
msgid "“saccaṃ kira tumhe, bhikkhave, jānaṃ yathādhammaṃ nihatādhikaraṇaṃ punakammāya ukkoṭethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.10"
msgid "kathañhi nāma tumhe, moghapurisā, jānaṃ yathādhammaṃ nihatādhikaraṇaṃ punakammāya ukkoṭessatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.11"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:1.12"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc63:1.13"
msgid "“Yo pana bhikkhu jānaṃ yathādhammaṃ nihatādhikaraṇaṃ punakammāya ukkoṭeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc63:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc63:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc63:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc63:2.1.6"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.7"
msgid "sāmaṃ vā jānāti, aññe vā tassa ārocenti, so vā āroceti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc63:2.1.8"
msgid "Yathādhammaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.9"
msgid "dhammena vinayena satthusāsanena kataṃ, etaṃ yathādhammaṃ nāma."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc63:2.1.10"
msgid "Adhikaraṇaṃ nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.11"
msgid "cattāri adhikaraṇāni—"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc63:2.1.12"
msgid "vivādādhikaraṇaṃ, anuvādādhikaraṇaṃ, āpattādhikaraṇaṃ, kiccādhikaraṇaṃ."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc63:2.1.13"
msgid "Punakammāya ukkoṭeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc63:2.1.14"
msgid "“akataṃ kammaṃ dukkaṭaṃ kammaṃ punakātabbaṃ kammaṃ anihataṃ dunnihataṃ puna nihanitabban”ti ukkoṭeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc63:2.2.1"
msgid "Dhammakamme dhammakammasaññī ukkoṭeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.2.2"
msgid "Dhammakamme vematiko ukkoṭeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.2.3"
msgid "Dhammakamme adhammakammasaññī ukkoṭeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.2.4"
msgid "Adhammakamme dhammakammasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.2.5"
msgid "Adhammakamme vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.2.6"
msgid "Adhammakamme adhammakammasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc63:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc63:2.3.2"
msgid "“adhammena vā vaggena vā na kammārahassa vā kammaṃ katan”ti jānanto ukkoṭeti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc63:2.3.3"
msgid "Ukkoṭanasikkhāpadaṃ niṭṭhitaṃ tatiyaṃ."
msgstr ""
