#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc52:0.5"
msgid "52. Aṅgulipatodakasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc52:1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū sattarasavaggiyaṃ bhikkhuṃ aṅgulipatodakena hāsesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.3"
msgid "So bhikkhu uttanto anassāsako kālamakāsi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.111
msgctxt "pli-tv-bu-vb-pc52:1.4"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.5"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.6"
msgid "“kathañhi nāma chabbaggiyā bhikkhū bhikkhuṃ aṅgulipatodakena hāsessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.7"
msgid "“saccaṃ kira tumhe, bhikkhave, bhikkhuṃ aṅgulipatodakena hāsethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.10"
msgid "kathañhi nāma tumhe, moghapurisā, bhikkhuṃ aṅgulipatodakena hāsessatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.11"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:1.12"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc52:1.13"
msgid "“Aṅgulipatodake pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
#. VAR: nāma → aṅgulipatodako nāma aṅguliyāpi tudanti (s1-3)
msgctxt "pli-tv-bu-vb-pc52:2.1.1"
msgid "Aṅgulipatodako nāma"
msgstr ""

#. HTML: </b><b class="gloss">
#. VAR: hasādhippāyo → hassādhippāyo (bj, s1-3) | hāsādhippāyo (pts1)
msgctxt "pli-tv-bu-vb-pc52:2.1.2"
msgid "upasampanno upasampannaṃ hasādhippāyo kāyena kāyaṃ āmasati, āpatti pācittiyassa."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc52:2.2.1"
msgid "Upasampanne upasampannasaññī aṅgulipatodakena hāseti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.2"
msgid "Upasampanne vematiko aṅgulipatodakena hāseti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.3"
msgid "Upasampanne anupasampannasaññī aṅgulipatodakena hāseti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc52:2.2.4"
msgid "Kāyena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.5"
msgid "Kāyapaṭibaddhena kāyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.6"
msgid "Kāyapaṭibaddhena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.7"
msgid "Nissaggiyena kāyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.8"
msgid "Nissaggiyena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.9"
msgid "Nissaggiyena nissaggiyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc52:2.2.10"
msgid "Anupasampannaṃ kāyena kāyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.11"
msgid "Kāyena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.12"
msgid "Kāyapaṭibaddhena kāyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.13"
msgid "Kāyapaṭibaddhena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.14"
msgid "Nissaggiyena kāyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.15"
msgid "Nissaggiyena kāyapaṭibaddhaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.16"
msgid "Nissaggiyena nissaggiyaṃ āmasati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.17"
msgid "Anupasampanne upasampannasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.18"
msgid "Anupasampanne vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.2.19"
msgid "Anupasampanne anupasampannasaññī, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc52:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc52:2.3.2"
msgid "na hasādhippāyo, sati karaṇīye āmasati, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc52:2.3.3"
msgid "Aṅgulipatodakasikkhāpadaṃ niṭṭhitaṃ dutiyaṃ."
msgstr ""

