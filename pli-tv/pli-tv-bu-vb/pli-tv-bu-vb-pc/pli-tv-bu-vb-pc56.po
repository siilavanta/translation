#. HTML: <section class="sutta" id="pli-tv-bu-vb-pc56"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pc56:0.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc56:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p> 
msgctxt "pli-tv-bu-vb-pc56:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

#. VAR: Surāpānavagga → joti­sikkhā­padaṃ (bj)
msgctxt "pli-tv-bu-vb-pc56:0.4"
msgid "Surāpānavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc56:0.5"
msgid "56. Jotikasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
#. VAR: susumāragire → suṃsumāragire (bj, s1, s2, pts1) | saṃsumāragire (mr)
msgctxt "pli-tv-bu-vb-pc56:1.1.1"
msgid "Tena samayena buddho bhagavā bhaggesu viharati susumāragire bhesakaḷāvane migadāye."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.2"
msgid "Tena kho pana samayena bhikkhū hemantike kāle aññataraṃ mahantaṃ susirakaṭṭhaṃ jotiṃ samādahitvā visibbesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.3"
msgid "Tasmiñca susire kaṇhasappo agginā santatto nikkhamitvā bhikkhū paripātesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.4"
msgid "Bhikkhū tahaṃ tahaṃ upadhāviṃsu."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc56:1.1.5"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.6"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.7"
msgid "“kathañhi nāma bhikkhū jotiṃ samādahitvā visibbessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.8"
msgid "“saccaṃ kira, bhikkhave, bhikkhū jotiṃ samādahitvā visibbentī”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.9"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.10"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.11"
msgid "kathañhi nāma te, bhikkhave, moghapurisā jotiṃ samādahitvā visibbessanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.1.13"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc56:1.1.14"
msgid "“Yo pana bhikkhu visibbanāpekkho jotiṃ samādaheyya vā samādahāpeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc56:1.1.15"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc56:1.2.1"
msgid "Tena kho pana samayena bhikkhū gilānā honti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.2"
msgid "Gilānapucchakā bhikkhū gilāne bhikkhū etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.3"
msgid "“kaccāvuso, khamanīyaṃ, kacci yāpanīyan”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.4"
msgid "“Pubbe mayaṃ, āvuso, jotiṃ samādahitvā visibbema;"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.5"
msgid "tena no phāsu hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.6"
msgid "Idāni pana ‘bhagavatā paṭikkhittan’ti kukkuccāyantā na visibbema, tena no na phāsu hotī”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.7"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.8"
msgid "anujānāmi, bhikkhave, gilānena bhikkhunā jotiṃ samādahitvā vā samādahāpetvā vā visibbetuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:1.2.9"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc6, pts-vp-pli4.116
msgctxt "pli-tv-bu-vb-pc56:1.2.10"
msgid "“Yo pana bhikkhu agilāno visibbanāpekkho jotiṃ samādaheyya vā samādahāpeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc56:1.2.11"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc56:2.1.1"
msgid "Tena kho pana samayena bhikkhū padīpepi jotikepi jantāgharepi kukkuccāyanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:2.1.2"
msgid "Bhagavato etamatthaṃ ārocesuṃ … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:2.1.3"
msgid "anujānāmi, bhikkhave, tathārūpappaccayā jotiṃ samādahituṃ samādahāpetuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:2.1.4"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc9
msgctxt "pli-tv-bu-vb-pc56:2.1.5"
msgid "“Yo pana bhikkhu agilāno visibbanāpekkho jotiṃ samādaheyya vā samādahāpeyya vā, aññatra tathārūpappaccayā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc10
msgctxt "pli-tv-bu-vb-pc56:3.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc56:3.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc56:3.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc11
msgctxt "pli-tv-bu-vb-pc56:3.1.6"
msgid "Agilāno nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.7"
msgid "yassa vinā agginā phāsu hoti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc12
msgctxt "pli-tv-bu-vb-pc56:3.1.8"
msgid "Gilāno nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.9"
msgid "yassa vinā agginā na phāsu hoti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc13
msgctxt "pli-tv-bu-vb-pc56:3.1.10"
msgid "Visibbanāpekkhoti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.11"
msgid "tappitukāmo."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc14
msgctxt "pli-tv-bu-vb-pc56:3.1.12"
msgid "Joti nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.13"
msgid "aggi vuccati."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc15
msgctxt "pli-tv-bu-vb-pc56:3.1.14"
msgid "Samādaheyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.15"
msgid "sayaṃ samādahati, āpatti pācittiyassa."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc16
msgctxt "pli-tv-bu-vb-pc56:3.1.16"
msgid "Samādahāpeyyāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.17"
msgid "aññaṃ āṇāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc56:3.1.18"
msgid "Sakiṃ āṇatto bahukampi samādahati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc17
msgctxt "pli-tv-bu-vb-pc56:3.1.19"
msgid "Aññatra tathā rūpappaccayāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc56:3.1.20"
msgid "ṭhapetvā tathārūpappaccayaṃ."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc18
msgctxt "pli-tv-bu-vb-pc56:3.2.1"
msgid "Agilāno agilānasaññī visibbanāpekkho jotiṃ samādahati vā samādahāpeti vā, aññatra tathārūpappaccayā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.2.2"
msgid "Agilāno vematiko visibbanāpekkho jotiṃ samādahati vā samādahāpeti vā, aññatra tathārūpappaccayā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.2.3"
msgid "Agilāno gilānasaññī visibbanāpekkho jotiṃ samādahati vā samādahāpeti vā, aññatra tathārūpappaccayā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-bu-vb-pc56:3.2.4"
msgid "Paṭilātaṃ ukkhipati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.2.5"
msgid "Gilāno agilānasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.2.6"
msgid "Gilāno vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.2.7"
msgid "Gilāno gilānasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc20
msgctxt "pli-tv-bu-vb-pc56:3.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc56:3.3.2"
msgid "gilānassa, aññena kataṃ visibbeti, vītaccitaṅgāraṃ visibbeti, padīpe jotike jantāghare tathārūpappaccayā, āpadāsu, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc21
msgctxt "pli-tv-bu-vb-pc56:3.3.3"
msgid "Jotikasikkhāpadaṃ niṭṭhitaṃ chaṭṭhaṃ."
msgstr ""
