msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pc62:0.2"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p></p><p>
msgctxt "pli-tv-bu-vb-pc62:0.3"
msgid "Pācittiyakaṇḍa"
msgstr "The chapter on confession"

msgctxt "pli-tv-bu-vb-pc62:0.4"
msgid "Sappāṇakavagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pc62:0.5"
msgid "62. Sappāṇakasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pc62:1.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū jānaṃ sappāṇakaṃ udakaṃ paribhuñjanti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-pc62:1.3"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.4"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.5"
msgid "“kathañhi nāma chabbaggiyā bhikkhū jānaṃ sappāṇakaṃ udakaṃ paribhuñjissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.6"
msgid "“saccaṃ kira tumhe, bhikkhave, jānaṃ sappāṇakaṃ udakaṃ paribhuñjathā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.9"
msgid "kathañhi nāma tumhe, moghapurisā, jānaṃ sappāṇakaṃ udakaṃ paribhuñjissatha."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.10"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:1.11"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-pc62:1.12"
msgid "“Yo pana bhikkhu jānaṃ sappāṇakaṃ udakaṃ paribhuñjeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b class="term">
#. REF: sc4
msgctxt "pli-tv-bu-vb-pc62:2.1.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc62:2.1.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: </b><b class="term">
msgctxt "pli-tv-bu-vb-pc62:2.1.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc62:2.1.4"
msgid "… pe …"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc62:2.1.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b class="term">
#. REF: sc5
msgctxt "pli-tv-bu-vb-pc62:2.1.6"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b><b class="gloss">
msgctxt "pli-tv-bu-vb-pc62:2.1.7"
msgid "sāmaṃ vā jānāti, aññe vā tassa ārocenti."
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pc62:2.1.8"
msgid "“Sappāṇakan”ti jānanto, “paribhogena marissantī”ti jānanto paribhuñjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pc62:2.1.9"
msgid "Sappāṇake sappāṇakasaññī paribhuñjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.2.1"
msgid "Sappāṇake vematiko paribhuñjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.2.2"
msgid "Sappāṇake appāṇakasaññī paribhuñjati, anāpatti."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.2.3"
msgid "Appāṇake sappāṇakasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.2.4"
msgid "Appāṇake vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.2.5"
msgid "Appāṇake appāṇakasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bu-vb-pc62:2.3.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pc62:2.3.2"
msgid "“sappāṇakan”ti ajānanto, “appāṇakan”ti jānanto, “paribhogena na marissantī”ti jānanto paribhuñjati, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bu-vb-pc62:2.3.3"
msgid "Sappāṇakasikkhāpadaṃ niṭṭhitaṃ dutiyaṃ."
msgstr ""
