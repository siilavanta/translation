#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-sk57:5.1"
msgid "57. Chattapāṇisikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-sk57:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhū chattapāṇissa dhammaṃ desenti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bu-vb-sk57:7.1"
msgid "Ye te bhikkhū appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.2"
msgid "te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.3"
msgid "“kathañhi nāma chabbaggiyā bhikkhū chattapāṇissa dhammaṃ desessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.4"
msgid "“saccaṃ kira tumhe, bhikkhave, chattapāṇissa dhammaṃ desethā”ti?"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.7"
msgid "kathañhi nāma tumhe, moghapurisā, chattapāṇissa dhammaṃ desessatha."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.8"
msgid "Netaṃ, moghapurisā, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:7.9"
msgid "evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bu-vb-sk57:8.1"
msgid "“Na chattapāṇissa dhammaṃ desessāmīti sikkhā karaṇīyā”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-sk57:9.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5, pts-vp-pli4.200
msgctxt "pli-tv-bu-vb-sk57:10.1"
msgid "Tena kho pana samayena bhikkhū chattapāṇissa gilānassa dhammaṃ desetuṃ kukkuccāyanti."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:10.2"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:10.3"
msgid "“kathañhi nāma samaṇā sakyaputtiyā chattapāṇissa gilānassa dhammaṃ na desessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-sk57:11.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:11.2"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:11.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:11.4"
msgid "“anujānāmi, bhikkhave, chattapāṇissa gilānassa dhammaṃ desetuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:11.5"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc7
msgctxt "pli-tv-bu-vb-sk57:12.1"
msgid "“Na chattapāṇissa agilānassa dhammaṃ desessāmīti sikkhā karaṇīyā”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc8
msgctxt "pli-tv-bu-vb-sk57:13.1"
msgid "Chattaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-sk57:13.2"
msgid "tīṇi chattāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:13.3"
msgid "setacchattaṃ, kilañjacchattaṃ, paṇṇacchattaṃ maṇḍalabaddhaṃ salākabaddhaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bu-vb-sk57:14.1"
msgid "Dhammo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-sk57:14.2"
msgid "buddhabhāsito sāvakabhāsito isibhāsito devatābhāsito atthūpasañhito dhammūpasañhito."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bu-vb-sk57:15.1"
msgid "Deseyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-sk57:15.2"
msgid "padena deseti, pade pade āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:15.3"
msgid "Akkharāya deseti, akkharakkharāya āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:15.4"
msgid "Na chattapāṇissa agilānassa dhammo desetabbo."
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:15.5"
msgid "Yo anādariyaṃ paṭicca chattapāṇissa agilānassa dhammaṃ deseti, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bu-vb-sk57:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:16.2"
msgid "asañcicca … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-sk57:16.3"
msgid "ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bu-vb-sk57:17.1"
msgid "Sattamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
