#. HTML: <section class="sutta" id="pli-tv-bu-vb-pd3"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bu-vb-pd3:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd3:2.1"
msgid "Mahāvibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bu-vb-pd3:3.1"
msgid "Pāṭidesanīyakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bu-vb-pd3:4.1"
msgid "3. Tatiyapāṭidesanīyasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bu-vb-pd3:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:5.2"
msgid "Tena kho pana samayena sāvatthiyaṃ aññataraṃ kulaṃ ubhatopasannaṃ hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:5.3"
msgid "Saddhāya vaḍḍhati, bhogena hāyati, yaṃ tasmiṃ kule uppajjati purebhattaṃ khādanīyaṃ vā bhojanīyaṃ vā taṃ sabbaṃ bhikkhūnaṃ vissajjetvā appekadā anasitā acchanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:5.4"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:5.5"
msgid "“kathañhi nāma samaṇā sakyaputtiyā na mattaṃ jānitvā paṭiggahessanti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:5.6"
msgid "Ime imesaṃ datvā appekadā anasitā acchantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.179
msgctxt "pli-tv-bu-vb-pd3:6.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:6.2"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:6.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:6.4"
msgid "“anujānāmi, bhikkhave, yaṃ kulaṃ saddhāya vaḍḍhati, bhogena hāyati evarūpassa kulassa ñattidutiyena kammena sekkhasammutiṃ dātuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:6.5"
msgid "Evañca pana, bhikkhave, dātabbā."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:6.6"
msgid "Byattena bhikkhunā paṭibalena saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bu-vb-pd3:7.1"
msgid "‘Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:7.2"
msgid "Itthannāmaṃ kulaṃ saddhāya vaḍḍhati, bhogena hāyati."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:7.3"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmassa kulassa sekkhasammutiṃ dadeyya."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:7.4"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc4
msgctxt "pli-tv-bu-vb-pd3:8.1"
msgid "Suṇātu me, bhante, saṃgho."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:8.2"
msgid "Itthannāmaṃ kulaṃ saddhāya vaḍḍhati, bhogena hāyati."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:8.3"
msgid "Saṃgho itthannāmassa kulassa sekkhasammutiṃ deti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:8.4"
msgid "Yassāyasmato khamati itthannāmassa kulassa sekkhasammutiyā dānaṃ, so tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:8.5"
msgid "yassa nakkhamati, so bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
msgctxt "pli-tv-bu-vb-pd3:9.1"
msgid "Dinnā saṃghena itthannāmassa kulassa sekkhasammuti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:9.2"
msgid "Khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bu-vb-pd3:10.1"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc7
msgctxt "pli-tv-bu-vb-pd3:11.1"
msgid "“Yāni kho pana tāni sekkhasammatāni kulāni, yo pana bhikkhu tathārūpesu sekkhasammatesu kulesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādeyya vā bhuñjeyya vā, paṭidesetabbaṃ tena bhikkhunā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:11.2"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc8
msgctxt "pli-tv-bu-vb-pd3:12.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bu-vb-pd3:13.1"
msgid "Tena kho pana samayena sāvatthiyaṃ ussavo hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.2"
msgid "Manussā bhikkhū nimantetvā bhojenti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.3"
msgid "Tampi kho kulaṃ bhikkhū nimantesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.4"
msgid "Bhikkhū kukkuccāyantā nādhivāsenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.5"
msgid "“paṭikkhittaṃ bhagavatā sekkhasammatesu kulesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjitun”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.6"
msgid "Te ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:13.7"
msgid "“kiṃ nu kho nāma amhākaṃ jīvitena yaṃ ayyā amhākaṃ na paṭiggaṇhantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bu-vb-pd3:14.1"
msgid "Assosuṃ kho bhikkhū tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:14.2"
msgid "Atha kho te bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:14.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:14.4"
msgid "“anujānāmi, bhikkhave, nimantitena sekkhasammatesu kulesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:14.5"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc11, pts-vp-pli4.180
msgctxt "pli-tv-bu-vb-pd3:15.1"
msgid "“Yāni kho pana tāni sekkhasammatāni kulāni, yo pana bhikkhu tathārūpesu sekkhasammatesu kulesu pubbe animantito khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādeyya vā bhuñjeyya vā, paṭidesetabbaṃ tena bhikkhunā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:15.2"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p>
#. REF: sc12
msgctxt "pli-tv-bu-vb-pd3:16.1"
msgid "Evañcidaṃ bhagavatā bhikkhūnaṃ sikkhāpadaṃ paññattaṃ hoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bu-vb-pd3:17.1"
msgid "Tena kho pana samayena aññataro bhikkhu tassa kulassa kulūpako hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.2"
msgid "Atha kho so bhikkhu pubbaṇhasamayaṃ nivāsetvā pattacīvaramādāya yena taṃ kulaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.3"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.4"
msgid "Tena kho pana samayena so bhikkhu gilāno hoti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.5"
msgid "Atha kho te manussā taṃ bhikkhuṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.6"
msgid "“bhuñjatha, bhante”ti."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.7"
msgid "Atha kho so bhikkhu—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.8"
msgid "“bhagavatā paṭikkhittaṃ animantitena sekkhasammatesu kulesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjitun”ti kukkuccāyanto na paṭiggahesi;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.9"
msgid "nāsakkhi piṇḍāya carituṃ;"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:17.10"
msgid "chinnabhatto ahosi."
msgstr ""

#. HTML: </p><p>
#. REF: sc14
msgctxt "pli-tv-bu-vb-pd3:18.1"
msgid "Atha kho so bhikkhu ārāmaṃ gantvā bhikkhūnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:18.2"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:18.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe dhammiṃ kathaṃ katvā bhikkhū āmantesi—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:18.4"
msgid "“anujānāmi, bhikkhave, gilānena bhikkhunā sekkhasammatesu kulesu khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādituṃ bhuñjituṃ."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:18.5"
msgid "Evañca pana, bhikkhave, imaṃ sikkhāpadaṃ uddiseyyātha—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc15
#. VAR: sekkhasammatāni → sekha ... (bj, pts1)
msgctxt "pli-tv-bu-vb-pd3:19.1"
msgid "“Yāni kho pana tāni sekkhasammatāni kulāni, yo pana bhikkhu tathārūpesu sekkhasammatesu kulesu pubbe animantito agilāno khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādeyya vā bhuñjeyya vā, paṭidesetabbaṃ tena bhikkhunā—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:19.2"
msgid "‘gārayhaṃ, āvuso, dhammaṃ āpajjiṃ asappāyaṃ pāṭidesanīyaṃ, taṃ paṭidesemī’”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc16
msgctxt "pli-tv-bu-vb-pd3:20.1"
msgid "Yāni kho pana tāni sekkhasammatāni kulānīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:20.2"
msgid "sekkhasammataṃ nāma kulaṃ yaṃ kulaṃ saddhāya vaḍḍhati, bhogena hāyati."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:20.3"
msgid "Evarūpassa kulassa ñattidutiyena kammena sekkhasammuti dinnā hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17
msgctxt "pli-tv-bu-vb-pd3:21.1"
msgid "Yo panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:21.2"
msgid "yo yādiso … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bu-vb-pd3:21.3"
msgid "bhikkhūti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:21.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:21.5"
msgid "ayaṃ imasmiṃ atthe adhippeto bhikkhūti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc18
msgctxt "pli-tv-bu-vb-pd3:22.1"
msgid "Tathārūpesu sekkhasammatesu kulesūti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:22.2"
msgid "evarūpesu sekkhasammatesu kulesu."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc19
msgctxt "pli-tv-bu-vb-pd3:23.1"
msgid "Animantito nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:23.2"
msgid "ajjatanāya vā svātanāya vā animantito, gharūpacāraṃ okkamante nimanteti, eso animantito nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20, pts-vp-pli4.181
msgctxt "pli-tv-bu-vb-pd3:24.1"
msgid "Nimantito nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:24.2"
msgid "ajjatanāya vā svātanāya vā nimantito, gharūpacāraṃ anokkamante nimanteti, eso nimantito nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc21
msgctxt "pli-tv-bu-vb-pd3:25.1"
msgid "Agilāno nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:25.2"
msgid "sakkoti piṇḍāya carituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc22
msgctxt "pli-tv-bu-vb-pd3:26.1"
msgid "Gilāno nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:26.2"
msgid "na sakkoti piṇḍāya carituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc23
msgctxt "pli-tv-bu-vb-pd3:27.1"
msgid "Khādanīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:27.2"
msgid "pañca bhojanāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:27.3"
msgid "yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ ṭhapetvā avasesaṃ khādanīyaṃ nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc24
msgctxt "pli-tv-bu-vb-pd3:28.1"
msgid "Bhojanīyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bu-vb-pd3:28.2"
msgid "pañca bhojanāni—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:28.3"
msgid "odano, kummāso, sattu, maccho, maṃsaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc25
msgctxt "pli-tv-bu-vb-pd3:29.1"
msgid "Animantito agilāno “khādissāmi bhuñjissāmī”ti paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:29.2"
msgid "Ajjhohāre ajjhohāre āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc26
msgctxt "pli-tv-bu-vb-pd3:30.1"
msgid "Sekkhasammate sekkhasammatasaññī animantito agilāno khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādati vā bhuñjati vā, āpatti pāṭidesanīyassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:30.2"
msgid "Sekkhasammate vematiko … pe …"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:30.3"
msgid "sekkhasammate asekkhasammatasaññī animantito agilāno khādanīyaṃ vā bhojanīyaṃ vā sahatthā paṭiggahetvā khādati vā bhuñjati vā, āpatti pāṭidesanīyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc27
msgctxt "pli-tv-bu-vb-pd3:31.1"
msgid "Yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ āhāratthāya paṭiggaṇhāti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:31.2"
msgid "Ajjhohāre ajjhohāre āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:31.3"
msgid "Asekkhasammate sekkhasammatasaññī, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:31.4"
msgid "Asekkhasammate vematiko, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:31.5"
msgid "Asekkhasammate asekkhasammatasaññī, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc28
msgctxt "pli-tv-bu-vb-pd3:32.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:32.2"
msgid "nimantitassa, gilānassa, nimantitassa vā gilānassa vā sesakaṃ bhuñjati, aññesaṃ bhikkhā tattha paññattā hoti, gharato nīharitvā denti, niccabhatte, salākabhatte, pakkhike, uposathike, pāṭipadike, yāmakālikaṃ sattāhakālikaṃ yāvajīvikaṃ—"
msgstr ""

msgctxt "pli-tv-bu-vb-pd3:32.3"
msgid "“sati paccaye paribhuñjā”ti deti, ummattakassa, ādikammikassāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc29
msgctxt "pli-tv-bu-vb-pd3:33.1"
msgid "Tatiyapāṭidesanīyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
