#. HTML: <section class="sutta" id="pli-tv-bi-vb-pj6"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pj6:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj6:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj6:3.1"
msgid "Pārājikakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pj6:4.1"
msgid "6. Vajjappaṭicchādikāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.216
msgctxt "pli-tv-bi-vb-pj6:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.2"
msgid "Tena kho pana samayena sundarīnandā bhikkhunī sāḷhena migāranattunā gabbhinī hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.3"
msgid "Yāva gabbho taruṇo ahosi tāva chādesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.4"
msgid "Paripakke gabbhe vibbhamitvā vijāyi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.5"
msgid "Bhikkhuniyo thullanandaṃ bhikkhuniṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.6"
msgid "“sundarīnandā kho, ayye, aciravibbhantā vijātā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.7"
msgid "Kacci no sā bhikkhunīyeva samānā gabbhinī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.8"
msgid "“Evaṃ, ayye”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.9"
msgid "“Kissa pana tvaṃ, ayye, jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodesi na gaṇassa ārocesī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.10"
msgid "“Yo etissā avaṇṇo mayheso avaṇṇo, yā etissā akitti mayhesā akitti, yo etissā ayaso mayheso ayaso, yo etissā alābho mayheso alābho."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.11"
msgid "Kyāhaṃ, ayye, attano avaṇṇaṃ attano akittiṃ attano ayasaṃ attano alābhaṃ paresaṃ ārocessāmī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.12"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.13"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:5.14"
msgid "“kathañhi nāma ayyā thullanandā jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodessati na gaṇassa ārocessatī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pj6:6.1"
msgid "Atha kho tā bhikkhuniyo bhikkhūnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

#. VAR: Bhikkhū → ye te bhikkhū ...pe... (?)
msgctxt "pli-tv-bi-vb-pj6:6.2"
msgid "Bhikkhū bhagavato etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.3"
msgid "Atha kho bhagavā etasmiṃ nidāne etasmiṃ pakaraṇe bhikkhusaṃghaṃ sannipātāpetvā bhikkhū paṭipucchi—"
msgstr ""

#. VAR: paṭicodeti → paṭicodesi ... ārocesīti (bj, pts1, mr)
#. VAR: na gaṇassa ārocetī”ti → paṭicodesi ... ārocesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pj6:6.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodeti na gaṇassa ārocetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodessati na gaṇassa ārocessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:6.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.217
#. VAR: nevattanā → neva attanā (s1-3)
#. VAR: avassaṭā → avasaṭā (bj, s1-3, pts1)
#. VAR: ti → vajjapaṭicchādikāti (bj, s1-3, pts1)
#. VAR: aññāsiṃ → saññāsiṃ (s2, s3)
#. VAR: pubbevāhaṃ → pubbe vāhaṃ (s1-3)
msgctxt "pli-tv-bi-vb-pj6:7.1"
msgid "“Yā pana bhikkhunī jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodeyya na gaṇassa āroceyya, yadā ca sā ṭhitā vā assa cutā vā nāsitā vā avassaṭā vā, sā pacchā evaṃ vadeyya—‘pubbevāhaṃ, ayye, aññāsiṃ etaṃ bhikkhuniṃ evarūpā ca evarūpā ca sā bhaginīti, no ca kho attanā paṭicodessaṃ na gaṇassa ārocessan’ti, ayampi pārājikā hoti asaṃvāsā vajjappaṭicchādikā”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pj6:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj6:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pj6:9.1"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:9.2"
msgid "sāmaṃ vā jānāti, aññe vā tassā ārocenti, sā vā āroceti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pj6:10.1"
msgid "Pārājikaṃ dhammaṃ ajjhāpannanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:10.2"
msgid "aṭṭhannaṃ pārājikānaṃ aññataraṃ pārājikaṃ ajjhāpannaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pj6:11.1"
msgid "Nevattanā paṭicodeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:11.2"
msgid "na sayaṃ codeyya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pj6:12.1"
msgid "Na gaṇassa āroceyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:12.2"
msgid "na aññāsaṃ bhikkhunīnaṃ āroceyya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pj6:13.1"
msgid "Yadā ca sā ṭhitā vā assa cutā vāti"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-pj6:13.2"
msgid "ṭhitā nāma"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-pj6:13.3"
msgid "saliṅge ṭhitā vuccati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj6:13.4"
msgid "Cutā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:13.5"
msgid "kālaṅkatā vuccati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj6:13.6"
msgid "Nāsitā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:13.7"
msgid "sayaṃ vā vibbhantā hoti aññehi vā nāsitā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj6:13.8"
msgid "Avassaṭā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:13.9"
msgid "titthāyatanaṃ saṅkantā vuccati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:13.10"
msgid "Sā pacchā evaṃ vadeyya—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:13.11"
msgid "“pubbevāhaṃ, ayye, aññāsiṃ etaṃ bhikkhuniṃ evarūpā ca evarūpā ca sā bhaginī”ti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pj6:14.1"
msgid "No ca kho attanā paṭicodessanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:14.2"
msgid "sayaṃ vā na codessaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pj6:15.1"
msgid "Na gaṇassa ārocessanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:15.2"
msgid "na aññāsaṃ bhikkhunīnaṃ ārocessaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pj6:16.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:16.2"
msgid "purimāyo upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pj6:17.1"
msgid "Pārājikā hotīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:17.2"
msgid "seyyathāpi nāma paṇḍupalāso bandhanā pamutto abhabbo haritatthāya, evameva bhikkhunī jānaṃ pārājikaṃ dhammaṃ ajjhāpannaṃ bhikkhuniṃ nevattanā paṭicodessāmi na gaṇassa ārocessāmīti dhuraṃ nikkhittamatte assamaṇī hoti asakyadhītā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:17.3"
msgid "Tena vuccati pārājikā hotīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pj6:18.1"
msgid "Asaṃvāsāti"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-pj6:18.2"
msgid "saṃvāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj6:18.3"
msgid "ekakammaṃ ekuddeso samasikkhatā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:18.4"
msgid "Eso saṃvāso nāma."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:18.5"
msgid "So tāya saddhiṃ natthi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:18.6"
msgid "Tena vuccati asaṃvāsāti."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pj6:19.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:19.2"
msgid "“saṃghassa bhaṇḍanaṃ vā kalaho vā viggaho vā vivādo vā bhavissatī”ti nāroceti, “saṃghabhedo vā saṃgharāji vā bhavissatī”ti nāroceti, “ayaṃ kakkhaḷā pharusā jīvitantarāyaṃ vā brahmacariyantarāyaṃ vā karissatī”ti nāroceti, aññā patirūpā bhikkhuniyo apassantī nāroceti, nacchādetukāmā nāroceti, paññāyissati sakena kammenāti nāroceti, ummattikāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj6:19.3"
msgid "ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc16
msgctxt "pli-tv-bi-vb-pj6:20.1"
msgid "Dutiyapārājikaṃ samattaṃ."
msgstr ""
