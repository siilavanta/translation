#. HTML: <section class="sutta" id="pli-tv-bi-vb-pj8"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pj8:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj8:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pj8:3.1"
msgid "Pārājikakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pj8:4.1"
msgid "8. Aṭṭhavatthukāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pj8:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:5.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo avassutā avassutassa purisapuggalassa hatthaggahaṇampi sādiyanti, saṅghāṭikaṇṇaggahaṇampi sādiyanti, santiṭṭhantipi, sallapantipi, saṅketampi gacchanti, purisassapi abbhāgamanaṃ sādiyanti, channampi anupavisanti, kāyampi tadatthāya upasaṃharanti etassa asaddhammassa paṭisevanatthāya."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pj8:6.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.4"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo avassutā avassutassa purisapuggalassa hatthaggahaṇampi sādiyissanti, saṅghāṭikaṇṇaggahaṇampi sādiyissanti, santiṭṭhissantipi, sallapissantipi, saṅketampi gacchissanti, purisassapi abbhāgamanaṃ sādiyissanti, channampi anupavisissanti, kāyampi tadatthāya upasaṃharissanti etassa asaddhammassa paṭisevanatthāyā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.6"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo avassutā avassutassa purisapuggalassa hatthaggahaṇampi sādiyanti, saṅghāṭikaṇṇaggahaṇampi sādiyanti, santiṭṭhantipi, sallapantipi, saṅketampi gacchanti, purisassapi abbhāgamanaṃ sādiyanti, channampi anupavisanti, kāyampi tadatthāya upasaṃharanti etassa asaddhammassa paṭisevanatthāyā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.10"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo avassutā avassutassa purisapuggalassa hatthaggahaṇampi sādiyissanti, saṅghāṭikaṇṇaggahaṇampi sādiyissanti, santiṭṭhissantipi, sallapissantipi, saṅketampi gacchissanti, purisassapi abbhāgamanaṃ sādiyissanti, channampi anupavisissanti, kāyampi tadatthāya upasaṃharissanti etassa asaddhammassa paṭisevanatthāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.11"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:6.13"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3, pts-vp-pli4.221
#. VAR: saṅghāṭikaṇṇaggahaṇaṃ → ... kaṇṇagahaṇaṃ (bj, s1-3, pts1)
#. VAR: hatthaggahaṇaṃ → hatthagahaṇaṃ (bj, s1-3, pts1)
#. VAR: paṭisevanatthāya → patisevanatthāya (bj)
msgctxt "pli-tv-bi-vb-pj8:7.1"
msgid "“Yā pana bhikkhunī avassutā avassutassa purisapuggalassa hatthaggahaṇaṃ vā sādiyeyya, saṅghāṭikaṇṇaggahaṇaṃ vā sādiyeyya, santiṭṭheyya vā, sallapeyya vā, saṅketaṃ vā gaccheyya, purisassa vā abbhāgamanaṃ sādiyeyya, channaṃ vā anupaviseyya, kāyaṃ vā tadatthāya upasaṃhareyya etassa asaddhammassa paṭisevanatthāya, ayampi pārājikā hoti asaṃvāsā aṭṭhavatthukā”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pj8:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:8.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pj8:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:8.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pj8:9.1"
msgid "Avassutā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:9.1"
msgid "sārattā apekkhavatī paṭibaddhacittā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pj8:10.1"
msgid "Avassuto nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:10.1"
msgid "sāratto apekkhavā paṭibaddhacitto."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pj8:11.1"
msgid "Purisapuggalo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:11.1"
msgid "manussapuriso, na yakkho na peto na tiracchānagato viññū paṭibalo kāyasaṃsaggaṃ samāpajjituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pj8:12.1"
msgid "Hatthaggahaṇaṃ vā sādiyeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:12.1"
msgid "hattho nāma kapparaṃ upādāya yāva agganakhā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:12.2"
msgid "Etassa asaddhammassa paṭisevanatthāya ubbhakkhakaṃ adhojāṇumaṇḍalaṃ gahaṇaṃ sādiyati, āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pj8:13.1"
msgid "Saṅghāṭikaṇṇaggahaṇaṃ vā sādiyeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:13.1"
msgid "etassa asaddhammassa paṭisevanatthāya nivatthaṃ vā pārutaṃ vā gahaṇaṃ sādiyati, āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pj8:14.1"
msgid "Santiṭṭheyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:14.1"
msgid "etassa asaddhammassa paṭisevanatthāya purisassa hatthapāse tiṭṭhati, āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pj8:15.1"
msgid "Sallapeyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:15.1"
msgid "etassa asaddhammassa paṭisevanatthāya purisassa hatthapāse ṭhitā sallapati, āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pj8:16.1"
msgid "Saṅketaṃ vā gaccheyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:16.1"
msgid "etassa asaddhammassa paṭisevanatthāya purisena—"
msgstr ""

#. VAR: okāsaṃ → idaṃ padaṃ aṭṭhakathāyaṃ na
msgctxt "pli-tv-bi-vb-pj8:16.2"
msgid "“itthannāmaṃ okāsaṃ āgacchā”ti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:16.3"
msgid "vuttā gacchati."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:16.4"
msgid "Pade pade āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:16.5"
msgid "Purisassa hatthapāsaṃ okkantamatte āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pj8:17.1"
msgid "Purisassa vā abbhāgamanaṃ sādiyeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:17.1"
msgid "etassa asaddhammassa paṭisevanatthāya purisassa abbhāgamanaṃ sādiyati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:17.2"
msgid "Hatthapāsaṃ okkantamatte āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-bi-vb-pj8:18.1"
msgid "Channaṃ vā anupaviseyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:18.1"
msgid "etassa asaddhammassa paṭisevanatthāya yena kenaci paṭicchannaṃ okāsaṃ paviṭṭhamatte āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pj8:19.1"
msgid "Kāyaṃ vā tadatthāya upasaṃhareyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:19.1"
msgid "etassa asaddhammassa paṭisevanatthāya purisassa hatthapāse ṭhitā kāyaṃ upasaṃharati, āpatti thullaccayassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc16
msgctxt "pli-tv-bi-vb-pj8:20.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:20.1"
msgid "purimāyo upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17, pts-vp-pli4.222
msgctxt "pli-tv-bi-vb-pj8:21.1"
msgid "Pārājikā hotīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:21.1"
msgid "seyyathāpi nāma tālo matthakacchinno abhabbo puna viruḷhiyā evameva bhikkhunī aṭṭhamaṃ vatthuṃ paripūrentī assamaṇī hoti asakyadhītā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:21.2"
msgid "Tena vuccati pārājikā hotīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc18
msgctxt "pli-tv-bi-vb-pj8:22.1"
msgid "Asaṃvāsāti"
msgstr ""

#. HTML: </b><b>
msgctxt "pli-tv-bi-vb-pj8:22.1"
msgid "saṃvāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pj8:22.1"
msgid "ekakammaṃ ekuddeso samasikkhatā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:22.2"
msgid "Eso saṃvāso nāma."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:22.3"
msgid "So tāya saddhiṃ natthi."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:22.4"
msgid "Tena vuccati asaṃvāsāti."
msgstr ""

#. HTML: </p><p>
#. REF: sc19
msgctxt "pli-tv-bi-vb-pj8:23.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:23.2"
msgid "asañcicca, assatiyā, ajānantiyā, asādiyantiyā, ummattikāya, khittacittāya, vedanāṭṭāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc20
msgctxt "pli-tv-bi-vb-pj8:24.1"
msgid "Catutthapārājikaṃ samattaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-bi-vb-pj8:25.1"
msgid "Uddiṭṭhā kho, ayyāyo, aṭṭha pārājikā dhammā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.2"
msgid "Yesaṃ bhikkhunī aññataraṃ vā aññataraṃ vā āpajjitvā na labhati bhikkhunīhi saddhiṃ saṃvāsaṃ, yathā pure tathā pacchā, pārājikā hoti asaṃvāsā."
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.3"
msgid "Tatthāyyāyo pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.4"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.5"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.6"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.7"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.8"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-pj8:25.9"
msgid "Parisuddhetthāyyāyo, tasmā tuṇhī, evametaṃ dhārayāmīti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc22
msgctxt "pli-tv-bi-vb-pj8:26.1"
msgid "Bhikkhunivibhaṅge pārājikakaṇḍaṃ niṭṭhitaṃ."
msgstr ""

