#. HTML: <section class="sutta" id="pli-tv-bi-vb-ss2"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-ss2:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss2:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-ss2:3.1"
msgid "Saṃghādisesakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-ss2:4.1"
msgid "2. Corīvuṭṭhāpikāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-ss2:5.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.2"
msgid "Tena kho pana samayena vesāliyaṃ aññatarassa licchavissa pajāpati aticārinī hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.3"
msgid "Atha kho so licchavi taṃ itthiṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.4"
msgid "“sādhu viramāhi, anatthaṃ kho te karissāmī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.5"
msgid "Evampi vuccamānā nādiyi."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.6"
msgid "Tena kho pana samayena vesāliyaṃ licchavigaṇo sannipatito hoti kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.7"
msgid "Atha kho so licchavi te licchavayo etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.8"
msgid "“ekaṃ me, ayyo, itthiṃ anujānāthā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.9"
msgid "“Kā nāma sā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.10"
msgid "“Mayhaṃ pajāpati aticarati, taṃ ghātessāmī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.11"
msgid "“Jānāhī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.12"
msgid "Assosi kho sā itthī—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.13"
msgid "“sāmiko kira maṃ ghātetukāmo”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.14"
msgid "Varabhaṇḍaṃ ādāya sāvatthiṃ gantvā titthiye upasaṅkamitvā pabbajjaṃ yāci."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.15"
msgid "Titthiyā na icchiṃsu pabbājetuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.16"
msgid "Bhikkhuniyo upasaṅkamitvā pabbajjaṃ yāci."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.17"
msgid "Bhikkhuniyopi na icchiṃsu pabbājetuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.18"
msgid "Thullanandaṃ bhikkhuniṃ upasaṅkamitvā bhaṇḍakaṃ dassetvā pabbajjaṃ yāci."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:5.19"
msgid "Thullanandā bhikkhunī bhaṇḍakaṃ gahetvā pabbājesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.226
msgctxt "pli-tv-bi-vb-ss2:6.1"
msgid "Atha kho so licchavi taṃ itthiṃ gavesanto sāvatthiṃ gantvā bhikkhunīsu pabbajitaṃ disvāna yena rājā pasenadi kosalo tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.2"
msgid "upasaṅkamitvā rājānaṃ pasenadiṃ kosalaṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.3"
msgid "“pajāpati me, deva, varabhaṇḍaṃ ādāya sāvatthiṃ anuppattā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.4"
msgid "Taṃ devo anujānātū”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.5"
msgid "“Tena hi, bhaṇe, vicinitvā ācikkhā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.6"
msgid "“Diṭṭhā, deva, bhikkhunīsu pabbajitā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.7"
msgid "“Sace, bhaṇe, bhikkhunīsu pabbajitā, na sā labbhā kiñci kātuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.8"
msgid "Svākkhāto bhagavatā dhammo, caratu brahmacariyaṃ sammā dukkhassa antakiriyāyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.9"
msgid "Atha kho so licchavi ujjhāyati khiyyati vipāceti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:6.10"
msgid "“kathañhi nāma bhikkhuniyo coriṃ pabbājessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc3
msgctxt "pli-tv-bi-vb-ss2:7.1"
msgid "Assosuṃ kho bhikkhuniyo tassa licchavissa ujjhāyantassa khiyyantassa vipācentassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.4"
msgid "“kathañhi nāma ayyā thullanandā coriṃ pabbājessatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.5"
msgid "Atha kho tā bhikkhuniyo bhikkhūnaṃ etamatthaṃ ārocesuṃ … pe …"
msgstr ""

#. VAR: pabbājetī”ti → pabbājesīti (bj, s1, pts1, mr)
msgctxt "pli-tv-bi-vb-ss2:7.6"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī coriṃ pabbājetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.9"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī coriṃ pabbājessati."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:7.11"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc4
#. VAR: vajjhaṃ viditaṃ → vajjhaviditaṃ (s1-3)
msgctxt "pli-tv-bi-vb-ss2:8.1"
msgid "“Yā pana bhikkhunī jānaṃ coriṃ vajjhaṃ viditaṃ anapaloketvā rājānaṃ vā saṃghaṃ vā gaṇaṃ vā pūgaṃ vā seṇiṃ vā aññatra kappā vuṭṭhāpeyya, ayampi bhikkhunī paṭhamāpattikaṃ dhammaṃ āpannā nissāraṇīyaṃ saṃghādisesan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-ss2:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-ss2:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-ss2:10.1"
msgid "Jānāti nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:10.2"
msgid "sāmaṃ vā jānāti aññe vā tassā ārocenti, sā vā āroceti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-ss2:11.1"
msgid "Corī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:11.2"
msgid "yā pañcamāsakaṃ vā atirekapañcamāsakaṃ vā agghanakaṃ adinnaṃ theyyasaṅkhātaṃ ādiyati, esā corī nāma."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-ss2:12.1"
msgid "Vajjhā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:12.2"
msgid "yaṃ katvā vajjhappattā hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-ss2:13.1"
msgid "Viditā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:13.2"
msgid "aññehi manussehi ñātā hoti “vajjhā esā”ti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc10
msgctxt "pli-tv-bi-vb-ss2:14.1"
msgid "Anapaloketvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:14.2"
msgid "anāpucchā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc11
msgctxt "pli-tv-bi-vb-ss2:15.1"
msgid "Rājā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:15.2"
msgid "yattha rājā anusāsati, rājā apaloketabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc12
msgctxt "pli-tv-bi-vb-ss2:16.1"
msgid "Saṃgho nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:16.2"
msgid "bhikkhunisaṃgho vuccati, bhikkhunisaṃgho apaloketabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc13
msgctxt "pli-tv-bi-vb-ss2:17.1"
msgid "Gaṇo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:17.2"
msgid "yattha gaṇo anusāsati, gaṇo apaloketabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc14
msgctxt "pli-tv-bi-vb-ss2:18.1"
msgid "Pūgo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:18.2"
msgid "yattha pūgo anusāsati, pūgo apaloketabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc15
msgctxt "pli-tv-bi-vb-ss2:19.1"
msgid "Seṇi nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:19.2"
msgid "yattha seṇi anusāsati, seṇi apaloketabbo."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc16, pts-vp-pli4.227
msgctxt "pli-tv-bi-vb-ss2:20.1"
msgid "Aññatra kappāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:20.2"
msgid "ṭhapetvā kappaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-ss2:20.3"
msgid "Kappaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:20.4"
msgid "dve kappāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.5"
msgid "titthiyesu vā pabbajitā hoti aññāsu vā bhikkhunīsu pabbajitā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.6"
msgid "Aññatra kappā “vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.7"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.8"
msgid "Dvīhi kammavācāhi thullaccayā."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.9"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:20.10"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc17
msgctxt "pli-tv-bi-vb-ss2:21.1"
msgid "Ayampīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:21.2"
msgid "purimaṃ upādāya vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc18
msgctxt "pli-tv-bi-vb-ss2:22.1"
msgid "Paṭhamāpattikanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:22.2"
msgid "saha vatthujjhācārā āpajjati asamanubhāsanāya."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc19
msgctxt "pli-tv-bi-vb-ss2:23.1"
msgid "Nissāraṇīyanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:23.2"
msgid "saṃghamhā nissārīyati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc20
msgctxt "pli-tv-bi-vb-ss2:24.1"
msgid "Saṃghādisesanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-ss2:24.2"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:24.3"
msgid "tenapi vuccati saṃghādisesoti."
msgstr ""

#. HTML: </p><p>
#. REF: sc21
msgctxt "pli-tv-bi-vb-ss2:25.1"
msgid "Coriyā corisaññā aññatra kappā vuṭṭhāpeti, āpatti saṃghādisesassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:25.2"
msgid "Coriyā vematikā aññatra kappā vuṭṭhāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:25.3"
msgid "Coriyā acorisaññā aññatra kappā vuṭṭhāpeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:25.4"
msgid "Acoriyā corisaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:25.5"
msgid "Acoriyā vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:25.6"
msgid "Acoriyā acorisaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc22
msgctxt "pli-tv-bi-vb-ss2:26.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-ss2:26.2"
msgid "ajānantī vuṭṭhāpeti, apaloketvā vuṭṭhāpeti, kappakataṃ vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc23
msgctxt "pli-tv-bi-vb-ss2:27.1"
msgid "Dutiyasaṃghādisesasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
