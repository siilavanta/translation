#. HTML: <section class="sutta" id="pli-tv-bi-vb-np12"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-np12:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-np12:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-np12:3.1"
msgid "Nissaggiyakaṇḍa"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-np12:4.1"
msgid "12. Cīvaravagga"
msgstr ""

#. HTML: </h1></div><h2>
msgctxt "pli-tv-bi-vb-np12:5.1"
msgid "2. Lahupāvuraṇasikkhāpada"
msgstr ""

#. HTML: </h2><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-np12:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī bahussutā hoti bhāṇikā visāradā paṭṭā dhammiṃ kathaṃ kātuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.3"
msgid "Atha kho rājā pasenadi kosalo uṇhakāle mahagghaṃ khomaṃ pārupitvā yena thullanandā bhikkhunī tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.4"
msgid "upasaṅkamitvā thullanandaṃ bhikkhuniṃ abhivādetvā ekamantaṃ nisīdi."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.5"
msgid "Ekamantaṃ nisinnaṃ kho rājānaṃ pasenadiṃ kosalaṃ thullanandā bhikkhunī dhammiyā kathāya sandassesi samādapesi samuttejesi sampahaṃsesi."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.6"
msgid "Atha kho rājā pasenadi kosalo thullanandāya bhikkhuniyā dhammiyā kathāya sandassito samādapito samuttejito sampahaṃsito thullanandaṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.7"
msgid "“vadeyyāsi, ayye, yena attho”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.8"
msgid "“Sace me tvaṃ, mahārāja, dātukāmosi, imaṃ khomaṃ dehī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.9"
msgid "Atha kho rājā pasenadi kosalo thullanandāya bhikkhuniyā khomaṃ datvā uṭṭhāyāsanā thullanandaṃ bhikkhuniṃ abhivādetvā padakkhiṇaṃ katvā pakkāmi."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.10"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.11"
msgid "“mahicchā imā bhikkhuniyo asantuṭṭhā."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:6.12"
msgid "Kathañhi nāma rājānaṃ khomaṃ viññāpessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-np12:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.5"
msgid "“kathañhi nāma ayyā thullanandā rājānaṃ khomaṃ viññāpessatī”ti … pe …"
msgstr ""

#. VAR: viññāpetī”ti → viññāpesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-np12:7.7"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī rājānaṃ khomaṃ viññāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.11"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī rājānaṃ khomaṃ viññāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:7.14"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-np12:8.1"
msgid "“Lahupāvuraṇaṃ pana bhikkhuniyā cetāpentiyā aḍḍhateyyakaṃsaparamaṃ cetāpetabbaṃ. Tato ce uttari cetāpeyya, nissaggiyaṃ pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-np12:9.1"
msgid "Lahupāvuraṇaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np12:9.1"
msgid "yaṃ kiñci uṇhakāle pāvuraṇaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-np12:10.1"
msgid "Cetāpentiyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np12:10.1"
msgid "viññāpentiyā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-np12:11.1"
msgid "Aḍḍhateyyakaṃsaparamaṃ cetāpetabbanti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np12:11.1"
msgid "dasakahāpaṇagghanakaṃ cetāpetabbaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-np12:12.1"
msgid "Tato ce uttari cetāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-np12:12.1"
msgid "tatuttari viññāpeti, payoge dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.2"
msgid "Paṭilābhena nissaggiyaṃ hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.3"
msgid "Nissajjitabbaṃ saṃghassa vā gaṇassa vā ekabhikkhuniyā vā."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.4"
msgid "Evañca pana, bhikkhave, nissajjitabbaṃ … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.6"
msgid "“idaṃ me, ayye, lahupāvuraṇaṃ atirekaaḍḍhateyyakaṃsaparamaṃ cetāpitaṃ nissaggiyaṃ, imāhaṃ saṃghassa nissajjāmī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.8"
msgid "dadeyyā”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.10"
msgid "dadeyyun”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:12.12"
msgid "ayyāya dammī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-np12:13.1"
msgid "Atirekaaḍḍhateyyakaṃse atirekasaññā cetāpeti, nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:13.2"
msgid "Atirekaaḍḍhateyyakaṃse vematikā cetāpeti, nissaggiyaṃ pācittiyaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:13.3"
msgid "Atirekaaḍḍhateyyakaṃse ūnakasaññā cetāpeti, nissaggiyaṃ pācittiyaṃ."
msgstr ""

#. HTML: </p><p>
#. REF: sc9, pts-vp-pli4.257
msgctxt "pli-tv-bi-vb-np12:14.1"
msgid "Ūnakaaḍḍhateyyakaṃse atirekasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:14.2"
msgid "Ūnakaaḍḍhateyyakaṃse vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:14.3"
msgid "Ūnakaaḍḍhateyyakaṃse ūnakasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-np12:15.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:15.2"
msgid "aḍḍhateyyakaṃsaparamaṃ cetāpeti, ūnakaaḍḍhateyyakaṃsaparamaṃ cetāpeti, ñātakānaṃ, pavāritānaṃ, aññassatthāya, attano dhanena, mahagghaṃ cetāpetukāmassa appagghaṃ cetāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc11
msgctxt "pli-tv-bi-vb-np12:16.1"
msgid "Dvādasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

#. HTML: </p><h2>
msgctxt "pli-tv-bi-vb-np12:17.1"
msgid "(Dutiya) Pattavagga"
msgstr ""

#. HTML: </h2><h2>
#. VAR: 10 Pariṇatasikkhāpada → ^pi-tv-bu-vb-np18#5 [Nissaggiyā Pācittiyā 18: Rūpiyasikkhāpada] (18:37)
msgctxt "pli-tv-bi-vb-np12:18.1"
msgid "10 Pariṇatasikkhāpada"
msgstr ""

#. HTML: </h2><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-np12:19.1"
msgid "Uddiṭṭhā kho, ayyāyo, tiṃsa nissaggiyā pācittiyā dhammā."
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.2"
msgid "Tatthāyyāyo pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.3"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.4"
msgid "Dutiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.5"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.6"
msgid "Tatiyampi pucchāmi—"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.7"
msgid "“kaccittha parisuddhā”?"
msgstr ""

msgctxt "pli-tv-bi-vb-np12:19.8"
msgid "Parisuddhetthāyyāyo, tasmā tuṇhī, evametaṃ dhārayāmīti."
msgstr ""

#. HTML: </p><p class="endsection">
#. REF: sc13
msgctxt "pli-tv-bi-vb-np12:20.1"
msgid "Bhikkhunivibhaṅge nissaggiyakaṇḍaṃ niṭṭhitaṃ."
msgstr ""

