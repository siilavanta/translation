#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc79:5.1"
msgid "79. Sokāvāsasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc79:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: sokāvāsaṃ → sokavassaṃ (bj) | sokāvassaṃ (s1-3)
msgctxt "pli-tv-bi-vb-pc79:6.2"
msgid "Tena kho pana samayena thullanandā bhikkhunī purisasaṃsaṭṭhaṃ kumārakasaṃsaṭṭhaṃ caṇḍiṃ sokāvāsaṃ caṇḍakāḷiṃ sikkhamānaṃ vuṭṭhāpeti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.334
msgctxt "pli-tv-bi-vb-pc79:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

#. VAR: sokāvāsaṃ → sokavassaṃ (bj) | sokāvassaṃ (s1-3)
msgctxt "pli-tv-bi-vb-pc79:7.3"
msgid "“kathañhi nāma ayyā thullanandā purisasaṃsaṭṭhaṃ kumārakasaṃsaṭṭhaṃ caṇḍiṃ sokāvāsaṃ caṇḍakāḷiṃ sikkhamānaṃ vuṭṭhāpessatī”ti … pe …"
msgstr ""

#. VAR: vuṭṭhāpetī”ti → vuṭṭhāpesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc79:7.4"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī purisasaṃsaṭṭhaṃ kumārakasaṃsaṭṭhaṃ caṇḍiṃ sokāvāsaṃ caṇḍakāḷiṃ sikkhamānaṃ vuṭṭhāpetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.7"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī purisasaṃsaṭṭhaṃ kumārakasaṃsaṭṭhaṃ caṇḍiṃ sokāvāsaṃ caṇḍakāḷiṃ sikkhamānaṃ vuṭṭhāpessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: sokāvāsaṃ → sokavassaṃ (bj) | sokāvassaṃ (s1-3)
msgctxt "pli-tv-bi-vb-pc79:8.1"
msgid "“Yā pana bhikkhunī purisasaṃsaṭṭhaṃ kumārakasaṃsaṭṭhaṃ caṇḍiṃ sokāvāsaṃ sikkhamānaṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc79:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc79:10.1"
msgid "Puriso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:10.2"
msgid "pattavīsativasso."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:10.3"
msgid "Kumārako nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:10.4"
msgid "appattavīsativasso."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:10.5"
msgid "Saṃsaṭṭhā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:10.6"
msgid "ananulomikena kāyikavācasikena saṃsaṭṭhā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:10.7"
msgid "Caṇḍī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:10.8"
msgid "kodhanā vuccati."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc79:11.1"
msgid "Sokāvāsā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:11.2"
msgid "paresaṃ dukkhaṃ uppādeti, sokaṃ āvisati."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:11.3"
msgid "Sikkhamānā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:11.4"
msgid "dve vassāni chasu dhammesu sikkhitasikkhā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc79:11.5"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc79:11.6"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc79:12.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:12.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:12.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:12.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:12.5"
msgid "gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc79:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc79:13.2"
msgid "ajānantī vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc79:14.1"
msgid "Navamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
