#. HTML: <section class="sutta" id="pli-tv-bi-vb-pc17"><article><div class="hgroup"><p class="division">
msgctxt "pli-tv-bi-vb-pc17:1.1"
msgid "Theravāda Vinaya"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc17:2.1"
msgid "Bhikkhunivibhaṅga"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc17:3.1"
msgid "Pācittiyakaṇḍa"
msgstr ""

#. HTML: </p><p>
msgctxt "pli-tv-bi-vb-pc17:4.1"
msgid "Rattandhakāravagga"
msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc17:5.1"
msgid "17. Anāpucchāsantharaṇasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc17:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.2"
msgid "Tena kho pana samayena sambahulā bhikkhuniyo kosalesu janapade sāvatthiṃ gacchantiyo sāyaṃ aññataraṃ gāmaṃ upagantvā aññataraṃ brāhmaṇakulaṃ upasaṅkamitvā okāsaṃ yāciṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.3"
msgid "Atha kho sā brāhmaṇī tā bhikkhuniyo etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.4"
msgid "“āgametha, ayye, yāva brāhmaṇo āgacchatī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.5"
msgid "Bhikkhuniyo—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.6"
msgid "“yāva brāhmaṇo āgacchatī”ti seyyaṃ santharitvā ekaccā nisīdiṃsu ekaccā nipajjiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.7"
msgid "Atha kho so brāhmaṇo rattiṃ āgantvā taṃ brāhmaṇiṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.8"
msgid "“kā imā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.9"
msgid "“Bhikkhuniyo, ayyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:6.10"
msgid "“Nikkaḍḍhatha imā muṇḍā bandhakiniyo”ti, gharato nikkaḍḍhāpesi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc17:7.1"
msgid "Atha kho tā bhikkhuniyo sāvatthiṃ gantvā bhikkhunīnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.4"
msgid "“kathañhi nāma bhikkhuniyo vikāle kulāni upasaṅkamitvā sāmike anāpucchā seyyaṃ santharitvā abhinisīdissantipi abhinipajjissantipī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo vikāle kulāni upasaṅkamitvā sāmike anāpucchā seyyaṃ santharitvā abhinisīdantipi abhinipajjantipī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo vikāle kulāni upasaṅkamitvā sāmike anāpucchā seyyaṃ santharitvā abhinisīdissantipi abhinipajjissantipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc17:8.1"
msgid "“Yā pana bhikkhunī vikāle kulāni upasaṅkamitvā sāmike anāpucchā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdeyya vā abhinipajjeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc17:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc17:10.1"
msgid "Vikālo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:10.2"
msgid "atthaṅgate sūriye yāva aruṇuggamanā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc17:11.1"
msgid "Kulaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:11.2"
msgid "cattāri kulāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:11.3"
msgid "khattiyakulaṃ, brāhmaṇakulaṃ, vessakulaṃ suddakulaṃ."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:11.4"
msgid "Upasaṅkamitvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:11.5"
msgid "tattha gantvā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc17:12.1"
msgid "Sāmike anāpucchāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:12.2"
msgid "yo tasmiṃ kule manusso sāmiko dātuṃ, taṃ anāpucchā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8, pts-vp-pli4.275
msgctxt "pli-tv-bi-vb-pc17:13.1"
msgid "Seyyaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:13.2"
msgid "antamaso paṇṇasanthāropi."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:13.3"
msgid "Santharitvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:13.4"
msgid "sayaṃ santharitvā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:13.5"
msgid "Santharāpetvāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:13.6"
msgid "aññaṃ santharāpetvā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:13.7"
msgid "Abhinisīdeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:13.8"
msgid "tasmiṃ abhinisīdati, āpatti pācittiyassa."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc17:13.9"
msgid "Abhinipajjeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc17:13.10"
msgid "tasmiṃ abhinipajjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc17:14.1"
msgid "Anāpucchite anāpucchitasaññā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:14.2"
msgid "Anāpucchite vematikā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:14.3"
msgid "Anāpucchite āpucchitasaññā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc17:15.1"
msgid "Āpucchite anāpucchitasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:15.2"
msgid "Āpucchite vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:15.3"
msgid "Āpucchite āpucchitasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc17:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc17:16.2"
msgid "āpucchā seyyaṃ santharitvā vā santharāpetvā vā abhinisīdati vā abhinipajjati vā, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc17:17.1"
msgid "Sattamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
