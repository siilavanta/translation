#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc29:5.1"
msgid "29. Kālaatikkamanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc29:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.2"
msgid "Tena kho pana samayena thullanandāya bhikkhuniyā upaṭṭhākakulaṃ thullanandaṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.3"
msgid "“sace mayaṃ, ayye, sakkoma, bhikkhunisaṃghassa cīvaraṃ dassāmā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.4"
msgid "Tena kho pana samayena vassaṃvuṭṭhā bhikkhuniyo cīvaraṃ bhājetukāmā sannipatiṃsu."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.5"
msgid "Thullanandā bhikkhunī tā bhikkhuniyo etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.6"
msgid "“āgametha, ayye, atthi bhikkhunisaṃghassa cīvarapaccāsā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.7"
msgid "Bhikkhuniyo thullanandaṃ bhikkhuniṃ etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.8"
msgid "“gacchāyye, taṃ cīvaraṃ jānāhī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.9"
msgid "Thullanandā bhikkhunī yena taṃ kulaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.10"
msgid "upasaṅkamitvā te manusse etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.11"
msgid "“dethāvuso, bhikkhunisaṃghassa cīvaran”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:6.12"
msgid "“Na mayaṃ, ayye, sakkoma bhikkhunisaṃghassa cīvaraṃ dātun”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc29:7.1"
msgid "Thullanandā bhikkhunī bhikkhunīnaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.5"
msgid "“kathañhi nāma ayyā thullanandā dubbalacīvarapaccāsāya cīvarakālasamayaṃ atikkāmessatī”ti … pe …"
msgstr ""

#. VAR: atikkāmetī”ti → atikkāmesīti (bj, pts1, mr)
msgctxt "pli-tv-bi-vb-pc29:7.7"
msgid "“saccaṃ kira, bhikkhave, thullanandā bhikkhunī dubbalacīvarapaccāsāya cīvarakālasamayaṃ atikkāmetī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.11"
msgid "kathañhi nāma, bhikkhave, thullanandā bhikkhunī dubbalacīvarapaccāsāya cīvarakālasamayaṃ atikkāmessati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:7.14"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc29:8.1"
msgid "“Yā pana bhikkhunī dubbalacīvarapaccāsāya cīvarakālasamayaṃ atikkāmeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc29:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc29:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc29:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc29:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc29:10.1"
msgid "Dubbalacīvarapaccāsā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc29:10.1"
msgid "“sace mayaṃ sakkoma, dassāma karissāmā”ti vācā bhinnā hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6, pts-vp-pli4.287
msgctxt "pli-tv-bi-vb-pc29:11.1"
msgid "Cīvarakālasamayo nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc29:11.1"
msgid "anatthate kathine vassānassa pacchimo māso, atthate kathine pañca māsā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc29:12.1"
msgid "Cīvarakālasamayaṃ atikkāmeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc29:12.1"
msgid "anatthate kathine vassānassa pacchimaṃ divasaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:12.2"
msgid "Atthate kathine kathinuddhāradivasaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc29:13.1"
msgid "Dubbalacīvare dubbalacīvarasaññā cīvarakālasamayaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:13.2"
msgid "Dubbalacīvare vematikā cīvarakālasamayaṃ atikkāmeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:13.3"
msgid "Dubbalacīvare adubbalacīvarasaññā cīvarakālasamayaṃ atikkāmeti, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc29:14.1"
msgid "Adubbalacīvare dubbalacīvarasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:14.2"
msgid "Adubbalacīvare vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:14.3"
msgid "Adubbalacīvare adubbalacīvarasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc29:15.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc29:15.2"
msgid "ānisaṃsaṃ dassetvā nivāreti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc29:16.1"
msgid "Navamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

