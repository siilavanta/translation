msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc36:5.1"
msgid "36. Saṃsaṭṭhasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc36:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:6.2"
msgid "Tena kho pana samayena caṇḍakāḷī bhikkhunī saṃsaṭṭhā viharati gahapatināpi gahapatiputtenapi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2, pts-vp-pli4.294
msgctxt "pli-tv-bi-vb-pc36:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.3"
msgid "“kathañhi nāma ayyā caṇḍakāḷī saṃsaṭṭhā viharissati gahapatināpi gahapatiputtenapī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.4"
msgid "“saccaṃ kira, bhikkhave, caṇḍakāḷī bhikkhunī saṃsaṭṭhā viharati gahapatināpi gahapatiputtenapī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.7"
msgid "kathañhi nāma, bhikkhave, caṇḍakāḷī bhikkhunī saṃsaṭṭhā viharissati gahapatināpi gahapatiputtenapi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc36:8.1"
msgid "“Yā pana bhikkhunī saṃsaṭṭhā vihareyya gahapatinā vā gahapatiputtena vā sā bhikkhunī bhikkhunīhi evamassa vacanīyā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:8.2"
msgid "‘māyye, saṃsaṭṭhā vihari gahapatināpi gahapatiputtenapi."
msgstr ""

#. VAR: Viviccāyye → viviccayye (bj, pts1) | viviccāhayye (s1-3)
msgctxt "pli-tv-bi-vb-pc36:8.3"
msgid "Viviccāyye; vivekaññeva bhaginiyā saṃgho vaṇṇetī’ti."
msgstr ""

#. VAR: Evañca → evañca pana (pts1, mr)
msgctxt "pli-tv-bi-vb-pc36:8.4"
msgid "Evañca sā bhikkhunī bhikkhunīhi vuccamānā tatheva paggaṇheyya, sā bhikkhunī bhikkhunīhi yāvatatiyaṃ samanubhāsitabbā tassa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:8.5"
msgid "Yāvatatiyañce samanubhāsīyamānā taṃ paṭinissajjeyya, iccetaṃ kusalaṃ; no ce paṭinissajjeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc36:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc36:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc36:10.1"
msgid "Saṃsaṭṭhā nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:10.2"
msgid "ananulomikena kāyikavācasikena saṃsaṭṭhā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc36:11.1"
msgid "Gahapati nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:11.2"
msgid "yo koci agāraṃ ajjhāvasati."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
#. VAR: keci → yo koci (s1-3, pts1, mr)+. HTML: <b>
msgctxt "pli-tv-bi-vb-pc36:12.1"
msgid "Gahapatiputto nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:12.2"
msgid "ye keci puttabhātaro."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc36:13.1"
msgid "Sā bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:13.2"
msgid "yā sā saṃsaṭṭhā bhikkhunī."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc36:14.1"
msgid "Bhikkhunīhīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc36:14.2"
msgid "aññāhi bhikkhunīhi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.3"
msgid "Yā passanti yā suṇanti tāhi vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.4"
msgid "“māyye, saṃsaṭṭhā vihari gahapatināpi gahapatiputtenapi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.5"
msgid "Viviccāyye;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.6"
msgid "vivekaññeva bhaginiyā saṃgho vaṇṇetī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.7"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.8"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.9"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.10"
msgid "no ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.11"
msgid "Sutvā na vadanti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.12"
msgid "Sā bhikkhunī saṃghamajjhampi ākaḍḍhitvā vattabbā—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.13"
msgid "“māyye, saṃsaṭṭhā vihari gahapatināpi gahapatiputtenapi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.14"
msgid "Viviccāyye;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.15"
msgid "vivekaññeva bhaginiyā saṃgho vaṇṇetī”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.16"
msgid "Dutiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.17"
msgid "Tatiyampi vattabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.18"
msgid "Sace paṭinissajjati, iccetaṃ kusalaṃ;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.19"
msgid "no ce paṭinissajjati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.20"
msgid "Sā bhikkhunī samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.21"
msgid "“Evañca pana, bhikkhave, samanubhāsitabbā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:14.22"
msgid "Byattāya bhikkhuniyā paṭibalāya saṃgho ñāpetabbo—"
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc36:15.1"
msgid "‘Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:15.2"
msgid "Ayaṃ itthannāmā bhikkhunī saṃsaṭṭhā viharati gahapatināpi gahapatiputtenapi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:15.3"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:15.4"
msgid "Yadi saṃghassa pattakallaṃ, saṃgho itthannāmaṃ bhikkhuniṃ samanubhāseyya tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:15.5"
msgid "Esā ñatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc36:16.1"
msgid "Suṇātu me, ayye, saṃgho."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:16.2"
msgid "Ayaṃ itthannāmā bhikkhunī saṃsaṭṭhā viharati gahapatināpi gahapatiputtenapi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:16.3"
msgid "Sā taṃ vatthuṃ na paṭinissajjati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:16.4"
msgid "Saṃgho itthannāmaṃ bhikkhuniṃ samanubhāsati tassa vatthussa paṭinissaggāya."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:16.5"
msgid "Yassā ayyāya khamati itthannāmāya bhikkhuniyā samanubhāsanā tassa vatthussa paṭinissaggāya, sā tuṇhassa;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:16.6"
msgid "yassā nakkhamati, sā bhāseyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc36:17.1"
msgid "Dutiyampi etamatthaṃ vadāmi … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:17.2"
msgid "tatiyampi etamatthaṃ vadāmi …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:17.3"
msgid "pe …."
msgstr ""

#. HTML: </p><p>
#. REF: sc13
msgctxt "pli-tv-bi-vb-pc36:18.1"
msgid "Samanubhaṭṭhā saṃghena itthannāmā bhikkhunī tassa vatthussa paṭinissaggāya;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:18.2"
msgid "khamati saṃghassa, tasmā tuṇhī, evametaṃ dhārayāmī’”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc14, pts-vp-pli4.295
msgctxt "pli-tv-bi-vb-pc36:19.1"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:19.2"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:19.3"
msgid "Kammavācāpariyosāne āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc15
msgctxt "pli-tv-bi-vb-pc36:20.1"
msgid "Dhammakamme dhammakammasaññā na paṭinissajjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:20.2"
msgid "Dhammakamme vematikā na paṭinissajjati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:20.3"
msgid "Dhammakamme adhammakammasaññā na paṭinissajjati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc16
msgctxt "pli-tv-bi-vb-pc36:21.1"
msgid "Adhammakamme dhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:21.2"
msgid "Adhammakamme vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:21.3"
msgid "Adhammakamme adhammakammasaññā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc17
msgctxt "pli-tv-bi-vb-pc36:22.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc36:22.2"
msgid "asamanubhāsantiyā, paṭinissajjantiyā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc18
msgctxt "pli-tv-bi-vb-pc36:23.1"
msgid "Chaṭṭhasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
