#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc42:5.1"
msgid "42. Āsandiparibhuñjanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc42:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:6.2"
msgid "Tena kho pana samayena bhikkhuniyo āsandimpi pallaṅkampi paribhuñjanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:6.3"
msgid "Manussā vihāracārikaṃ āhiṇḍantā passitvā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:6.4"
msgid "“kathañhi nāma bhikkhuniyo āsandimpi pallaṅkampi paribhuñjissanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc42:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.4"
msgid "“kathañhi nāma bhikkhuniyo āsandimpi pallaṅkampi paribhuñjissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo āsandimpi pallaṅkampi paribhuñjantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.8"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo āsandimpi pallaṅkampi paribhuñjissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:7.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc42:8.1"
msgid "“Yā pana bhikkhunī āsandiṃ vā pallaṅkaṃ vā paribhuñjeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc42:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc42:9.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc42:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc42:9.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc42:10.1"
msgid "Āsandī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc42:10.2"
msgid "atikkantappamāṇā vuccati."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
#. VAR: āharimehi → \+. HTML: <b>
msgctxt "pli-tv-bi-vb-pc42:11.1"
msgid "Pallaṅko nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc42:11.2"
msgid "āharimehi vāḷehi kato hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc42:12.1"
msgid "Paribhuñjeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc42:12.2"
msgid "tasmiṃ abhinisīdati vā abhinipajjati vā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc42:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc42:13.2"
msgid "āsandiyā pāde chinditvā paribhuñjati, pallaṅkassa vāḷe bhinditvā paribhuñjati, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc42:14.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
