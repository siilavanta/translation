#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc4:5.1"
msgid "4. Jatumaṭṭhakasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc4:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

#. VAR: aññatarā purāṇarājorodhā bhikkhunīsu pabbajitā → aññataro purāṇarājorodho bhikkhunīsu pabbajito (s1-3)
msgctxt "pli-tv-bi-vb-pc4:6.2"
msgid "Tena kho pana samayena aññatarā purāṇarājorodhā bhikkhunīsu pabbajitā hoti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.3"
msgid "Aññatarā bhikkhunī anabhiratiyā pīḷitā yena sā bhikkhunī tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.4"
msgid "upasaṅkamitvā taṃ bhikkhuniṃ etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.5"
msgid "“rājā kho, ayye, tumhe cirāciraṃ gacchati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.6"
msgid "Kathaṃ tumhe dhārethā”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.7"
msgid "“Jatumaṭṭhakena, ayye”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.8"
msgid "“Kiṃ etaṃ, ayye, jatumaṭṭhakan”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.9"
msgid "Atha kho sā bhikkhunī tassā bhikkhuniyā jatumaṭṭhakaṃ ācikkhi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.10"
msgid "Atha kho sā bhikkhunī jatumaṭṭhakaṃ ādiyitvā dhovituṃ vissaritvā ekamantaṃ chaḍḍesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.11"
msgid "Bhikkhuniyo makkhikāhi samparikiṇṇaṃ passitvā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.12"
msgid "“kassidaṃ kamman”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.13"
msgid "Sā evamāha—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:6.14"
msgid "“mayhidaṃ kamman”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc4:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.2"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.3"
msgid "“kathañhi nāma bhikkhunī jatumaṭṭhakaṃ ādiyissatī”ti … pe …"
msgstr ""

#. VAR: ādiyatī”ti → ādiyīti (bj, pts1, c1)
msgctxt "pli-tv-bi-vb-pc4:7.4"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī jatumaṭṭhakaṃ ādiyatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.5"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.6"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.7"
msgid "kathañhi nāma, bhikkhave, bhikkhunī jatumaṭṭhakaṃ ādiyissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.8"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:7.9"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: Jatumaṭṭhake → jatumaṭṭake (bj)
msgctxt "pli-tv-bi-vb-pc4:8.1"
msgid "“Jatumaṭṭhake pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc4:9.1"
msgid "Jatumaṭṭhakaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc4:9.2"
msgid "jatumayaṃ kaṭṭhamayaṃ piṭṭhamayaṃ mattikāmayaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc4:10.1"
msgid "Ādiyeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc4:10.2"
msgid "samphassaṃ sādiyantī antamaso uppalapattampi muttakaraṇaṃ paveseti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc4:11.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc4:11.2"
msgid "ābādhapaccayā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc4:12.1"
msgid "Catutthasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
