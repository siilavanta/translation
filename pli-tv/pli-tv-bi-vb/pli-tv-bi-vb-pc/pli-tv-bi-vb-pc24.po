#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc24:5.1"
msgid "24. Saṅghāṭicārasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc24:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:6.2"
msgid "Tena kho pana samayena bhikkhuniyo bhikkhunīnaṃ hatthe cīvaraṃ nikkhipitvā santaruttarena janapadacārikaṃ pakkamanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:6.3"
msgid "Tāni cīvarāni ciraṃ nikkhittāni kaṇṇakitāni honti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:6.4"
msgid "Tāni bhikkhuniyo otāpenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:6.5"
msgid "Bhikkhuniyo tā bhikkhuniyo etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:6.6"
msgid "“kassimāni, ayye, cīvarāni kaṇṇakitānī”ti?"
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc24:7.1"
msgid "Atha kho tā bhikkhuniyo bhikkhunīnaṃ etamatthaṃ ārocesuṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.5"
msgid "“kathañhi nāma bhikkhuniyo bhikkhunīnaṃ hatthe cīvaraṃ nikkhipitvā santaruttarena janapadacārikaṃ pakkamissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.7"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo bhikkhunīnaṃ hatthe cīvaraṃ nikkhipitvā santaruttarena janapadacārikaṃ pakkamantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.11"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo bhikkhunīnaṃ hatthe cīvaraṃ nikkhipitvā santaruttarena janapadacārikaṃ pakkamissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:7.14"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
#. VAR: saṅghāṭicāraṃ → saṅghāṭivāraṃ (s1-3)
msgctxt "pli-tv-bi-vb-pc24:8.1"
msgid "“Yā pana bhikkhunī pañcāhikaṃ saṅghāṭicāraṃ atikkāmeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc24:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc24:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc24:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc24:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc24:10.1"
msgid "Pañcāhikaṃ saṅghāṭicāraṃ atikkāmeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc24:10.1"
msgid "pañcamaṃ divasaṃ pañca cīvarāni neva nivāseti na pārupati na otāpeti, pañcamaṃ divasaṃ atikkāmeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6, pts-vp-pli4.282
msgctxt "pli-tv-bi-vb-pc24:11.1"
msgid "Pañcāhātikkante atikkantasaññā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:11.2"
msgid "Pañcāhātikkante vematikā, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:11.3"
msgid "Pañcāhātikkante anatikkantasaññā, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc24:12.1"
msgid "Pañcāhānatikkante atikkantasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:12.2"
msgid "Pañcāhānatikkante vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:12.3"
msgid "Pañcāhānatikkante anatikkantasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc24:13.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc24:13.2"
msgid "pañcamaṃ divasaṃ pañca cīvarāni nivāseti vā pārupati vā otāpeti vā, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc24:14.1"
msgid "Catutthasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

