#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc94:5.1"
msgid "94. Anāpucchāsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc94:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.2"
msgid "Tena kho pana samayena bhikkhuniyo bhikkhussa purato anāpucchā āsane nisīdanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.3"
msgid "Bhikkhū ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.4"
msgid "“kathañhi nāma bhikkhuniyo bhikkhussa purato anāpucchā āsane nisīdissantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo bhikkhussa purato anāpucchā āsane nisīdantī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.8"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo bhikkhussa purato anāpucchā āsane nisīdissanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.9"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:6.10"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc94:7.1"
msgid "“Yā pana bhikkhunī bhikkhussa purato anāpucchā āsane nisīdeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc94:8.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc94:8.2"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc94:8.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc94:8.4"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:8.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc94:9.1"
msgid "Bhikkhussa puratoti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc94:9.2"
msgid "upasampannassa purato."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc94:9.3"
msgid "Anāpucchāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc94:9.4"
msgid "anapaloketvā."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc94:9.5"
msgid "Āsane nisīdeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc94:9.6"
msgid "antamaso chamāyapi nisīdati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc5, pts-vp-pli4.344
msgctxt "pli-tv-bi-vb-pc94:10.1"
msgid "Anāpucchite anāpucchitasaññā āsane nisīdati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:10.2"
msgid "Anāpucchite vematikā āsane nisīdati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:10.3"
msgid "Anāpucchite āpucchitasaññā āsane nisīdati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc94:11.1"
msgid "Āpucchite anāpucchitasaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:11.2"
msgid "Āpucchite vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:11.3"
msgid "Āpucchite āpucchitasaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc94:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc94:12.2"
msgid "āpucchā āsane nisīdati, gilānāya, āpadāsu, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc94:13.1"
msgid "Ekādasamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""
