msgstr ""

#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc13:5.1"
msgid "13. Ajjhokāsasallapanasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.270
msgctxt "pli-tv-bi-vb-pc13:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:6.2"
msgid "Tena kho pana samayena bhaddāya kāpilāniyā antevāsiniyā bhikkhuniyā ñātako puriso gāmakā sāvatthiṃ agamāsi kenacideva karaṇīyena."
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:6.3"
msgid "Atha kho sā bhikkhunī—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:6.4"
msgid "“bhagavatā paṭikkhittaṃ paṭicchanne okāse purisena saddhiṃ ekenekā santiṭṭhituṃ sallapitun”ti teneva purisena saddhiṃ ajjhokāse ekenekā santiṭṭhatipi sallapatipi."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc13:7.1"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.3"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.4"
msgid "“kathañhi nāma bhikkhunī ajjhokāse purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.6"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī ajjhokāse purisena saddhiṃ ekenekā santiṭṭhatipi sallapatipī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.7"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.8"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.10"
msgid "kathañhi nāma, bhikkhave, bhikkhunī ajjhokāse purisena saddhiṃ ekenekā santiṭṭhissatipi sallapissatipi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.11"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:7.13"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc13:8.1"
msgid "“Yā pana bhikkhunī ajjhokāse purisena saddhiṃ ekenekā santiṭṭheyya vā sallapeyya vā, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc13:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc13:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc13:10.1"
msgid "Ajjhokāso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:10.1"
msgid "appaṭicchanno hoti kuṭṭena vā kavāṭena vā kilañjena vā sāṇipākārena vā rukkhena vā thambhena vā kotthaḷiyā vā, yena kenaci appaṭicchanno hoti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc13:11.1"
msgid "Puriso nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:11.1"
msgid "manussapuriso, na yakkho na peto na tiracchānagato, viññū paṭibalo santiṭṭhituṃ sallapituṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc13:12.1"
msgid "Saddhinti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:12.1"
msgid "ekato."
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc13:12.2"
msgid "Ekenekāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:12.2"
msgid "puriso ceva hoti bhikkhunī ca."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc13:13.1"
msgid "Santiṭṭheyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:13.1"
msgid "purisassa hatthapāse tiṭṭhati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc13:14.1"
msgid "Sallapeyya vāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc13:14.1"
msgid "purisassa hatthapāse ṭhitā sallapati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc13:15.1"
msgid "Hatthapāsaṃ vijahitvā santiṭṭhati vā sallapati vā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:15.2"
msgid "Yakkhena vā petena vā paṇḍakena vā tiracchānagatamanussaviggahena vā saddhiṃ santiṭṭhati vā sallapati vā, āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc11
msgctxt "pli-tv-bi-vb-pc13:16.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc13:16.2"
msgid "yo koci viññū dutiyo hoti, arahopekkhā, aññavihitā santiṭṭhati vā sallapati vā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc12
msgctxt "pli-tv-bi-vb-pc13:17.1"
msgid "Tatiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

