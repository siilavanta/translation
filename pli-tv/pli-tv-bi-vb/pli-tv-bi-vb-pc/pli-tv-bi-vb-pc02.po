#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc2:5.1"
msgid "2. Sambādhalomasikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.260
msgctxt "pli-tv-bi-vb-pc2:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:6.2"
msgid "Tena kho pana samayena chabbaggiyā bhikkhuniyo sambādhe lomaṃ saṃharāpetvā aciravatiyā nadiyā vesiyāhi saddhiṃ naggā ekatitthe nahāyanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:6.3"
msgid "Vesiyā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:6.4"
msgid "“kathañhi nāma bhikkhuniyo sambādhe lomaṃ saṃharāpessanti, seyyathāpi gihiniyo kāmabhoginiyo”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc2:7.1"
msgid "Assosuṃ kho bhikkhuniyo tāsaṃ vesiyānaṃ ujjhāyantīnaṃ khiyyantīnaṃ vipācentīnaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.5"
msgid "“kathañhi nāma chabbaggiyā bhikkhuniyo sambādhe lomaṃ saṃharāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.7"
msgid "“saccaṃ kira, bhikkhave, chabbaggiyā bhikkhuniyo sambādhe lomaṃ saṃharāpentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.11"
msgid "kathañhi nāma, bhikkhave, chabbaggiyā bhikkhuniyo sambādhe lomaṃ saṃharāpessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:7.14"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc2:8.1"
msgid "“Yā pana bhikkhunī sambādhe lomaṃ saṃharāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc2:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc2:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc2:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc2:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc2:10.1"
msgid "Sambādho nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc2:10.1"
msgid "ubho upakacchakā, muttakaraṇaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc2:11.1"
msgid "Saṃharāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc2:11.1"
msgid "ekampi lomaṃ saṃharāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:11.2"
msgid "Bahukepi lome saṃharāpeti, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc2:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc2:12.2"
msgid "ābādhapaccayā, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc2:13.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

