#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc62:5.1"
msgid "62. Pāyantisikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "pli-tv-bi-vb-pc62:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.2"
msgid "Tena kho pana samayena bhikkhuniyo pāyantiṃ vuṭṭhāpenti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.3"
msgid "Sā piṇḍāya carati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.4"
msgid "Manussā evamāhaṃsu—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.5"
msgid "“dethāyyāya bhikkhaṃ, sadutiyikā ayyā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.6"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:6.7"
msgid "“kathañhi nāma bhikkhuniyo pāyantiṃ vuṭṭhāpessantī”ti."
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc62:7.1"
msgid "Assosuṃ kho bhikkhuniyo tesaṃ manussānaṃ ujjhāyantānaṃ khiyyantānaṃ vipācentānaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.2"
msgid "Yā tā bhikkhuniyo appicchā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.4"
msgid "tā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.5"
msgid "“kathañhi nāma bhikkhuniyo pāyantiṃ vuṭṭhāpessantī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.7"
msgid "“saccaṃ kira, bhikkhave, bhikkhuniyo pāyantiṃ vuṭṭhāpentī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.8"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.9"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.11"
msgid "kathañhi nāma, bhikkhave, bhikkhuniyo pāyantiṃ vuṭṭhāpessanti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.12"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:7.14"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc62:8.1"
msgid "“Yā pana bhikkhunī pāyantiṃ vuṭṭhāpeyya, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc62:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc62:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc62:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc62:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p>
#. REF: sc5
#. VAR: dhāti → dhātī (bj, s1-3, pts1)
#. VAR: hoti → hotu (mr)+. HTML: <b>
msgctxt "pli-tv-bi-vb-pc62:10.1"
msgid "Pāyantī nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc62:10.1"
msgid "mātā vā hoti dhāti vā."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc62:11.1"
msgid "Vuṭṭhāpeyyāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc62:11.1"
msgid "upasampādeyya."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc62:12.1"
msgid "“Vuṭṭhāpessāmī”ti gaṇaṃ vā ācariniṃ vā pattaṃ vā cīvaraṃ vā pariyesati, sīmaṃ vā sammannati, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:12.2"
msgid "Ñattiyā dukkaṭaṃ."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:12.3"
msgid "Dvīhi kammavācāhi dukkaṭā."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:12.4"
msgid "Kammavācāpariyosāne upajjhāyāya āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:12.5"
msgid "Gaṇassa ca ācariniyā ca āpatti dukkaṭassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc62:13.1"
msgid "Pāyantiyā pāyantisaññā vuṭṭhāpeti, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:13.2"
msgid "Pāyantiyā vematikā vuṭṭhāpeti, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:13.3"
msgid "Pāyantiyā apāyantisaññā vuṭṭhāpeti, anāpatti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:13.4"
msgid "Apāyantiyā pāyantisaññā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:13.5"
msgid "Apāyantiyā vematikā, āpatti dukkaṭassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:13.6"
msgid "Apāyantiyā apāyantisaññā, anāpatti."
msgstr ""

#. HTML: </p><p>
#. REF: sc9
msgctxt "pli-tv-bi-vb-pc62:14.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc62:14.2"
msgid "pāyantiṃ apāyantisaññā vuṭṭhāpeti, apāyantiṃ apāyantisaññā vuṭṭhāpeti, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc10
msgctxt "pli-tv-bi-vb-pc62:15.1"
msgid "Dutiyasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

