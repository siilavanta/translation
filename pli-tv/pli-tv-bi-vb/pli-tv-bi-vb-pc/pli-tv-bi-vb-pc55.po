#. HTML: </p><h1>
msgctxt "pli-tv-bi-vb-pc55:5.1"
msgid "55. Kulamaccharinīsikkhāpada"
msgstr ""

#. HTML: </h1></div><p>
#. REF: sc1, pts-vp-pli4.312
msgctxt "pli-tv-bi-vb-pc55:6.1"
msgid "Tena samayena buddho bhagavā sāvatthiyaṃ viharati jetavane anāthapiṇḍikassa ārāme."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.2"
msgid "Tena kho pana samayena aññatarā bhikkhunī sāvatthiyaṃ aññatarissā visikhāya piṇḍāya caramānā yena aññataraṃ kulaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.3"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.4"
msgid "Atha kho te manussā taṃ bhikkhuniṃ bhojetvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.5"
msgid "“aññāpi, ayye, bhikkhuniyo āgacchantū”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.6"
msgid "Atha kho sā bhikkhunī—"
msgstr ""

#. VAR: kathañhi nāma → kathaṃ aññā (s1-3)
msgctxt "pli-tv-bi-vb-pc55:6.7"
msgid "“kathañhi nāma bhikkhuniyo nāgaccheyyun”ti, bhikkhuniyo upasaṅkamitvā etadavoca—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.8"
msgid "“amukasmiṃ, ayye, okāse vāḷā sunakhā caṇḍo balibaddo cikkhallo okāso."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.9"
msgid "Mā kho tattha agamitthā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.10"
msgid "Aññatarāpi bhikkhunī tassā visikhāya piṇḍāya caramānā yena taṃ kulaṃ tenupasaṅkami;"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.11"
msgid "upasaṅkamitvā paññatte āsane nisīdi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.12"
msgid "Atha kho te manussā taṃ bhikkhuniṃ bhojetvā etadavocuṃ—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:6.13"
msgid "“kissa, ayye, bhikkhuniyo na āgacchantī”ti?"
msgstr ""

#. HTML: </p><p>
#. REF: sc2
msgctxt "pli-tv-bi-vb-pc55:7.1"
msgid "Atha kho sā bhikkhunī tesaṃ manussānaṃ etamatthaṃ ārocesi."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.2"
msgid "Manussā ujjhāyanti khiyyanti vipācenti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.3"
msgid "“kathañhi nāma bhikkhunī kulaṃ maccharāyissatī”ti … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.5"
msgid "“saccaṃ kira, bhikkhave, bhikkhunī kulaṃ maccharāyatī”ti?"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.6"
msgid "“Saccaṃ, bhagavā”ti."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.7"
msgid "Vigarahi buddho bhagavā … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.9"
msgid "kathañhi nāma, bhikkhave, bhikkhunī kulaṃ maccharāyissati."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.10"
msgid "Netaṃ, bhikkhave, appasannānaṃ vā pasādāya … pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:7.12"
msgid "evañca pana, bhikkhave, bhikkhuniyo imaṃ sikkhāpadaṃ uddisantu—"
msgstr ""

#. HTML: </p><p><b class="rule">
#. REF: sc3
msgctxt "pli-tv-bi-vb-pc55:8.1"
msgid "“Yā pana bhikkhunī kulamaccharinī assa, pācittiyan”ti."
msgstr ""

#. HTML: </b></p><p><b>
#. REF: sc4
msgctxt "pli-tv-bi-vb-pc55:9.1"
msgid "Yā panāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc55:9.1"
msgid "yā yādisā … pe …"
msgstr ""

#. HTML: <b>
msgctxt "pli-tv-bi-vb-pc55:9.3"
msgid "bhikkhunīti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc55:9.3"
msgid "… pe …"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:9.5"
msgid "ayaṃ imasmiṃ atthe adhippetā bhikkhunīti."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc5
msgctxt "pli-tv-bi-vb-pc55:10.1"
msgid "Kulaṃ nāma"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc55:10.1"
msgid "cattāri kulāni—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:10.2"
msgid "khattiyakulaṃ, brāhmaṇakulaṃ, vessakulaṃ, suddakulaṃ."
msgstr ""

#. HTML: </p><p><b>
#. REF: sc6
msgctxt "pli-tv-bi-vb-pc55:11.1"
msgid "Maccharinī assāti"
msgstr ""

#. HTML: </b>
msgctxt "pli-tv-bi-vb-pc55:11.1"
msgid "“kathaṃ bhikkhuniyo nāgaccheyyun”ti bhikkhunīnaṃ santike kulassa avaṇṇaṃ bhāsati, āpatti pācittiyassa."
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:11.2"
msgid "Kulassa vā santike bhikkhunīnaṃ avaṇṇaṃ bhāsati, āpatti pācittiyassa."
msgstr ""

#. HTML: </p><p>
#. REF: sc7
msgctxt "pli-tv-bi-vb-pc55:12.1"
msgid "Anāpatti—"
msgstr ""

msgctxt "pli-tv-bi-vb-pc55:12.2"
msgid "kulaṃ na maccharāyantī santaṃyeva ādīnavaṃ ācikkhati, ummattikāya, ādikammikāyāti."
msgstr ""

#. HTML: </p><p class="endsutta">
#. REF: sc8
msgctxt "pli-tv-bi-vb-pc55:13.1"
msgid "Pañcamasikkhāpadaṃ niṭṭhitaṃ."
msgstr ""

